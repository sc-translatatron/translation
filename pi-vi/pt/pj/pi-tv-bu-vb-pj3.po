msgctxt "pi-tv-bu-vb-pj3:95.1"
msgid ""
"Tena kho pana samayena aññatarassa bhikkhuno bhuñjantassa maṃsaṃ kaṇṭhe "
"vilaggaṃ hoti."
msgstr ""
"Certa vez, enquanto um bhikkhu comia carne esta ficou presa na sua garganta."

msgctxt "pi-tv-bu-vb-pj3:95.2"
msgid "Aññataro bhikkhu tassa bhikkhuno gīvāyaṃ pahāraṃ adāsi."
msgstr "Um segundo bhikkhu o atingiu no pescoço."

msgctxt "pi-tv-bu-vb-pj3:95.3"
msgid "Salohitaṃ maṃsaṃ pati."
msgstr "O primeiro tossiu a carne junto com o sangue,"

msgctxt "pi-tv-bu-vb-pj3:95.4"
msgid "So bhikkhu kālamakāsi."
msgstr "e em seguida morreu."

msgctxt "pi-tv-bu-vb-pj3:95.5"
msgid "Tassa kukkuccaṃ ahosi … pe …"
msgstr "O segundo bhikkhu tornou-se ansioso…"

msgctxt "pi-tv-bu-vb-pj3:95.6"
msgid "“anāpatti, bhikkhu, ­namara­ṇādhip­pāyassā”ti."
msgstr "“Não há ofensa quando não há intenção de matar.”"

msgctxt "pi-tv-bu-vb-pj3:95.7"
msgid "(8)"
msgstr "(8)"

