msgctxt "pi-tv-bu-vb-np22:38.1"
msgid ""
msgstr "Quando não é uma ofensa"

#. </h2><p><a class="sc" id="33"></a><a class="wt-pa" id="2305"></a>
msgctxt "pi-tv-bu-vb-np22:38.2"
msgid "Anāpatti—"
msgstr "Não há ofensa quando: "

msgctxt "pi-tv-bu-vb-np22:38.3"
msgid "naṭṭhapattassa,"
msgstr "se a tigela é perdida;"

msgctxt "pi-tv-bu-vb-np22:38.4"
msgid "bhinnapattassa,"
msgstr "se a tigela quebra;"

msgctxt "pi-tv-bu-vb-np22:38.5"
msgid "ñātakānaṃ"
msgstr "se a tigela é oferecida por seus parentes;"

msgctxt "pi-tv-bu-vb-np22:38.6"
msgid "pavāritānaṃ,"
msgstr "se a tigela é oferecida por quem faz um convite;"

msgctxt "pi-tv-bu-vb-np22:38.7"
msgid "aññassatthāya,"
msgstr "se a tigela é recebida em nome de outrem;"

msgctxt "pi-tv-bu-vb-np22:38.8"
msgid "attano dhanena,"
msgstr "se a tigela é obtida através de suas posses;"

msgctxt "pi-tv-bu-vb-np22:38.9"
msgid "ummattakassa,"
msgstr "o indivíduo se encontra louco;"

msgctxt "pi-tv-bu-vb-np22:38.10"
msgid "ādikammikassāti."
msgstr "ele é o primeiro a cometer a ofensa."

