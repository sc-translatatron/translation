#. <section class="sutta" id="an7.43"><article><div class="hgroup"><p class="division">
msgctxt "an7.43:0.1"
msgid "Aṅguttara Nikāya 7"
msgstr ""

#. </p><p>
msgctxt "an7.43:0.2"
msgid "4. devatāvagga"
msgstr ""

#. </p><h1>
msgctxt "an7.43:0.3"
msgid "43. Dutiyaniddasasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "an7.43:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "an7.43:1.2"
msgid "ekaṃ samayaṃ bhagavā kosambiyaṃ viharati ghositārāme."
msgstr ""

msgctxt "an7.43:1.3"
msgid ""
"Atha kho āyasmā ānando pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya kosambiṃ "
"piṇḍāya pāvisi."
msgstr ""

msgctxt "an7.43:1.4"
msgid "Atha kho āyasmato ānandassa etadahosi:"
msgstr ""

msgctxt "an7.43:1.5"
msgid "“atippago kho tāva kosambiyaṃ piṇḍāya carituṃ."
msgstr ""

msgctxt "an7.43:1.6"
msgid ""
"Yannūnāhaṃ yena aññatitthiyānaṃ paribbājakānaṃ ārāmo tenupasaṅkameyyan”ti."
msgstr ""

msgctxt "an7.43:1.7"
msgid ""
"Atha kho āyasmā ānando yena aññatitthiyānaṃ paribbājakānaṃ ārāmo "
"tenupasaṅkami; upasaṅkamitvā tehi aññatitthiyehi paribbājakehi saddhiṃ "
"sammodi."
msgstr ""

msgctxt "an7.43:1.8"
msgid "Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdi."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an7.43:2.1"
msgid ""
"Tena kho pana samayena tesaṃ aññatitthiyānaṃ paribbājakānaṃ sannisinnānaṃ "
"sannipatitānaṃ ayamantarākathā udapādi:"
msgstr ""

msgctxt "an7.43:2.2"
msgid ""
"“yo hi koci, āvuso, dvādasavassāni paripuṇṇaṃ parisuddhaṃ brahmacariyaṃ "
"carati, ‘niddaso bhikkhū’ti alaṃvacanāyā”ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli4.38"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "an7.43:3.1"
msgid ""
"Atha kho āyasmā ānando tesaṃ aññatitthiyānaṃ paribbājakānaṃ bhāsitaṃ neva "
"abhinandi nappaṭikkosi."
msgstr ""

msgctxt "an7.43:3.2"
msgid "Anabhinanditvā appaṭikkositvā uṭṭhāyāsanā pakkāmi:"
msgstr ""

msgctxt "an7.43:3.3"
msgid "“bhagavato santike etassa bhāsitassa atthaṃ ājānissāmī”ti."
msgstr ""

msgctxt "an7.43:3.4"
msgid ""
"Atha kho āyasmā ānando kosambiyaṃ piṇḍāya caritvā pacchābhattaṃ "
"piṇḍapātapaṭikkanto yena bhagavā tenupasaṅkami; upasaṅkamitvā bhagavantaṃ "
"abhivādetvā ekamantaṃ nisīdi. Ekamantaṃ nisinno kho āyasmā ānando "
"bhagavantaṃ etadavoca:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an7.43:4.1"
msgid ""
"“Idhāhaṃ, bhante, pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya kosambiṃ "
"piṇḍāya pāvisiṃ."
msgstr ""

msgctxt "an7.43:4.2"
msgid "Tassa mayhaṃ, bhante, etadahosi:"
msgstr ""

msgctxt "an7.43:4.3"
msgid "‘atippago kho tāva kosambiyaṃ piṇḍāya carituṃ."
msgstr ""

msgctxt "an7.43:4.4"
msgid ""
"Yannūnāhaṃ yena aññatitthiyānaṃ paribbājakānaṃ ārāmo tenupasaṅkameyyan’ti … "
"pe …"
msgstr ""

msgctxt "an7.43:4.5"
msgid "tehi saddhiṃ sammodiṃ."
msgstr ""

msgctxt "an7.43:4.6"
msgid "Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdiṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an7.43:5.1"
msgid ""
"Tena kho pana, bhante, samayena tesaṃ aññatitthiyānaṃ paribbājakānaṃ "
"sannisinnānaṃ sannipatitānaṃ ayamantarākathā udapādi:"
msgstr ""

msgctxt "an7.43:5.2"
msgid ""
"‘yo hi koci, āvuso, dvādasavassāni paripuṇṇaṃ parisuddhaṃ brahmacariyaṃ "
"carati, niddaso bhikkhūti alaṃvacanāyā’ti."
msgstr ""

msgctxt "an7.43:5.3"
msgid ""
"Atha khvāhaṃ, bhante, tesaṃ aññatitthiyānaṃ paribbājakānaṃ bhāsitaṃ neva "
"abhinandiṃ nappaṭikkosiṃ."
msgstr ""

msgctxt "an7.43:5.4"
msgid "Anabhinanditvā, appaṭikkositvā uṭṭhāyāsanā pakkamiṃ:"
msgstr ""

msgctxt "an7.43:5.5"
msgid "‘bhagavato santike etassa bhāsitassa atthaṃ ājānissāmī’ti."
msgstr ""

msgctxt "an7.43:5.6"
msgid ""
"Sakkā nu kho, bhante, imasmiṃ dhammavinaye kevalaṃ vassagaṇanamattena "
"niddaso bhikkhu paññāpetun”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an7.43:6.1"
msgid ""
"“Na kho, ānanda, sakkā imasmiṃ dhammavinaye kevalaṃ vassagaṇanamattena "
"niddaso bhikkhu paññāpetuṃ."
msgstr ""

msgctxt "an7.43:6.2"
msgid ""
"Satta kho imāni, ānanda, niddasavatthūni mayā sayaṃ abhiññā sacchikatvā "
"paveditāni."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli4.39"></a>
#. <a class="sc" id="sc7"></a>
msgctxt "an7.43:7.1"
msgid "Katamāni satta?"
msgstr ""

msgctxt "an7.43:7.2"
msgid ""
"Idhānanda, bhikkhu, saddho hoti, hirīmā hoti, ottappī hoti, bahussuto hoti, "
"āraddhavīriyo hoti, satimā hoti, paññavā hoti."
msgstr ""

msgctxt "an7.43:7.3"
msgid ""
"Imāni kho, ānanda, satta niddasavatthūni mayā sayaṃ abhiññā sacchikatvā "
"paveditāni."
msgstr ""

msgctxt "an7.43:7.4"
msgid ""
"Imehi kho, ānanda, sattahi niddasavatthūhi samannāgato bhikkhu dvādasa cepi "
"vassāni paripuṇṇaṃ parisuddhaṃ brahmacariyaṃ carati, ‘niddaso bhikkhū’ti "
"alaṃvacanāya;"
msgstr ""

msgctxt "an7.43:7.5"
msgid ""
"catubbīsati cepi vassāni paripuṇṇaṃ parisuddhaṃ brahmacariyaṃ carati, ‘"
"niddaso bhikkhū’ti alaṃvacanāya;"
msgstr ""

msgctxt "an7.43:7.6"
msgid ""
"chattiṃsati cepi vassāni paripuṇṇaṃ parisuddhaṃ brahmacariyaṃ carati, ‘"
"niddaso bhikkhū’ti alaṃvacanāya, aṭṭhacattārīsañcepi vassāni paripuṇṇaṃ "
"parisuddhaṃ brahmacariyaṃ carati, ‘niddaso bhikkhū’ti alaṃvacanāyā”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "an7.43:7.7"
msgid "Dvādasamaṃ."
msgstr ""

#. </p><p class="endsection">
msgctxt "an7.43:7.8"
msgid "Devatāvaggo catuttho."
msgstr ""

#. </p><blockquote class="uddanagatha"><p>
#. <a class="sc" id="sc8"></a>
msgctxt "an7.43:8.1"
msgid "Appamādo hirī ceva,"
msgstr ""

#. <br>
msgctxt "an7.43:8.2"
msgid "dve suvacā duve mittā;"
msgstr ""

#. <br>
msgctxt "an7.43:8.3"
msgid "Dve paṭisambhidā dve vasā,"
msgstr ""

#. <br>
msgctxt "an7.43:8.4"
msgid "duve niddasavatthunāti."
msgstr ""
