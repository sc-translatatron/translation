#. <section class="sutta" id="an4.1"><article><div class="hgroup"><p class="division">
msgctxt "an4.1:0.1"
msgid "Aṅguttara Nikāya 4"
msgstr ""

#. </p><p>
msgctxt "an4.1:0.2"
msgid "1. Bhaṇḍagāmavagga"
msgstr ""

#. </p><h1>
msgctxt "an4.1:0.3"
msgid "1. Anubuddhasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.1"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "an4.1:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "an4.1:1.2"
msgid "ekaṃ samayaṃ bhagavā vajjīsu viharati bhaṇḍagāme."
msgstr ""

msgctxt "an4.1:1.3"
msgid "Tatra kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "an4.1:1.4"
msgid "“bhikkhavo”ti."
msgstr ""

msgctxt "an4.1:1.5"
msgid "“Bhadante”ti te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "an4.1:1.6"
msgid "Bhagavā etadavoca:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an4.1:2.1"
msgid ""
"“Catunnaṃ, bhikkhave, dhammānaṃ ananubodhā appaṭivedhā evamidaṃ "
"dīghamaddhānaṃ sandhāvitaṃ saṃsaritaṃ mamañceva tumhākañca."
msgstr ""

msgctxt "an4.1:2.2"
msgid "Katamesaṃ catunnaṃ?"
msgstr ""

msgctxt "an4.1:2.3"
msgid ""
"Ariyassa, bhikkhave, sīlassa ananubodhā appaṭivedhā evamidaṃ dīghamaddhānaṃ "
"sandhāvitaṃ saṃsaritaṃ mamañceva tumhākañca."
msgstr ""

msgctxt "an4.1:2.4"
msgid ""
"Ariyassa, bhikkhave, samādhissa ananubodhā appaṭivedhā evamidaṃ "
"dīghamaddhānaṃ sandhāvitaṃ saṃsaritaṃ mamañceva tumhākañca."
msgstr ""

msgctxt "an4.1:2.5"
msgid ""
"Ariyāya, bhikkhave, paññāya ananubodhā appaṭivedhā evamidaṃ dīghamaddhānaṃ "
"sandhāvitaṃ saṃsaritaṃ mamañceva tumhākañca."
msgstr ""

msgctxt "an4.1:2.6"
msgid ""
"Ariyāya, bhikkhave, vimuttiyā ananubodhā appaṭivedhā evamidaṃ dīghamaddhānaṃ "
"sandhāvitaṃ saṃsaritaṃ mamañceva tumhākañca."
msgstr ""

msgctxt "an4.1:2.7"
msgid ""
"Tayidaṃ, bhikkhave, ariyaṃ sīlaṃ anubuddhaṃ paṭividdhaṃ, ariyo samādhi "
"anubuddho paṭividdho, ariyā paññā anubuddhā paṭividdhā, ariyā vimutti "
"anubuddhā paṭividdhā, ucchinnā bhavataṇhā, khīṇā bhavanetti, natthi dāni "
"punabbhavo”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an4.1:3.1"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "an4.1:3.2"
msgid "Idaṃ vatvāna sugato athāparaṃ etadavoca satthā:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.2"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "an4.1:4.1"
msgid "“Sīlaṃ samādhi paññā ca,"
msgstr ""

#. <br>
msgctxt "an4.1:4.2"
msgid "vimutti ca anuttarā;"
msgstr ""

#. <br>
msgctxt "an4.1:4.3"
msgid "Anubuddhā ime dhammā,"
msgstr ""

#. <br>
msgctxt "an4.1:4.4"
msgid "gotamena yasassinā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an4.1:5.1"
msgid "Iti buddho abhiññāya,"
msgstr ""

#. <br>
msgctxt "an4.1:5.2"
msgid "dhammamakkhāsi bhikkhunaṃ;"
msgstr ""

#. <br>
msgctxt "an4.1:5.3"
msgid "Dukkhassantakaro satthā,"
msgstr ""

#. <br>
msgctxt "an4.1:5.4"
msgid "cakkhumā parinibbuto”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an4.1:5.5"
msgid "Paṭhamaṃ."
msgstr ""
