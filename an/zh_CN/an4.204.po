#. <section class="sutta" id="an4.204"><article><div class="hgroup"><p class="division">
msgctxt "an4.204:0.1"
msgid "Aṅguttara Nikāya 4"
msgstr ""

#. </p><p>
msgctxt "an4.204:0.2"
msgid "21. Sappurisavagga"
msgstr ""

#. </p><h1>
#. VAR: catutthasappurisasuttaṃ (bj)
msgctxt "an4.204:0.3"
msgid "204. Dasakammasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.220"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "an4.204:1.1"
msgid ""
"“Asappurisañca vo, bhikkhave, desessāmi, asappurisena asappurisatarañca;"
msgstr ""

msgctxt "an4.204:1.2"
msgid "sappurisañca, sappurisena sappurisatarañca. Taṃ suṇātha … pe …."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an4.204:2.1"
msgid "“Katamo ca, bhikkhave, asappuriso?"
msgstr ""

msgctxt "an4.204:2.2"
msgid ""
"Idha, bhikkhave, ekacco pāṇātipātī hoti, adinnādāyī hoti, kāmesumicchācārī "
"hoti, musāvādī hoti, pisuṇavāco hoti, pharusavāco hoti, samphappalāpī hoti, "
"abhijjhālu hoti, byāpannacitto hoti, micchādiṭṭhiko hoti."
msgstr ""

msgctxt "an4.204:2.3"
msgid "Ayaṃ vuccati, bhikkhave, asappuriso."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an4.204:3.1"
msgid "Katamo ca, bhikkhave, asappurisena asappurisataro?"
msgstr ""

msgctxt "an4.204:3.2"
msgid ""
"Idha, bhikkhave, ekacco attanā ca pāṇātipātī hoti, parañca pāṇātipāte "
"samādapeti … pe … attanā ca abhijjhālu hoti, parañca abhijjhāya samādapeti;"
msgstr ""

msgctxt "an4.204:3.3"
msgid ""
"attanā ca byāpannacitto hoti, parañca byāpāde samādapeti, attanā ca "
"micchādiṭṭhiko hoti, parañca micchādiṭṭhiyā samādapeti."
msgstr ""

msgctxt "an4.204:3.4"
msgid "Ayaṃ vuccati, bhikkhave, asappurisena asappurisataro."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an4.204:4.1"
msgid "Katamo ca, bhikkhave, sappuriso?"
msgstr ""

msgctxt "an4.204:4.2"
msgid ""
"Idha, bhikkhave, ekacco pāṇātipātā paṭivirato hoti … pe … anabhijjhālu hoti, "
"abyāpannacitto hoti, sammādiṭṭhiko hoti."
msgstr ""

msgctxt "an4.204:4.3"
msgid "Ayaṃ vuccati, bhikkhave, sappuriso."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an4.204:5.1"
msgid "Katamo ca, bhikkhave, sappurisena sappurisataro?"
msgstr ""

msgctxt "an4.204:5.2"
msgid ""
"Idha, bhikkhave, ekacco attanā ca pāṇātipātā paṭivirato hoti, parañca "
"pāṇātipātā veramaṇiyā samādapeti … pe … attanā ca anabhijjhālu hoti, parañca "
"anabhijjhāya samādapeti;"
msgstr ""

msgctxt "an4.204:5.3"
msgid "attanā ca abyāpannacitto hoti, parañca abyāpāde samādapeti;"
msgstr ""

msgctxt "an4.204:5.4"
msgid "attanā ca sammādiṭṭhiko hoti, parañca sammādiṭṭhiyā samādapeti."
msgstr ""

msgctxt "an4.204:5.5"
msgid "Ayaṃ vuccati, bhikkhave, sappurisena sappurisataro”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "an4.204:5.6"
msgid "Catutthaṃ."
msgstr ""
