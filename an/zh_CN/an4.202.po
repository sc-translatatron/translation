#. <section class="sutta" id="an4.202"><article><div class="hgroup"><p class="division">
msgctxt "an4.202:0.1"
msgid "Aṅguttara Nikāya 4"
msgstr ""

#. </p><p>
msgctxt "an4.202:0.2"
msgid "21. Sappurisavagga"
msgstr ""

#. </p><h1>
#. VAR: dutiyasappurisasuttaṃ (bj)
msgctxt "an4.202:0.3"
msgid "202. Assaddhasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.218"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "an4.202:1.1"
msgid ""
"“Asappurisañca vo, bhikkhave, desessāmi, asappurisena asappurisatarañca;"
msgstr ""

msgctxt "an4.202:1.2"
msgid "sappurisañca, sappurisena sappurisatarañca. Taṃ suṇātha … pe …."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an4.202:2.1"
msgid "“Katamo ca, bhikkhave, asappuriso?"
msgstr ""

msgctxt "an4.202:2.2"
msgid ""
"Idha, bhikkhave, ekacco assaddho hoti, ahiriko hoti, anottappī hoti, "
"appassuto hoti, kusīto hoti, muṭṭhassati hoti, duppañño hoti."
msgstr ""

msgctxt "an4.202:2.3"
msgid "Ayaṃ vuccati, bhikkhave, asappuriso."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an4.202:3.1"
msgid "Katamo ca, bhikkhave, asappurisena asappurisataro?"
msgstr ""

#. VAR: assaddhiye → asaddhāya (pts1, mr)
msgctxt "an4.202:3.2"
msgid ""
"Idha, bhikkhave, ekacco attanā ca assaddho hoti, parañca assaddhiye "
"samādapeti;"
msgstr ""

msgctxt "an4.202:3.3"
msgid "attanā ca ahiriko hoti, parañca ahirikatāya samādapeti;"
msgstr ""

msgctxt "an4.202:3.4"
msgid "attanā ca anottappī hoti, parañca anottappe samādapeti;"
msgstr ""

msgctxt "an4.202:3.5"
msgid "attanā ca appassuto hoti, parañca appassute samādapeti;"
msgstr ""

msgctxt "an4.202:3.6"
msgid "attanā ca kusīto hoti, parañca kosajje samādapeti;"
msgstr ""

#. VAR: muṭṭhassacce → muṭṭhasacce (bj, s1-3, km, pts1)
msgctxt "an4.202:3.7"
msgid "attanā ca muṭṭhassati hoti, parañca muṭṭhassacce samādapeti;"
msgstr ""

msgctxt "an4.202:3.8"
msgid "attanā ca duppañño hoti, parañca duppaññatāya samādapeti."
msgstr ""

msgctxt "an4.202:3.9"
msgid "Ayaṃ vuccati, bhikkhave, asappurisena asappurisataro."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an4.202:4.1"
msgid "Katamo ca, bhikkhave, sappuriso?"
msgstr ""

msgctxt "an4.202:4.2"
msgid ""
"Idha, bhikkhave, ekacco saddho hoti, hirimā hoti, ottappī hoti, bahussuto "
"hoti, āraddhavīriyo hoti, satimā hoti, paññavā hoti."
msgstr ""

msgctxt "an4.202:4.3"
msgid "Ayaṃ vuccati, bhikkhave, sappuriso."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an4.202:5.1"
msgid "Katamo ca, bhikkhave, sappurisena sappurisataro?"
msgstr ""

msgctxt "an4.202:5.2"
msgid ""
"Idha, bhikkhave, ekacco attanā ca saddhāsampanno hoti, parañca "
"saddhāsampadāya samādapeti;"
msgstr ""

#. VAR: hirimatāya → hirimante (pts1) | hirisampadāya (mr)
msgctxt "an4.202:5.3"
msgid "attanā ca hirimā hoti, parañca hirimatāya samādapeti;"
msgstr ""

msgctxt "an4.202:5.4"
msgid "attanā ca ottappī hoti, parañca ottappe samādapeti;"
msgstr ""

msgctxt "an4.202:5.5"
msgid "attanā ca bahussuto hoti, parañca bāhusacce samādapeti;"
msgstr ""

msgctxt "an4.202:5.6"
msgid "attanā ca āraddhavīriyo hoti, parañca vīriyārambhe samādapeti;"
msgstr ""

#. VAR: satiupaṭṭhāne → satipaṭṭhāne (bj, s1-3, km, pts1)
msgctxt "an4.202:5.7"
msgid "attanā ca upaṭṭhitassati hoti, parañca satiupaṭṭhāne samādapeti;"
msgstr ""

msgctxt "an4.202:5.8"
msgid "attanā ca paññāsampanno hoti, parañca paññāsampadāya samādapeti."
msgstr ""

msgctxt "an4.202:5.9"
msgid "Ayaṃ vuccati, bhikkhave, sappurisena sappurisataro”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "an4.202:5.10"
msgid "Dutiyaṃ."
msgstr ""
