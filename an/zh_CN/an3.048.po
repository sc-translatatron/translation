#. <section class="sutta" id="an3.48"><article><div class="hgroup"><p class="division">
msgctxt "an3.48:0.1"
msgid "Aṅguttara Nikāya 3"
msgstr ""

#. </p><p>
msgctxt "an3.48:0.2"
msgid "5. Cūḷavagga"
msgstr ""

#. </p><h1>
msgctxt "an3.48:0.3"
msgid "48. Pabbatarājasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "an3.48:1.1"
msgid ""
"“Himavantaṃ, bhikkhave, pabbatarājaṃ nissāya mahāsālā tīhi vaḍḍhīhi "
"vaḍḍhanti."
msgstr ""

msgctxt "an3.48:1.2"
msgid "Katamāhi tīhi?"
msgstr ""

msgctxt "an3.48:1.3"
msgid ""
"Sākhāpattapalāsena vaḍḍhanti, tacapapaṭikāya vaḍḍhanti, pheggusārena "
"vaḍḍhanti."
msgstr ""

msgctxt "an3.48:1.4"
msgid ""
"Himavantaṃ, bhikkhave, pabbatarājaṃ nissāya mahāsālā imāhi tīhi vaḍḍhīhi "
"vaḍḍhanti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an3.48:2.1"
msgid ""
"Evamevaṃ kho, bhikkhave, saddhaṃ kulapatiṃ nissāya anto jano tīhi vaḍḍhīhi "
"vaḍḍhati."
msgstr ""

msgctxt "an3.48:2.2"
msgid "Katamāhi tīhi?"
msgstr ""

msgctxt "an3.48:2.3"
msgid "Saddhāya vaḍḍhati, sīlena vaḍḍhati, paññāya vaḍḍhati."
msgstr ""

msgctxt "an3.48:2.4"
msgid ""
"Saddhaṃ, bhikkhave, kulapatiṃ nissāya anto jano imāhi tīhi vaḍḍhīhi "
"vaḍḍhatīti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an3.48:3.1"
msgid "Yathāpi pabbato selo,"
msgstr ""

#. <br>
msgctxt "an3.48:3.2"
msgid "araññasmiṃ brahāvane;"
msgstr ""

#. <br>
msgctxt "an3.48:3.3"
msgid "Taṃ rukkhā upanissāya,"
msgstr ""

#. <br>
msgctxt "an3.48:3.4"
msgid "vaḍḍhante te vanappatī."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an3.48:4.1"
msgid "Tatheva sīlasampannaṃ,"
msgstr ""

#. <br>
msgctxt "an3.48:4.2"
msgid "saddhaṃ kulapatiṃ idha;"
msgstr ""

#. <br>
msgctxt "an3.48:4.3"
msgid "Upanissāya vaḍḍhanti,"
msgstr ""

#. <br>
msgctxt "an3.48:4.4"
msgid "puttadārā ca bandhavā;"
msgstr ""

#. <br>
msgctxt "an3.48:4.5"
msgid "Amaccā ñātisaṅghā ca,"
msgstr ""

#. <br>
msgctxt "an3.48:4.6"
msgid "ye cassa anujīvino."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.153"></a>
#. <a class="sc" id="sc5"></a>
msgctxt "an3.48:5.1"
msgid "Tyāssa sīlavato sīlaṃ,"
msgstr ""

#. <br>
msgctxt "an3.48:5.2"
msgid "cāgaṃ sucaritāni ca;"
msgstr ""

#. <br>
msgctxt "an3.48:5.3"
msgid "Passamānānukubbanti,"
msgstr ""

#. <br>
#. VAR: attamatthaṃ → ye bhavanti (bj, s1-3, km, pts1)
msgctxt "an3.48:5.4"
msgid "attamatthaṃ vicakkhaṇā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an3.48:6.1"
msgid "Idha dhammaṃ caritvāna,"
msgstr ""

#. <br>
msgctxt "an3.48:6.2"
msgid "maggaṃ sugatigāminaṃ;"
msgstr ""

#. <br>
msgctxt "an3.48:6.3"
msgid "Nandino devalokasmiṃ,"
msgstr ""

#. <br>
msgctxt "an3.48:6.4"
msgid "modanti kāmakāmino”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an3.48:6.5"
msgid "Navamaṃ."
msgstr ""
