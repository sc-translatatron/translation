#. <section class="sutta" id="an7.4"><article><div class="hgroup"><p class="division">
msgctxt "an7.4:0.1"
msgid "Aṅguttara Nikāya 7"
msgstr ""

#. </p><p>
msgctxt "an7.4:0.2"
msgid "1. Dhanavagga"
msgstr ""

#. </p><h1>
#. VAR: 4. Vitthatabalasutta → vitthatasattabalasuttaṃ (bj)
msgctxt "an7.4:0.3"
msgid "4. Vitthatabalasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "an7.4:1.1"
msgid "“Sattimāni, bhikkhave, balāni."
msgstr ""

msgctxt "an7.4:1.2"
msgid "Katamāni satta?"
msgstr ""

msgctxt "an7.4:1.3"
msgid ""
"Saddhābalaṃ, vīriyabalaṃ, hirībalaṃ, ottappabalaṃ, satibalaṃ, samādhibalaṃ, "
"paññābalaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an7.4:2.1"
msgid "Katamañca, bhikkhave, saddhābalaṃ?"
msgstr ""

msgctxt "an7.4:2.2"
msgid ""
"Idha, bhikkhave, ariyasāvako saddho hoti, saddahati tathāgatassa bodhiṃ:"
msgstr ""

msgctxt "an7.4:2.3"
msgid ""
"‘itipi so bhagavā arahaṃ sammāsambuddho … pe … satthā devamanussānaṃ buddho "
"bhagavā’ti."
msgstr ""

msgctxt "an7.4:2.4"
msgid "Idaṃ vuccati, bhikkhave, saddhābalaṃ. (1)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an7.4:3.1"
msgid "Katamañca, bhikkhave, vīriyabalaṃ?"
msgstr ""

msgctxt "an7.4:3.2"
msgid ""
"Idha, bhikkhave, ariyasāvako āraddhavīriyo viharati akusalānaṃ dhammānaṃ "
"pahānāya, kusalānaṃ dhammānaṃ upasampadāya, thāmavā daḷhaparakkamo "
"anikkhittadhuro kusalesu dhammesu."
msgstr ""

msgctxt "an7.4:3.3"
msgid "Idaṃ vuccati, bhikkhave, vīriyabalaṃ. (2)"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli4.4"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "an7.4:4.1"
msgid "Katamañca, bhikkhave, hirībalaṃ?"
msgstr ""

msgctxt "an7.4:4.2"
msgid ""
"Idha, bhikkhave, ariyasāvako hirīmā hoti, hirīyati kāyaduccaritena "
"vacīduccaritena manoduccaritena, hirīyati pāpakānaṃ akusalānaṃ dhammānaṃ "
"samāpattiyā."
msgstr ""

msgctxt "an7.4:4.3"
msgid "Idaṃ vuccati, bhikkhave, hirībalaṃ. (3)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an7.4:5.1"
msgid "Katamañca, bhikkhave, ottappabalaṃ?"
msgstr ""

msgctxt "an7.4:5.2"
msgid ""
"Idha, bhikkhave, ariyasāvako ottappī hoti, ottappati kāyaduccaritena "
"vacīduccaritena manoduccaritena, ottappati pāpakānaṃ akusalānaṃ dhammānaṃ "
"samāpattiyā."
msgstr ""

msgctxt "an7.4:5.3"
msgid "Idaṃ vuccati, bhikkhave, ottappabalaṃ. (4)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an7.4:6.1"
msgid "Katamañca, bhikkhave, satibalaṃ?"
msgstr ""

msgctxt "an7.4:6.2"
msgid ""
"Idha, bhikkhave, ariyasāvako satimā hoti paramena satinepakkena samannāgato "
"cirakatampi cirabhāsitampi saritā anussaritā."
msgstr ""

msgctxt "an7.4:6.3"
msgid "Idaṃ vuccati, bhikkhave, satibalaṃ. (5)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "an7.4:7.1"
msgid "Katamañca, bhikkhave, samādhibalaṃ?"
msgstr ""

msgctxt "an7.4:7.2"
msgid "Idha, bhikkhave, ariyasāvako vivicceva kāmehi … pe …"
msgstr ""

msgctxt "an7.4:7.3"
msgid ""
msgstr ""

msgctxt "an7.4:7.4"
msgid "catutthaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "an7.4:7.5"
msgid "Idaṃ vuccati, bhikkhave, samādhibalaṃ. (6)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "an7.4:8.1"
msgid "Katamañca, bhikkhave, paññābalaṃ?"
msgstr ""

msgctxt "an7.4:8.2"
msgid ""
"Idha, bhikkhave, ariyasāvako paññavā hoti udayatthagāminiyā paññāya "
"samannāgato ariyāya nibbedhikāya sammā dukkhakkhayagāminiyā."
msgstr ""

msgctxt "an7.4:8.3"
msgid "Idaṃ vuccati, bhikkhave, paññābalaṃ. (7)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "an7.4:9.1"
msgid "Imāni kho, bhikkhave, satta balānīti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc10"></a>
msgctxt "an7.4:10.1"
msgid "Saddhābalaṃ vīriyañca,"
msgstr ""

#. <br>
msgctxt "an7.4:10.2"
msgid "hirī ottappiyaṃ balaṃ;"
msgstr ""

#. <br>
msgctxt "an7.4:10.3"
msgid "Satibalaṃ samādhi ca,"
msgstr ""

#. <br>
msgctxt "an7.4:10.4"
msgid "paññā ve sattamaṃ balaṃ;"
msgstr ""

#. <br>
msgctxt "an7.4:10.5"
msgid "Etehi balavā bhikkhu,"
msgstr ""

#. <br>
msgctxt "an7.4:10.6"
msgid "sukhaṃ jīvati paṇḍito."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc11"></a>
msgctxt "an7.4:11.1"
msgid "Yoniso vicine dhammaṃ,"
msgstr ""

#. <br>
msgctxt "an7.4:11.2"
msgid "paññāyatthaṃ vipassati;"
msgstr ""

#. <br>
msgctxt "an7.4:11.3"
msgid "Pajjotasseva nibbānaṃ,"
msgstr ""

#. <br>
msgctxt "an7.4:11.4"
msgid "vimokkho hoti cetaso”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an7.4:11.5"
msgid "Catutthaṃ."
msgstr ""
