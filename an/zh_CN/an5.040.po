#. <section class="sutta" id="an5.40"><article><div class="hgroup"><p class="division">
msgctxt "an5.40:0.1"
msgid "Aṅguttara Nikāya 5"
msgstr ""

#. </p><p>
msgctxt "an5.40:0.2"
msgid "4. Sumanavagga"
msgstr ""

#. </p><h1>
#. VAR: mahāsālasuttaṃ (bj)
msgctxt "an5.40:0.3"
msgid "40. Mahāsālaputtasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "an5.40:1.1"
msgid ""
"“Himavantaṃ, bhikkhave, pabbatarājaṃ nissāya mahāsālā pañcahi vaḍḍhīhi "
"vaḍḍhanti."
msgstr ""

msgctxt "an5.40:1.2"
msgid "Katamāhi pañcahi?"
msgstr ""

msgctxt "an5.40:1.3"
msgid "Sākhāpattapalāsena vaḍḍhanti;"
msgstr ""

msgctxt "an5.40:1.4"
msgid "tacena vaḍḍhanti;"
msgstr ""

msgctxt "an5.40:1.5"
msgid "papaṭikāya vaḍḍhanti;"
msgstr ""

msgctxt "an5.40:1.6"
msgid "pheggunā vaḍḍhanti;"
msgstr ""

msgctxt "an5.40:1.7"
msgid "sārena vaḍḍhanti."
msgstr ""

msgctxt "an5.40:1.8"
msgid ""
"Himavantaṃ, bhikkhave, pabbatarājaṃ nissāya mahāsālā imāhi pañcahi vaḍḍhīhi "
"vaḍḍhanti."
msgstr ""

# Adopting the reading kulapati, see BB and parallel at AN 3.48.
msgctxt "an5.40:1.9"
msgid ""
"Evamevaṃ kho, bhikkhave, saddhaṃ kulaputtaṃ nissāya antojano pañcahi "
"vaḍḍhīhi vaḍḍhati."
msgstr ""

msgctxt "an5.40:1.10"
msgid "Katamāhi pañcahi?"
msgstr ""

msgctxt "an5.40:1.11"
msgid "Saddhāya vaḍḍhati;"
msgstr ""

msgctxt "an5.40:1.12"
msgid "sīlena vaḍḍhati;"
msgstr ""

msgctxt "an5.40:1.13"
msgid "sutena vaḍḍhati;"
msgstr ""

msgctxt "an5.40:1.14"
msgid "cāgena vaḍḍhati;"
msgstr ""

msgctxt "an5.40:1.15"
msgid "paññāya vaḍḍhati."
msgstr ""

msgctxt "an5.40:1.16"
msgid ""
"Saddhaṃ, bhikkhave, kulaputtaṃ nissāya antojano imāhi pañcahi vaḍḍhīhi "
"vaḍḍhatīti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an5.40:2.1"
msgid "Yathā hi pabbato selo,"
msgstr ""

#. <br>
msgctxt "an5.40:2.2"
msgid "araññasmiṃ brahāvane;"
msgstr ""

#. <br>
msgctxt "an5.40:2.3"
msgid "Taṃ rukkhā upanissāya,"
msgstr ""

#. <br>
msgctxt "an5.40:2.4"
msgid "vaḍḍhante te vanappatī."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an5.40:3.1"
msgid "Tatheva sīlasampannaṃ,"
msgstr ""

#. <br>
#. VAR: kulaputtaṃ imaṃ → kulapatiṃ idha (bj, pts1) | kulaputtaṃ idha (s1-3)
msgctxt "an5.40:3.2"
msgid "Saddhaṃ kulaputtaṃ imaṃ;"
msgstr ""

#. <br>
msgctxt "an5.40:3.3"
msgid "Upanissāya vaḍḍhanti,"
msgstr ""

#. <br>
msgctxt "an5.40:3.4"
msgid "Puttadārā ca bandhavā;"
msgstr ""

#. <br>
msgctxt "an5.40:3.5"
msgid "Amaccā ñātisaṅghā ca,"
msgstr ""

#. <br>
msgctxt "an5.40:3.6"
msgid "Ye cassa anujīvino."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an5.40:4.1"
msgid "Tyassa sīlavato sīlaṃ,"
msgstr ""

#. <br>
msgctxt "an5.40:4.2"
msgid "cāgaṃ sucaritāni ca;"
msgstr ""

#. <br>
msgctxt "an5.40:4.3"
msgid "Passamānānukubbanti,"
msgstr ""

#. <br>
msgctxt "an5.40:4.4"
msgid "ye bhavanti vicakkhaṇā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an5.40:5.1"
msgid "Idha dhammaṃ caritvāna,"
msgstr ""

#. <br>
#. VAR: maggaṃ → saggaṃ (s1-3, mr)
msgctxt "an5.40:5.2"
msgid "maggaṃ sugatigāminaṃ;"
msgstr ""

#. <br>
msgctxt "an5.40:5.3"
msgid "Nandino devalokasmiṃ,"
msgstr ""

#. <br>
msgctxt "an5.40:5.4"
msgid "modanti kāmakāmino”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an5.40:5.5"
msgid "Dasamaṃ."
msgstr ""

#. </p><p class="endsection">
msgctxt "an5.40:5.6"
msgid "Sumanavaggo catuttho."
msgstr ""

#. </p><blockquote class="uddanagatha"><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an5.40:6.1"
msgid "Sumanā cundī uggaho,"
msgstr ""

#. <br>
msgctxt "an5.40:6.2"
msgid "sīho dānānisaṃsako;"
msgstr ""

#. <br>
msgctxt "an5.40:6.3"
msgid "Kālabhojanasaddhā ca,"
msgstr ""

#. <br>
msgctxt "an5.40:6.4"
msgid "puttasālehi te dasāti."
msgstr ""
