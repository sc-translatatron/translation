#. <section class="sutta" id="an8.37"><article><div class="hgroup"><p class="division">
msgctxt "an8.37:0.1"
msgid "Aṅguttara Nikāya 8"
msgstr ""

#. </p><p>
msgctxt "an8.37:0.2"
msgid "4. Dānavagga"
msgstr ""

#. </p><h1>
msgctxt "an8.37:0.3"
msgid "37. Sappurisadānasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli4.244"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "an8.37:1.1"
msgid "“Aṭṭhimāni, bhikkhave, sappurisadānāni."
msgstr ""

msgctxt "an8.37:1.2"
msgid "Katamāni aṭṭha?"
msgstr ""

msgctxt "an8.37:1.3"
msgid ""
"Suciṃ deti, paṇītaṃ deti, kālena deti, kappiyaṃ deti, viceyya deti, abhiṇhaṃ "
"deti, dadaṃ cittaṃ pasādeti, datvā attamano hoti."
msgstr ""

msgctxt "an8.37:1.4"
msgid "Imāni kho, bhikkhave, aṭṭha sappurisadānānīti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an8.37:2.1"
msgid "Suciṃ paṇītaṃ kālena,"
msgstr ""

#. <br>
msgctxt "an8.37:2.2"
msgid "kappiyaṃ pānabhojanaṃ;"
msgstr ""

#. <br>
msgctxt "an8.37:2.3"
msgid "Abhiṇhaṃ dadāti dānaṃ,"
msgstr ""

#. <br>
#. VAR: sukhettesu → sukhette (pts1)
msgctxt "an8.37:2.4"
msgid "sukhettesu brahmacārisu."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
#. VAR: Neva → na ca (bj, pts1)
msgctxt "an8.37:3.1"
msgid "Neva vippaṭisārissa,"
msgstr ""

#. <br>
msgctxt "an8.37:3.2"
msgid "cajitvā āmisaṃ bahuṃ;"
msgstr ""

#. <br>
msgctxt "an8.37:3.3"
msgid "Evaṃ dinnāni dānāni,"
msgstr ""

#. <br>
msgctxt "an8.37:3.4"
msgid "vaṇṇayanti vipassino."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an8.37:4.1"
msgid "Evaṃ yajitvā medhāvī,"
msgstr ""

#. <br>
msgctxt "an8.37:4.2"
msgid "saddho muttena cetasā;"
msgstr ""

#. <br>
#. VAR: Abyābajjhaṃ → abyāpajjhaṃ (bj, s1-3, mr) | avyāpajjhaṃ (pts1)
msgctxt "an8.37:4.3"
msgid "Abyābajjhaṃ sukhaṃ lokaṃ,"
msgstr ""

#. <br>
msgctxt "an8.37:4.4"
msgid "paṇḍito upapajjatī”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an8.37:4.5"
msgid "Sattamaṃ."
msgstr ""
