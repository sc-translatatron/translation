#. <section class="sutta" id="an3.30"><article><div class="hgroup"><p class="division">
msgctxt "an3.30:0.1"
msgid "Aṅguttara Nikāya 3"
msgstr ""

#. </p><p>
msgctxt "an3.30:0.2"
msgid "3. Puggalavagga"
msgstr ""

#. </p><h1>
msgctxt "an3.30:0.3"
msgid "30. Avakujjasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "an3.30:1.1"
msgid "“Tayome, bhikkhave, puggalā santo saṃvijjamānā lokasmiṃ."
msgstr ""

msgctxt "an3.30:1.2"
msgid "Katame tayo?"
msgstr ""

msgctxt "an3.30:1.3"
msgid "Avakujjapañño puggalo, ucchaṅgapañño puggalo, puthupañño puggalo."
msgstr ""

msgctxt "an3.30:1.4"
msgid "Katamo ca, bhikkhave, avakujjapañño puggalo?"
msgstr ""

msgctxt "an3.30:1.5"
msgid ""
"Idha, bhikkhave, ekacco puggalo ārāmaṃ gantā hoti abhikkhaṇaṃ bhikkhūnaṃ "
"santike dhammassavanāya."
msgstr ""

msgctxt "an3.30:1.6"
msgid ""
"Tassa bhikkhū dhammaṃ desenti ādikalyāṇaṃ majjhekalyāṇaṃ pariyosānakalyāṇaṃ "
"sātthaṃ sabyañjanaṃ, kevalaparipuṇṇaṃ parisuddhaṃ brahmacariyaṃ pakāsenti."
msgstr ""

msgctxt "an3.30:1.7"
msgid ""
"So tasmiṃ āsane nisinno tassā kathāya neva ādiṃ manasi karoti, na majjhaṃ "
"manasi karoti, na pariyosānaṃ manasi karoti;"
msgstr ""

msgctxt "an3.30:1.8"
msgid ""
"vuṭṭhitopi tamhā āsanā tassā kathāya neva ādiṃ manasi karoti, na majjhaṃ "
"manasi karoti, na pariyosānaṃ manasi karoti."
msgstr ""

#. VAR: nikujjo → nikkujjo (bj, s1-3, pts1)
msgctxt "an3.30:1.9"
msgid ""
"Seyyathāpi, bhikkhave, kumbho nikujjo tatra udakaṃ āsittaṃ vivaṭṭati, no "
"saṇṭhāti;"
msgstr ""

msgctxt "an3.30:1.10"
msgid ""
"evamevaṃ kho, bhikkhave, idhekacco puggalo ārāmaṃ gantā hoti abhikkhaṇaṃ "
"bhikkhūnaṃ santike dhammassavanāya."
msgstr ""

msgctxt "an3.30:1.11"
msgid ""
"Tassa bhikkhū dhammaṃ desenti ādikalyāṇaṃ majjhekalyāṇaṃ pariyosānakalyāṇaṃ "
"sātthaṃ sabyañjanaṃ, kevalaparipuṇṇaṃ parisuddhaṃ brahmacariyaṃ pakāsenti."
msgstr ""

msgctxt "an3.30:1.12"
msgid ""
"So tasmiṃ āsane nisinno tassā kathāya neva ādiṃ manasi karoti, na majjhaṃ "
"manasi karoti, na pariyosānaṃ manasi karoti;"
msgstr ""

msgctxt "an3.30:1.13"
msgid ""
"vuṭṭhitopi tamhā āsanā tassā kathāya neva ādiṃ manasi karoti, na majjhaṃ "
"manasi karoti, na pariyosānaṃ manasi karoti."
msgstr ""

msgctxt "an3.30:1.14"
msgid "Ayaṃ vuccati, bhikkhave, avakujjapañño puggalo."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.131"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "an3.30:2.1"
msgid "Katamo ca, bhikkhave, ucchaṅgapañño puggalo?"
msgstr ""

msgctxt "an3.30:2.2"
msgid ""
"Idha, bhikkhave, ekacco puggalo ārāmaṃ gantā hoti abhikkhaṇaṃ bhikkhūnaṃ "
"santike dhammassavanāya."
msgstr ""

msgctxt "an3.30:2.3"
msgid ""
"Tassa bhikkhū dhammaṃ desenti ādikalyāṇaṃ majjhekalyāṇaṃ pariyosānakalyāṇaṃ "
"sātthaṃ sabyañjanaṃ, kevalaparipuṇṇaṃ parisuddhaṃ brahmacariyaṃ pakāsenti."
msgstr ""

msgctxt "an3.30:2.4"
msgid ""
"So tasmiṃ āsane nisinno tassā kathāya ādimpi manasi karoti, majjhampi manasi "
"karoti, pariyosānampi manasi karoti;"
msgstr ""

msgctxt "an3.30:2.5"
msgid ""
"vuṭṭhito ca kho tamhā āsanā tassā kathāya neva ādiṃ manasi karoti, na "
"majjhaṃ manasi karoti, na pariyosānaṃ manasi karoti."
msgstr ""

msgctxt "an3.30:2.6"
msgid "Seyyathāpi, bhikkhave, purisassa ucchaṅge nānākhajjakāni ākiṇṇāni—"
msgstr ""

msgctxt "an3.30:2.7"
msgid "tilā taṇḍulā modakā badarā."
msgstr ""

msgctxt "an3.30:2.8"
msgid "So tamhā āsanā vuṭṭhahanto satisammosā pakireyya."
msgstr ""

msgctxt "an3.30:2.9"
msgid ""
"Evamevaṃ kho, bhikkhave, idhekacco puggalo ārāmaṃ gantā hoti abhikkhaṇaṃ "
"bhikkhūnaṃ santike dhammassavanāya."
msgstr ""

msgctxt "an3.30:2.10"
msgid ""
"Tassa bhikkhū dhammaṃ desenti ādikalyāṇaṃ majjhekalyāṇaṃ pariyosānakalyāṇaṃ "
"sātthaṃ sabyañjanaṃ, kevalaparipuṇṇaṃ parisuddhaṃ brahmacariyaṃ pakāsenti."
msgstr ""

msgctxt "an3.30:2.11"
msgid ""
"So tasmiṃ āsane nisinno tassā kathāya ādimpi manasi karoti, majjhampi manasi "
"karoti, pariyosānampi manasi karoti;"
msgstr ""

msgctxt "an3.30:2.12"
msgid ""
"vuṭṭhito ca kho tamhā āsanā tassā kathāya neva ādiṃ manasi karoti, na "
"majjhaṃ manasi karoti, na pariyosānaṃ manasi karoti."
msgstr ""

msgctxt "an3.30:2.13"
msgid "Ayaṃ vuccati, bhikkhave, ucchaṅgapañño puggalo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an3.30:3.1"
msgid "Katamo ca, bhikkhave, puthupañño puggalo?"
msgstr ""

msgctxt "an3.30:3.2"
msgid ""
"Idha, bhikkhave, ekacco puggalo ārāmaṃ gantā hoti abhikkhaṇaṃ bhikkhūnaṃ "
"santike dhammassavanāya."
msgstr ""

msgctxt "an3.30:3.3"
msgid ""
"Tassa bhikkhū dhammaṃ desenti ādikalyāṇaṃ majjhekalyāṇaṃ pariyosānakalyāṇaṃ "
"sātthaṃ sabyañjanaṃ, kevalaparipuṇṇaṃ parisuddhaṃ brahmacariyaṃ pakāsenti."
msgstr ""

msgctxt "an3.30:3.4"
msgid ""
"So tasmiṃ āsane nisinno tassā kathāya ādimpi manasi karoti, majjhampi manasi "
"karoti, pariyosānampi manasi karoti;"
msgstr ""

msgctxt "an3.30:3.5"
msgid ""
"vuṭṭhitopi tamhā āsanā tassā kathāya ādimpi manasi karoti, majjhampi manasi "
"karoti, pariyosānampi manasi karoti."
msgstr ""

msgctxt "an3.30:3.6"
msgid ""
"Seyyathāpi, bhikkhave, kumbho ukkujjo tatra udakaṃ āsittaṃ saṇṭhāti no "
"vivaṭṭati;"
msgstr ""

msgctxt "an3.30:3.7"
msgid ""
"evamevaṃ kho, bhikkhave, idhekacco puggalo ārāmaṃ gantā hoti abhikkhaṇaṃ "
"bhikkhūnaṃ santike dhammassavanāya."
msgstr ""

msgctxt "an3.30:3.8"
msgid ""
"Tassa bhikkhū dhammaṃ desenti ādikalyāṇaṃ majjhekalyāṇaṃ pariyosānakalyāṇaṃ "
"sātthaṃ sabyañjanaṃ, kevalaparipuṇṇaṃ parisuddhaṃ brahmacariyaṃ pakāsenti."
msgstr ""

msgctxt "an3.30:3.9"
msgid ""
"So tasmiṃ āsane nisinno tassā kathāya ādimpi manasi karoti, majjhampi manasi "
"karoti, pariyosānampi manasi karoti;"
msgstr ""

msgctxt "an3.30:3.10"
msgid ""
"vuṭṭhitopi tamhā āsanā tassā kathāya ādimpi manasi karoti, majjhampi manasi "
"karoti, pariyosānampi manasi karoti."
msgstr ""

msgctxt "an3.30:3.11"
msgid "Ayaṃ vuccati, bhikkhave, puthupañño puggalo."
msgstr ""

msgctxt "an3.30:3.12"
msgid "Ime kho, bhikkhave, tayo puggalā santo saṃvijjamānā lokasminti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an3.30:4.1"
msgid "Avakujjapañño puriso,"
msgstr ""

#. <br>
msgctxt "an3.30:4.2"
msgid "dummedho avicakkhaṇo;"
msgstr ""

#. <br>
msgctxt "an3.30:4.3"
msgid "Abhikkhaṇampi ce hoti,"
msgstr ""

#. <br>
msgctxt "an3.30:4.4"
msgid "gantā bhikkhūna santike."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an3.30:5.1"
msgid "Ādiṃ kathāya majjhañca,"
msgstr ""

#. <br>
msgctxt "an3.30:5.2"
msgid "pariyosānañca tādiso;"
msgstr ""

#. <br>
msgctxt "an3.30:5.3"
msgid "Uggahetuṃ na sakkoti,"
msgstr ""

#. <br>
msgctxt "an3.30:5.4"
msgid "paññā hissa na vijjati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an3.30:6.1"
msgid "Ucchaṅgapañño puriso,"
msgstr ""

#. <br>
msgctxt "an3.30:6.2"
msgid "seyyo etena vuccati;"
msgstr ""

#. <br>
msgctxt "an3.30:6.3"
msgid "Abhikkhaṇampi ce hoti,"
msgstr ""

#. <br>
msgctxt "an3.30:6.4"
msgid "gantā bhikkhūna santike."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "an3.30:7.1"
msgid "Ādiṃ kathāya majjhañca,"
msgstr ""

#. <br>
msgctxt "an3.30:7.2"
msgid "pariyosānañca tādiso;"
msgstr ""

#. <br>
msgctxt "an3.30:7.3"
msgid "Nisinno āsane tasmiṃ,"
msgstr ""

#. <br>
msgctxt "an3.30:7.4"
msgid "uggahetvāna byañjanaṃ;"
msgstr ""

#. <br>
msgctxt "an3.30:7.5"
msgid "Vuṭṭhito nappajānāti,"
msgstr ""

#. <br>
#. VAR: gahitaṃ hissa → gahitampissa (pts1, mr)
msgctxt "an3.30:7.6"
msgid "gahitaṃ hissa mussati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "an3.30:8.1"
msgid "Puthupañño ca puriso,"
msgstr ""

#. <br>
#. VAR: etehi → etena (s1-3, mr)
msgctxt "an3.30:8.2"
msgid "seyyo etehi vuccati;"
msgstr ""

#. <br>
msgctxt "an3.30:8.3"
msgid "Abhikkhaṇampi ce hoti,"
msgstr ""

#. <br>
msgctxt "an3.30:8.4"
msgid "gantā bhikkhūna santike."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "an3.30:9.1"
msgid "Ādiṃ kathāya majjhañca,"
msgstr ""

#. <br>
msgctxt "an3.30:9.2"
msgid "pariyosānañca tādiso;"
msgstr ""

#. <br>
msgctxt "an3.30:9.3"
msgid "Nisinno āsane tasmiṃ,"
msgstr ""

#. <br>
msgctxt "an3.30:9.4"
msgid "uggahetvāna byañjanaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "an3.30:10.1"
msgid "Dhāreti seṭṭhasaṅkappo,"
msgstr ""

#. <br>
msgctxt "an3.30:10.2"
msgid "Abyaggamānaso naro;"
msgstr ""

#. <br>
msgctxt "an3.30:10.3"
msgid "Dhammānudhammappaṭipanno,"
msgstr ""

#. <br>
msgctxt "an3.30:10.4"
msgid "Dukkhassantakaro siyā”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an3.30:10.5"
msgid "Dasamaṃ."
msgstr ""

#. </p><p class="endsection">
msgctxt "an3.30:10.6"
msgid "Puggalavaggo tatiyo."
msgstr ""

#. </p><blockquote class="uddanagatha"><p>
#. <a class="sc" id="sc11"></a>
#. VAR: Samiddha → saviṭṭha (s1-3, km) | seṭṭha (mr)
msgctxt "an3.30:11.1"
msgid "Samiddha gilāna saṅkhārā,"
msgstr ""

#. <br>
msgctxt "an3.30:11.2"
msgid "bahukārā vajirena ca;"
msgstr ""

#. <br>
msgctxt "an3.30:11.3"
msgid "Sevi jiguccha gūthabhāṇī,"
msgstr ""

#. <br>
msgctxt "an3.30:11.4"
msgid "andho ca avakujjatāti."
msgstr ""
