msgid ""
"Atthi ca khvassa akusalamūlaṃ asamucchinnaṃ, tampi sabbena sabbaṃ "
"samugghātaṃ gacchati."
msgstr ""

msgctxt "an6.62:11.6"
msgid "Evamayaṃ puggalo āyatiṃ aparihānadhammo bhavissatī’ti."
msgstr ""

msgctxt "an6.62:11.7"
msgid ""
"Seyyathāpi, ānanda, aṅgārāni ādittāni sampajjalitāni sajotibhūtāni sukkhe "
"tiṇapuñje vā kaṭṭhapuñje vā nikkhittāni."
msgstr ""

msgctxt "an6.62:11.8"
msgid ""
"Jāneyyāsi tvaṃ, ānanda, imāni aṅgārāni vuḍḍhiṃ virūḷhiṃ vepullaṃ "
"āpajjissantī”ti?"
msgstr ""

msgctxt "an6.62:11.9"
msgid "“Evaṃ, bhante”."
msgstr ""

#. VAR: rattiyā paccūsasamayaṃ → rattiyā paccūsasamaye (s1-3) | rattipaccūsasamaye (mr)
msgctxt "an6.62:11.10"
msgid ""
"“Seyyathāpi vā panānanda, rattiyā paccūsasamayaṃ sūriye uggacchante, "
"jāneyyāsi tvaṃ, ānanda, andhakāro antaradhāyissati, āloko pātubhavissatī”ti?"
msgstr ""

msgctxt "an6.62:11.11"
msgid "“Evaṃ, bhante”."
msgstr ""

msgctxt "an6.62:11.12"
msgid ""
"“Seyyathāpi vā panānanda, abhido majjhanhike bhattakālasamaye, jāneyyāsi "
"tvaṃ, ānanda, andhakāro antarahito āloko pātubhūto”ti?"
msgstr ""

msgctxt "an6.62:11.13"
msgid "“Evaṃ, bhante”."
msgstr ""

