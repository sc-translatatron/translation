#. <section class="sutta" id="an4.90"><article><div class="hgroup"><p class="division">
msgctxt "an4.90:0.1"
msgid "Aṅguttara Nikāya 4"
msgstr ""

#. </p><p>
msgctxt "an4.90:0.2"
msgid "9. Macalavagga"
msgstr ""

#. </p><h1>
#. VAR: samaṇamacala-khandhasuttaṃ (bj)
msgctxt "an4.90:0.3"
msgid "90. Khandhasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "an4.90:1.1"
msgid "“Cattārome, bhikkhave, puggalā santo saṃvijjamānā lokasmiṃ."
msgstr ""

msgctxt "an4.90:1.2"
msgid "Katame cattāro?"
msgstr ""

msgctxt "an4.90:1.3"
msgid "Samaṇamacalo, samaṇapuṇḍarīko, samaṇapadumo, samaṇesu samaṇasukhumālo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an4.90:2.1"
msgid "Kathañca, bhikkhave, puggalo samaṇamacalo hoti?"
msgstr ""

msgctxt "an4.90:2.2"
msgid ""
"Idha, bhikkhave, bhikkhu sekho hoti appattamānaso, anuttaraṃ yogakkhemaṃ "
"patthayamāno viharati."
msgstr ""

msgctxt "an4.90:2.3"
msgid "Evaṃ kho, bhikkhave, puggalo samaṇamacalo hoti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an4.90:3.1"
msgid "Kathañca, bhikkhave, puggalo samaṇapuṇḍarīko hoti?"
msgstr ""

msgctxt "an4.90:3.2"
msgid ""
"Idha, bhikkhave, bhikkhu pañcasu upādānakkhandhesu udayabbayānupassī "
"viharati:"
msgstr ""

msgctxt "an4.90:3.3"
msgid "‘iti rūpaṃ, iti rūpassa samudayo, iti rūpassa atthaṅgamo;"
msgstr ""

msgctxt "an4.90:3.4"
msgid "iti vedanā … pe … "
msgstr ""

msgctxt "an4.90:3.5"
msgid "iti saññā … pe … "
msgstr ""

msgctxt "an4.90:3.6"
msgid "iti saṅkhārā … pe … "
msgstr ""

msgctxt "an4.90:3.7"
msgid "iti viññāṇaṃ, iti viññāṇassa samudayo, iti viññāṇassa atthaṅgamo’ti;"
msgstr ""

msgctxt "an4.90:3.8"
msgid "no ca kho aṭṭha vimokkhe kāyena phusitvā viharati."
msgstr ""

msgctxt "an4.90:3.9"
msgid "Evaṃ kho, bhikkhave, puggalo samaṇapuṇḍarīko hoti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.91"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "an4.90:4.1"
msgid "Kathañca, bhikkhave, puggalo samaṇapadumo hoti?"
msgstr ""

msgctxt "an4.90:4.2"
msgid ""
"Idha, bhikkhave, bhikkhu pañcasu upādānakkhandhesu udayabbayānupassī "
"viharati:"
msgstr ""

msgctxt "an4.90:4.3"
msgid "‘iti rūpaṃ, iti rūpassa samudayo, iti rūpassa atthaṅgamo;"
msgstr ""

msgctxt "an4.90:4.4"
msgid "iti vedanā … pe … "
msgstr ""

msgctxt "an4.90:4.5"
msgid "iti saññā … pe … "
msgstr ""

msgctxt "an4.90:4.6"
msgid "iti saṅkhārā … pe … "
msgstr ""

msgctxt "an4.90:4.7"
msgid "iti viññāṇaṃ, iti viññāṇassa samudayo, iti viññāṇassa atthaṅgamo’ti;"
msgstr ""

msgctxt "an4.90:4.8"
msgid "aṭṭha ca vimokkhe kāyena phusitvā viharati."
msgstr ""

msgctxt "an4.90:4.9"
msgid "Evaṃ kho, bhikkhave, puggalo samaṇapadumo hoti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an4.90:5.1"
msgid "Kathañca, bhikkhave, puggalo samaṇesu samaṇasukhumālo hoti?"
msgstr ""

msgctxt "an4.90:5.2"
msgid ""
"Idha, bhikkhave, bhikkhu yācitova bahulaṃ cīvaraṃ paribhuñjati, appaṃ "
"ayācito … pe … mameva taṃ, bhikkhave, sammā vadamāno vadeyya samaṇesu "
"samaṇasukhumāloti."
msgstr ""

msgctxt "an4.90:5.3"
msgid "Ime kho, bhikkhave, cattāro puggalā santo saṃvijjamānā lokasmin”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "an4.90:5.4"
msgid "Dasamaṃ."
msgstr ""

#. </p><p class="endsection">
msgctxt "an4.90:5.5"
msgid "Macalavaggo catuttho."
msgstr ""

#. </p><blockquote class="uddanagatha"><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an4.90:6.1"
msgid "Pāṇātipāto ca musā,"
msgstr ""

#. <br>
msgctxt "an4.90:6.2"
msgid "avaṇṇakodhatamoṇatā;"
msgstr ""

#. <br>
msgctxt "an4.90:6.3"
msgid "Putto saṃyojanañceva,"
msgstr ""

#. <br>
msgctxt "an4.90:6.4"
msgid "diṭṭhi khandhena te dasāti."
msgstr ""
