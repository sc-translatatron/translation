#. <section class="sutta" id="an3.31"><article><div class="hgroup"><p class="division">
msgctxt "an3.31:0.1"
msgid "Aṅguttara Nikāya 3"
msgstr ""

#. </p><p>
msgctxt "an3.31:0.2"
msgid "4. Devadūtavagga"
msgstr ""

#. </p><h1>
msgctxt "an3.31:0.3"
msgid "31. Sabrahmakasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.132"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "an3.31:1.1"
msgid ""
"“Sabrahmakāni, bhikkhave, tāni kulāni yesaṃ puttānaṃ mātāpitaro ajjhāgāre "
"pūjitā honti."
msgstr ""

msgctxt "an3.31:1.2"
msgid ""
"Sapubbācariyakāni, bhikkhave, tāni kulāni yesaṃ puttānaṃ mātāpitaro "
"ajjhāgāre pūjitā honti."
msgstr ""

msgctxt "an3.31:1.3"
msgid ""
"Sāhuneyyāni, bhikkhave, tāni kulāni yesaṃ puttānaṃ mātāpitaro ajjhāgāre "
"pūjitā honti."
msgstr ""

msgctxt "an3.31:1.4"
msgid "‘Brahmā’ti, bhikkhave, mātāpitūnaṃ etaṃ adhivacanaṃ."
msgstr ""

msgctxt "an3.31:1.5"
msgid "‘Pubbācariyā’ti, bhikkhave, mātāpitūnaṃ etaṃ adhivacanaṃ."
msgstr ""

msgctxt "an3.31:1.6"
msgid "‘Āhuneyyā’ti, bhikkhave, mātāpitūnaṃ etaṃ adhivacanaṃ."
msgstr ""

msgctxt "an3.31:1.7"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "an3.31:1.8"
msgid ""
"Bahukārā, bhikkhave, mātāpitaro puttānaṃ, āpādakā posakā, imassa lokassa "
"dassetāroti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an3.31:2.1"
msgid "Brahmāti mātāpitaro,"
msgstr ""

#. <br>
msgctxt "an3.31:2.2"
msgid "pubbācariyāti vuccare;"
msgstr ""

#. <br>
msgctxt "an3.31:2.3"
msgid "Āhuneyyā ca puttānaṃ,"
msgstr ""

#. <br>
msgctxt "an3.31:2.4"
msgid "pajāya anukampakā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an3.31:3.1"
msgid "Tasmā hi ne namasseyya,"
msgstr ""

#. <br>
msgctxt "an3.31:3.2"
msgid "sakkareyya ca paṇḍito;"
msgstr ""

#. <br>
msgctxt "an3.31:3.3"
msgid "Annena atha pānena,"
msgstr ""

#. <br>
msgctxt "an3.31:3.4"
msgid "vatthena sayanena ca;"
msgstr ""

#. <br>
#. VAR: nhāpanena → nahāpanena (bj)
msgctxt "an3.31:3.5"
msgid "Ucchādanena nhāpanena,"
msgstr ""

#. <br>
msgctxt "an3.31:3.6"
msgid "pādānaṃ dhovanena ca."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an3.31:4.1"
msgid "Tāya naṃ pāricariyāya,"
msgstr ""

#. <br>
msgctxt "an3.31:4.2"
msgid "mātāpitūsu paṇḍitā;"
msgstr ""

#. <br>
#. VAR: Idheva → idhaceva (bj)
msgctxt "an3.31:4.3"
msgid "Idheva naṃ pasaṃsanti,"
msgstr ""

#. <br>
#. VAR: sagge pamodatī”ti → sagge ca modatīti (bj)
msgctxt "an3.31:4.4"
msgid "pecca sagge pamodatī”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an3.31:4.5"
msgid "Paṭhamaṃ."
msgstr ""
