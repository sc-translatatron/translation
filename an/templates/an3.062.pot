#. <section class="sutta" id="an3.62"><article><div class="hgroup"><p class="division">
msgctxt "an3.62:0.1"
msgid "Aṅguttara Nikāya 3"
msgstr ""

#. </p><p>
msgctxt "an3.62:0.2"
msgid "7. Mahāvagga"
msgstr ""

#. </p><h1>
msgctxt "an3.62:0.3"
msgid "62. Bhayasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.178"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "an3.62:1.1"
msgid ""
"“Tīṇimāni, bhikkhave, amātāputtikāni bhayānīti assutavā puthujjano bhāsati."
msgstr ""

msgctxt "an3.62:1.2"
msgid "Katamāni tīṇi?"
msgstr ""

msgctxt "an3.62:1.3"
msgid "Hoti so, bhikkhave, samayo yaṃ mahāaggiḍāho vuṭṭhāti."
msgstr ""

msgctxt "an3.62:1.4"
msgid ""
"Mahāaggiḍāhe kho pana, bhikkhave, vuṭṭhite tena gāmāpi ḍayhanti nigamāpi "
"ḍayhanti nagarāpi ḍayhanti."
msgstr ""

msgctxt "an3.62:1.5"
msgid ""
"Gāmesupi ḍayhamānesu nigamesupi ḍayhamānesu nagaresupi ḍayhamānesu tattha "
"mātāpi puttaṃ nappaṭilabhati, puttopi mātaraṃ nappaṭilabhati."
msgstr ""

msgctxt "an3.62:1.6"
msgid ""
"Idaṃ, bhikkhave, paṭhamaṃ amātāputtikaṃ bhayanti assutavā puthujjano bhāsati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an3.62:2.1"
msgid "Puna caparaṃ, bhikkhave, hoti so samayo yaṃ mahāmegho vuṭṭhāti."
msgstr ""

msgctxt "an3.62:2.2"
msgid "Mahāmeghe kho pana, bhikkhave, vuṭṭhite mahāudakavāhako sañjāyati."
msgstr ""

msgctxt "an3.62:2.3"
msgid ""
"Mahāudakavāhake kho pana, bhikkhave, sañjāyante tena gāmāpi vuyhanti "
"nigamāpi vuyhanti nagarāpi vuyhanti."
msgstr ""

msgctxt "an3.62:2.4"
msgid ""
"Gāmesupi vuyhamānesu nigamesupi vuyhamānesu nagaresupi vuyhamānesu tattha "
"mātāpi puttaṃ nappaṭilabhati, puttopi mātaraṃ nappaṭilabhati."
msgstr ""

msgctxt "an3.62:2.5"
msgid ""
"Idaṃ, bhikkhave, dutiyaṃ amātāputtikaṃ bhayanti assutavā puthujjano bhāsati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an3.62:3.1"
msgid ""
"Puna caparaṃ, bhikkhave, hoti so samayo yaṃ bhayaṃ hoti aṭavisaṅkopo, "
"cakkasamāruḷhā jānapadā pariyāyanti."
msgstr ""

msgctxt "an3.62:3.2"
msgid ""
"Bhaye kho pana, bhikkhave, sati aṭavisaṅkope cakkasamāruḷhesu jānapadesu "
"pariyāyantesu tattha mātāpi puttaṃ nappaṭilabhati, puttopi mātaraṃ "
"nappaṭilabhati."
msgstr ""

msgctxt "an3.62:3.3"
msgid ""
"Idaṃ, bhikkhave, tatiyaṃ amātāputtikaṃ bhayanti assutavā puthujjano bhāsati."
msgstr ""

msgctxt "an3.62:3.4"
msgid ""
"Imāni kho, bhikkhave, tīṇi amātāputtikāni bhayānīti assutavā puthujjano "
"bhāsati."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.179"></a>
#. <a class="sc" id="sc4"></a>
#. VAR: panimāni → imāni kho pana (mr)
msgctxt "an3.62:4.1"
msgid ""
"Tāni kho panimāni, bhikkhave, tīṇi samātāputtikāniyeva bhayāni "
"amātāputtikāni bhayānīti assutavā puthujjano bhāsati."
msgstr ""

msgctxt "an3.62:4.2"
msgid "Katamāni tīṇi?"
msgstr ""

msgctxt "an3.62:4.3"
msgid "Hoti so, bhikkhave, samayo yaṃ mahāaggiḍāho vuṭṭhāti."
msgstr ""

msgctxt "an3.62:4.4"
msgid ""
"Mahāaggiḍāhe kho pana, bhikkhave, vuṭṭhite tena gāmāpi ḍayhanti nigamāpi "
"ḍayhanti nagarāpi ḍayhanti."
msgstr ""

msgctxt "an3.62:4.5"
msgid ""
"Gāmesupi ḍayhamānesu nigamesupi ḍayhamānesu nagaresupi ḍayhamānesu hoti so "
"samayo yaṃ kadāci karahaci mātāpi puttaṃ paṭilabhati, puttopi mātaraṃ "
"paṭilabhati."
msgstr ""

msgctxt "an3.62:4.6"
msgid ""
"Idaṃ, bhikkhave, paṭhamaṃ samātāputtikaṃyeva bhayaṃ amātāputtikaṃ bhayanti "
"assutavā puthujjano bhāsati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an3.62:5.1"
msgid "Puna caparaṃ, bhikkhave, hoti so samayo yaṃ mahāmegho vuṭṭhāti."
msgstr ""

msgctxt "an3.62:5.2"
msgid "Mahāmeghe kho pana, bhikkhave, vuṭṭhite mahāudakavāhako sañjāyati."
msgstr ""

msgctxt "an3.62:5.3"
msgid ""
"Mahāudakavāhake kho pana, bhikkhave, sañjāte tena gāmāpi vuyhanti nigamāpi "
"vuyhanti nagarāpi vuyhanti."
msgstr ""

msgctxt "an3.62:5.4"
msgid ""
"Gāmesupi vuyhamānesu nigamesupi vuyhamānesu nagaresupi vuyhamānesu hoti so "
"samayo yaṃ kadāci karahaci mātāpi puttaṃ paṭilabhati, puttopi mātaraṃ "
"paṭilabhati."
msgstr ""

msgctxt "an3.62:5.5"
msgid ""
"Idaṃ, bhikkhave, dutiyaṃ samātāputtikaṃyeva bhayaṃ amātāputtikaṃ bhayanti "
"assutavā puthujjano bhāsati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an3.62:6.1"
msgid ""
"Puna caparaṃ, bhikkhave, hoti so samayo yaṃ bhayaṃ hoti aṭavisaṅkopo, "
"cakkasamāruḷhā jānapadā pariyāyanti."
msgstr ""

msgctxt "an3.62:6.2"
msgid ""
"Bhaye kho pana, bhikkhave, sati aṭavisaṅkope cakkasamāruḷhesu jānapadesu "
"pariyāyantesu hoti so samayo yaṃ kadāci karahaci mātāpi puttaṃ paṭilabhati, "
"puttopi mātaraṃ paṭilabhati."
msgstr ""

msgctxt "an3.62:6.3"
msgid ""
"Idaṃ, bhikkhave, tatiyaṃ samātāputtikaṃyeva bhayaṃ amātāputtikaṃ bhayanti "
"assutavā puthujjano bhāsati."
msgstr ""

msgctxt "an3.62:6.4"
msgid ""
"Imāni kho, bhikkhave, tīṇi samātāputtikāniyeva bhayāni amātāputtikāni "
"bhayānīti assutavā puthujjano bhāsati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "an3.62:7.1"
msgid "Tīṇimāni, bhikkhave, amātāputtikāni bhayāni."
msgstr ""

msgctxt "an3.62:7.2"
msgid "Katamāni tīṇi?"
msgstr ""

msgctxt "an3.62:7.3"
msgid "Jarābhayaṃ, byādhibhayaṃ, maraṇabhayanti."
msgstr ""

msgctxt "an3.62:7.4"
msgid "Na, bhikkhave, mātā puttaṃ jīramānaṃ evaṃ labhati:"
msgstr ""

msgctxt "an3.62:7.5"
msgid "‘ahaṃ jīrāmi, mā me putto jīrī’ti;"
msgstr ""

msgctxt "an3.62:7.6"
msgid "putto vā pana mātaraṃ jīramānaṃ na evaṃ labhati:"
msgstr ""

msgctxt "an3.62:7.7"
msgid "‘ahaṃ jīrāmi, mā me mātā jīrī’ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "an3.62:8.1"
msgid "Na, bhikkhave, mātā puttaṃ byādhiyamānaṃ evaṃ labhati:"
msgstr ""

msgctxt "an3.62:8.2"
msgid "‘ahaṃ byādhiyāmi, mā me putto byādhiyī’ti;"
msgstr ""

msgctxt "an3.62:8.3"
msgid "putto vā pana mātaraṃ byādhiyamānaṃ na evaṃ labhati:"
msgstr ""

msgctxt "an3.62:8.4"
msgid "‘ahaṃ byādhiyāmi, mā me mātā byādhiyī’ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "an3.62:9.1"
msgid "Na, bhikkhave, mātā puttaṃ mīyamānaṃ evaṃ labhati:"
msgstr ""

msgctxt "an3.62:9.2"
msgid "‘ahaṃ mīyāmi, mā me putto mīyī’ti;"
msgstr ""

msgctxt "an3.62:9.3"
msgid "putto vā pana mātaraṃ mīyamānaṃ na evaṃ labhati:"
msgstr ""

msgctxt "an3.62:9.4"
msgid "‘ahaṃ mīyāmi, mā me mātā mīyī’ti."
msgstr ""

msgctxt "an3.62:9.5"
msgid "Imāni kho, bhikkhave, tīṇi amātāputtikāni bhayānīti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.180"></a>
#. <a class="sc" id="sc10"></a>
msgctxt "an3.62:10.1"
msgid ""
"Atthi, bhikkhave, maggo atthi paṭipadā imesañca tiṇṇaṃ samātāputtikānaṃ "
"bhayānaṃ imesañca tiṇṇaṃ amātāputtikānaṃ bhayānaṃ pahānāya samatikkamāya "
"saṃvattati."
msgstr ""

msgctxt "an3.62:10.2"
msgid ""
"Katamo ca, bhikkhave, maggo katamā ca paṭipadā imesañca tiṇṇaṃ "
"samātāputtikānaṃ bhayānaṃ imesañca tiṇṇaṃ amātāputtikānaṃ bhayānaṃ pahānāya "
"samatikkamāya saṃvattati?"
msgstr ""

msgctxt "an3.62:10.3"
msgid "Ayameva ariyo aṭṭhaṅgiko maggo, seyyathidaṃ—"
msgstr ""

msgctxt "an3.62:10.4"
msgid ""
"sammādiṭṭhi, sammāsaṅkappo, sammāvācā, sammākammanto, sammāājīvo, "
"sammāvāyāmo, sammāsati, sammāsamādhi."
msgstr ""

msgctxt "an3.62:10.5"
msgid ""
"Ayaṃ kho, bhikkhave, maggo ayaṃ paṭipadā imesañca tiṇṇaṃ samātāputtikānaṃ "
"bhayānaṃ imesañca tiṇṇaṃ amātāputtikānaṃ bhayānaṃ pahānāya samatikkamāya "
"saṃvattatī”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "an3.62:10.6"
msgid "Dutiyaṃ."
msgstr ""
