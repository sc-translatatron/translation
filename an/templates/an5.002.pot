#. <section class="sutta" id="an5.2"><article><div class="hgroup"><p class="division">
msgctxt "an5.2:0.1"
msgid "Aṅguttara Nikāya 5"
msgstr ""

#. </p><p>
msgctxt "an5.2:0.2"
msgid "1. Sekhabalavagga"
msgstr ""

#. </p><h1>
#. VAR: sekhabalavitthatasuttaṃ (bj)
msgctxt "an5.2:0.3"
msgid "2. Vitthatasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.2"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "an5.2:1.1"
msgid "“Pañcimāni, bhikkhave, sekhabalāni."
msgstr ""

msgctxt "an5.2:1.2"
msgid "Katamāni pañca?"
msgstr ""

msgctxt "an5.2:1.3"
msgid "Saddhābalaṃ, hirībalaṃ, ottappabalaṃ, vīriyabalaṃ, paññābalaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an5.2:2.1"
msgid "Katamañca, bhikkhave, saddhābalaṃ?"
msgstr ""

msgctxt "an5.2:2.2"
msgid ""
"Idha, bhikkhave, ariyasāvako saddho hoti, saddahati tathāgatassa bodhiṃ:"
msgstr ""

msgctxt "an5.2:2.3"
msgid ""
"‘itipi so bhagavā arahaṃ sammāsambuddho vijjācaraṇasampanno sugato lokavidū "
"anuttaro purisadammasārathi satthā devamanussānaṃ buddho bhagavā’ti."
msgstr ""

msgctxt "an5.2:2.4"
msgid "Idaṃ vuccati, bhikkhave, saddhābalaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an5.2:3.1"
msgid "Katamañca, bhikkhave, hirībalaṃ?"
msgstr ""

msgctxt "an5.2:3.2"
msgid ""
"Idha, bhikkhave, ariyasāvako hirīmā hoti, hirīyati kāyaduccaritena "
"vacīduccaritena manoduccaritena, hirīyati pāpakānaṃ akusalānaṃ dhammānaṃ "
"samāpattiyā."
msgstr ""

msgctxt "an5.2:3.3"
msgid "Idaṃ vuccati, bhikkhave, hirībalaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an5.2:4.1"
msgid "Katamañca, bhikkhave, ottappabalaṃ?"
msgstr ""

msgctxt "an5.2:4.2"
msgid ""
"Idha, bhikkhave, ariyasāvako ottappī hoti, ottappati kāyaduccaritena "
"vacīduccaritena manoduccaritena, ottappati pāpakānaṃ akusalānaṃ dhammānaṃ "
"samāpattiyā."
msgstr ""

msgctxt "an5.2:4.3"
msgid "Idaṃ vuccati, bhikkhave, ottappabalaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an5.2:5.1"
msgid "Katamañca, bhikkhave, vīriyabalaṃ?"
msgstr ""

msgctxt "an5.2:5.2"
msgid ""
"Idha, bhikkhave, ariyasāvako āraddhavīriyo viharati akusalānaṃ dhammānaṃ "
"pahānāya, kusalānaṃ dhammānaṃ upasampadāya, thāmavā daḷhaparakkamo "
"anikkhittadhuro kusalesu dhammesu."
msgstr ""

msgctxt "an5.2:5.3"
msgid "Idaṃ vuccati, bhikkhave, vīriyabalaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an5.2:6.1"
msgid "Katamañca, bhikkhave, paññābalaṃ?"
msgstr ""

msgctxt "an5.2:6.2"
msgid ""
"Idha, bhikkhave, ariyasāvako paññavā hoti udayatthagāminiyā paññāya "
"samannāgato ariyāya nibbedhikāya sammā dukkhakkhayagāminiyā."
msgstr ""

msgctxt "an5.2:6.3"
msgid "Idaṃ vuccati, bhikkhave, paññābalaṃ."
msgstr ""

msgctxt "an5.2:6.4"
msgid "Imāni kho, bhikkhave, pañca sekhabalāni."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.3"></a>
#. <a class="sc" id="sc7"></a>
msgctxt "an5.2:7.1"
msgid "Tasmātiha, bhikkhave, evaṃ sikkhitabbaṃ:"
msgstr ""

msgctxt "an5.2:7.2"
msgid ""
"‘saddhābalena samannāgatā bhavissāma sekhabalena, hirībalena … ottappabalena "
"… vīriyabalena … paññābalena samannāgatā bhavissāma sekhabalenā’ti."
msgstr ""

msgctxt "an5.2:7.3"
msgid "Evañhi kho, bhikkhave, sikkhitabban”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "an5.2:7.4"
msgid "Dutiyaṃ."
msgstr ""
