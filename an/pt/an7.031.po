#. <section class="sutta" id="an7.31"><article><div class="hgroup"><p class="division">
msgctxt "an7.31:0.1"
msgid "Aṅguttara Nikāya 7"
msgstr ""

#. </p><p>
msgctxt "an7.31:0.2"
msgid "3. Vajjisattakavagga"
msgstr ""

#. </p><h1>
#. VAR: 31. Parābhavasutta → upāsakaparābhavasuttaṃ (bj)
msgctxt "an7.31:0.3"
msgid "31. Parābhavasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "an7.31:1.1"
msgid "“Sattime, bhikkhave, upāsakassa parābhavā … pe …"
msgstr ""

msgctxt "an7.31:1.2"
msgid "sattime, bhikkhave, upāsakassa sambhavā."
msgstr ""

msgctxt "an7.31:1.3"
msgid "Katame satta?"
msgstr ""

msgctxt "an7.31:1.4"
msgid "Bhikkhudassanaṃ na hāpeti, "
msgstr ""

msgctxt "an7.31:1.5"
msgid "saddhammassavanaṃ nappamajjati, "
msgstr ""

msgctxt "an7.31:1.6"
msgid "adhisīle sikkhati, "
msgstr ""

msgctxt "an7.31:1.7"
msgid "pasādabahulo hoti, "
msgstr ""

msgctxt "an7.31:1.8"
msgid ""
"bhikkhūsu theresu ceva navesu ca majjhimesu ca anupārambhacitto dhammaṃ "
"suṇāti na randhagavesī, "
msgstr ""

msgctxt "an7.31:1.9"
msgid "na ito bahiddhā dakkhiṇeyyaṃ gavesati, "
msgstr ""

msgctxt "an7.31:1.10"
msgid "idha ca pubbakāraṃ karoti."
msgstr ""

msgctxt "an7.31:1.11"
msgid "Ime kho, bhikkhave, satta upāsakassa sambhavāti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts-vp-pli" id="pts-vp-pli4.27"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "an7.31:2.1"
msgid "Dassanaṃ bhāvitattānaṃ,"
msgstr ""

#. <br>
msgctxt "an7.31:2.2"
msgid "Yo hāpeti upāsako;"
msgstr ""

#. <br>
msgctxt "an7.31:2.3"
msgid "Savanañca ariyadhammānaṃ,"
msgstr ""

#. <br>
msgctxt "an7.31:2.4"
msgid "Adhisīle na sikkhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an7.31:3.1"
msgid "Appasādo ca bhikkhūsu,"
msgstr ""

#. <br>
msgctxt "an7.31:3.2"
msgid "bhiyyo bhiyyo pavaḍḍhati;"
msgstr ""

#. <br>
msgctxt "an7.31:3.3"
msgid "Upārambhakacitto ca,"
msgstr ""

#. <br>
msgctxt "an7.31:3.4"
msgid "saddhammaṃ sotumicchati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an7.31:4.1"
msgid "Ito ca bahiddhā aññaṃ,"
msgstr ""

#. <br>
msgctxt "an7.31:4.2"
msgid "dakkhiṇeyyaṃ gavesati;"
msgstr ""

#. <br>
msgctxt "an7.31:4.3"
msgid "Tattheva ca pubbakāraṃ,"
msgstr ""

#. <br>
msgctxt "an7.31:4.4"
msgid "yo karoti upāsako."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an7.31:5.1"
msgid "Ete kho parihāniye,"
msgstr ""

#. <br>
msgctxt "an7.31:5.2"
msgid "satta dhamme sudesite;"
msgstr ""

#. <br>
msgctxt "an7.31:5.3"
msgid "Upāsako sevamāno,"
msgstr ""

#. <br>
msgctxt "an7.31:5.4"
msgid "saddhammā parihāyati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an7.31:6.1"
msgid "Dassanaṃ bhāvitattānaṃ,"
msgstr ""

#. <br>
msgctxt "an7.31:6.2"
msgid "Yo na hāpeti upāsako;"
msgstr ""

#. <br>
msgctxt "an7.31:6.3"
msgid "Savanañca ariyadhammānaṃ,"
msgstr ""

#. <br>
msgctxt "an7.31:6.4"
msgid "Adhisīle ca sikkhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "an7.31:7.1"
msgid "Pasādo cassa bhikkhūsu,"
msgstr ""

#. <br>
msgctxt "an7.31:7.2"
msgid "bhiyyo bhiyyo pavaḍḍhati;"
msgstr ""

#. <br>
msgctxt "an7.31:7.3"
msgid "Anupārambhacitto ca,"
msgstr ""

#. <br>
msgctxt "an7.31:7.4"
msgid "saddhammaṃ sotumicchati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "an7.31:8.1"
msgid "Na ito bahiddhā aññaṃ,"
msgstr ""

#. <br>
msgctxt "an7.31:8.2"
msgid "dakkhiṇeyyaṃ gavesati;"
msgstr ""

#. <br>
msgctxt "an7.31:8.3"
msgid "Idheva ca pubbakāraṃ,"
msgstr ""

#. <br>
msgctxt "an7.31:8.4"
msgid "yo karoti upāsako."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "an7.31:9.1"
msgid "Ete kho aparihāniye,"
msgstr ""

#. <br>
msgctxt "an7.31:9.2"
msgid "Satta dhamme sudesite;"
msgstr ""

#. <br>
msgctxt "an7.31:9.3"
msgid "Upāsako sevamāno,"
msgstr ""

#. <br>
msgctxt "an7.31:9.4"
msgid "Saddhammā na parihāyatī”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an7.31:9.5"
msgid "Ekādasamaṃ."
msgstr ""

#. </p><p class="endsection">
msgctxt "an7.31:9.6"
msgid "Vajjisattakavaggo tatiyo."
msgstr ""

#. </p><blockquote class="uddanagatha"><p>
#. <a class="sc" id="sc10"></a>
msgctxt "an7.31:10.1"
msgid "Sāranda vassakāro ca,"
msgstr ""

#. <br>
msgctxt "an7.31:10.2"
msgid "tisattakāni bhikkhukā;"
msgstr ""

#. <br>
msgctxt "an7.31:10.3"
msgid "Bodhisaññā dve ca hāni,"
msgstr ""

#. <br>
msgctxt "an7.31:10.4"
msgid "vipatti ca parābhavoti."
msgstr ""
