#. <section class="sutta" id="an6.19"><article><div class="hgroup"><p class="division">
msgctxt "an6.19:0.1"
msgid "Aṅguttara Nikāya 6"
msgstr ""

#. </p><p>
msgctxt "an6.19:0.2"
msgid "2. Sāraṇīyavagga"
msgstr ""

#. </p><h1>
msgctxt "an6.19:0.3"
msgid "19. Paṭhamamaraṇassatisutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.304"></a>
#. <a class="sc" id="sc1"></a>
#. VAR: nātike → nādike (bj, s1-3, km, pts1)
msgctxt "an6.19:1.1"
msgid "Ekaṃ samayaṃ bhagavā nātike viharati giñjakāvasathe."
msgstr ""

msgctxt "an6.19:1.2"
msgid "Tatra kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "an6.19:1.3"
msgid "“bhikkhavo”ti."
msgstr ""

msgctxt "an6.19:1.4"
msgid "“Bhadante”ti te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "an6.19:1.5"
msgid "Bhagavā etadavoca:"
msgstr ""

msgctxt "an6.19:1.6"
msgid ""
"“maraṇassati, bhikkhave, bhāvitā bahulīkatā mahapphalā hoti mahānisaṃsā "
"amatogadhā amatapariyosānā."
msgstr ""

msgctxt "an6.19:1.7"
msgid "Bhāvetha no tumhe, bhikkhave, maraṇassatin”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an6.19:2.1"
msgid "Evaṃ vutte, aññataro bhikkhu bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "an6.19:2.2"
msgid "“ahaṃ kho, bhante, bhāvemi maraṇassatin”ti."
msgstr ""

msgctxt "an6.19:2.3"
msgid "“Yathā kathaṃ pana tvaṃ, bhikkhu, bhāvesi maraṇassatin”ti?"
msgstr ""

msgctxt "an6.19:2.4"
msgid "“Idha mayhaṃ, bhante, evaṃ hoti:"
msgstr ""

msgctxt "an6.19:2.5"
msgid ""
"‘aho vatāhaṃ rattindivaṃ jīveyyaṃ, bhagavato sāsanaṃ manasi kareyyaṃ, bahu "
"vata me kataṃ assā’ti."
msgstr ""

msgctxt "an6.19:2.6"
msgid "Evaṃ kho ahaṃ, bhante, bhāvemi maraṇassatin”ti. (1)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an6.19:3.1"
msgid "Aññataropi kho bhikkhu bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "an6.19:3.2"
msgid "“ahampi kho, bhante, bhāvemi maraṇassatin”ti."
msgstr ""

msgctxt "an6.19:3.3"
msgid "“Yathā kathaṃ pana tvaṃ, bhikkhu, bhāvesi maraṇassatin”ti?"
msgstr ""

msgctxt "an6.19:3.4"
msgid "“Idha mayhaṃ, bhante, evaṃ hoti:"
msgstr ""

msgctxt "an6.19:3.5"
msgid ""
"‘aho vatāhaṃ divasaṃ jīveyyaṃ, bhagavato sāsanaṃ manasi kareyyaṃ, bahu vata "
"me kataṃ assā’ti."
msgstr ""

msgctxt "an6.19:3.6"
msgid "Evaṃ kho ahaṃ, bhante, bhāvemi maraṇassatin”ti. (2)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an6.19:4.1"
msgid "Aññataropi kho bhikkhu bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "an6.19:4.2"
msgid "“ahampi kho, bhante, bhāvemi maraṇassatin”ti."
msgstr ""

msgctxt "an6.19:4.3"
msgid "“Yathā kathaṃ pana tvaṃ, bhikkhu, bhāvesi maraṇassatin”ti?"
msgstr ""

msgctxt "an6.19:4.4"
msgid "“Idha mayhaṃ, bhante, evaṃ hoti:"
msgstr ""

msgctxt "an6.19:4.5"
msgid ""
"‘aho vatāhaṃ tadantaraṃ jīveyyaṃ yadantaraṃ ekapiṇḍapātaṃ bhuñjāmi, "
"bhagavato sāsanaṃ manasi kareyyaṃ, bahu vata me kataṃ assā’ti."
msgstr ""

msgctxt "an6.19:4.6"
msgid "Evaṃ kho ahaṃ, bhante, bhāvemi maraṇassatin”ti. (3)"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.305"></a>
#. <a class="sc" id="sc5"></a>
msgctxt "an6.19:5.1"
msgid "Aññataropi kho bhikkhu bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "an6.19:5.2"
msgid "“ahampi kho, bhante, bhāvemi maraṇassatin”ti."
msgstr ""

msgctxt "an6.19:5.3"
msgid "“Yathā kathaṃ pana tvaṃ, bhikkhu, bhāvesi maraṇassatin”ti?"
msgstr ""

msgctxt "an6.19:5.4"
msgid "“Idha mayhaṃ, bhante, evaṃ hoti:"
msgstr ""

#. VAR: saṅkhāditvā → saṅkharitvā (mr)
msgctxt "an6.19:5.5"
msgid ""
"‘aho vatāhaṃ tadantaraṃ jīveyyaṃ yadantaraṃ cattāro pañca ālope saṅkhāditvā "
"ajjhoharāmi, bhagavato sāsanaṃ manasi kareyyaṃ, bahu vata me kataṃ assā’ti."
msgstr ""

msgctxt "an6.19:5.6"
msgid "Evaṃ kho ahaṃ, bhante, bhāvemi maraṇassatin”ti. (4)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an6.19:6.1"
msgid "Aññataropi kho bhikkhu bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "an6.19:6.2"
msgid "“ahampi kho, bhante, bhāvemi maraṇassatin”ti."
msgstr ""

msgctxt "an6.19:6.3"
msgid "“Yathā kathaṃ pana tvaṃ, bhikkhu, bhāvesi maraṇassatin”ti?"
msgstr ""

msgctxt "an6.19:6.4"
msgid "“Idha mayhaṃ, bhante, evaṃ hoti:"
msgstr ""

#. VAR: saṅkhāditvā → saṅkhāditva (pts1) | saṃharitvā (mr)
msgctxt "an6.19:6.5"
msgid ""
"‘aho vatāhaṃ tadantaraṃ jīveyyaṃ yadantaraṃ ekaṃ ālopaṃ saṅkhāditvā "
"ajjhoharāmi, bhagavato sāsanaṃ manasi kareyyaṃ, bahu vata me kataṃ assā’ti."
msgstr ""

msgctxt "an6.19:6.6"
msgid "Evaṃ kho ahaṃ, bhante, bhāvemi maraṇassatin”ti. (5)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "an6.19:7.1"
msgid "Aññataropi kho bhikkhu bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "an6.19:7.2"
msgid "“ahampi kho, bhante, bhāvemi maraṇassatin”ti."
msgstr ""

msgctxt "an6.19:7.3"
msgid "“Yathā kathaṃ pana tvaṃ, bhikkhu, bhāvesi maraṇassatin”ti?"
msgstr ""

msgctxt "an6.19:7.4"
msgid "“Idha mayhaṃ, bhante, evaṃ hoti:"
msgstr ""

msgctxt "an6.19:7.5"
msgid ""
"‘aho vatāhaṃ tadantaraṃ jīveyyaṃ yadantaraṃ assasitvā vā passasāmi "
"passasitvā vā assasāmi, bhagavato sāsanaṃ manasi kareyyaṃ, bahu vata me "
"kataṃ assā’ti."
msgstr ""

msgctxt "an6.19:7.6"
msgid "Evaṃ kho ahaṃ, bhante, bhāvemi maraṇassatin”ti. (6)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "an6.19:8.1"
msgid "Evaṃ vutte, bhagavā te bhikkhū etadavoca:"
msgstr ""

#. VAR: cāyaṃ → yvāyaṃ (pts1, mr)
msgctxt "an6.19:8.2"
msgid "“yo cāyaṃ, bhikkhave, bhikkhu evaṃ maraṇassatiṃ bhāveti:"
msgstr ""

msgctxt "an6.19:8.3"
msgid ""
"‘aho vatāhaṃ rattindivaṃ jīveyyaṃ, bhagavato sāsanaṃ manasi kareyyaṃ, bahu "
"vata me kataṃ assā’ti. (1)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
#. VAR: cāyaṃ → yopāyaṃ (mr)
msgctxt "an6.19:9.1"
msgid "Yo cāyaṃ, bhikkhave, bhikkhu evaṃ maraṇassatiṃ bhāveti:"
msgstr ""

msgctxt "an6.19:9.2"
msgid ""
"‘aho vatāhaṃ divasaṃ jīveyyaṃ, bhagavato sāsanaṃ manasi kareyyaṃ, bahu vata "
"me kataṃ assā’ti. (2)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "an6.19:10.1"
msgid "Yo cāyaṃ, bhikkhave, bhikkhu evaṃ maraṇassatiṃ bhāveti:"
msgstr ""

msgctxt "an6.19:10.2"
msgid ""
"‘aho vatāhaṃ tadantaraṃ jīveyyaṃ yadantaraṃ ekapiṇḍapātaṃ bhuñjāmi, "
"bhagavato sāsanaṃ manasi kareyyaṃ, bahu vata me kataṃ assā’ti. (3)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc11"></a>
msgctxt "an6.19:11.1"
msgid "Yo cāyaṃ, bhikkhave, bhikkhu evaṃ maraṇassatiṃ bhāveti:"
msgstr ""

msgctxt "an6.19:11.2"
msgid ""
"‘aho vatāhaṃ tadantaraṃ jīveyyaṃ yadantaraṃ cattāro pañca ālope saṅkhāditvā "
"ajjhoharāmi, bhagavato sāsanaṃ manasi kareyyaṃ, bahu vata me kataṃ assā’ti. "
"(4)"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.306"></a>
#. <a class="sc" id="sc12"></a>
msgctxt "an6.19:12.1"
msgid ""
"Ime vuccanti, bhikkhave, bhikkhū pamattā viharanti dandhaṃ maraṇassatiṃ "
"bhāventi āsavānaṃ khayāya. (1–4.)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc13"></a>
#. VAR: khvāyaṃ → yopāyaṃ (mr)
msgctxt "an6.19:13.1"
msgid "Yo ca khvāyaṃ, bhikkhave, bhikkhu evaṃ maraṇassatiṃ bhāveti:"
msgstr ""

msgctxt "an6.19:13.2"
msgid ""
"‘aho vatāhaṃ tadantaraṃ jīveyyaṃ yadantaraṃ ekaṃ ālopaṃ saṅkhāditvā "
"ajjhoharāmi, bhagavato sāsanaṃ manasi kareyyaṃ, bahu vata me kataṃ assā’ti. "
"(5)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc14"></a>
msgctxt "an6.19:14.1"
msgid "Yo cāyaṃ, bhikkhave, bhikkhu evaṃ maraṇassatiṃ bhāveti:"
msgstr ""

msgctxt "an6.19:14.2"
msgid ""
"‘aho vatāhaṃ tadantaraṃ jīveyyaṃ yadantaraṃ assasitvā vā passasāmi "
"passasitvā vā assasāmi, bhagavato sāsanaṃ manasi kareyyaṃ, bahu vata me "
"kataṃ assā’ti. (6)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc15"></a>
msgctxt "an6.19:15.1"
msgid ""
"Ime vuccanti, bhikkhave, bhikkhū appamattā viharanti tikkhaṃ maraṇassatiṃ "
"bhāventi āsavānaṃ khayāya. (5–6.)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc16"></a>
msgctxt "an6.19:16.1"
msgid "Tasmātiha, bhikkhave, evaṃ sikkhitabbaṃ:"
msgstr ""

msgctxt "an6.19:16.2"
msgid ""
"‘appamattā viharissāma, tikkhaṃ maraṇassatiṃ bhāvessāma āsavānaṃ khayāyā’ti."
msgstr ""

msgctxt "an6.19:16.3"
msgid "Evañhi vo, bhikkhave, sikkhitabban”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "an6.19:16.4"
msgid "Navamaṃ."
msgstr ""
