#. <section class="sutta" id="an7.3"><article><div class="hgroup"><p class="division">
msgctxt "an7.3:0.1"
msgid "Aṅguttara Nikāya 7"
msgstr ""

#. </p><p>
msgctxt "an7.3:0.2"
msgid "1. Dhanavagga"
msgstr ""

#. </p><h1>
#. VAR: 3. Saṅkhittabalasutta → saṅkhittasattabalasuttaṃ (bj)
msgctxt "an7.3:0.3"
msgid "3. Saṅkhittabalasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli4.3"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "an7.3:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "an7.3:1.2"
msgid ""
"ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme … "
"pe …"
msgstr ""

msgctxt "an7.3:1.3"
msgid "sattimāni, bhikkhave, balāni."
msgstr ""

msgctxt "an7.3:1.4"
msgid "Katamāni satta?"
msgstr ""

msgctxt "an7.3:1.5"
msgid ""
"Saddhābalaṃ, vīriyabalaṃ, hirībalaṃ, ottappabalaṃ, satibalaṃ, samādhibalaṃ, "
"paññābalaṃ."
msgstr ""

msgctxt "an7.3:1.6"
msgid "Imāni kho, bhikkhave, satta balānīti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an7.3:2.1"
msgid "Saddhābalaṃ vīriyañca,"
msgstr ""

#. <br>
#. VAR: hirī → hiri (bj, pts1, mr)
msgctxt "an7.3:2.2"
msgid "hirī ottappiyaṃ balaṃ;"
msgstr ""

#. <br>
msgctxt "an7.3:2.3"
msgid "Satibalaṃ samādhi ca,"
msgstr ""

#. <br>
msgctxt "an7.3:2.4"
msgid "paññā ve sattamaṃ balaṃ;"
msgstr ""

#. <br>
msgctxt "an7.3:2.5"
msgid "Etehi balavā bhikkhu,"
msgstr ""

#. <br>
msgctxt "an7.3:2.6"
msgid "sukhaṃ jīvati paṇḍito."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an7.3:3.1"
msgid "Yoniso vicine dhammaṃ,"
msgstr ""

#. <br>
msgctxt "an7.3:3.2"
msgid "paññāyatthaṃ vipassati;"
msgstr ""

#. <br>
msgctxt "an7.3:3.3"
msgid "Pajjotasseva nibbānaṃ,"
msgstr ""

#. <br>
msgctxt "an7.3:3.4"
msgid "vimokkho hoti cetaso”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an7.3:3.5"
msgid "Tatiyaṃ."
msgstr ""
