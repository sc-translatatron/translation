#. <section class="sutta" id="an4.10"><article><div class="hgroup"><p class="division">
msgctxt "an4.10:0.1"
msgid "Aṅguttara Nikāya 4"
msgstr ""

#. </p><p>
msgctxt "an4.10:0.2"
msgid "1. Bhaṇḍagāmavagga"
msgstr ""

#. </p><h1>
msgctxt "an4.10:0.3"
msgid "10. Yogasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "an4.10:1.1"
msgid "“Cattārome, bhikkhave, yogā."
msgstr ""

msgctxt "an4.10:1.2"
msgid "Katame cattāro?"
msgstr ""

msgctxt "an4.10:1.3"
msgid "Kāmayogo, bhavayogo, diṭṭhiyogo, avijjāyogo."
msgstr ""

msgctxt "an4.10:1.4"
msgid "Katamo ca, bhikkhave, kāmayogo?"
msgstr ""

#. VAR: atthaṅgamañca → atthagamañca (bj, pts1)
msgctxt "an4.10:1.5"
msgid ""
"Idha, bhikkhave, ekacco kāmānaṃ samudayañca atthaṅgamañca assādañca "
"ādīnavañca nissaraṇañca yathābhūtaṃ nappajānāti."
msgstr ""

#. VAR: appajānato → nappajānato (s1-3, km, mr)
#. VAR: kāmanandī → kāmanandi (bj, s1-3, km)
#. VAR: kāmasneho → kāmasineho (bj, s1-3)
msgctxt "an4.10:1.6"
msgid ""
"Tassa kāmānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca "
"yathābhūtaṃ appajānato yo kāmesu kāmarāgo kāmanandī kāmasneho kāmamucchā "
"kāmapipāsā kāmapariḷāho kāmajjhosānaṃ kāmataṇhā sānuseti."
msgstr ""

msgctxt "an4.10:1.7"
msgid "Ayaṃ vuccati, bhikkhave, kāmayogo."
msgstr ""

msgctxt "an4.10:1.8"
msgid "Iti kāmayogo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an4.10:2.1"
msgid "Bhavayogo ca kathaṃ hoti?"
msgstr ""

msgctxt "an4.10:2.2"
msgid ""
"Idha, bhikkhave, ekacco bhavānaṃ samudayañca atthaṅgamañca assādañca "
"ādīnavañca nissaraṇañca yathābhūtaṃ nappajānāti."
msgstr ""

msgctxt "an4.10:2.3"
msgid ""
"Tassa bhavānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca "
"yathābhūtaṃ appajānato yo bhavesu bhavarāgo bhavanandī bhavasneho "
"bhavamucchā bhavapipāsā bhavapariḷāho bhavajjhosānaṃ bhavataṇhā sānuseti."
msgstr ""

msgctxt "an4.10:2.4"
msgid "Ayaṃ vuccati, bhikkhave, bhavayogo."
msgstr ""

msgctxt "an4.10:2.5"
msgid "Iti kāmayogo bhavayogo."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.11"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "an4.10:3.1"
msgid "Diṭṭhiyogo ca kathaṃ hoti?"
msgstr ""

msgctxt "an4.10:3.2"
msgid ""
"Idha, bhikkhave, ekacco diṭṭhīnaṃ samudayañca atthaṅgamañca assādañca "
"ādīnavañca nissaraṇañca yathābhūtaṃ nappajānāti."
msgstr ""

#. VAR: diṭṭhijjhosānaṃ → diṭṭhiajjhosānaṃ (bj, pts1)
msgctxt "an4.10:3.3"
msgid ""
"Tassa diṭṭhīnaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca "
"yathābhūtaṃ appajānato yo diṭṭhīsu diṭṭhirāgo diṭṭhinandī diṭṭhisneho "
"diṭṭhimucchā diṭṭhipipāsā diṭṭhipariḷāho diṭṭhijjhosānaṃ diṭṭhitaṇhā "
"sānuseti."
msgstr ""

msgctxt "an4.10:3.4"
msgid "Ayaṃ vuccati, bhikkhave, diṭṭhiyogo."
msgstr ""

msgctxt "an4.10:3.5"
msgid "Iti kāmayogo bhavayogo diṭṭhiyogo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "an4.10:4.1"
msgid "Avijjāyogo ca kathaṃ hoti?"
msgstr ""

msgctxt "an4.10:4.2"
msgid ""
"Idha, bhikkhave, ekacco channaṃ phassāyatanānaṃ samudayañca atthaṅgamañca "
"assādañca ādīnavañca nissaraṇañca yathābhūtaṃ nappajānāti."
msgstr ""

msgctxt "an4.10:4.3"
msgid ""
"Tassa channaṃ phassāyatanānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca "
"nissaraṇañca yathābhūtaṃ appajānato yā chasu phassāyatanesu avijjā aññāṇaṃ "
"sānuseti."
msgstr ""

msgctxt "an4.10:4.4"
msgid "Ayaṃ vuccati, bhikkhave, avijjāyogo."
msgstr ""

msgctxt "an4.10:4.5"
msgid "Iti kāmayogo bhavayogo diṭṭhiyogo avijjāyogo, "
msgstr ""

#. VAR: ponobhavikehi → ponobbhavikehi (s1-3, mr)
msgctxt "an4.10:4.6"
msgid ""
"saṃyutto pāpakehi akusalehi dhammehi saṃkilesikehi ponobhavikehi sadarehi "
"dukkhavipākehi āyatiṃ jātijarāmaraṇikehi. Tasmā ayogakkhemīti vuccati."
msgstr ""

msgctxt "an4.10:4.7"
msgid "Ime kho, bhikkhave, cattāro yogā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an4.10:5.1"
msgid "Cattārome, bhikkhave, visaṃyogā."
msgstr ""

msgctxt "an4.10:5.2"
msgid "Katame cattāro?"
msgstr ""

msgctxt "an4.10:5.3"
msgid ""
"Kāmayogavisaṃyogo, bhavayogavisaṃyogo, diṭṭhiyogavisaṃyogo, "
"avijjāyogavisaṃyogo."
msgstr ""

msgctxt "an4.10:5.4"
msgid "Katamo ca, bhikkhave, kāmayogavisaṃyogo?"
msgstr ""

msgctxt "an4.10:5.5"
msgid ""
"Idha, bhikkhave, ekacco kāmānaṃ samudayañca atthaṅgamañca assādañca "
"ādīnavañca nissaraṇañca yathābhūtaṃ pajānāti."
msgstr ""

msgctxt "an4.10:5.6"
msgid ""
"Tassa kāmānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca "
"yathābhūtaṃ pajānato yo kāmesu kāmarāgo kāmanandī kāmasneho kāmamucchā "
"kāmapipāsā kāmapariḷāho kāmajjhosānaṃ kāmataṇhā sā nānuseti."
msgstr ""

msgctxt "an4.10:5.7"
msgid "Ayaṃ vuccati, bhikkhave, kāmayogavisaṃyogo."
msgstr ""

msgctxt "an4.10:5.8"
msgid "Iti kāmayogavisaṃyogo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "an4.10:6.1"
msgid "Bhavayogavisaṃyogo ca kathaṃ hoti?"
msgstr ""

msgctxt "an4.10:6.2"
msgid ""
"Idha, bhikkhave, ekacco bhavānaṃ samudayañca atthaṅgamañca assādañca "
"ādīnavañca nissaraṇañca yathābhūtaṃ pajānāti."
msgstr ""

msgctxt "an4.10:6.3"
msgid ""
"Tassa bhavānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca "
"yathābhūtaṃ pajānato yo bhavesu bhavarāgo bhavanandī bhavasneho bhavamucchā "
"bhavapipāsā bhavapariḷāho bhavajjhosānaṃ bhavataṇhā sā nānuseti."
msgstr ""

msgctxt "an4.10:6.4"
msgid "Ayaṃ vuccati, bhikkhave, bhavayogavisaṃyogo."
msgstr ""

msgctxt "an4.10:6.5"
msgid "Iti kāmayogavisaṃyogo bhavayogavisaṃyogo."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.12"></a>
#. <a class="sc" id="sc7"></a>
msgctxt "an4.10:7.1"
msgid "Diṭṭhiyogavisaṃyogo ca kathaṃ hoti?"
msgstr ""

msgctxt "an4.10:7.2"
msgid ""
"Idha, bhikkhave, ekacco diṭṭhīnaṃ samudayañca atthaṅgamañca assādañca "
"ādīnavañca nissaraṇañca yathābhūtaṃ pajānāti."
msgstr ""

msgctxt "an4.10:7.3"
msgid ""
"Tassa diṭṭhīnaṃ samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca "
"yathābhūtaṃ pajānato yo diṭṭhīsu diṭṭhirāgo diṭṭhinandī diṭṭhisneho "
"diṭṭhimucchā diṭṭhipipāsā diṭṭhipariḷāho diṭṭhijjhosānaṃ diṭṭhitaṇhā sā "
"nānuseti."
msgstr ""

msgctxt "an4.10:7.4"
msgid "Ayaṃ vuccati, bhikkhave, diṭṭhiyogavisaṃyogo."
msgstr ""

msgctxt "an4.10:7.5"
msgid "Iti kāmayogavisaṃyogo bhavayogavisaṃyogo diṭṭhiyogavisaṃyogo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "an4.10:8.1"
msgid "Avijjāyogavisaṃyogo ca kathaṃ hoti?"
msgstr ""

msgctxt "an4.10:8.2"
msgid ""
"Idha, bhikkhave, ekacco channaṃ phassāyatanānaṃ samudayañca atthaṅgamañca "
"assādañca ādīnavañca nissaraṇañca yathābhūtaṃ pajānāti."
msgstr ""

msgctxt "an4.10:8.3"
msgid ""
"Tassa channaṃ phassāyatanānaṃ samudayañca atthaṅgamañca assādañca ādīnavañca "
"nissaraṇañca yathābhūtaṃ pajānato yā chasu phassāyatanesu avijjā aññāṇaṃ sā "
"nānuseti."
msgstr ""

msgctxt "an4.10:8.4"
msgid "Ayaṃ vuccati, bhikkhave, avijjāyogavisaṃyogo."
msgstr ""

msgctxt "an4.10:8.5"
msgid ""
"Iti kāmayogavisaṃyogo bhavayogavisaṃyogo diṭṭhiyogavisaṃyogo "
"avijjāyogavisaṃyogo, "
msgstr ""

msgctxt "an4.10:8.6"
msgid ""
"visaṃyutto pāpakehi akusalehi dhammehi saṅkilesikehi ponobhavikehi sadarehi "
"dukkhavipākehi āyatiṃ jātijarāmaraṇikehi. Tasmā yogakkhemīti vuccati."
msgstr ""

msgctxt "an4.10:8.7"
msgid "Ime kho, bhikkhave, cattāro visaṃyogāti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc9"></a>
msgctxt "an4.10:9.1"
msgid "Kāmayogena saṃyuttā,"
msgstr ""

#. <br>
msgctxt "an4.10:9.2"
msgid "bhavayogena cūbhayaṃ;"
msgstr ""

#. <br>
msgctxt "an4.10:9.3"
msgid "Diṭṭhiyogena saṃyuttā,"
msgstr ""

#. <br>
msgctxt "an4.10:9.4"
msgid "avijjāya purakkhatā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "an4.10:10.1"
msgid "Sattā gacchanti saṃsāraṃ,"
msgstr ""

#. <br>
msgctxt "an4.10:10.2"
msgid "jātimaraṇagāmino;"
msgstr ""

#. <br>
msgctxt "an4.10:10.3"
msgid "Ye ca kāme pariññāya,"
msgstr ""

#. <br>
msgctxt "an4.10:10.4"
msgid "bhavayogañca sabbaso."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc11"></a>
msgctxt "an4.10:11.1"
msgid "Diṭṭhiyogaṃ samūhacca,"
msgstr ""

#. <br>
msgctxt "an4.10:11.2"
msgid "avijjañca virājayaṃ;"
msgstr ""

#. <br>
msgctxt "an4.10:11.3"
msgid "Sabbayogavisaṃyuttā,"
msgstr ""

#. <br>
msgctxt "an4.10:11.4"
msgid "te ve yogātigā munī”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an4.10:11.5"
msgid "Dasamaṃ."
msgstr ""

#. </p><p class="endsection">
msgctxt "an4.10:11.6"
msgid "Bhaṇḍagāmavaggo paṭhamo."
msgstr ""

#. </p><blockquote class="uddanagatha"><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.13"></a>
#. <a class="sc" id="sc12"></a>
msgctxt "an4.10:12.1"
msgid "Anubuddhaṃ papatitaṃ dve,"
msgstr ""

#. <br>
msgctxt "an4.10:12.2"
msgid "Khatā anusotapañcamaṃ;"
msgstr ""

#. <br>
msgctxt "an4.10:12.3"
msgid "Appassuto ca sobhanaṃ,"
msgstr ""

#. <br>
msgctxt "an4.10:12.4"
msgid "Vesārajjaṃ taṇhāyogena te dasāti."
msgstr ""
