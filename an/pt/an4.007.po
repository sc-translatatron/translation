#. <section class="sutta" id="an4.7"><article><div class="hgroup"><p class="division">
msgctxt "an4.7:0.1"
msgid "Aṅguttara Nikāya 4"
msgstr ""

#. </p><p>
msgctxt "an4.7:0.2"
msgid "1. Bhaṇḍagāmavagga"
msgstr ""

#. </p><h1>
#. VAR: sobhentisuttaṃ (bj)
msgctxt "an4.7:0.3"
msgid "7. Sobhanasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "an4.7:1.1"
msgid ""
"“Cattārome, bhikkhave, viyattā vinītā visāradā bahussutā dhammadharā "
"dhammānudhammappaṭipannā saṃghaṃ sobhenti."
msgstr ""

msgctxt "an4.7:1.2"
msgid "Katame cattāro?"
msgstr ""

msgctxt "an4.7:1.3"
msgid ""
"Bhikkhu, bhikkhave, viyatto vinīto visārado bahussuto dhammadharo "
"dhammānudhammappaṭipanno saṃghaṃ sobheti."
msgstr ""

msgctxt "an4.7:1.4"
msgid ""
"Bhikkhunī, bhikkhave, viyattā vinītā visāradā bahussutā dhammadharā "
"dhammānudhammappaṭipannā saṃghaṃ sobheti."
msgstr ""

msgctxt "an4.7:1.5"
msgid ""
"Upāsako, bhikkhave, viyatto vinīto visārado bahussuto dhammadharo "
"dhammānudhammappaṭipanno saṃghaṃ sobheti."
msgstr ""

msgctxt "an4.7:1.6"
msgid ""
"Upāsikā, bhikkhave, viyattā vinītā visāradā bahussutā dhammadharā "
"dhammānudhammappaṭipannā saṃghaṃ sobheti."
msgstr ""

msgctxt "an4.7:1.7"
msgid ""
"Ime kho, bhikkhave, cattāro viyattā vinītā visāradā bahussutā dhammadharā "
"dhammānudhammappaṭipannā saṃghaṃ sobhentīti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc2"></a>
#. VAR: viyatto → byatto (s1-3, km) | vyatto (pts1)
msgctxt "an4.7:2.1"
msgid "Yo hoti viyatto ca visārado ca,"
msgstr ""

#. <br>
msgctxt "an4.7:2.2"
msgid "Bahussuto dhammadharo ca hoti;"
msgstr ""

#. <br>
msgctxt "an4.7:2.3"
msgid "Dhammassa hoti anudhammacārī,"
msgstr ""

#. <br>
#. VAR: saṃghasobhano → saṃghasobhaṇo (mr)
msgctxt "an4.7:2.4"
msgid "Sa tādiso vuccati saṃghasobhano."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an4.7:3.1"
msgid "Bhikkhu ca sīlasampanno,"
msgstr ""

#. <br>
msgctxt "an4.7:3.2"
msgid "bhikkhunī ca bahussutā;"
msgstr ""

#. <br>
msgctxt "an4.7:3.3"
msgid "Upāsako ca yo saddho,"
msgstr ""

#. <br>
msgctxt "an4.7:3.4"
msgid "yā ca saddhā upāsikā;"
msgstr ""

#. <br>
msgctxt "an4.7:3.5"
msgid "Ete kho saṅghaṃ sobhenti,"
msgstr ""

#. <br>
msgctxt "an4.7:3.6"
msgid "ete hi saṅghasobhanā”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an4.7:3.7"
msgid "Sattamaṃ."
msgstr ""
