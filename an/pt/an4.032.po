#. <section class="sutta" id="an4.32"><article><div class="hgroup"><p class="division">
msgctxt "an4.32:0.1"
msgid "Aṅguttara Nikāya 4"
msgstr ""

#. </p><p>
msgctxt "an4.32:0.2"
msgid "4. Cakkavagga"
msgstr ""

#. </p><h1>
#. VAR: saṅgahavatthusuttaṃ (bj)
msgctxt "an4.32:0.3"
msgid "32. Saṅgahasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "an4.32:1.1"
msgid "“Cattārimāni, bhikkhave, saṅgahavatthūni."
msgstr ""

msgctxt "an4.32:1.2"
msgid "Katamāni cattāri?"
msgstr ""

msgctxt "an4.32:1.3"
msgid "Dānaṃ, peyyavajjaṃ, atthacariyā, samānattatā—"
msgstr ""

msgctxt "an4.32:1.4"
msgid "imāni kho, bhikkhave, cattāri saṅgahavatthūnīti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an4.32:2.1"
msgid "Dānañca peyyavajjañca,"
msgstr ""

#. <br>
msgctxt "an4.32:2.2"
msgid "atthacariyā ca yā idha;"
msgstr ""

#. <br>
msgctxt "an4.32:2.3"
msgid "Samānattatā ca dhammesu,"
msgstr ""

#. <br>
msgctxt "an4.32:2.4"
msgid "tattha tattha yathārahaṃ;"
msgstr ""

#. <br>
msgctxt "an4.32:2.5"
msgid "Ete kho saṅgahā loke,"
msgstr ""

#. <br>
msgctxt "an4.32:2.6"
msgid "rathassāṇīva yāyato."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an4.32:3.1"
msgid "Ete ca saṅgahā nāssu,"
msgstr ""

#. <br>
msgctxt "an4.32:3.2"
msgid "na mātā puttakāraṇā;"
msgstr ""

#. <br>
msgctxt "an4.32:3.3"
msgid "Labhetha mānaṃ pūjaṃ vā,"
msgstr ""

#. <br>
msgctxt "an4.32:3.4"
msgid "pitā vā puttakāraṇā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
#. VAR: saṅgahā → saṅgahe (aṭṭhakathāyaṃ pāṭhantaraṃ)
msgctxt "an4.32:4.1"
msgid "Yasmā ca saṅgahā ete,"
msgstr ""

#. <br>
msgctxt "an4.32:4.2"
msgid "samavekkhanti paṇḍitā;"
msgstr ""

#. <br>
msgctxt "an4.32:4.3"
msgid "Tasmā mahattaṃ papponti,"
msgstr ""

#. <br>
msgctxt "an4.32:4.4"
msgid "pāsaṃsā ca bhavanti te”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "an4.32:4.5"
msgid "Dutiyaṃ."
msgstr ""
