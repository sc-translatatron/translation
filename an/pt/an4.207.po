#. <section class="sutta" id="an4.207"><article><div class="hgroup"><p class="division">
msgctxt "an4.207:0.1"
msgid "Aṅguttara Nikāya 4"
msgstr ""

#. </p><p>
msgctxt "an4.207:0.2"
msgid "21. Sappurisavagga"
msgstr ""

#. </p><h1>
#. VAR: paṭhamapāpa-kalyāṇasuttaṃ (bj)
msgctxt "an4.207:0.3"
msgid "207. Paṭhamapāpadhammasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "an4.207:1.1"
msgid "“Pāpañca vo, bhikkhave, desessāmi, pāpena pāpatarañca;"
msgstr ""

msgctxt "an4.207:1.2"
msgid "kalyāṇañca, kalyāṇena kalyāṇatarañca. Taṃ suṇātha … pe …."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "an4.207:2.1"
msgid "Katamo ca, bhikkhave, pāpo?"
msgstr ""

msgctxt "an4.207:2.2"
msgid "Idha, bhikkhave, ekacco pāṇātipātī hoti … pe … micchādiṭṭhiko hoti."
msgstr ""

msgctxt "an4.207:2.3"
msgid "Ayaṃ vuccati, bhikkhave, pāpo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "an4.207:3.1"
msgid "Katamo ca, bhikkhave, pāpena pāpataro?"
msgstr ""

msgctxt "an4.207:3.2"
msgid ""
"Idha, bhikkhave, ekacco attanā ca pāṇātipātī hoti, parañca pāṇātipāte "
"samādapeti … pe … attanā ca micchādiṭṭhiko hoti, parañca micchādiṭṭhiyā "
"samādapeti."
msgstr ""

msgctxt "an4.207:3.3"
msgid "Ayaṃ vuccati, bhikkhave, pāpena pāpataro."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.223"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "an4.207:4.1"
msgid "Katamo ca, bhikkhave, kalyāṇo?"
msgstr ""

msgctxt "an4.207:4.2"
msgid ""
"Idha, bhikkhave, ekacco pāṇātipātā paṭivirato hoti … pe … sammādiṭṭhiko hoti."
msgstr ""

msgctxt "an4.207:4.3"
msgid "Ayaṃ vuccati, bhikkhave, kalyāṇo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "an4.207:5.1"
msgid "“Katamo ca, bhikkhave, kalyāṇena kalyāṇataro?"
msgstr ""

msgctxt "an4.207:5.2"
msgid ""
"Idha, bhikkhave, ekacco attanā ca pāṇātipātā paṭivirato hoti, parañca "
"pāṇātipātā veramaṇiyā samādapeti … pe … attanā ca sammādiṭṭhiko hoti, "
"parañca sammādiṭṭhiyā samādapeti."
msgstr ""

msgctxt "an4.207:5.3"
msgid "Ayaṃ vuccati, bhikkhave, kalyāṇena kalyāṇataro”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "an4.207:5.4"
msgid "Sattamaṃ."
msgstr ""
