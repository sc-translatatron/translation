#. <section class="sutta" id="dn24"><article><div class="hgroup"><p class="division">
msgctxt "dn24:0.1"
msgid "Dīgha Nikāya 24"
msgstr ""

#. </p><h1>
msgctxt "dn24:0.2"
msgid "Pāthikasutta"
msgstr ""

#. </h1></div><h2>
msgctxt "dn24:0.3"
msgid "1. Sunakkhattavatthu"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.1"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "dn24:1.1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
#. VAR: anupiyaṃ nāma → anupiyā nāma (bj) | anuppiyaṃ nāma (s1-3)
msgctxt "dn24:1.1.2"
msgid "ekaṃ samayaṃ bhagavā mallesu viharati anupiyaṃ nāma mallānaṃ nigamo."
msgstr ""

msgctxt "dn24:1.1.3"
msgid ""
"Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya anupiyaṃ "
"piṇḍāya pāvisi."
msgstr ""

msgctxt "dn24:1.1.4"
msgid "Atha kho bhagavato etadahosi:"
msgstr ""

#. VAR: anupiyāyaṃ → anupiyāya (pts1) | anupiyaṃ (mr)
msgctxt "dn24:1.1.5"
msgid "“atippago kho tāva anupiyāyaṃ piṇḍāya carituṃ."
msgstr ""

msgctxt "dn24:1.1.6"
msgid ""
"Yannūnāhaṃ yena bhaggavagottassa paribbājakassa ārāmo, yena bhaggavagotto "
"paribbājako tenupasaṅkameyyan”ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.2"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.2"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "dn24:1.2.1"
msgid ""
"Atha kho bhagavā yena bhaggavagottassa paribbājakassa ārāmo, yena "
"bhaggavagotto paribbājako tenupasaṅkami."
msgstr ""

msgctxt "dn24:1.2.2"
msgid "Atha kho bhaggavagotto paribbājako bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn24:1.2.3"
msgid "“etu kho, bhante, bhagavā."
msgstr ""

msgctxt "dn24:1.2.4"
msgid "Svāgataṃ, bhante, bhagavato."
msgstr ""

msgctxt "dn24:1.2.5"
msgid "Cirassaṃ kho, bhante, bhagavā imaṃ pariyāyamakāsi yadidaṃ idhāgamanāya."
msgstr ""

msgctxt "dn24:1.2.6"
msgid "Nisīdatu, bhante, bhagavā, idamāsanaṃ paññattan”ti."
msgstr ""

msgctxt "dn24:1.2.7"
msgid "Nisīdi bhagavā paññatte āsane."
msgstr ""

msgctxt "dn24:1.2.8"
msgid ""
"Bhaggavagottopi kho paribbājako aññataraṃ nīcaṃ āsanaṃ gahetvā ekamantaṃ "
"nisīdi."
msgstr ""

msgctxt "dn24:1.2.9"
msgid "Ekamantaṃ nisinno kho bhaggavagotto paribbājako bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn24:1.2.10"
msgid ""
"“purimāni, bhante, divasāni purimatarāni sunakkhatto licchaviputto yenāhaṃ "
"tenupasaṅkami; upasaṅkamitvā maṃ etadavoca:"
msgstr ""

msgctxt "dn24:1.2.11"
msgid "‘paccakkhāto dāni mayā, bhaggava, bhagavā."
msgstr ""

msgctxt "dn24:1.2.12"
msgid "Na dānāhaṃ bhagavantaṃ uddissa viharāmī’ti."
msgstr ""

msgctxt "dn24:1.2.13"
msgid "Kaccetaṃ, bhante, tatheva, yathā sunakkhatto licchaviputto avacā”ti?"
msgstr ""

msgctxt "dn24:1.2.14"
msgid "“Tatheva kho etaṃ, bhaggava, yathā sunakkhatto licchaviputto avaca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.3"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.3"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "dn24:1.3.1"
msgid ""
"Purimāni, bhaggava, divasāni purimatarāni sunakkhatto licchaviputto yenāhaṃ "
"tenupasaṅkami; upasaṅkamitvā maṃ abhivādetvā ekamantaṃ nisīdi. Ekamantaṃ "
"nisinno kho, bhaggava, sunakkhatto licchaviputto maṃ etadavoca:"
msgstr ""

msgctxt "dn24:1.3.2"
msgid "‘paccakkhāmi dānāhaṃ, bhante, bhagavantaṃ."
msgstr ""

msgctxt "dn24:1.3.3"
msgid "Na dānāhaṃ, bhante, bhagavantaṃ uddissa viharissāmī’ti."
msgstr ""

msgctxt "dn24:1.3.4"
msgid "Evaṃ vutte, ahaṃ, bhaggava, sunakkhattaṃ licchaviputtaṃ etadavocaṃ:"
msgstr ""

msgctxt "dn24:1.3.5"
msgid "‘api nu tāhaṃ, sunakkhatta, evaṃ avacaṃ, "
msgstr ""

msgctxt "dn24:1.3.6"
msgid "ehi tvaṃ, sunakkhatta, mamaṃ uddissa viharāhī’ti?"
msgstr ""

msgctxt "dn24:1.3.7"
msgid "‘No hetaṃ, bhante’."
msgstr ""

msgctxt "dn24:1.3.8"
msgid "‘Tvaṃ vā pana maṃ evaṃ avaca—"
msgstr ""

msgctxt "dn24:1.3.9"
msgid "ahaṃ, bhante, bhagavantaṃ uddissa viharissāmī’ti?"
msgstr ""

msgctxt "dn24:1.3.10"
msgid "‘No hetaṃ, bhante’."
msgstr ""

msgctxt "dn24:1.3.11"
msgid "‘Iti kira, sunakkhatta, nevāhaṃ taṃ vadāmi—"
msgstr ""

msgctxt "dn24:1.3.12"
msgid "ehi tvaṃ, sunakkhatta, mamaṃ uddissa viharāhīti."
msgstr ""

msgctxt "dn24:1.3.13"
msgid "Napi kira maṃ tvaṃ vadesi—"
msgstr ""

msgctxt "dn24:1.3.14"
msgid "ahaṃ, bhante, bhagavantaṃ uddissa viharissāmīti."
msgstr ""

msgctxt "dn24:1.3.15"
msgid "Evaṃ sante, moghapurisa, ko santo kaṃ paccācikkhasi?"
msgstr ""

#. VAR: yāvañca → yāva ca (c1)
msgctxt "dn24:1.3.16"
msgid "Passa, moghapurisa, yāvañca te idaṃ aparaddhan’ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.4"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.4"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "dn24:1.4.1"
msgid ""
"‘Na hi pana me, bhante, bhagavā uttari manussadhammā iddhipāṭihāriyaṃ "
"karotī’ti."
msgstr ""

msgctxt "dn24:1.4.2"
msgid "‘Api nu tāhaṃ, sunakkhatta, evaṃ avacaṃ—"
msgstr ""

msgctxt "dn24:1.4.3"
msgid ""
"ehi tvaṃ, sunakkhatta, mamaṃ uddissa viharāhi, ahaṃ te uttari manussadhammā "
"iddhipāṭihāriyaṃ karissāmī’ti?"
msgstr ""

msgctxt "dn24:1.4.4"
msgid "‘No hetaṃ, bhante’."
msgstr ""

#. VAR: Tvaṃ vā → tvañca (c1)
msgctxt "dn24:1.4.5"
msgid "‘Tvaṃ vā pana maṃ evaṃ avaca—"
msgstr ""

msgctxt "dn24:1.4.6"
msgid ""
"ahaṃ, bhante, bhagavantaṃ uddissa viharissāmi, bhagavā me uttari "
"manussadhammā iddhipāṭihāriyaṃ karissatī’ti?"
msgstr ""

msgctxt "dn24:1.4.7"
msgid "‘No hetaṃ, bhante’."
msgstr ""

msgctxt "dn24:1.4.8"
msgid "‘Iti kira, sunakkhatta, nevāhaṃ taṃ vadāmi—"
msgstr ""

msgctxt "dn24:1.4.9"
msgid ""
"ehi tvaṃ, sunakkhatta, mamaṃ uddissa viharāhi, ahaṃ te uttari manussadhammā "
"iddhipāṭihāriyaṃ karissāmīti;"
msgstr ""

msgctxt "dn24:1.4.10"
msgid "napi kira maṃ tvaṃ vadesi—"
msgstr ""

msgctxt "dn24:1.4.11"
msgid ""
"ahaṃ, bhante, bhagavantaṃ uddissa viharissāmi, bhagavā me uttari "
"manussadhammā iddhipāṭihāriyaṃ karissatīti."
msgstr ""

msgctxt "dn24:1.4.12"
msgid "Evaṃ sante, moghapurisa, ko santo kaṃ paccācikkhasi?"
msgstr ""

msgctxt "dn24:1.4.13"
msgid "Taṃ kiṃ maññasi, sunakkhatta, "
msgstr ""

msgctxt "dn24:1.4.14"
msgid ""
"kate vā uttari manussadhammā iddhipāṭihāriye akate vā uttari manussadhammā "
"iddhipāṭihāriye yassatthāya mayā dhammo desito so niyyāti takkarassa sammā "
"dukkhakkhayāyā’ti?"
msgstr ""

msgctxt "dn24:1.4.15"
msgid ""
"‘Kate vā, bhante, uttari manussadhammā iddhipāṭihāriye akate vā uttari "
"manussadhammā iddhipāṭihāriye yassatthāya bhagavatā dhammo desito so niyyāti "
"takkarassa sammā dukkhakkhayāyā’ti."
msgstr ""

msgctxt "dn24:1.4.16"
msgid ""
"‘Iti kira, sunakkhatta, kate vā uttari manussadhammā iddhipāṭihāriye, akate "
"vā uttari manussadhammā iddhipāṭihāriye, yassatthāya mayā dhammo desito, so "
"niyyāti takkarassa sammā dukkhakkhayāya."
msgstr ""

msgctxt "dn24:1.4.17"
msgid ""
"Tatra, sunakkhatta, kiṃ uttari manussadhammā iddhipāṭihāriyaṃ kataṃ "
"karissati?"
msgstr ""

#. VAR: yāvañca → yāva ca (c1)
msgctxt "dn24:1.4.18"
msgid "Passa, moghapurisa, yāvañca te idaṃ aparaddhan’ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.5"></a>
#. <a class="sc" id="sc5"></a>
#. VAR: paññapetī’ti → paññāpetīti (pts1)
msgctxt "dn24:1.5.1"
msgid "‘Na hi pana me, bhante, bhagavā aggaññaṃ paññapetī’ti?"
msgstr ""

msgctxt "dn24:1.5.2"
msgid "‘Api nu tāhaṃ, sunakkhatta, evaṃ avacaṃ—"
msgstr ""

msgctxt "dn24:1.5.3"
msgid ""
"ehi tvaṃ, sunakkhatta, mamaṃ uddissa viharāhi, ahaṃ te aggaññaṃ "
"paññapessāmī’ti?"
msgstr ""

msgctxt "dn24:1.5.4"
msgid "‘No hetaṃ, bhante’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "dn24:1.5.5"
msgid "‘Tvaṃ vā pana maṃ evaṃ avaca—"
msgstr ""

msgctxt "dn24:1.5.6"
msgid ""
"ahaṃ, bhante, bhagavantaṃ uddissa viharissāmi, bhagavā me aggaññaṃ "
"paññapessatī’ti?"
msgstr ""

msgctxt "dn24:1.5.7"
msgid "‘No hetaṃ, bhante’."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.5"></a>
#. <a class="sc" id="sc7"></a>
msgctxt "dn24:1.5.8"
msgid "‘Iti kira, sunakkhatta, nevāhaṃ taṃ vadāmi—"
msgstr ""

msgctxt "dn24:1.5.9"
msgid ""
"ehi tvaṃ, sunakkhatta, mamaṃ uddissa viharāhi, ahaṃ te aggaññaṃ "
"paññapessāmīti."
msgstr ""

msgctxt "dn24:1.5.10"
msgid "Napi kira maṃ tvaṃ vadesi—"
msgstr ""

msgctxt "dn24:1.5.11"
msgid ""
"ahaṃ, bhante, bhagavantaṃ uddissa viharissāmi, bhagavā me aggaññaṃ "
"paññapessatīti."
msgstr ""

msgctxt "dn24:1.5.12"
msgid "Evaṃ sante, moghapurisa, ko santo kaṃ paccācikkhasi?"
msgstr ""

msgctxt "dn24:1.5.13"
msgid "Taṃ kiṃ maññasi, sunakkhatta, "
msgstr ""

msgctxt "dn24:1.5.14"
msgid ""
"paññatte vā aggaññe, apaññatte vā aggaññe, yassatthāya mayā dhammo desito, "
"so niyyāti takkarassa sammā dukkhakkhayāyā’ti?"
msgstr ""

msgctxt "dn24:1.5.15"
msgid ""
"‘Paññatte vā, bhante, aggaññe, apaññatte vā aggaññe, yassatthāya bhagavatā "
"dhammo desito, so niyyāti takkarassa sammā dukkhakkhayāyā’ti."
msgstr ""

msgctxt "dn24:1.5.16"
msgid ""
"‘Iti kira, sunakkhatta, paññatte vā aggaññe, apaññatte vā aggaññe, "
"yassatthāya mayā dhammo desito, so niyyāti takkarassa sammā dukkhakkhayāya."
msgstr ""

msgctxt "dn24:1.5.17"
msgid "Tatra, sunakkhatta, kiṃ aggaññaṃ paññattaṃ karissati?"
msgstr ""

msgctxt "dn24:1.5.18"
msgid "Passa, moghapurisa, yāvañca te idaṃ aparaddhaṃ."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.6"></a>
#. <a class="sc" id="sc8"></a>
msgctxt "dn24:1.6.1"
msgid "Anekapariyāyena kho te, sunakkhatta, mama vaṇṇo bhāsito vajjigāme—"
msgstr ""

msgctxt "dn24:1.6.2"
msgid ""
"itipi so bhagavā arahaṃ sammāsambuddho vijjācaraṇasampanno sugato lokavidū "
"anuttaro purisadammasārathi satthā devamanussānaṃ buddho bhagavāti."
msgstr ""

msgctxt "dn24:1.6.3"
msgid "Iti kho te, sunakkhatta, anekapariyāyena mama vaṇṇo bhāsito vajjigāme."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "dn24:1.6.4"
msgid "Anekapariyāyena kho te, sunakkhatta, dhammassa vaṇṇo bhāsito vajjigāme—"
msgstr ""

msgctxt "dn24:1.6.5"
msgid ""
"svākkhāto bhagavatā dhammo sandiṭṭhiko akāliko ehipassiko opaneyyiko "
"paccattaṃ veditabbo viññūhīti."
msgstr ""

msgctxt "dn24:1.6.6"
msgid ""
"Iti kho te, sunakkhatta, anekapariyāyena dhammassa vaṇṇo bhāsito vajjigāme."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "dn24:1.6.7"
msgid "Anekapariyāyena kho te, sunakkhatta, saṅghassa vaṇṇo bhāsito vajjigāme—"
msgstr ""

msgctxt "dn24:1.6.8"
msgid ""
"suppaṭipanno bhagavato sāvakasaṅgho, ujuppaṭipanno bhagavato sāvakasaṅgho, "
"ñāyappaṭipanno bhagavato sāvakasaṅgho, sāmīcippaṭipanno bhagavato "
"sāvakasaṅgho, yadidaṃ cattāri purisayugāni aṭṭha purisapuggalā, esa "
"bhagavato sāvakasaṅgho, āhuneyyo pāhuneyyo dakkhiṇeyyo añjalikaraṇīyo "
"anuttaraṃ puññakkhettaṃ lokassāti."
msgstr ""

msgctxt "dn24:1.6.9"
msgid ""
"Iti kho te, sunakkhatta, anekapariyāyena saṅghassa vaṇṇo bhāsito vajjigāme."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc11"></a>
msgctxt "dn24:1.6.10"
msgid "Ārocayāmi kho te, sunakkhatta, paṭivedayāmi kho te, sunakkhatta."
msgstr ""

msgctxt "dn24:1.6.11"
msgid ""
"Bhavissanti kho te, sunakkhatta, vattāro, no visahi sunakkhatto "
"licchaviputto samaṇe gotame brahmacariyaṃ carituṃ, so avisahanto sikkhaṃ "
"paccakkhāya hīnāyāvattoti."
msgstr ""

msgctxt "dn24:1.6.12"
msgid "Iti kho te, sunakkhatta, bhavissanti vattāro’ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.6"></a>
#. <a class="sc" id="sc12"></a>
msgctxt "dn24:1.6.13"
msgid ""
"Evaṃ kho, bhaggava, sunakkhatto licchaviputto mayā vuccamāno apakkameva "
"imasmā dhammavinayā, yathā taṃ āpāyiko nerayiko."
msgstr ""

#. </p><h2>
msgctxt "dn24:1.6.14"
msgid "2. Korakkhattiyavatthu"
msgstr ""

# DPPN gives the following variants for the name: Thūlū, Bumū, Būmū, Thulū, Khulū, Khūlū, Khuhū
#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.7"></a>
#. <a class="sc" id="sc13"></a>
#. VAR: thūlūsu → bumūsu (bj, pts1)
#. VAR: ayaṃ → arahaṃ (bj, s1-3, pts1)
msgctxt "dn24:1.7.1"
msgid ""
"Ekamidāhaṃ, bhaggava, samayaṃ thūlūsu viharāmi uttarakā nāma thūlūnaṃ nigamo."
msgstr ""

msgctxt "dn24:1.7.2"
msgid ""
"Atha khvāhaṃ, bhaggava, pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya "
"sunakkhattena licchaviputtena pacchāsamaṇena uttarakaṃ piṇḍāya pāvisiṃ."
msgstr ""

# At MN 57: chamānikkhittaṃ bhojanaṃ bhuñjati
#. VAR: catukkuṇḍiko → catukuṇḍiko (bj, pts1) | catukoṇḍiko (s1, c1) | catukkoṇḍiko (s2, s3)
msgctxt "dn24:1.7.3"
msgid ""
"Tena kho pana samayena acelo korakkhattiyo kukkuravatiko catukkuṇḍiko "
"chamānikiṇṇaṃ bhakkhasaṃ mukheneva khādati, mukheneva bhuñjati."
msgstr ""

msgctxt "dn24:1.7.4"
msgid ""
"Addasā kho, bhaggava, sunakkhatto licchaviputto acelaṃ korakkhattiyaṃ "
"kukkuravatikaṃ catukkuṇḍikaṃ chamānikiṇṇaṃ bhakkhasaṃ mukheneva khādantaṃ "
"mukheneva bhuñjantaṃ."
msgstr ""

msgctxt "dn24:1.7.5"
msgid "Disvānassa etadahosi:"
msgstr ""

msgctxt "dn24:1.7.6"
msgid ""
"‘sādhurūpo vata bho ayaṃ samaṇo catukkuṇḍiko chamānikiṇṇaṃ bhakkhasaṃ "
"mukheneva khādati, mukheneva bhuñjatī’ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.7"></a>
#. <a class="sc" id="sc14"></a>
msgctxt "dn24:1.7.7"
msgid ""
"Atha khvāhaṃ, bhaggava, sunakkhattassa licchaviputtassa cetasā "
"cetoparivitakkamaññāya sunakkhattaṃ licchaviputtaṃ etadavocaṃ:"
msgstr ""

#. VAR: moghapurisa, samaṇo sakyaputtiyo → moghapurisa sakyaputtiyo (s1-3, pts1)
msgctxt "dn24:1.7.8"
msgid "‘tvampi nāma, moghapurisa, samaṇo sakyaputtiyo paṭijānissasī’ti."
msgstr ""

msgctxt "dn24:1.7.9"
msgid "‘Kiṃ pana maṃ, bhante, bhagavā evamāha:"
msgstr ""

msgctxt "dn24:1.7.10"
msgid "“tvampi nāma, moghapurisa, samaṇo sakyaputtiyo paṭijānissasī”’ti?"
msgstr ""

msgctxt "dn24:1.7.11"
msgid ""
"‘Nanu te, sunakkhatta, imaṃ acelaṃ korakkhattiyaṃ kukkuravatikaṃ "
"catukkuṇḍikaṃ chamānikiṇṇaṃ bhakkhasaṃ mukheneva khādantaṃ mukheneva "
"bhuñjantaṃ disvāna etadahosi—"
msgstr ""

msgctxt "dn24:1.7.12"
msgid ""
"sādhurūpo vata bho ayaṃ samaṇo catukkuṇḍiko chamānikiṇṇaṃ bhakkhasaṃ "
"mukheneva khādati, mukheneva bhuñjatī’ti?"
msgstr ""

msgctxt "dn24:1.7.13"
msgid "‘Evaṃ, bhante."
msgstr ""

msgctxt "dn24:1.7.14"
msgid "Kiṃ pana, bhante, bhagavā arahattassa maccharāyatī’ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc15"></a>
msgctxt "dn24:1.7.15"
msgid "‘Na kho ahaṃ, moghapurisa, arahattassa maccharāyāmi."
msgstr ""

msgctxt "dn24:1.7.16"
msgid "Api ca tuyhevetaṃ pāpakaṃ diṭṭhigataṃ uppannaṃ, taṃ pajaha."
msgstr ""

msgctxt "dn24:1.7.17"
msgid "Mā te ahosi dīgharattaṃ ahitāya dukkhāya."
msgstr ""

# Comm: “Alasakenāti alasakabyādhinā” Tika: “Alasakenāti ajīraṇena āmarogena.”, CPD tympanitis, Cone: flatulence.
msgctxt "dn24:1.7.18"
msgid ""
"Yaṃ kho panetaṃ, sunakkhatta, maññasi acelaṃ korakkhattiyaṃ—sādhurūpo ayaṃ "
"samaṇoti. So sattamaṃ divasaṃ alasakena kālaṃ karissati."
msgstr ""

# The terrifying Kālakañjas are mentioned in DN 20.
#. VAR: kālakañcikā → kālakañjikā (bj, s1-3) | kālakañjā (pts1)
#. VAR: Kālaṅkato → kālakato (bj, s1-3, pts1)
msgctxt "dn24:1.7.19"
msgid ""
"Kālaṅkato ca kālakañcikā nāma asurā sabbanihīno asurakāyo, tatra "
"upapajjissati."
msgstr ""

msgctxt "dn24:1.7.20"
msgid "Kālaṅkatañca naṃ bīraṇatthambake susāne chaḍḍessanti."
msgstr ""

msgctxt "dn24:1.7.21"
msgid ""
"Ākaṅkhamāno ca tvaṃ, sunakkhatta, acelaṃ korakkhattiyaṃ upasaṅkamitvā "
"puccheyyāsi—"
msgstr ""

msgctxt "dn24:1.7.22"
msgid "jānāsi, āvuso korakkhattiya, attano gatinti?"
msgstr ""

msgctxt "dn24:1.7.23"
msgid ""
"Ṭhānaṃ kho panetaṃ, sunakkhatta, vijjati yaṃ te acelo korakkhattiyo "
"byākarissati—"
msgstr ""

msgctxt "dn24:1.7.24"
msgid "jānāmi, āvuso sunakkhatta, attano gatiṃ;"
msgstr ""

msgctxt "dn24:1.7.25"
msgid "kālakañcikā nāma asurā sabbanihīno asurakāyo, tatrāmhi upapanno’ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.8"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.8"></a>
#. <a class="sc" id="sc16"></a>
msgctxt "dn24:1.8.1"
msgid ""
"Atha kho, bhaggava, sunakkhatto licchaviputto yena acelo korakkhattiyo "
"tenupasaṅkami; upasaṅkamitvā acelaṃ korakkhattiyaṃ etadavoca:"
msgstr ""

msgctxt "dn24:1.8.2"
msgid "‘byākato khosi, āvuso korakkhattiya, samaṇena gotamena—"
msgstr ""

msgctxt "dn24:1.8.3"
msgid "acelo korakkhattiyo sattamaṃ divasaṃ alasakena kālaṃ karissati."
msgstr ""

msgctxt "dn24:1.8.4"
msgid ""
"Kālaṅkato ca kālakañcikā nāma asurā sabbanihīno asurakāyo, tatra "
"upapajjissati."
msgstr ""

msgctxt "dn24:1.8.5"
msgid "Kālaṅkatañca naṃ bīraṇatthambake susāne chaḍḍessantīti."
msgstr ""

msgctxt "dn24:1.8.6"
msgid ""
"Yena tvaṃ, āvuso korakkhattiya, mattaṃ mattañca bhattaṃ bhuñjeyyāsi, mattaṃ "
"mattañca pānīyaṃ piveyyāsi."
msgstr ""

msgctxt "dn24:1.8.7"
msgid "Yathā samaṇassa gotamassa micchā assa vacanan’ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc17"></a>
msgctxt "dn24:1.8.8"
msgid ""
"Atha kho, bhaggava, sunakkhatto licchaviputto ekadvīhikāya sattarattindivāni "
"gaṇesi, yathā taṃ tathāgatassa asaddahamāno."
msgstr ""

msgctxt "dn24:1.8.9"
msgid ""
"Atha kho, bhaggava, acelo korakkhattiyo sattamaṃ divasaṃ alasakena "
"kālamakāsi."
msgstr ""

msgctxt "dn24:1.8.10"
msgid ""
"kālaṅkato ca kālakañcikā nāma asurā sabbanihīno asurakāyo, tatra upapajji."
msgstr ""

msgctxt "dn24:1.8.11"
msgid "kālaṅkatañca naṃ bīraṇatthambake susāne chaḍḍesuṃ."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.9"></a>
#. <a class="sc" id="sc18"></a>
msgctxt "dn24:1.9.1"
msgid "Assosi kho, bhaggava, sunakkhatto licchaviputto:"
msgstr ""

msgctxt "dn24:1.9.2"
msgid ""
"‘acelo kira korakkhattiyo alasakena kālaṅkato bīraṇatthambake susāne "
"chaḍḍito’ti."
msgstr ""

msgctxt "dn24:1.9.3"
msgid ""
"Atha kho, bhaggava, sunakkhatto licchaviputto yena bīraṇatthambakaṃ susānaṃ, "
"yena acelo korakkhattiyo tenupasaṅkami; upasaṅkamitvā acelaṃ korakkhattiyaṃ "
"tikkhattuṃ pāṇinā ākoṭesi:"
msgstr ""

msgctxt "dn24:1.9.4"
msgid "‘jānāsi, āvuso korakkhattiya, attano gatin’ti?"
msgstr ""

# Cp Pj 1, Sudinna: pāṇinā gattāni paripuñchanto vuṭṭhāsi.
msgctxt "dn24:1.9.5"
msgid ""
"Atha kho, bhaggava, acelo korakkhattiyo pāṇinā piṭṭhiṃ paripuñchanto "
"vuṭṭhāsi."
msgstr ""

msgctxt "dn24:1.9.6"
msgid "‘Jānāmi, āvuso sunakkhatta, attano gatiṃ."
msgstr ""

#. VAR: papati → paripati (bj, s1-3, mr)
msgctxt "dn24:1.9.7"
msgid ""
"Kālakañcikā nāma asurā sabbanihīno asurakāyo, tatrāmhi upapanno’ti vatvā "
"tattheva uttāno papati."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.10"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.9"></a>
#. <a class="sc" id="sc19"></a>
msgctxt "dn24:1.10.1"
msgid ""
"Atha kho, bhaggava, sunakkhatto licchaviputto yenāhaṃ tenupasaṅkami; "
"upasaṅkamitvā maṃ abhivādetvā ekamantaṃ nisīdi. Ekamantaṃ nisinnaṃ kho ahaṃ, "
"bhaggava, sunakkhattaṃ licchaviputtaṃ etadavocaṃ:"
msgstr ""

msgctxt "dn24:1.10.2"
msgid "‘Taṃ kiṃ maññasi, sunakkhatta, "
msgstr ""

msgctxt "dn24:1.10.3"
msgid ""
"yatheva te ahaṃ acelaṃ korakkhattiyaṃ ārabbha byākāsiṃ, tatheva taṃ vipākaṃ, "
"aññathā vā’ti?"
msgstr ""

msgctxt "dn24:1.10.4"
msgid ""
"‘Yatheva me, bhante, bhagavā acelaṃ korakkhattiyaṃ ārabbha byākāsi, tatheva "
"taṃ vipākaṃ, no aññathā’ti."
msgstr ""

msgctxt "dn24:1.10.5"
msgid "‘Taṃ kiṃ maññasi, sunakkhatta, "
msgstr ""

msgctxt "dn24:1.10.6"
msgid ""
"yadi evaṃ sante kataṃ vā hoti uttari manussadhammā iddhipāṭihāriyaṃ, akataṃ "
"vā’ti?"
msgstr ""

msgctxt "dn24:1.10.7"
msgid ""
"‘Addhā kho, bhante, evaṃ sante kataṃ hoti uttari manussadhammā "
"iddhipāṭihāriyaṃ, no akatan’ti."
msgstr ""

msgctxt "dn24:1.10.8"
msgid ""
"‘Evampi kho maṃ tvaṃ, moghapurisa, uttari manussadhammā iddhipāṭihāriyaṃ "
"karontaṃ evaṃ vadesi—"
msgstr ""

msgctxt "dn24:1.10.9"
msgid ""
"na hi pana me, bhante, bhagavā uttari manussadhammā iddhipāṭihāriyaṃ "
"karotīti."
msgstr ""

msgctxt "dn24:1.10.10"
msgid "Passa, moghapurisa, yāvañca te idaṃ aparaddhan’ti."
msgstr ""

msgctxt "dn24:1.10.11"
msgid ""
"Evampi kho, bhaggava, sunakkhatto licchaviputto mayā vuccamāno apakkameva "
"imasmā dhammavinayā, yathā taṃ āpāyiko nerayiko."
msgstr ""

#. </p><h2>
msgctxt "dn24:1.10.12"
msgid "3. Acelakaḷāramaṭṭakavatthu"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.11"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.10"></a>
#. <a class="sc" id="sc20"></a>
msgctxt "dn24:1.11.1"
msgid ""
"Ekamidāhaṃ, bhaggava, samayaṃ vesāliyaṃ viharāmi mahāvane kūṭāgārasālāyaṃ."
msgstr ""

# Spellings uncertain here, I follow MS.
msgctxt "dn24:1.11.2"
msgid ""
"Tena kho pana samayena acelo kaḷāramaṭṭako vesāliyaṃ paṭivasati "
"lābhaggappatto ceva yasaggappatto ca vajjigāme."
msgstr ""

msgctxt "dn24:1.11.3"
msgid "Tassa sattavatapadāni samattāni samādinnāni honti:"
msgstr ""

msgctxt "dn24:1.11.4"
msgid ""
"‘yāvajīvaṃ acelako assaṃ, na vatthaṃ paridaheyyaṃ, yāvajīvaṃ brahmacārī "
"assaṃ, na methunaṃ dhammaṃ paṭiseveyyaṃ, yāvajīvaṃ surāmaṃseneva yāpeyyaṃ, "
"na odanakummāsaṃ bhuñjeyyaṃ."
msgstr ""

#. VAR: bahuputtaṃ nāma → bahu­putta­kan­nāma (s1-3)
msgctxt "dn24:1.11.5"
msgid ""
"Puratthimena vesāliṃ udenaṃ nāma cetiyaṃ, taṃ nātikkameyyaṃ, dakkhiṇena "
"vesāliṃ gotamakaṃ nāma cetiyaṃ, taṃ nātikkameyyaṃ, pacchimena vesāliṃ "
"sattambaṃ nāma cetiyaṃ, taṃ nātikkameyyaṃ, uttarena vesāliṃ bahuputtaṃ nāma "
"cetiyaṃ taṃ nātikkameyyan’ti."
msgstr ""

msgctxt "dn24:1.11.6"
msgid ""
"So imesaṃ sattannaṃ vatapadānaṃ samādānahetu lābhaggappatto ceva "
"yasaggappatto ca vajjigāme."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.12"></a>
#. <a class="sc" id="sc21"></a>
msgctxt "dn24:1.12.1"
msgid ""
"Atha kho, bhaggava, sunakkhatto licchaviputto yena acelo kaḷāramaṭṭako "
"tenupasaṅkami; upasaṅkamitvā acelaṃ kaḷāramaṭṭakaṃ pañhaṃ apucchi."
msgstr ""

msgctxt "dn24:1.12.2"
msgid "Tassa acelo kaḷāramaṭṭako pañhaṃ puṭṭho na sampāyāsi."
msgstr ""

msgctxt "dn24:1.12.3"
msgid "Asampāyanto kopañca dosañca appaccayañca pātvākāsi."
msgstr ""

msgctxt "dn24:1.12.4"
msgid "Atha kho, bhaggava, sunakkhattassa licchaviputtassa etadahosi:"
msgstr ""

# āsādimhase is middle aorist plural; below Sunakkhatta refers to himself in plural, but as usual I render with singular.
#. VAR: āsādimhase → asādiyimhase (s1-3)
msgctxt "dn24:1.12.5"
msgid "‘sādhurūpaṃ vata bho arahantaṃ samaṇaṃ āsādimhase."
msgstr ""

msgctxt "dn24:1.12.6"
msgid "Mā vata no ahosi dīgharattaṃ ahitāya dukkhāyā’ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.13"></a>
#. <a class="sc" id="sc22"></a>
msgctxt "dn24:1.13.1"
msgid ""
"Atha kho, bhaggava, sunakkhatto licchaviputto yenāhaṃ tenupasaṅkami; "
"upasaṅkamitvā maṃ abhivādetvā ekamantaṃ nisīdi. Ekamantaṃ nisinnaṃ kho ahaṃ, "
"bhaggava, sunakkhattaṃ licchaviputtaṃ etadavocaṃ:"
msgstr ""

msgctxt "dn24:1.13.2"
msgid "‘tvampi nāma, moghapurisa, samaṇo sakyaputtiyo paṭijānissasī’ti."
msgstr ""

msgctxt "dn24:1.13.3"
msgid "‘Kiṃ pana maṃ, bhante, bhagavā evamāha—"
msgstr ""

msgctxt "dn24:1.13.4"
msgid "tvampi nāma, moghapurisa, samaṇo sakyaputtiyo paṭijānissasī’ti?"
msgstr ""

msgctxt "dn24:1.13.5"
msgid ""
"‘Nanu tvaṃ, sunakkhatta, acelaṃ kaḷāramaṭṭakaṃ upasaṅkamitvā pañhaṃ apucchi."
msgstr ""

msgctxt "dn24:1.13.6"
msgid "Tassa te acelo kaḷāramaṭṭako pañhaṃ puṭṭho na sampāyāsi."
msgstr ""

msgctxt "dn24:1.13.7"
msgid "Asampāyanto kopañca dosañca appaccayañca pātvākāsi."
msgstr ""

msgctxt "dn24:1.13.8"
msgid "Tassa te etadahosi:"
msgstr ""

msgctxt "dn24:1.13.9"
msgid "“sādhurūpaṃ vata bho arahantaṃ samaṇaṃ āsādimhase."
msgstr ""

msgctxt "dn24:1.13.10"
msgid "Mā vata no ahosi dīgharattaṃ ahitāya dukkhāyā”’ti."
msgstr ""

msgctxt "dn24:1.13.11"
msgid "‘Evaṃ, bhante."
msgstr ""

msgctxt "dn24:1.13.12"
msgid "Kiṃ pana, bhante, bhagavā arahattassa maccharāyatī’ti?"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.11"></a>
#. <a class="sc" id="sc23"></a>
msgctxt "dn24:1.13.13"
msgid "‘Na kho ahaṃ, moghapurisa, arahattassa maccharāyāmi, "
msgstr ""

msgctxt "dn24:1.13.14"
msgid "api ca tuyhevetaṃ pāpakaṃ diṭṭhigataṃ uppannaṃ, taṃ pajaha."
msgstr ""

#. VAR: dukkhāya → dukkhāyāti (s1-3, c1)
msgctxt "dn24:1.13.15"
msgid "Mā te ahosi dīgharattaṃ ahitāya dukkhāya."
msgstr ""

msgctxt "dn24:1.13.16"
msgid "Yaṃ kho panetaṃ, sunakkhatta, maññasi acelaṃ kaḷāramaṭṭakaṃ—"
msgstr ""

#. VAR: yasā nihīno → yasā nikiṇṇo (bj, pts1, mr)
#. VAR: ayaṃ → arahaṃ (bj, s1-3, pts1)
msgctxt "dn24:1.13.17"
msgid ""
"sādhurūpo ayaṃ samaṇoti, so nacirasseva parihito sānucāriko vicaranto "
"odanakummāsaṃ bhuñjamāno sabbāneva vesāliyāni cetiyāni samatikkamitvā yasā "
"nihīno kālaṃ karissatī’ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc24"></a>
msgctxt "dn24:1.13.18"
msgid ""
"Atha kho, bhaggava, acelo kaḷāramaṭṭako nacirasseva parihito sānucāriko "
"vicaranto odanakummāsaṃ bhuñjamāno sabbāneva vesāliyāni cetiyāni "
"samatikkamitvā yasā nihīno kālamakāsi."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.14"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.12"></a>
#. <a class="sc" id="sc25"></a>
msgctxt "dn24:1.14.1"
msgid "Assosi kho, bhaggava, sunakkhatto licchaviputto:"
msgstr ""

msgctxt "dn24:1.14.2"
msgid ""
"‘acelo kira kaḷāramaṭṭako parihito sānucāriko vicaranto odanakummāsaṃ "
"bhuñjamāno sabbāneva vesāliyāni cetiyāni samatikkamitvā yasā nihīno "
"kālaṅkato’ti."
msgstr ""

msgctxt "dn24:1.14.3"
msgid ""
"Atha kho, bhaggava, sunakkhatto licchaviputto yenāhaṃ tenupasaṅkami; "
"upasaṅkamitvā maṃ abhivādetvā ekamantaṃ nisīdi. Ekamantaṃ nisinnaṃ kho ahaṃ, "
"bhaggava, sunakkhattaṃ licchaviputtaṃ etadavocaṃ:"
msgstr ""

msgctxt "dn24:1.14.4"
msgid "‘Taṃ kiṃ maññasi, sunakkhatta, "
msgstr ""

msgctxt "dn24:1.14.5"
msgid ""
"yatheva te ahaṃ acelaṃ kaḷāramaṭṭakaṃ ārabbha byākāsiṃ, tatheva taṃ vipākaṃ, "
"aññathā vā’ti?"
msgstr ""

msgctxt "dn24:1.14.6"
msgid ""
"‘Yatheva me, bhante, bhagavā acelaṃ kaḷāramaṭṭakaṃ ārabbha byākāsi, tatheva "
"taṃ vipākaṃ, no aññathā’ti."
msgstr ""

msgctxt "dn24:1.14.7"
msgid "‘Taṃ kiṃ maññasi, sunakkhatta, "
msgstr ""

msgctxt "dn24:1.14.8"
msgid ""
"yadi evaṃ sante kataṃ vā hoti uttari manussadhammā iddhipāṭihāriyaṃ akataṃ "
"vā’ti?"
msgstr ""

msgctxt "dn24:1.14.9"
msgid ""
"‘Addhā kho, bhante, evaṃ sante kataṃ hoti uttari manussadhammā "
"iddhipāṭihāriyaṃ, no akatan’ti."
msgstr ""

msgctxt "dn24:1.14.10"
msgid ""
"‘Evampi kho maṃ tvaṃ, moghapurisa, uttari manussadhammā iddhipāṭihāriyaṃ "
"karontaṃ evaṃ vadesi:"
msgstr ""

msgctxt "dn24:1.14.11"
msgid ""
"“na hi pana me, bhante, bhagavā uttari manussadhammā iddhipāṭihāriyaṃ "
"karotī”ti."
msgstr ""

msgctxt "dn24:1.14.12"
msgid "Passa, moghapurisa, yāvañca te idaṃ aparaddhan’ti."
msgstr ""

msgctxt "dn24:1.14.13"
msgid ""
"Evampi kho, bhaggava, sunakkhatto licchaviputto mayā vuccamāno apakkameva "
"imasmā dhammavinayā, yathā taṃ āpāyiko nerayiko."
msgstr ""

#. </p><h2>
msgctxt "dn24:1.14.14"
msgid "4. Acelapāthikaputtavatthu"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.15"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.13"></a>
#. <a class="sc" id="sc26"></a>
msgctxt "dn24:1.15.1"
msgid ""
"Ekamidāhaṃ, bhaggava, samayaṃ tattheva vesāliyaṃ viharāmi mahāvane "
"kūṭāgārasālāyaṃ."
msgstr ""

#. VAR: pāthikaputto → pāṭikaputto (s1-3, pts1)
msgctxt "dn24:1.15.2"
msgid ""
"Tena kho pana samayena acelo pāthikaputto vesāliyaṃ paṭivasati "
"lābhaggappatto ceva yasaggappatto ca vajjigāme."
msgstr ""

msgctxt "dn24:1.15.3"
msgid "So vesāliyaṃ parisati evaṃ vācaṃ bhāsati:"
msgstr ""

#. VAR: samaṇopi → samaṇo (c1)
msgctxt "dn24:1.15.4"
msgid "‘samaṇopi gotamo ñāṇavādo, ahampi ñāṇavādo."
msgstr ""

msgctxt "dn24:1.15.5"
msgid ""
"Ñāṇavādo kho pana ñāṇavādena arahati uttari manussadhammā iddhipāṭihāriyaṃ "
"dassetuṃ."
msgstr ""

msgctxt "dn24:1.15.6"
msgid ""
"Samaṇo gotamo upaḍḍhapathaṃ āgaccheyya, ahampi upaḍḍhapathaṃ gaccheyyaṃ."
msgstr ""

msgctxt "dn24:1.15.7"
msgid "Te tattha ubhopi uttari manussadhammā iddhipāṭihāriyaṃ kareyyāma."
msgstr ""

msgctxt "dn24:1.15.8"
msgid ""
"Ekañce samaṇo gotamo uttari manussadhammā iddhipāṭihāriyaṃ karissati, dvāhaṃ "
"karissāmi."
msgstr ""

msgctxt "dn24:1.15.9"
msgid ""
"Dve ce samaṇo gotamo uttari manussadhammā iddhipāṭihāriyāni karissati, "
"cattārāhaṃ karissāmi."
msgstr ""

msgctxt "dn24:1.15.10"
msgid ""
"Cattāri ce samaṇo gotamo uttari manussadhammā iddhipāṭihāriyāni karissati, "
"aṭṭhāhaṃ karissāmi."
msgstr ""

msgctxt "dn24:1.15.11"
msgid ""
"Iti yāvatakaṃ yāvatakaṃ samaṇo gotamo uttari manussadhammā iddhipāṭihāriyaṃ "
"karissati, taddiguṇaṃ taddiguṇāhaṃ karissāmī’ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.16"></a>
#. <a class="sc" id="sc27"></a>
msgctxt "dn24:1.16.1"
msgid ""
"Atha kho, bhaggava, sunakkhatto licchaviputto yenāhaṃ tenupasaṅkami; "
"upasaṅkamitvā maṃ abhivādetvā ekamantaṃ nisīdi. Ekamantaṃ nisinno kho, "
"bhaggava, sunakkhatto licchaviputto maṃ etadavoca:"
msgstr ""

msgctxt "dn24:1.16.2"
msgid ""
"‘acelo, bhante, pāthikaputto vesāliyaṃ paṭivasati lābhaggappatto ceva "
"yasaggappatto ca vajjigāme."
msgstr ""

msgctxt "dn24:1.16.3"
msgid "So vesāliyaṃ parisati evaṃ vācaṃ bhāsati:"
msgstr ""

msgctxt "dn24:1.16.4"
msgid "“samaṇopi gotamo ñāṇavādo, ahampi ñāṇavādo."
msgstr ""

msgctxt "dn24:1.16.5"
msgid ""
"Ñāṇavādo kho pana ñāṇavādena arahati uttari manussadhammā iddhipāṭihāriyaṃ "
"dassetuṃ."
msgstr ""

msgctxt "dn24:1.16.6"
msgid ""
"Samaṇo gotamo upaḍḍhapathaṃ āgaccheyya, ahampi upaḍḍhapathaṃ gaccheyyaṃ."
msgstr ""

msgctxt "dn24:1.16.7"
msgid "Te tattha ubhopi uttari manussadhammā iddhipāṭihāriyaṃ kareyyāma."
msgstr ""

msgctxt "dn24:1.16.8"
msgid ""
"Ekañce samaṇo gotamo uttari manussadhammā iddhipāṭihāriyaṃ karissati, dvāhaṃ "
"karissāmi."
msgstr ""

msgctxt "dn24:1.16.9"
msgid ""
"Dve ce samaṇo gotamo uttari manussadhammā iddhipāṭihāriyāni karissati, "
"cattārāhaṃ karissāmi."
msgstr ""

msgctxt "dn24:1.16.10"
msgid ""
"Cattāri ce samaṇo gotamo uttari manussadhammā iddhipāṭihāriyāni karissati, "
"aṭṭhāhaṃ karissāmi."
msgstr ""

msgctxt "dn24:1.16.11"
msgid ""
"Iti yāvatakaṃ yāvatakaṃ samaṇo gotamo uttari manussadhammā iddhipāṭihāriyaṃ "
"karissati, taddiguṇaṃ taddiguṇāhaṃ karissāmī”’ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc28"></a>
msgctxt "dn24:1.16.12"
msgid "Evaṃ vutte, ahaṃ, bhaggava, sunakkhattaṃ licchaviputtaṃ etadavocaṃ:"
msgstr ""

msgctxt "dn24:1.16.13"
msgid ""
"‘abhabbo kho, sunakkhatta, acelo pāthikaputto taṃ vācaṃ appahāya taṃ cittaṃ "
"appahāya taṃ diṭṭhiṃ appaṭinissajjitvā mama sammukhībhāvaṃ āgantuṃ."
msgstr ""

msgctxt "dn24:1.16.14"
msgid "Sacepissa evamassa—"
msgstr ""

msgctxt "dn24:1.16.15"
msgid ""
"ahaṃ taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ diṭṭhiṃ appaṭinissajjitvā "
"samaṇassa gotamassa sammukhībhāvaṃ gaccheyyanti, muddhāpi tassa vipateyyā’ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.17"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.14"></a>
#. <a class="sc" id="sc29"></a>
msgctxt "dn24:1.17.1"
msgid "‘Rakkhatetaṃ, bhante, bhagavā vācaṃ, rakkhatetaṃ sugato vācan’ti."
msgstr ""

msgctxt "dn24:1.17.2"
msgid "‘Kiṃ pana maṃ tvaṃ, sunakkhatta, evaṃ vadesi—"
msgstr ""

msgctxt "dn24:1.17.3"
msgid "rakkhatetaṃ, bhante, bhagavā vācaṃ, rakkhatetaṃ sugato vācan’ti?"
msgstr ""

#. VAR: odhāritā → ovāditā (pts1, mr)
msgctxt "dn24:1.17.4"
msgid "‘Bhagavatā cassa, bhante, esā vācā ekaṃsena odhāritā—"
msgstr ""

msgctxt "dn24:1.17.5"
msgid ""
"abhabbo acelo pāthikaputto taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ "
"diṭṭhiṃ appaṭinissajjitvā mama sammukhībhāvaṃ āgantuṃ."
msgstr ""

msgctxt "dn24:1.17.6"
msgid "Sacepissa evamassa—"
msgstr ""

msgctxt "dn24:1.17.7"
msgid ""
"ahaṃ taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ diṭṭhiṃ appaṭinissajjitvā "
"samaṇassa gotamassa sammukhībhāvaṃ gaccheyyanti, muddhāpi tassa vipateyyāti."
msgstr ""

msgctxt "dn24:1.17.8"
msgid ""
"Acelo ca, bhante, pāthikaputto virūparūpena bhagavato sammukhībhāvaṃ "
"āgaccheyya, tadassa bhagavato musā’ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.18"></a>
#. <a class="sc" id="sc30"></a>
msgctxt "dn24:1.18.1"
msgid ""
"‘Api nu, sunakkhatta, tathāgato taṃ vācaṃ bhāseyya yā sā vācā dvayagāminī’ti?"
msgstr ""

msgctxt "dn24:1.18.2"
msgid ""
"‘Kiṃ pana, bhante, bhagavatā acelo pāthikaputto cetasā ceto paricca vidito—"
msgstr ""

msgctxt "dn24:1.18.3"
msgid ""
"abhabbo acelo pāthikaputto taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ "
"diṭṭhiṃ appaṭinissajjitvā mama sammukhībhāvaṃ āgantuṃ."
msgstr ""

msgctxt "dn24:1.18.4"
msgid "Sacepissa evamassa—"
msgstr ""

msgctxt "dn24:1.18.5"
msgid ""
"ahaṃ taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ diṭṭhiṃ appaṭinissajjitvā "
"samaṇassa gotamassa sammukhībhāvaṃ gaccheyyanti, muddhāpi tassa vipateyyāti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc31"></a>
msgctxt "dn24:1.18.6"
msgid "Udāhu, devatā bhagavato etamatthaṃ ārocesuṃ—"
msgstr ""

msgctxt "dn24:1.18.7"
msgid ""
"abhabbo, bhante, acelo pāthikaputto taṃ vācaṃ appahāya taṃ cittaṃ appahāya "
"taṃ diṭṭhiṃ appaṭinissajjitvā bhagavato sammukhībhāvaṃ āgantuṃ."
msgstr ""

msgctxt "dn24:1.18.8"
msgid "Sacepissa evamassa—"
msgstr ""

msgctxt "dn24:1.18.9"
msgid ""
"ahaṃ taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ diṭṭhiṃ appaṭinissajjitvā "
"samaṇassa gotamassa sammukhībhāvaṃ gaccheyyanti, muddhāpi tassa vipateyyā’ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc32"></a>
msgctxt "dn24:1.18.10"
msgid "‘Cetasā ceto paricca vidito ceva me, sunakkhatta, acelo pāthikaputto—"
msgstr ""

msgctxt "dn24:1.18.11"
msgid ""
"abhabbo acelo pāthikaputto taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ "
"diṭṭhiṃ appaṭinissajjitvā mama sammukhībhāvaṃ āgantuṃ."
msgstr ""

msgctxt "dn24:1.18.12"
msgid "Sacepissa evamassa—"
msgstr ""

msgctxt "dn24:1.18.13"
msgid ""
"ahaṃ taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ diṭṭhiṃ appaṭinissajjitvā "
"samaṇassa gotamassa sammukhībhāvaṃ gaccheyyanti, muddhāpi tassa vipateyyāti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.15"></a>
#. <a class="sc" id="sc33"></a>
msgctxt "dn24:1.18.14"
msgid "Devatāpi me etamatthaṃ ārocesuṃ—"
msgstr ""

msgctxt "dn24:1.18.15"
msgid ""
"abhabbo, bhante, acelo pāthikaputto taṃ vācaṃ appahāya taṃ cittaṃ appahāya "
"taṃ diṭṭhiṃ appaṭinissajjitvā bhagavato sammukhībhāvaṃ āgantuṃ."
msgstr ""

msgctxt "dn24:1.18.16"
msgid "Sacepissa evamassa—"
msgstr ""

msgctxt "dn24:1.18.17"
msgid ""
"ahaṃ taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ diṭṭhiṃ appaṭinissajjitvā "
"samaṇassa gotamassa sammukhībhāvaṃ gaccheyyanti, muddhāpi tassa vipateyyāti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc34"></a>
msgctxt "dn24:1.18.18"
msgid ""
"Ajitopi nāma licchavīnaṃ senāpati adhunā kālaṅkato tāvatiṃsakāyaṃ upapanno."
msgstr ""

msgctxt "dn24:1.18.19"
msgid "Sopi maṃ upasaṅkamitvā evamārocesi—"
msgstr ""

msgctxt "dn24:1.18.20"
msgid "alajjī, bhante, acelo pāthikaputto;"
msgstr ""

msgctxt "dn24:1.18.21"
msgid "musāvādī, bhante, acelo pāthikaputto."
msgstr ""

msgctxt "dn24:1.18.22"
msgid "Mampi, bhante, acelo pāthikaputto byākāsi vajjigāme—"
msgstr ""

msgctxt "dn24:1.18.23"
msgid "ajito licchavīnaṃ senāpati mahānirayaṃ upapannoti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc35"></a>
msgctxt "dn24:1.18.24"
msgid "Na kho panāhaṃ, bhante, mahānirayaṃ upapanno;"
msgstr ""

msgctxt "dn24:1.18.25"
msgid "tāvatiṃsakāyamhi upapanno."
msgstr ""

msgctxt "dn24:1.18.26"
msgid "Alajjī, bhante, acelo pāthikaputto;"
msgstr ""

msgctxt "dn24:1.18.27"
msgid "musāvādī, bhante, acelo pāthikaputto;"
msgstr ""

msgctxt "dn24:1.18.28"
msgid ""
"abhabbo ca, bhante, acelo pāthikaputto taṃ vācaṃ appahāya taṃ cittaṃ "
"appahāya taṃ diṭṭhiṃ appaṭinissajjitvā bhagavato sammukhībhāvaṃ āgantuṃ."
msgstr ""

msgctxt "dn24:1.18.29"
msgid "Sacepissa evamassa—"
msgstr ""

msgctxt "dn24:1.18.30"
msgid ""
"ahaṃ taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ diṭṭhiṃ appaṭinissajjitvā "
"samaṇassa gotamassa sammukhībhāvaṃ gaccheyyanti, muddhāpi tassa vipateyyāti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc36"></a>
msgctxt "dn24:1.18.31"
msgid ""
"Iti kho, sunakkhatta, cetasā ceto paricca vidito ceva me acelo pāthikaputto "
"abhabbo acelo pāthikaputto taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ "
"diṭṭhiṃ appaṭinissajjitvā mama sammukhībhāvaṃ āgantuṃ."
msgstr ""

msgctxt "dn24:1.18.32"
msgid "Sacepissa evamassa—"
msgstr ""

msgctxt "dn24:1.18.33"
msgid ""
"ahaṃ taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ diṭṭhiṃ appaṭinissajjitvā "
"samaṇassa gotamassa sammukhībhāvaṃ gaccheyyanti, muddhāpi tassa vipateyyāti."
msgstr ""

msgctxt "dn24:1.18.34"
msgid "Devatāpi me etamatthaṃ ārocesuṃ—"
msgstr ""

msgctxt "dn24:1.18.35"
msgid ""
"abhabbo, bhante, acelo pāthikaputto taṃ vācaṃ appahāya taṃ cittaṃ appahāya "
"taṃ diṭṭhiṃ appaṭinissajjitvā bhagavato sammukhībhāvaṃ āgantuṃ."
msgstr ""

msgctxt "dn24:1.18.36"
msgid "Sacepissa evamassa—"
msgstr ""

msgctxt "dn24:1.18.37"
msgid ""
"ahaṃ taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ diṭṭhiṃ appaṭinissajjitvā "
"samaṇassa gotamassa sammukhībhāvaṃ gaccheyyanti, muddhāpi tassa vipateyyāti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc37"></a>
msgctxt "dn24:1.18.38"
msgid ""
"So kho panāhaṃ, sunakkhatta, vesāliyaṃ piṇḍāya caritvā pacchābhattaṃ "
"piṇḍapātapaṭikkanto yena acelassa pāthikaputtassa ārāmo tenupasaṅkamissāmi "
"divāvihārāya."
msgstr ""

msgctxt "dn24:1.18.39"
msgid "Yassadāni tvaṃ, sunakkhatta, icchasi, tassa ārocehī’ti."
msgstr ""

#. </p><h2>
msgctxt "dn24:1.18.40"
msgid "5. Iddhipāṭihāriyakathā"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.19"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.16"></a>
#. <a class="sc" id="sc38"></a>
#. VAR: Atha khvāhaṃ → atha kho svāhaṃ (s1-3) | atha kho’ haṃ (pts1)
msgctxt "dn24:1.19.1"
msgid ""
"Atha khvāhaṃ, bhaggava, pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya vesāliṃ "
"piṇḍāya pāvisiṃ."
msgstr ""

msgctxt "dn24:1.19.2"
msgid ""
"Vesāliyaṃ piṇḍāya caritvā pacchābhattaṃ piṇḍapātapaṭikkanto yena acelassa "
"pāthikaputtassa ārāmo tenupasaṅkamiṃ divāvihārāya."
msgstr ""

msgctxt "dn24:1.19.3"
msgid ""
"Atha kho, bhaggava, sunakkhatto licchaviputto taramānarūpo vesāliṃ pavisitvā "
"yena abhiññātā abhiññātā licchavī tenupasaṅkami; upasaṅkamitvā abhiññāte "
"abhiññāte licchavī etadavoca:"
msgstr ""

msgctxt "dn24:1.19.4"
msgid ""
"‘esāvuso, bhagavā vesāliyaṃ piṇḍāya caritvā pacchābhattaṃ "
"piṇḍapātapaṭikkanto yena acelassa pāthikaputtassa ārāmo tenupasaṅkami "
"divāvihārāya."
msgstr ""

msgctxt "dn24:1.19.5"
msgid ""
"Abhikkamathāyasmanto abhikkamathāyasmanto, sādhurūpānaṃ samaṇānaṃ uttari "
"manussadhammā iddhipāṭihāriyaṃ bhavissatī’ti."
msgstr ""

msgctxt "dn24:1.19.6"
msgid "Atha kho, bhaggava, abhiññātānaṃ abhiññātānaṃ licchavīnaṃ etadahosi:"
msgstr ""

msgctxt "dn24:1.19.7"
msgid ""
"‘sādhurūpānaṃ kira, bho, samaṇānaṃ uttari manussadhammā iddhipāṭihāriyaṃ "
"bhavissati;"
msgstr ""

msgctxt "dn24:1.19.8"
msgid "handa vata, bho, gacchāmā’ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc39"></a>
#. VAR: nānātitthiyā → nānātitthiya (s1-3)
#. VAR: nānātitthiye → nānātitthiya (s1-3)
msgctxt "dn24:1.19.9"
msgid ""
"Yena ca abhiññātā abhiññātā brāhmaṇamahāsālā gahapatinecayikā nānātitthiyā "
"samaṇabrāhmaṇā tenupasaṅkami. upasaṅkamitvā abhiññāte abhiññāte nānātitthiye "
"samaṇabrāhmaṇe etadavoca:"
msgstr ""

msgctxt "dn24:1.19.10"
msgid ""
"‘esāvuso, bhagavā vesāliyaṃ piṇḍāya caritvā pacchābhattaṃ "
"piṇḍapātapaṭikkanto yena acelassa pāthikaputtassa ārāmo tenupasaṅkami "
"divāvihārāya."
msgstr ""

msgctxt "dn24:1.19.11"
msgid ""
"Abhikkamathāyasmanto abhikkamathāyasmanto, sādhurūpānaṃ samaṇānaṃ uttari "
"manussadhammā iddhipāṭihāriyaṃ bhavissatī’ti."
msgstr ""

msgctxt "dn24:1.19.12"
msgid ""
"Atha kho, bhaggava, abhiññātānaṃ abhiññātānaṃ nānātitthiyānaṃ "
"samaṇabrāhmaṇānaṃ etadahosi:"
msgstr ""

msgctxt "dn24:1.19.13"
msgid ""
"‘sādhurūpānaṃ kira, bho, samaṇānaṃ uttari manussadhammā iddhipāṭihāriyaṃ "
"bhavissati;"
msgstr ""

msgctxt "dn24:1.19.14"
msgid "handa vata, bho, gacchāmā’ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.17"></a>
#. <a class="sc" id="sc40"></a>
msgctxt "dn24:1.19.15"
msgid ""
"Atha kho, bhaggava, abhiññātā abhiññātā licchavī, abhiññātā abhiññātā ca "
"brāhmaṇamahāsālā gahapatinecayikā nānātitthiyā samaṇabrāhmaṇā yena acelassa "
"pāthikaputtassa ārāmo tenupasaṅkamiṃsu."
msgstr ""

#. VAR: parisā mahā hoti → parisā hoti (bj, s1-3, pts1)
msgctxt "dn24:1.19.16"
msgid "Sā esā, bhaggava, parisā mahā hoti anekasatā anekasahassā."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.20"></a>
#. <a class="sc" id="sc41"></a>
msgctxt "dn24:1.20.1"
msgid "Assosi kho, bhaggava, acelo pāthikaputto:"
msgstr ""

msgctxt "dn24:1.20.2"
msgid ""
"‘abhikkantā kira abhiññātā abhiññātā licchavī, abhikkantā abhiññātā "
"abhiññātā ca brāhmaṇamahāsālā gahapatinecayikā nānātitthiyā samaṇabrāhmaṇā."
msgstr ""

msgctxt "dn24:1.20.3"
msgid "Samaṇopi gotamo mayhaṃ ārāme divāvihāraṃ nisinno’ti."
msgstr ""

msgctxt "dn24:1.20.4"
msgid "Sutvānassa bhayaṃ chambhitattaṃ lomahaṃso udapādi."
msgstr ""

msgctxt "dn24:1.20.5"
msgid ""
"Atha kho, bhaggava, acelo pāthikaputto bhīto saṃviggo lomahaṭṭhajāto yena "
"tindukakhāṇuparibbājakārāmo tenupasaṅkami."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc42"></a>
msgctxt "dn24:1.20.6"
msgid "Assosi kho, bhaggava, sā parisā:"
msgstr ""

#. VAR: tenupasaṅkanto’ti → tenupa­saṅka­man­toti (pts1, mr)
msgctxt "dn24:1.20.7"
msgid ""
"‘acelo kira pāthikaputto bhīto saṃviggo lomahaṭṭhajāto yena "
"tindukakhāṇuparibbājakārāmo tenupasaṅkanto’ti."
msgstr ""

msgctxt "dn24:1.20.8"
msgid "Atha kho, bhaggava, sā parisā aññataraṃ purisaṃ āmantesi:"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.18"></a>
#. <a class="sc" id="sc43"></a>
msgctxt "dn24:1.20.9"
msgid ""
"‘Ehi tvaṃ, bho purisa, yena tindukakhāṇuparibbājakārāmo, yena acelo "
"pāthikaputto tenupasaṅkama. upasaṅkamitvā acelaṃ pāthikaputtaṃ evaṃ vadehi:"
msgstr ""

msgctxt "dn24:1.20.10"
msgid ""
"“abhikkamāvuso, pāthikaputta, abhikkantā abhiññātā abhiññātā licchavī, "
"abhikkantā abhiññātā abhiññātā ca brāhmaṇamahāsālā gahapatinecayikā "
"nānātitthiyā samaṇabrāhmaṇā, samaṇopi gotamo āyasmato ārāme divāvihāraṃ "
"nisinno;"
msgstr ""

msgctxt "dn24:1.20.11"
msgid "bhāsitā kho pana te esā, āvuso pāthikaputta, vesāliyaṃ parisati vācā "
msgstr ""

msgctxt "dn24:1.20.12"
msgid "samaṇopi gotamo ñāṇavādo, ahampi ñāṇavādo."
msgstr ""

msgctxt "dn24:1.20.13"
msgid ""
"Ñāṇavādo kho pana ñāṇavādena arahati uttari manussadhammā iddhipāṭihāriyaṃ "
"dassetuṃ."
msgstr ""

msgctxt "dn24:1.20.14"
msgid "Samaṇo gotamo upaḍḍhapathaṃ āgaccheyya ahampi upaḍḍhapathaṃ gaccheyyaṃ."
msgstr ""

msgctxt "dn24:1.20.15"
msgid "Te tattha ubhopi uttari manussadhammā iddhipāṭihāriyaṃ kareyyāma."
msgstr ""

msgctxt "dn24:1.20.16"
msgid ""
"Ekañce samaṇo gotamo uttari manussadhammā iddhipāṭihāriyaṃ karissati, dvāhaṃ "
"karissāmi."
msgstr ""

msgctxt "dn24:1.20.17"
msgid ""
"Dve ce samaṇo gotamo uttari manussadhammā iddhipāṭihāriyāni karissati, "
"cattārāhaṃ karissāmi."
msgstr ""

msgctxt "dn24:1.20.18"
msgid ""
"Cattāri ce samaṇo gotamo uttari manussadhammā iddhipāṭihāriyāni karissati, "
"aṭṭhāhaṃ karissāmi."
msgstr ""

#. VAR: abhikkamasseva → abhikkamayeva (s1-3, pts1)
msgctxt "dn24:1.20.19"
msgid ""
"Iti yāvatakaṃ yāvatakaṃ samaṇo gotamo uttari manussadhammā iddhipāṭihāriyaṃ "
"karissati, taddiguṇaṃ taddiguṇāhaṃ karissāmī”ti"
msgstr ""

msgctxt "dn24:1.20.20"
msgid "abhikkamasseva kho āvuso pāthikaputta, upaḍḍhapathaṃ."
msgstr ""

msgctxt "dn24:1.20.21"
msgid ""
"Sabbapaṭhamaṃyeva āgantvā samaṇo gotamo āyasmato ārāme divāvihāraṃ "
"nisinno’ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.21"></a>
#. <a class="sc" id="sc44"></a>
msgctxt "dn24:1.21.1"
msgid ""
"Evaṃ, bhoti kho, bhaggava, so puriso tassā parisāya paṭissutvā yena "
"tindukakhāṇuparibbājakārāmo, yena acelo pāthikaputto tenupasaṅkami. "
"upasaṅkamitvā acelaṃ pāthikaputtaṃ etadavoca:"
msgstr ""

msgctxt "dn24:1.21.2"
msgid ""
"‘abhikkamāvuso pāthikaputta, abhikkantā abhiññātā abhiññātā licchavī, "
"abhikkantā abhiññātā abhiññātā ca brāhmaṇamahāsālā gahapatinecayikā "
"nānātitthiyā samaṇabrāhmaṇā."
msgstr ""

msgctxt "dn24:1.21.3"
msgid "Samaṇopi gotamo āyasmato ārāme divāvihāraṃ nisinno."
msgstr ""

msgctxt "dn24:1.21.4"
msgid "Bhāsitā kho pana te esā, āvuso pāthikaputta, vesāliyaṃ parisati vācā—"
msgstr ""

msgctxt "dn24:1.21.5"
msgid "samaṇopi gotamo ñāṇavādo; ahampi ñāṇavādo."
msgstr ""

msgctxt "dn24:1.21.6"
msgid ""
"Ñāṇavādo kho pana ñāṇavādena arahati uttari manussadhammā iddhipāṭihāriyaṃ "
"dassetuṃ … pe …"
msgstr ""

msgctxt "dn24:1.21.7"
msgid "taddiguṇaṃ taddiguṇāhaṃ karissāmīti."
msgstr ""

msgctxt "dn24:1.21.8"
msgid "Abhikkamasseva kho, āvuso pāthikaputta, upaḍḍhapathaṃ."
msgstr ""

msgctxt "dn24:1.21.9"
msgid ""
"Sabbapaṭhamaṃyeva āgantvā samaṇo gotamo āyasmato ārāme divāvihāraṃ "
"nisinno’ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.19"></a>
#. <a class="sc" id="sc45"></a>
#. VAR: saṃsappati → saṃsabbati (mr)
msgctxt "dn24:1.21.10"
msgid ""
"Evaṃ vutte, bhaggava, acelo pāthikaputto ‘āyāmi, āvuso, āyāmi, āvuso’ti "
"vatvā tattheva saṃsappati, na sakkoti āsanāpi vuṭṭhātuṃ."
msgstr ""

msgctxt "dn24:1.21.11"
msgid "Atha kho so, bhaggava, puriso acelaṃ pāthikaputtaṃ etadavoca:"
msgstr ""

msgctxt "dn24:1.21.12"
msgid ""
"‘kiṃ su nāma te, āvuso pāthikaputta, pāvaḷā su nāma te pīṭhakasmiṃ allīnā, "
"pīṭhakaṃ su nāma te pāvaḷāsu allīnaṃ?"
msgstr ""

msgctxt "dn24:1.21.13"
msgid ""
"Āyāmi āvuso, āyāmi āvusoti vatvā tattheva saṃsappasi, na sakkosi āsanāpi "
"vuṭṭhātun’ti."
msgstr ""

msgctxt "dn24:1.21.14"
msgid ""
"Evampi kho, bhaggava, vuccamāno acelo pāthikaputto ‘āyāmi, āvuso, āyāmi, "
"āvuso’ti vatvā tattheva saṃsappati, na sakkoti āsanāpi vuṭṭhātuṃ."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.22"></a>
#. <a class="sc" id="sc46"></a>
msgctxt "dn24:1.22.1"
msgid "Yadā kho so, bhaggava, puriso aññāsi:"
msgstr ""

msgctxt "dn24:1.22.2"
msgid "‘parābhūtarūpo ayaṃ acelo pāthikaputto."
msgstr ""

msgctxt "dn24:1.22.3"
msgid ""
"Āyāmi, āvuso, āyāmi, āvusoti vatvā tattheva saṃsappati, na sakkoti āsanāpi "
"vuṭṭhātun’ti."
msgstr ""

msgctxt "dn24:1.22.4"
msgid "Atha taṃ parisaṃ āgantvā evamārocesi:"
msgstr ""

#. VAR: parābhūtarūpo, bho → parābhūtarūpo ayaṃ (bj) | parābhūtarūpo bho ayaṃ (s1-3, mr) | parābhūtarūpo (pts1)
msgctxt "dn24:1.22.5"
msgid "‘parābhūtarūpo, bho, acelo pāthikaputto."
msgstr ""

msgctxt "dn24:1.22.6"
msgid ""
"Āyāmi, āvuso, āyāmi, āvusoti vatvā tattheva saṃsappati, na sakkoti āsanāpi "
"vuṭṭhātun’ti."
msgstr ""

msgctxt "dn24:1.22.7"
msgid "Evaṃ vutte, ahaṃ, bhaggava, taṃ parisaṃ etadavocaṃ:"
msgstr ""

msgctxt "dn24:1.22.8"
msgid ""
"‘abhabbo kho, āvuso, acelo pāthikaputto taṃ vācaṃ appahāya taṃ cittaṃ "
"appahāya taṃ diṭṭhiṃ appaṭinissajjitvā mama sammukhībhāvaṃ āgantuṃ."
msgstr ""

msgctxt "dn24:1.22.9"
msgid "Sacepissa evamassa—"
msgstr ""

msgctxt "dn24:1.22.10"
msgid ""
"ahaṃ taṃ vācaṃ appahāya taṃ cittaṃ appahāya taṃ diṭṭhiṃ appaṭinissajjitvā "
"samaṇassa gotamassa sammukhībhāvaṃ gaccheyyanti, muddhāpi tassa vipateyyā’ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "dn24:1.22.11"
msgid "Paṭhamabhāṇavāro niṭṭhito."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.20"></a>
#. <a class="sc" id="sc47"></a>
msgctxt "dn24:2.1.1"
msgid ""
"Atha kho, bhaggava, aññataro licchavimahāmatto uṭṭhāyāsanā taṃ parisaṃ "
"etadavoca:"
msgstr ""

