#. <section class="sutta" id="dn30"><article><div class="hgroup"><p class="division">
msgctxt "dn30:0.1"
msgid "Dīgha Nikāya 30"
msgstr ""

#. </p><h1>
msgctxt "dn30:0.2"
msgid "Lakkhaṇasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-cs" id="pts-cs1.1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.142"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "dn30:1.1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "dn30:1.1.2"
msgid ""
"ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "dn30:1.1.3"
msgid "Tatra kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "dn30:1.1.4"
msgid "“bhikkhavo”ti."
msgstr ""

#. VAR: Bhaddante”ti → bhadanteti (bj, s1-3, pts1)
msgctxt "dn30:1.1.5"
msgid "“Bhaddante”ti te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "dn30:1.1.6"
msgid "Bhagavā etadavoca:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "dn30:1.1.7"
msgid ""
"“Dvattiṃsimāni, bhikkhave, mahāpurisassa mahāpurisalakkhaṇāni, yehi "
"samannāgatassa mahāpurisassa dveva gatiyo bhavanti anaññā."
msgstr ""

msgctxt "dn30:1.1.8"
msgid ""
"Sace agāraṃ ajjhāvasati, rājā hoti cakkavattī dhammiko dhammarājā cāturanto "
"vijitāvī janapadatthāvariyappatto sattaratanasamannāgato."
msgstr ""

msgctxt "dn30:1.1.9"
msgid "Tassimāni satta ratanāni bhavanti;"
msgstr ""

msgctxt "dn30:1.1.10"
msgid ""
"Seyyathidaṃ—cakkaratanaṃ hatthiratanaṃ assaratanaṃ maṇiratanaṃ itthiratanaṃ "
"gahapatiratanaṃ pariṇāyakaratanameva sattamaṃ."
msgstr ""

msgctxt "dn30:1.1.11"
msgid ""
"Parosahassaṃ kho panassa puttā bhavanti sūrā vīraṅgarūpā parasenappamaddanā."
msgstr ""

msgctxt "dn30:1.1.12"
msgid ""
"So imaṃ pathaviṃ sāgarapariyantaṃ adaṇḍena asatthena dhammena abhivijiya "
"ajjhāvasati."
msgstr ""

#. VAR: vivaṭṭacchado → vivattacchado (bj) | vivaṭacchado (s1-3, mr) | vivatta-cchaddo (pts1)
msgctxt "dn30:1.1.13"
msgid ""
"Sace kho pana agārasmā anagāriyaṃ pabbajati, arahaṃ hoti sammāsambuddho loke "
"vivaṭṭacchado."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.2"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.143"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "dn30:1.2.1"
msgid ""
"Katamāni ca tāni, bhikkhave, dvattiṃsa mahāpurisassa mahāpurisalakkhaṇāni, "
"yehi samannāgatassa mahāpurisassa dveva gatiyo bhavanti anaññā? "
msgstr ""

msgctxt "dn30:1.2.2"
msgid "Sace agāraṃ ajjhāvasati, rājā hoti cakkavattī … pe … "
msgstr ""

msgctxt "dn30:1.2.3"
msgid ""
"sace kho pana agārasmā anagāriyaṃ pabbajati, arahaṃ hoti sammāsambuddho loke "
"vivaṭṭacchado."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "dn30:1.2.4"
msgid ""
"Idha, bhikkhave, mahāpuriso suppatiṭṭhitapādo hoti. Yampi, bhikkhave, "
"mahāpuriso suppatiṭṭhitapādo hoti, idampi, bhikkhave, mahāpurisassa "
"mahāpurisalakkhaṇaṃ bhavati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "dn30:1.2.5"
msgid ""
"Puna caparaṃ, bhikkhave, mahāpurisassa heṭṭhāpādatalesu cakkāni jātāni honti "
"sahassārāni sanemikāni sanābhikāni sabbākāraparipūrāni. Yampi, bhikkhave, "
"mahāpurisassa heṭṭhāpādatalesu cakkāni jātāni honti sahassārāni sanemikāni "
"sanābhikāni sabbākāraparipūrāni, idampi, bhikkhave, mahāpurisassa "
"mahāpurisalakkhaṇaṃ bhavati."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.144"></a>
#. <a class="sc" id="sc6"></a>
msgctxt "dn30:1.2.6"
msgid "Puna caparaṃ, bhikkhave, mahāpuriso āyatapaṇhi hoti … pe …"
msgstr ""

msgctxt "dn30:1.2.7"
msgid "dīghaṅguli hoti …"
msgstr ""

msgctxt "dn30:1.2.8"
msgid "mudutalunahatthapādo hoti …"
msgstr ""

msgctxt "dn30:1.2.9"
msgid "jālahatthapādo hoti …"
msgstr ""

msgctxt "dn30:1.2.10"
msgid "ussaṅkhapādo hoti …"
msgstr ""

msgctxt "dn30:1.2.11"
msgid "eṇijaṅgho hoti …"
msgstr ""

msgctxt "dn30:1.2.12"
msgid ""
"ṭhitakova anonamanto ubhohi pāṇitalehi jaṇṇukāni parimasati parimajjati …"
msgstr ""

msgctxt "dn30:1.2.13"
msgid "kosohitavatthaguyho hoti …"
msgstr ""

msgctxt "dn30:1.2.14"
msgid "suvaṇṇavaṇṇo hoti kañcanasannibhattaco …"
msgstr ""

msgctxt "dn30:1.2.15"
msgid "sukhumacchavi hoti, sukhumattā chaviyā rajojallaṃ kāye na upalimpati …"
msgstr ""

msgctxt "dn30:1.2.16"
msgid "ekekalomo hoti, ekekāni lomāni lomakūpesu jātāni …"
msgstr ""

#. VAR: kuṇḍalāvaṭṭāni → kuṇḍalāvattāni (bj, s1-3) | kuṇḍalavattāni (pts1)
msgctxt "dn30:1.2.17"
msgid ""
"uddhaggalomo hoti, uddhaggāni lomāni jātāni nīlāni añjanavaṇṇāni "
"kuṇḍalāvaṭṭāni dakkhiṇāvaṭṭakajātāni …"
msgstr ""

msgctxt "dn30:1.2.18"
msgid "brahmujugatto hoti …"
msgstr ""

msgctxt "dn30:1.2.19"
msgid "sattussado hoti …"
msgstr ""

msgctxt "dn30:1.2.20"
msgid "sīhapubbaddhakāyo hoti …"
msgstr ""

#. VAR: citantaraṃso → pittantaraṃso (s1-3)
msgctxt "dn30:1.2.21"
msgid "citantaraṃso hoti …"
msgstr ""

msgctxt "dn30:1.2.22"
msgid ""
"nigrodhaparimaṇḍalo hoti, yāvatakvassa kāyo tāvatakvassa byāmo yāvatakvassa "
"byāmo tāvatakvassa kāyo …"
msgstr ""

msgctxt "dn30:1.2.23"
msgid "samavaṭṭakkhandho hoti …"
msgstr ""

msgctxt "dn30:1.2.24"
msgid "rasaggasaggī hoti …"
msgstr ""

msgctxt "dn30:1.2.25"
msgid "sīhahanu hoti …"
msgstr ""

msgctxt "dn30:1.2.26"
msgid "cattālīsadanto hoti …"
msgstr ""

msgctxt "dn30:1.2.27"
msgid "samadanto hoti …"
msgstr ""

msgctxt "dn30:1.2.28"
msgid "aviraḷadanto hoti …"
msgstr ""

msgctxt "dn30:1.2.29"
msgid "susukkadāṭho hoti …"
msgstr ""

msgctxt "dn30:1.2.30"
msgid "pahūtajivho hoti …"
msgstr ""

msgctxt "dn30:1.2.31"
msgid "brahmassaro hoti karavīkabhāṇī …"
msgstr ""

msgctxt "dn30:1.2.32"
msgid "abhinīlanetto hoti …"
msgstr ""

msgctxt "dn30:1.2.33"
msgid "gopakhumo hoti …"
msgstr ""

msgctxt "dn30:1.2.34"
msgid ""
"uṇṇā bhamukantare jātā hoti, odātā mudutūlasannibhā. Yampi, bhikkhave, "
"mahāpurisassa uṇṇā bhamukantare jātā hoti, odātā mudutūlasannibhā, idampi, "
"bhikkhave, mahāpurisassa mahāpurisalakkhaṇaṃ bhavati."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.145"></a>
#. <a class="sc" id="sc7"></a>
msgctxt "dn30:1.2.35"
msgid ""
"Puna caparaṃ, bhikkhave, mahāpuriso uṇhīsasīso hoti. Yampi, bhikkhave, "
"mahāpuriso uṇhīsasīso hoti, idampi, bhikkhave, mahāpurisassa "
"mahāpurisalakkhaṇaṃ bhavati."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.3"></a>
#. <a class="sc" id="sc8"></a>
msgctxt "dn30:1.3.1"
msgid ""
"Imāni kho tāni, bhikkhave, dvattiṃsa mahāpurisassa mahāpurisalakkhaṇāni, "
"yehi samannāgatassa mahāpurisassa dveva gatiyo bhavanti anaññā."
msgstr ""

msgctxt "dn30:1.3.2"
msgid "Sace agāraṃ ajjhāvasati, rājā hoti cakkavattī … pe …"
msgstr ""

msgctxt "dn30:1.3.3"
msgid ""
"sace kho pana agārasmā anagāriyaṃ pabbajati, arahaṃ hoti sammāsambuddho loke "
"vivaṭṭacchado."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "dn30:1.3.4"
msgid ""
"Imāni kho, bhikkhave, dvattiṃsa mahāpurisassa mahāpurisalakkhaṇāni "
"bāhirakāpi isayo dhārenti, no ca kho te jānanti:"
msgstr ""

msgctxt "dn30:1.3.5"
msgid "‘imassa kammassa kaṭattā idaṃ lakkhaṇaṃ paṭilabhatī’ti."
msgstr ""

#. </p><h2>
msgctxt "dn30:1.3.6"
msgid "1. Suppatiṭṭhitapādatālakkhaṇaṃ"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.4"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.146"></a>
#. <a class="sc" id="sc10"></a>
msgctxt "dn30:1.4.1"
msgid ""
"Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno daḷhasamādāno ahosi kusalesu dhammesu, "
"avatthitasamādāno kāyasucarite vacīsucarite manosucarite dānasaṃvibhāge "
"sīlasamādāne uposathupavāse matteyyatāya petteyyatāya sāmaññatāya "
"brahmaññatāya kule jeṭṭhāpacāyitāya aññataraññataresu ca adhikusalesu "
"dhammesu."
msgstr ""

msgctxt "dn30:1.4.2"
msgid ""
"So tassa kammassa kaṭattā upacitattā ussannattā vipulattā kāyassa bhedā "
"paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjati."
msgstr ""

msgctxt "dn30:1.4.3"
msgid ""
"So tattha aññe deve dasahi ṭhānehi adhiggaṇhāti dibbena āyunā dibbena "
"vaṇṇena dibbena sukhena dibbena yasena dibbena ādhipateyyena dibbehi rūpehi "
"dibbehi saddehi dibbehi gandhehi dibbehi rasehi dibbehi phoṭṭhabbehi."
msgstr ""

msgctxt "dn30:1.4.4"
msgid ""
"So tato cuto itthattaṃ āgato samāno imaṃ mahāpurisalakkhaṇaṃ paṭilabhati."
msgstr ""

msgctxt "dn30:1.4.5"
msgid "Suppatiṭṭhitapādo hoti."
msgstr ""

msgctxt "dn30:1.4.6"
msgid ""
"Samaṃ pādaṃ bhūmiyaṃ nikkhipati, samaṃ uddharati, samaṃ sabbāvantehi "
"pādatalehi bhūmiṃ phusati."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.5"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.147"></a>
#. <a class="sc" id="sc11"></a>
msgctxt "dn30:1.5.1"
msgid ""
"So tena lakkhaṇena samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"dhammiko dhammarājā cāturanto vijitāvī janapadatthāvariyappatto "
"sattaratanasamannāgato."
msgstr ""

msgctxt "dn30:1.5.2"
msgid "Tassimāni satta ratanāni bhavanti;"
msgstr ""

msgctxt "dn30:1.5.3"
msgid ""
"Seyyathidaṃ—cakkaratanaṃ hatthiratanaṃ assaratanaṃ maṇiratanaṃ itthiratanaṃ "
"gahapatiratanaṃ pariṇāyakaratanameva sattamaṃ."
msgstr ""

msgctxt "dn30:1.5.4"
msgid ""
"Parosahassaṃ kho panassa puttā bhavanti sūrā vīraṅgarūpā parasenappamaddanā."
msgstr ""

msgctxt "dn30:1.5.5"
msgid ""
"So imaṃ pathaviṃ sāgarapariyantaṃ akhilamanimittamakaṇṭakaṃ iddhaṃ phītaṃ "
"khemaṃ sivaṃ nirabbudaṃ adaṇḍena asatthena dhammena abhivijiya ajjhāvasati."
msgstr ""

msgctxt "dn30:1.5.6"
msgid "Rājā samāno kiṃ labhati?"
msgstr ""

#. VAR: Akkhambhiyo → avikkhambhiyo (bj, pts1)
msgctxt "dn30:1.5.7"
msgid "Akkhambhiyo hoti kenaci manussabhūtena paccatthikena paccāmittena."
msgstr ""

msgctxt "dn30:1.5.8"
msgid "Rājā samāno idaṃ labhati."
msgstr ""

msgctxt "dn30:1.5.9"
msgid ""
"Sace kho pana agārasmā anagāriyaṃ pabbajati, arahaṃ hoti sammāsambuddho loke "
"vivaṭṭacchado."
msgstr ""

msgctxt "dn30:1.5.10"
msgid "Buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.5.11"
msgid ""
"Akkhambhiyo hoti abbhantarehi vā bāhirehi vā paccatthikehi paccāmittehi "
"rāgena vā dosena vā mohena vā samaṇena vā brāhmaṇena vā devena vā mārena vā "
"brahmunā vā kenaci vā lokasmiṃ."
msgstr ""

msgctxt "dn30:1.5.12"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:1.5.13"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.6"></a>
#. <a class="sc" id="sc12"></a>
msgctxt "dn30:1.6.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc13"></a>
msgctxt "dn30:1.6.2"
msgid "“Sacce ca dhamme ca dame ca saṃyame,"
msgstr ""

#. <br>
msgctxt "dn30:1.6.3"
msgid "Soceyyasīlālayuposathesu ca;"
msgstr ""

#. <br>
msgctxt "dn30:1.6.4"
msgid "Dāne ahiṃsāya asāhase rato,"
msgstr ""

#. <br>
#. VAR: samattamācari → samantamācari (bj, s1-3, mr)
msgctxt "dn30:1.6.5"
msgid "Daḷhaṃ samādāya samattamācari."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc14"></a>
#. VAR: samakkami → apakkami (bj, s1-3, mr)
msgctxt "dn30:1.6.6"
msgid "So tena kammena divaṃ samakkami,"
msgstr ""

#. <br>
#. VAR: anvabhi → anubhi (s1) | annubhi (s2, s3) | ānubhi (pts1) | aṃnubhi (ṭīkā)
msgctxt "dn30:1.6.7"
msgid "Sukhañca khiḍḍāratiyo ca anvabhi;"
msgstr ""

#. <br>
msgctxt "dn30:1.6.8"
msgid "Tato cavitvā punarāgato idha,"
msgstr ""

#. <br>
msgctxt "dn30:1.6.9"
msgid "Samehi pādehi phusī vasundharaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc15"></a>
msgctxt "dn30:1.6.10"
msgid "Byākaṃsu veyyañjanikā samāgatā,"
msgstr ""

#. <br>
msgctxt "dn30:1.6.11"
msgid "Samappatiṭṭhassa na hoti khambhanā;"
msgstr ""

#. <br>
#. VAR: puna → pana (s1-3)
msgctxt "dn30:1.6.12"
msgid "Gihissa vā pabbajitassa vā puna,"
msgstr ""

#. <br>
msgctxt "dn30:1.6.13"
msgid "Taṃ lakkhaṇaṃ bhavati tadatthajotakaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc16"></a>
msgctxt "dn30:1.6.14"
msgid "Akkhambhiyo hoti agāramāvasaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.6.15"
msgid "Parābhibhū sattubhi nappamaddano;"
msgstr ""

#. <br>
msgctxt "dn30:1.6.16"
msgid "Manussabhūtenidha hoti kenaci,"
msgstr ""

#. <br>
msgctxt "dn30:1.6.17"
msgid "Akkhambhiyo tassa phalena kammuno."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc17"></a>
msgctxt "dn30:1.6.18"
msgid "Sace ca pabbajjamupeti tādiso,"
msgstr ""

#. <br>
msgctxt "dn30:1.6.19"
msgid "Nekkhammachandābhirato vicakkhaṇo;"
msgstr ""

# Both RD and MW appear to adopt PTS reading gabbha here. But MS reading khambhana must be correct, for comm has “Na so gacchati jātu khambhananti so ekaṃseneva aggapuggalo vikkhambhetabbataṃ na gacchati”
#. <br>
msgctxt "dn30:1.6.20"
msgid "Aggo na so gacchati jātu khambhanaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.6.21"
msgid "Naruttamo esa hi tassa dhammatā”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:1.6.22"
msgid "2. Pādatalacakkalakkhaṇaṃ"
msgstr ""

# Parivāra can mean “upholstery”, etc., i.e. accompaniments, etc. That seems to be the point of the Comm’s “Saparivārañca dānaṃ adāsīti annaṃ pānanti dasavidhaṃ dānavatthuṃ.” But given that the kammic outcome is a large following, should this not rather be “he gave both gifts and following”, i.e. he was not stingy with letting his workers, etc. work for others. Unless, of course, it is a mere pun. Anyway, I keep the more conservative reading.
#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.7"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.148"></a>
#. <a class="sc" id="sc18"></a>
msgctxt "dn30:1.7.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:1.7.2"
msgid ""
"bahujanassa sukhāvaho ahosi, ubbegauttāsabhayaṃ apanuditā, dhammikañca "
"rakkhāvaraṇaguttiṃ saṃvidhātā, saparivārañca dānaṃ adāsi."
msgstr ""

msgctxt "dn30:1.7.3"
msgid ""
"So tassa kammassa kaṭattā upacitattā ussannattā vipulattā kāyassa bhedā "
"paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjati … pe …"
msgstr ""

msgctxt "dn30:1.7.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imaṃ mahāpurisalakkhaṇaṃ paṭilabhati."
msgstr ""

# The last term is I think unique in this context. RD translates it, MW doesn’t.
msgctxt "dn30:1.7.5"
msgid ""
"Heṭṭhāpādatalesu cakkāni jātāni honti sahassārāni sanemikāni sanābhikāni "
"sabbākāraparipūrāni suvibhattantarāni."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.8"></a>
#. <a class="sc" id="sc19"></a>
msgctxt "dn30:1.8.1"
msgid ""
"So tena lakkhaṇena samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:1.8.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.8.3"
msgid "Mahāparivāro hoti;"
msgstr ""

msgctxt "dn30:1.8.4"
msgid ""
"mahāssa honti parivārā brāhmaṇagahapatikā negamajānapadā gaṇakamahāmattā "
"anīkaṭṭhā dovārikā amaccā pārisajjā rājāno bhogiyā kumārā."
msgstr ""

msgctxt "dn30:1.8.5"
msgid "Rājā samāno idaṃ labhati."
msgstr ""

msgctxt "dn30:1.8.6"
msgid ""
"Sace kho pana agārasmā anagāriyaṃ pabbajati, arahaṃ hoti sammāsambuddho loke "
"vivaṭṭacchado."
msgstr ""

msgctxt "dn30:1.8.7"
msgid "Buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.8.8"
msgid "Mahāparivāro hoti;"
msgstr ""

msgctxt "dn30:1.8.9"
msgid ""
"mahāssa honti parivārā bhikkhū bhikkhuniyo upāsakā upāsikāyo devā manussā "
"asurā nāgā gandhabbā."
msgstr ""

msgctxt "dn30:1.8.10"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:1.8.11"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.9"></a>
#. <a class="sc" id="sc20"></a>
msgctxt "dn30:1.9.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

# My translations of these verses heavily rely on the series of 5 articles by KR Norman on The Verses of the Lakkhana Suttanta. I note places where I differ in interpretation.
#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc21"></a>
msgctxt "dn30:1.9.2"
msgid "“Pure puratthā purimāsu jātisu,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.3"
msgid "Manussabhūto bahunaṃ sukhāvaho;"
msgstr ""

#. <br>
msgctxt "dn30:1.9.4"
msgid "Ubbhegauttāsabhayāpanūdano,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.5"
msgid "Guttīsu rakkhāvaraṇesu ussuko."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.149"></a>
#. <a class="sc" id="sc22"></a>
msgctxt "dn30:1.9.6"
msgid "So tena kammena divaṃ samakkami,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.7"
msgid "Sukhañca khiḍḍāratiyo ca anvabhi;"
msgstr ""

#. <br>
msgctxt "dn30:1.9.8"
msgid "Tato cavitvā punarāgato idha,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.9"
msgid "Cakkāni pādesu duvesu vindati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc23"></a>
msgctxt "dn30:1.9.10"
msgid "Samantanemīni sahassarāni ca,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.11"
msgid "Byākaṃsu veyyañjanikā samāgatā;"
msgstr ""

# This is clearly referring to the late legend of the soothsayers seeing the baby Siddhattha, and as such kumara should be taken as “prince”.
#. <br>
msgctxt "dn30:1.9.12"
msgid "Disvā kumāraṃ satapuññalakkhaṇaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.13"
msgid "Parivāravā hessati sattumaddano."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc24"></a>
msgctxt "dn30:1.9.14"
msgid "Tathā hi cakkāni samantanemini,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.15"
msgid "Sace na pabbajjamupeti tādiso;"
msgstr ""

#. <br>
msgctxt "dn30:1.9.16"
msgid "Vatteti cakkaṃ pathaviṃ pasāsati,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.17"
msgid "Tassānuyantādha bhavanti khattiyā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc25"></a>
msgctxt "dn30:1.9.18"
msgid "Mahāyasaṃ samparivārayanti naṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.19"
msgid "Sace ca pabbajjamupeti tādiso;"
msgstr ""

#. <br>
msgctxt "dn30:1.9.20"
msgid "Nekkhammachandābhirato vicakkhaṇo,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.21"
msgid "Devā manussāsurasakkarakkhasā."
msgstr ""

# I don’t think RD and MW are justified reading “garuda” for vihaga here.
#. </p><p>
#. <a class="sc" id="sc26"></a>
msgctxt "dn30:1.9.22"
msgid "Gandhabbanāgā vihagā catuppadā,"
msgstr ""

#. <br>
msgctxt "dn30:1.9.23"
msgid "Anuttaraṃ devamanussapūjitaṃ;"
msgstr ""

#. <br>
msgctxt "dn30:1.9.24"
msgid "Mahāyasaṃ samparivārayanti nan”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:1.9.25"
msgid "3–5. Āyatapaṇhitāditilakkhaṇaṃ"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.10"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.150"></a>
#. <a class="sc" id="sc27"></a>
msgctxt "dn30:1.10.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:1.10.2"
msgid ""
"pāṇātipātaṃ pahāya pāṇātipātā paṭivirato ahosi nihitadaṇḍo nihitasattho "
"lajjī dayāpanno, sabbapāṇabhūtahitānukampī vihāsi."
msgstr ""

msgctxt "dn30:1.10.3"
msgid "So tassa kammassa kaṭattā upacitattā ussannattā vipulattā … pe …"
msgstr ""

msgctxt "dn30:1.10.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imāni tīṇi mahāpurisalakkhaṇāni "
"paṭilabhati."
msgstr ""

msgctxt "dn30:1.10.5"
msgid "Āyatapaṇhi ca hoti, dīghaṅguli ca brahmujugatto ca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.11"></a>
#. <a class="sc" id="sc28"></a>
msgctxt "dn30:1.11.1"
msgid ""
"So tehi lakkhaṇehi samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:1.11.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.11.3"
msgid ""
"Dīghāyuko hoti ciraṭṭhitiko, dīghamāyuṃ pāleti, na sakkā hoti antarā jīvitā "
"voropetuṃ kenaci manussabhūtena paccatthikena paccāmittena."
msgstr ""

msgctxt "dn30:1.11.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:1.11.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.11.6"
msgid ""
"Dīghāyuko hoti ciraṭṭhitiko, dīghamāyuṃ pāleti, na sakkā hoti antarā jīvitā "
"voropetuṃ paccatthikehi paccāmittehi samaṇena vā brāhmaṇena vā devena vā "
"mārena vā brahmunā vā kenaci vā lokasmiṃ."
msgstr ""

msgctxt "dn30:1.11.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:1.11.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.12"></a>
#. <a class="sc" id="sc29"></a>
msgctxt "dn30:1.12.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc30"></a>
msgctxt "dn30:1.12.2"
msgid "“Māraṇavadhabhayattano viditvā,"
msgstr ""

#. <br>
msgctxt "dn30:1.12.3"
msgid "Paṭivirato paraṃ māraṇāyahosi;"
msgstr ""

#. <br>
#. VAR: Tena sucaritena saggamagamā → tena so sucaritena saggamagamāsi (s1-3)
msgctxt "dn30:1.12.4"
msgid "Tena sucaritena saggamagamā,"
msgstr ""

#. <br>
msgctxt "dn30:1.12.5"
msgid "Sukataphalavipākamanubhosi."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc31"></a>
msgctxt "dn30:1.12.6"
msgid "Caviya punaridhāgato samāno,"
msgstr ""

#. <br>
msgctxt "dn30:1.12.7"
msgid "Paṭilabhati idha tīṇi lakkhaṇāni;"
msgstr ""

#. <br>
msgctxt "dn30:1.12.8"
msgid "Bhavati vipuladīghapāsaṇhiko,"
msgstr ""

#. <br>
msgctxt "dn30:1.12.9"
msgid "Brahmāva suju subho sujātagatto."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.151"></a>
#. <a class="sc" id="sc32"></a>
msgctxt "dn30:1.12.10"
msgid "Subhujo susu susaṇṭhito sujāto,"
msgstr ""

#. <br>
msgctxt "dn30:1.12.11"
msgid "Mudutalunaṅguliyassa honti;"
msgstr ""

#. <br>
msgctxt "dn30:1.12.12"
msgid "Dīghā tībhi purisavaraggalakkhaṇehi,"
msgstr ""

#. <br>
#. VAR: Cirayapanāya → cirayāpanāya (s1-3)
msgctxt "dn30:1.12.13"
msgid "Cirayapanāya kumāramādisanti."
msgstr ""

# This verse spoken by the soothsayers.
#. </p><p>
#. <a class="sc" id="sc33"></a>
msgctxt "dn30:1.12.14"
msgid "Bhavati yadi gihī ciraṃ yapeti,"
msgstr ""

#. <br>
msgctxt "dn30:1.12.15"
msgid "Cirataraṃ pabbajati yadi tato hi;"
msgstr ""

#. <br>
msgctxt "dn30:1.12.16"
msgid "Yāpayati ca vasiddhibhāvanāya,"
msgstr ""

#. <br>
msgctxt "dn30:1.12.17"
msgid "Iti dīghāyukatāya taṃ nimittan”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:1.12.18"
msgid "6. Sattussadatālakkhaṇaṃ"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.13"></a>
#. <a class="sc" id="sc34"></a>
msgctxt "dn30:1.13.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:1.13.2"
msgid ""
"dātā ahosi paṇītānaṃ rasitānaṃ khādanīyānaṃ bhojanīyānaṃ sāyanīyānaṃ "
"lehanīyānaṃ pānānaṃ."
msgstr ""

msgctxt "dn30:1.13.3"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:1.13.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imaṃ mahāpurisalakkhaṇaṃ paṭilabhati, "
"sattussado hoti, sattassa ussadā honti;"
msgstr ""

msgctxt "dn30:1.13.5"
msgid ""
"ubhosu hatthesu ussadā honti, ubhosu pādesu ussadā honti, ubhosu aṃsakūṭesu "
"ussadā honti, khandhe ussado hoti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.14"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.152"></a>
#. <a class="sc" id="sc35"></a>
msgctxt "dn30:1.14.1"
msgid ""
"So tena lakkhaṇena samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:1.14.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.14.3"
msgid ""
"Lābhī hoti paṇītānaṃ rasitānaṃ khādanīyānaṃ bhojanīyānaṃ sāyanīyānaṃ "
"lehanīyānaṃ pānānaṃ."
msgstr ""

msgctxt "dn30:1.14.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:1.14.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.14.6"
msgid ""
"Lābhī hoti paṇītānaṃ rasitānaṃ khādanīyānaṃ bhojanīyānaṃ sāyanīyānaṃ "
"lehanīyānaṃ pānānaṃ."
msgstr ""

msgctxt "dn30:1.14.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:1.14.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.15"></a>
#. <a class="sc" id="sc36"></a>
msgctxt "dn30:1.15.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc37"></a>
#. VAR: leyya sāyiyaṃ → lehasāyitaṃ (s1-3)
msgctxt "dn30:1.15.2"
msgid "“Khajjabhojjamatha leyya sāyiyaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.15.3"
msgid "Uttamaggarasadāyako ahu;"
msgstr ""

#. <br>
msgctxt "dn30:1.15.4"
msgid "Tena so sucaritena kammunā,"
msgstr ""

#. <br>
msgctxt "dn30:1.15.5"
msgid "Nandane ciramabhippamodati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc38"></a>
msgctxt "dn30:1.15.6"
msgid "Satta cussade idhādhigacchati,"
msgstr ""

#. <br>
msgctxt "dn30:1.15.7"
msgid "Hatthapādamudutañca vindati;"
msgstr ""

#. <br>
msgctxt "dn30:1.15.8"
msgid "Āhu byañjananimittakovidā,"
msgstr ""

#. <br>
msgctxt "dn30:1.15.9"
msgid "Khajjabhojjarasalābhitāya naṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc39"></a>
#. VAR: Yaṃ gihissapi → na taṃ gihissapi (s1-3, pts1)
msgctxt "dn30:1.15.10"
msgid "Yaṃ gihissapi tadatthajotakaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.15.11"
msgid "Pabbajjampi ca tadādhigacchati;"
msgstr ""

#. <br>
msgctxt "dn30:1.15.12"
msgid "Khajjabhojjarasalābhiruttamaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.15.13"
msgid "Āhu sabbagihibandhanacchidan”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:1.15.14"
msgid "7–8. Karacaraṇamudujālatālakkhaṇāni"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.16"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.153"></a>
#. <a class="sc" id="sc40"></a>
msgctxt "dn30:1.16.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:1.16.2"
msgid "catūhi saṅgahavatthūhi janaṃ saṅgāhako ahosi—"
msgstr ""

#. VAR: peyyavajjena → piyavācena (s1-3, mr) | peyyavācena (pts1)
msgctxt "dn30:1.16.3"
msgid "dānena peyyavajjena atthacariyāya samānattatāya."
msgstr ""

msgctxt "dn30:1.16.4"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:1.16.5"
msgid ""
"so tato cuto itthattaṃ āgato samāno imāni dve mahāpurisalakkhaṇāni "
"paṭilabhati."
msgstr ""

msgctxt "dn30:1.16.6"
msgid "Mudutalunahatthapādo ca hoti jālahatthapādo ca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.17"></a>
#. <a class="sc" id="sc41"></a>
msgctxt "dn30:1.17.1"
msgid ""
"So tehi lakkhaṇehi samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:1.17.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

# I don’t know how to translate sangahita briefly here. It means “included”, as in those people who, due to the kindly actions, feel that they belong. It also means harmonious, and especially, well-managed, for which see eg. AN 8.49. the idea is that because of acting kindly and inclusively, people are well-disposed and work well together.
msgctxt "dn30:1.17.3"
msgid ""
"Susaṅgahitaparijano hoti, susaṅgahitāssa honti brāhmaṇagahapatikā "
"negamajānapadā gaṇakamahāmattā anīkaṭṭhā dovārikā amaccā pārisajjā rājāno "
"bhogiyā kumārā."
msgstr ""

msgctxt "dn30:1.17.4"
msgid "Rājā samāno idaṃ labhati …"
msgstr ""

msgctxt "dn30:1.17.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.17.6"
msgid ""
"Susaṅgahitaparijano hoti, susaṅgahitāssa honti bhikkhū bhikkhuniyo upāsakā "
"upāsikāyo devā manussā asurā nāgā gandhabbā."
msgstr ""

msgctxt "dn30:1.17.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:1.17.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.18"></a>
#. <a class="sc" id="sc42"></a>
msgctxt "dn30:1.18.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc43"></a>
msgctxt "dn30:1.18.2"
msgid "“Dānampi catthacariyatañca,"
msgstr ""

#. <br>
#. VAR: Piyavāditañca samānattatañca → piyavadatañca samāna­chanda­tañca (bj, pts1) | piyavadatañca samāna­chandañca (s1-3)
msgctxt "dn30:1.18.3"
msgid "Piyavāditañca samānattatañca;"
msgstr ""

#. <br>
msgctxt "dn30:1.18.4"
msgid "Kariyacariyasusaṅgahaṃ bahūnaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.18.5"
msgid "Anavamatena guṇena yāti saggaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc44"></a>
msgctxt "dn30:1.18.6"
msgid "Caviya punaridhāgato samāno,"
msgstr ""

#. <br>
msgctxt "dn30:1.18.7"
msgid "Karacaraṇamudutañca jālino ca;"
msgstr ""

#. <br>
msgctxt "dn30:1.18.8"
msgid "Atirucirasuvaggudassaneyyaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.18.9"
msgid "Paṭilabhati daharo susu kumāro."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.154"></a>
#. <a class="sc" id="sc45"></a>
msgctxt "dn30:1.18.10"
msgid "Bhavati parijanassavo vidheyyo,"
msgstr ""

# This is a good example of how sangahita really needs to be read as “gathered” rather than “kindly disposed” per Norman. The point here is that, even though the community is geographically dispersed, it is still a coherent community.
#. <br>
msgctxt "dn30:1.18.11"
msgid "Mahimaṃ āvasito susaṅgahito;"
msgstr ""

#. <br>
#. VAR: jigīsamāno → jigiṃsamāno (bj, s1-3, pts1)
msgctxt "dn30:1.18.12"
msgid "Piyavadū hitasukhataṃ jigīsamāno,"
msgstr ""

# For abhirucita see CPD.
#. <br>
msgctxt "dn30:1.18.13"
msgid "Abhirucitāni guṇāni ācarati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc46"></a>
msgctxt "dn30:1.18.14"
msgid "Yadi ca jahati sabbakāmabhogaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.18.15"
msgid "Kathayati dhammakathaṃ jino janassa;"
msgstr ""

#. <br>
msgctxt "dn30:1.18.16"
msgid "Vacanapaṭikarassābhippasannā,"
msgstr ""

#. <br>
msgctxt "dn30:1.18.17"
msgid "Sutvāna dhammānudhammamācarantī”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:1.18.18"
msgid "9–10. Ussaṅkhapāda-uddhaggalomatālakkhaṇāni"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.19"></a>
#. <a class="sc" id="sc47"></a>
#. VAR: pubbe manussabhūto samāno → samāno bahuno janassa (bj, pts1)
msgctxt "dn30:1.19.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:1.19.2"
msgid ""
"atthūpasaṃhitaṃ dhammūpasaṃhitaṃ vācaṃ bhāsitā ahosi, bahujanaṃ nidaṃsesi, "
"pāṇīnaṃ hitasukhāvaho dhammayāgī."
msgstr ""

msgctxt "dn30:1.19.3"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:1.19.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imāni dve mahāpurisalakkhaṇāni "
"paṭilabhati."
msgstr ""

msgctxt "dn30:1.19.5"
msgid "Ussaṅkhapādo ca hoti, uddhaggalomo ca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.20"></a>
#. <a class="sc" id="sc48"></a>
msgctxt "dn30:1.20.1"
msgid ""
"So tehi lakkhaṇehi samannāgato, sace agāraṃ ajjhāvasati, rājā hoti "
"cakkavattī … pe …"
msgstr ""

msgctxt "dn30:1.20.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.20.3"
msgid "Aggo ca hoti seṭṭho ca pāmokkho ca uttamo ca pavaro ca kāmabhogīnaṃ."
msgstr ""

msgctxt "dn30:1.20.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:1.20.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.20.6"
msgid "Aggo ca hoti seṭṭho ca pāmokkho ca uttamo ca pavaro ca sabbasattānaṃ."
msgstr ""

msgctxt "dn30:1.20.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:1.20.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.21"></a>
#. <a class="sc" id="sc49"></a>
msgctxt "dn30:1.21.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.155"></a>
#. <a class="sc" id="sc50"></a>
msgctxt "dn30:1.21.2"
msgid "“Atthadhammasahitaṃ pure giraṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.21.3"
msgid "Erayaṃ bahujanaṃ nidaṃsayi;"
msgstr ""

#. <br>
msgctxt "dn30:1.21.4"
msgid "Pāṇinaṃ hitasukhāvaho ahu,"
msgstr ""

#. <br>
msgctxt "dn30:1.21.5"
msgid "Dhammayāgamayajī amaccharī."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc51"></a>
msgctxt "dn30:1.21.6"
msgid "Tena so sucaritena kammunā,"
msgstr ""

#. <br>
msgctxt "dn30:1.21.7"
msgid "Suggatiṃ vajati tattha modati;"
msgstr ""

#. <br>
msgctxt "dn30:1.21.8"
msgid "Lakkhaṇāni ca duve idhāgato,"
msgstr ""

#. <br>
#. VAR: vindati → saṃvindati (pts1)
msgctxt "dn30:1.21.9"
msgid "Uttamappamukhatāya vindati."
msgstr ""

# Comm: Ubbhamuppatitalomavā sasoti so esa uddhaggatalomavā hoti"
#. </p><p>
#. <a class="sc" id="sc52"></a>
msgctxt "dn30:1.21.10"
msgid "Ubbhamuppatitalomavā saso,"
msgstr ""

#. <br>
msgctxt "dn30:1.21.11"
msgid "Pādagaṇṭhirahu sādhusaṇṭhitā;"
msgstr ""

#. <br>
msgctxt "dn30:1.21.12"
msgid "Maṃsalohitācitā tacotthatā,"
msgstr ""

#. <br>
msgctxt "dn30:1.21.13"
msgid "Uparicaraṇasobhanā ahu."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc53"></a>
msgctxt "dn30:1.21.14"
msgid "Gehamāvasati ce tathāvidho,"
msgstr ""

#. <br>
msgctxt "dn30:1.21.15"
msgid "Aggataṃ vajati kāmabhoginaṃ;"
msgstr ""

#. <br>
msgctxt "dn30:1.21.16"
msgid "Tena uttaritaro na vijjati,"
msgstr ""

#. <br>
msgctxt "dn30:1.21.17"
msgid "Jambudīpamabhibhuyya iriyati."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.156"></a>
#. <a class="sc" id="sc54"></a>
msgctxt "dn30:1.21.18"
msgid "Pabbajampi ca anomanikkamo,"
msgstr ""

#. <br>
msgctxt "dn30:1.21.19"
msgid "Aggataṃ vajati sabbapāṇinaṃ;"
msgstr ""

#. <br>
msgctxt "dn30:1.21.20"
msgid "Tena uttaritaro na vijjati,"
msgstr ""

#. <br>
msgctxt "dn30:1.21.21"
msgid "Sabbalokamabhibhuyya viharatī”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:1.21.22"
msgid "11. Eṇijaṅghalakkhaṇaṃ"
msgstr ""

# RD and MW mistake this as applying to the Buddha. But vaceta is causative “make recite”, i.e. “teach”. And the next passage is in plural, referring to the students, as confirmed in the comm: “Kilisseyyunti kilameyyuṃ. Antevāsikavattaṃ nāma dukkhaṃ, taṃ nesaṃ mā ciramahosīti cintesi”
#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.22"></a>
#. <a class="sc" id="sc55"></a>
msgctxt "dn30:1.22.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:1.22.2"
msgid "sakkaccaṃ vācetā ahosi sippaṃ vā vijjaṃ vā caraṇaṃ vā kammaṃ vā:"
msgstr ""

msgctxt "dn30:1.22.3"
msgid ""
"‘kintime khippaṃ vijāneyyuṃ, khippaṃ paṭipajjeyyuṃ, na ciraṃ kilisseyyun’”ti."
msgstr ""

msgctxt "dn30:1.22.4"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:1.22.5"
msgid ""
"so tato cuto itthattaṃ āgato samāno imaṃ mahāpurisalakkhaṇaṃ paṭilabhati."
msgstr ""

msgctxt "dn30:1.22.6"
msgid "Eṇijaṅgho hoti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.23"></a>
#. <a class="sc" id="sc56"></a>
msgctxt "dn30:1.23.1"
msgid ""
"So tena lakkhaṇena samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:1.23.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.23.3"
msgid ""
"Yāni tāni rājārahāni rājaṅgāni rājūpabhogāni rājānucchavikāni tāni khippaṃ "
"paṭilabhati."
msgstr ""

msgctxt "dn30:1.23.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:1.23.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.23.6"
msgid ""
"Yāni tāni samaṇārahāni samaṇaṅgāni samaṇūpabhogāni samaṇānucchavikāni, tāni "
"khippaṃ paṭilabhati."
msgstr ""

msgctxt "dn30:1.23.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:1.23.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.24"></a>
#. <a class="sc" id="sc57"></a>
msgctxt "dn30:1.24.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.157"></a>
#. <a class="sc" id="sc58"></a>
#. VAR: kammesu → kammasu (bj, pts1)
msgctxt "dn30:1.24.2"
msgid "“Sippesu vijjācaraṇesu kammesu,"
msgstr ""

#. <br>
#. VAR: vijāneyyuṃ → vijāneyya (bj, pts1) | vijāneyyu (s1-3)
msgctxt "dn30:1.24.3"
msgid "Kathaṃ vijāneyyuṃ lahunti icchati;"
msgstr ""

#. <br>
msgctxt "dn30:1.24.4"
msgid "Yadūpaghātāya na hoti kassaci,"
msgstr ""

#. <br>
msgctxt "dn30:1.24.5"
msgid "Vāceti khippaṃ na ciraṃ kilissati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc59"></a>
#. VAR: sukhudrayaṃ → sukhindriyaṃ (mr)
msgctxt "dn30:1.24.6"
msgid "Taṃ kammaṃ katvā kusalaṃ sukhudrayaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.24.7"
msgid "Jaṅghā manuññā labhate susaṇṭhitā;"
msgstr ""

#. <br>
msgctxt "dn30:1.24.8"
msgid "Vaṭṭā sujātā anupubbamuggatā,"
msgstr ""

#. <br>
msgctxt "dn30:1.24.9"
msgid "Uddhaggalomā sukhumattacotthatā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc60"></a>
msgctxt "dn30:1.24.10"
msgid "Eṇeyyajaṅghoti tamāhu puggalaṃ,"
msgstr ""

#. <br>
#. VAR: khippamidhāhu → khippamidāhu (bj)
msgctxt "dn30:1.24.11"
msgid "Sampattiyā khippamidhāhu lakkhaṇaṃ;"
msgstr ""

#. <br>
msgctxt "dn30:1.24.12"
msgid "Gehānulomāni yadābhikaṅkhati,"
msgstr ""

#. <br>
msgctxt "dn30:1.24.13"
msgid "Apabbajaṃ khippamidhādhigacchati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc61"></a>
msgctxt "dn30:1.24.14"
msgid "Sace ca pabbajjamupeti tādiso,"
msgstr ""

#. <br>
msgctxt "dn30:1.24.15"
msgid "Nekkhammachandābhirato vicakkhaṇo;"
msgstr ""

#. <br>
msgctxt "dn30:1.24.16"
msgid "Anucchavikassa yadānulomikaṃ,"
msgstr ""

# Read anomanikkamo.
#. <br>
msgctxt "dn30:1.24.17"
msgid "Taṃ vindati khippamanomavikkamo”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:1.24.18"
msgid "12. Sukhumacchavilakkhaṇaṃ"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.25"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.158"></a>
#. <a class="sc" id="sc62"></a>
msgctxt "dn30:1.25.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:1.25.2"
msgid "samaṇaṃ vā brāhmaṇaṃ vā upasaṅkamitvā paripucchitā ahosi:"
msgstr ""

msgctxt "dn30:1.25.3"
msgid ""
"‘kiṃ, bhante, kusalaṃ, kiṃ akusalaṃ, kiṃ sāvajjaṃ, kiṃ anavajjaṃ, kiṃ "
"sevitabbaṃ, kiṃ na sevitabbaṃ, kiṃ me karīyamānaṃ dīgharattaṃ ahitāya "
"dukkhāya assa, kiṃ vā pana me karīyamānaṃ dīgharattaṃ hitāya sukhāya assā’ti."
msgstr ""

msgctxt "dn30:1.25.4"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:1.25.5"
msgid ""
"so tato cuto itthattaṃ āgato samāno imaṃ mahāpurisalakkhaṇaṃ paṭilabhati."
msgstr ""

msgctxt "dn30:1.25.6"
msgid "Sukhumacchavi hoti, sukhumattā chaviyā rajojallaṃ kāye na upalimpati."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.26"></a>
#. <a class="sc" id="sc63"></a>
msgctxt "dn30:1.26.1"
msgid ""
"So tena lakkhaṇena samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:1.26.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.26.3"
msgid ""
"Mahāpañño hoti, nāssa hoti koci paññāya sadiso vā seṭṭho vā kāmabhogīnaṃ."
msgstr ""

msgctxt "dn30:1.26.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:1.26.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

#. VAR: hāsapañño → hāsupañño (pts1)
msgctxt "dn30:1.26.6"
msgid ""
"Mahāpañño hoti puthupañño hāsapañño javanapañño tikkhapañño nibbedhikapañño, "
"nāssa hoti koci paññāya sadiso vā seṭṭho vā sabbasattānaṃ."
msgstr ""

msgctxt "dn30:1.26.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:1.26.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.27"></a>
#. <a class="sc" id="sc64"></a>
msgctxt "dn30:1.27.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc65"></a>
msgctxt "dn30:1.27.2"
msgid "“Pure puratthā purimāsu jātisu,"
msgstr ""

#. <br>
msgctxt "dn30:1.27.3"
msgid "Aññātukāmo paripucchitā ahu;"
msgstr ""

#. <br>
msgctxt "dn30:1.27.4"
msgid "Sussūsitā pabbajitaṃ upāsitā,"
msgstr ""

#. <br>
msgctxt "dn30:1.27.5"
msgid "Atthantaro atthakathaṃ nisāmayi."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc66"></a>
msgctxt "dn30:1.27.6"
msgid "Paññāpaṭilābhagatena kammunā,"
msgstr ""

#. <br>
msgctxt "dn30:1.27.7"
msgid "Manussabhūto sukhumacchavī ahu;"
msgstr ""

#. <br>
msgctxt "dn30:1.27.8"
msgid "Byākaṃsu uppādanimittakovidā,"
msgstr ""

#. <br>
msgctxt "dn30:1.27.9"
msgid "Sukhumāni atthāni avecca dakkhiti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc67"></a>
msgctxt "dn30:1.27.10"
msgid "Sace na pabbajjamupeti tādiso,"
msgstr ""

#. <br>
msgctxt "dn30:1.27.11"
msgid "Vatteti cakkaṃ pathaviṃ pasāsati;"
msgstr ""

#. <br>
msgctxt "dn30:1.27.12"
msgid "Atthānusiṭṭhīsu pariggahesu ca,"
msgstr ""

#. <br>
msgctxt "dn30:1.27.13"
msgid "Na tena seyyo sadiso ca vijjati."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.159"></a>
#. <a class="sc" id="sc68"></a>
msgctxt "dn30:1.27.14"
msgid "Sace ca pabbajjamupeti tādiso,"
msgstr ""

#. <br>
msgctxt "dn30:1.27.15"
msgid "Nekkhammachandābhirato vicakkhaṇo;"
msgstr ""

#. <br>
msgctxt "dn30:1.27.16"
msgid "Paññāvisiṭṭhaṃ labhate anuttaraṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.27.17"
msgid "Pappoti bodhiṃ varabhūrimedhaso”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:1.27.18"
msgid "13. Suvaṇṇavaṇṇalakkhaṇaṃ"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.28"></a>
#. <a class="sc" id="sc69"></a>
msgctxt "dn30:1.28.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:1.28.2"
msgid "akkodhano ahosi anupāyāsabahulo, "
msgstr ""

msgctxt "dn30:1.28.3"
msgid ""
"bahumpi vutto samāno nābhisajji na kuppi na byāpajji na patitthīyi, na "
"kopañca dosañca appaccayañca pātvākāsi."
msgstr ""

#. VAR: pāvuraṇānaṃ → pāpuraṇānaṃ (bj, s1-3, pts1)
msgctxt "dn30:1.28.4"
msgid ""
"Dātā ca ahosi sukhumānaṃ mudukānaṃ attharaṇānaṃ pāvuraṇānaṃ khomasukhumānaṃ "
"kappāsikasukhumānaṃ koseyyasukhumānaṃ kambalasukhumānaṃ."
msgstr ""

msgctxt "dn30:1.28.5"
msgid "So tassa kammassa kaṭattā upacitattā … pe …"
msgstr ""

msgctxt "dn30:1.28.6"
msgid ""
"so tato cuto itthattaṃ āgato samāno imaṃ mahāpurisalakkhaṇaṃ paṭilabhati."
msgstr ""

msgctxt "dn30:1.28.7"
msgid "Suvaṇṇavaṇṇo hoti kañcanasannibhattaco."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.29"></a>
#. <a class="sc" id="sc70"></a>
msgctxt "dn30:1.29.1"
msgid ""
"So tena lakkhaṇena samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:1.29.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.29.3"
msgid ""
"Lābhī hoti sukhumānaṃ mudukānaṃ attharaṇānaṃ pāvuraṇānaṃ khomasukhumānaṃ "
"kappāsikasukhumānaṃ koseyyasukhumānaṃ kambalasukhumānaṃ."
msgstr ""

msgctxt "dn30:1.29.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:1.29.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.29.6"
msgid ""
"Lābhī hoti sukhumānaṃ mudukānaṃ attharaṇānaṃ pāvuraṇānaṃ khomasukhumānaṃ "
"kappāsikasukhumānaṃ koseyyasukhumānaṃ kambalasukhumānaṃ."
msgstr ""

msgctxt "dn30:1.29.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:1.29.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.30"></a>
#. <a class="sc" id="sc71"></a>
msgctxt "dn30:1.30.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.160"></a>
#. <a class="sc" id="sc72"></a>
#. VAR: adāsi → adāsi ca (pts1)
msgctxt "dn30:1.30.2"
msgid "“Akkodhañca adhiṭṭhahi adāsi,"
msgstr ""

#. <br>
msgctxt "dn30:1.30.3"
msgid "Dānañca vatthāni sukhumāni succhavīni;"
msgstr ""

# There’s a play on abhivissaji and abhivassam
#. <br>
msgctxt "dn30:1.30.4"
msgid "Purimatarabhave ṭhito abhivissaji,"
msgstr ""

#. <br>
msgctxt "dn30:1.30.5"
msgid "Mahimiva suro abhivassaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc73"></a>
msgctxt "dn30:1.30.6"
msgid "Taṃ katvāna ito cuto dibbaṃ,"
msgstr ""

#. <br>
#. VAR: Upapajji → upapajja (bj, pts1) | dibbamupapajji (s1-3)
msgctxt "dn30:1.30.7"
msgid "Upapajji sukataphalavipākamanubhutvā;"
msgstr ""

#. <br>
msgctxt "dn30:1.30.8"
msgid "Kanakatanusannibho idhābhibhavati,"
msgstr ""

#. <br>
msgctxt "dn30:1.30.9"
msgid "Suravarataroriva indo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc74"></a>
msgctxt "dn30:1.30.10"
msgid "Gehañcāvasati naro apabbajja,"
msgstr ""

#. <br>
#. VAR: anusāsati → anusāsatī (bj) | pasāsati (s1-3)
msgctxt "dn30:1.30.11"
msgid "Micchaṃ mahatimahiṃ anusāsati;"
msgstr ""

#. <br>
#. VAR: Pasayha sahidha sattaratanaṃ → pasayha sa hi ca sattaratanaṃ (bj) | pasayha abhivasana-varataraṃ (pts1)
msgctxt "dn30:1.30.12"
msgid "Pasayha sahidha sattaratanaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.30.13"
msgid "Paṭilabhati vimalasukhumacchaviṃ suciñca."
msgstr ""

# Here mokkha = pāmokkha = chief, best.
#. </p><p>
#. <a class="sc" id="sc75"></a>
msgctxt "dn30:1.30.14"
msgid "Lābhī acchādanavatthamokkhapāvuraṇānaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:1.30.15"
msgid "Bhavati yadi anāgāriyataṃ upeti;"
msgstr ""

#. <br>
#. VAR: Sahito → sa hi (bj) | suhita (s1-3) | sahī (pts1)
msgctxt "dn30:1.30.16"
msgid "Sahito purimakataphalaṃ anubhavati,"
msgstr ""

#. <br>
msgctxt "dn30:1.30.17"
msgid "Na bhavati katassa panāso”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:1.30.18"
msgid "14. Kosohitavatthaguyhalakkhaṇaṃ"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.31"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.161"></a>
#. <a class="sc" id="sc76"></a>
msgctxt "dn30:1.31.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:1.31.2"
msgid "cirappanaṭṭhe sucirappavāsino ñātimitte suhajje sakhino samānetā ahosi."
msgstr ""

#. VAR: samaṅgīkatvā → samaggiṃ katvā (s1-3, pts1)
msgctxt "dn30:1.31.3"
msgid ""
"Mātarampi puttena samānetā ahosi, puttampi mātarā samānetā ahosi, pitarampi "
"puttena samānetā ahosi, puttampi pitarā samānetā ahosi, bhātarampi bhātarā "
"samānetā ahosi, bhātarampi bhaginiyā samānetā ahosi, bhaginimpi bhātarā "
"samānetā ahosi, bhaginimpi bhaginiyā samānetā ahosi, samaṅgīkatvā ca "
"abbhanumoditā ahosi."
msgstr ""

msgctxt "dn30:1.31.4"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:1.31.5"
msgid ""
"so tato cuto itthattaṃ āgato samāno imaṃ mahāpurisalakkhaṇaṃ paṭilabhati—"
msgstr ""

msgctxt "dn30:1.31.6"
msgid "kosohitavatthaguyho hoti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.32"></a>
#. <a class="sc" id="sc77"></a>
msgctxt "dn30:1.32.1"
msgid ""
"So tena lakkhaṇena samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:1.32.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.32.3"
msgid ""
"Pahūtaputto hoti, parosahassaṃ kho panassa puttā bhavanti sūrā vīraṅgarūpā "
"parasenappamaddanā."
msgstr ""

msgctxt "dn30:1.32.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:1.32.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:1.32.6"
msgid ""
"Pahūtaputto hoti, anekasahassaṃ kho panassa puttā bhavanti sūrā vīraṅgarūpā "
"parasenappamaddanā."
msgstr ""

msgctxt "dn30:1.32.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:1.32.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.33"></a>
#. <a class="sc" id="sc78"></a>
msgctxt "dn30:1.33.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc79"></a>
msgctxt "dn30:1.33.2"
msgid "“Pure puratthā purimāsu jātisu,"
msgstr ""

#. <br>
msgctxt "dn30:1.33.3"
msgid "Cirappanaṭṭhe sucirappavāsino;"
msgstr ""

#. <br>
msgctxt "dn30:1.33.4"
msgid "Ñātī suhajje sakhino samānayi,"
msgstr ""

#. <br>
#. VAR: Samaṅgikatvā → samaggi katvā ca (s1-3) | samaggiṃ katvā (pts1)
msgctxt "dn30:1.33.5"
msgid "Samaṅgikatvā anumoditā ahu."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc80"></a>
#. VAR: tena → sa tena (mr)
msgctxt "dn30:1.33.6"
msgid "So tena kammena divaṃ samakkami,"
msgstr ""

#. <br>
msgctxt "dn30:1.33.7"
msgid "Sukhañca khiḍḍāratiyo ca anvabhi;"
msgstr ""

#. <br>
msgctxt "dn30:1.33.8"
msgid "Tato cavitvā punarāgato idha,"
msgstr ""

#. <br>
msgctxt "dn30:1.33.9"
msgid "Kosohitaṃ vindati vatthachādiyaṃ."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.162"></a>
#. <a class="sc" id="sc81"></a>
msgctxt "dn30:1.33.10"
msgid "Pahūtaputto bhavatī tathāvidho,"
msgstr ""

#. <br>
#. VAR: Parosahassañca → parosahassassa (pts1)
msgctxt "dn30:1.33.11"
msgid "Parosahassañca bhavanti atrajā;"
msgstr ""

#. <br>
#. VAR: ca vīrā ca → vīraṅgarūpā (mr)
msgctxt "dn30:1.33.12"
msgid "Sūrā ca vīrā ca amittatāpanā,"
msgstr ""

#. <br>
msgctxt "dn30:1.33.13"
msgid "Gihissa pītiṃ jananā piyaṃvadā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc82"></a>
msgctxt "dn30:1.33.14"
msgid "Bahūtarā pabbajitassa iriyato,"
msgstr ""

#. <br>
msgctxt "dn30:1.33.15"
msgid "Bhavanti puttā vacanānusārino;"
msgstr ""

#. <br>
msgctxt "dn30:1.33.16"
msgid "Gihissa vā pabbajitassa vā puna,"
msgstr ""

#. <br>
msgctxt "dn30:1.33.17"
msgid "Taṃ lakkhaṇaṃ jāyati tadatthajotakan”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "dn30:1.33.18"
msgid "Paṭhamabhāṇavāro niṭṭhito."
msgstr ""

#. </p><h2>
msgctxt "dn30:1.33.19"
msgid "15–16. Parimaṇḍalaanonamajaṇṇuparimasanalakkhaṇāni"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs2.1"></a>
#. <a class="sc" id="sc83"></a>
msgctxt "dn30:2.1.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

#. VAR: samekkhamāno → samapekkhamāno (mr)
msgctxt "dn30:2.1.2"
msgid ""
"mahājanasaṅgahaṃ samekkhamāno samaṃ jānāti sāmaṃ jānāti, purisaṃ jānāti "
"purisavisesaṃ jānāti:"
msgstr ""

msgctxt "dn30:2.1.3"
msgid ""
"‘ayamidamarahati ayamidamarahatī’ti tattha tattha purisavisesakaro ahosi."
msgstr ""

msgctxt "dn30:2.1.4"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:2.1.5"
msgid ""
"so tato cuto itthattaṃ āgato samāno imāni dve mahāpurisalakkhaṇāni "
"paṭilabhati."
msgstr ""

msgctxt "dn30:2.1.6"
msgid ""
"Nigrodhaparimaṇḍalo ca hoti, ṭhitakoyeva ca anonamanto ubhohi pāṇitalehi "
"jaṇṇukāni parimasati parimajjati."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.2"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.163"></a>
#. <a class="sc" id="sc84"></a>
msgctxt "dn30:2.2.1"
msgid ""
"So tehi lakkhaṇehi samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:2.2.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.2.3"
msgid ""
"Aḍḍho hoti mahaddhano mahābhogo pahūtajātarūparajato pahūtavittūpakaraṇo "
"pahūtadhanadhañño paripuṇṇakosakoṭṭhāgāro."
msgstr ""

msgctxt "dn30:2.2.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:2.2.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.2.6"
msgid "Aḍḍho hoti mahaddhano mahābhogo."
msgstr ""

msgctxt "dn30:2.2.7"
msgid "Tassimāni dhanāni honti, seyyathidaṃ—"
msgstr ""

msgctxt "dn30:2.2.8"
msgid ""
"saddhādhanaṃ sīladhanaṃ hiridhanaṃ ottappadhanaṃ sutadhanaṃ cāgadhanaṃ "
"paññādhanaṃ."
msgstr ""

msgctxt "dn30:2.2.9"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:2.2.10"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.3"></a>
#. <a class="sc" id="sc85"></a>
msgctxt "dn30:2.3.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc86"></a>
msgctxt "dn30:2.3.2"
msgid "“Tuliya paṭivicaya cintayitvā,"
msgstr ""

#. <br>
msgctxt "dn30:2.3.3"
msgid "Mahājanasaṅgahanaṃ samekkhamāno;"
msgstr ""

#. <br>
msgctxt "dn30:2.3.4"
msgid "Ayamidamarahati tattha tattha,"
msgstr ""

#. <br>
msgctxt "dn30:2.3.5"
msgid "Purisavisesakaro pure ahosi."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc87"></a>
#. VAR: Mahiñca pana ṭhito → sa hi ca pana ṭhito (bj, pts1) | samā ca panaṭṭhito (s1-3)
msgctxt "dn30:2.3.6"
msgid "Mahiñca pana ṭhito anonamanto,"
msgstr ""

#. <br>
msgctxt "dn30:2.3.7"
msgid "Phusati karehi ubhohi jaṇṇukāni;"
msgstr ""

#. <br>
msgctxt "dn30:2.3.8"
msgid "Mahiruhaparimaṇḍalo ahosi,"
msgstr ""

#. <br>
msgctxt "dn30:2.3.9"
msgid "Sucaritakammavipākasesakena."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc88"></a>
msgctxt "dn30:2.3.10"
msgid "Bahuvividhanimittalakkhaṇaññū,"
msgstr ""

#. <br>
msgctxt "dn30:2.3.11"
msgid "Atinipuṇā manujā byākariṃsu;"
msgstr ""

#. <br>
msgctxt "dn30:2.3.12"
msgid "Bahuvividhā gihīnaṃ arahāni,"
msgstr ""

#. <br>
msgctxt "dn30:2.3.13"
msgid "Paṭilabhati daharo susu kumāro."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.164"></a>
#. <a class="sc" id="sc89"></a>
msgctxt "dn30:2.3.14"
msgid "Idha ca mahīpatissa kāmabhogī,"
msgstr ""

#. <br>
msgctxt "dn30:2.3.15"
msgid "Gihipatirūpakā bahū bhavanti;"
msgstr ""

#. <br>
msgctxt "dn30:2.3.16"
msgid "Yadi ca jahati sabbakāmabhogaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.3.17"
msgid "Labhati anuttaraṃ uttamadhanaggan”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:2.3.18"
msgid "17–19. Sīhapubbaddhakāyāditilakkhaṇaṃ"
msgstr ""

# Given the list of wishes below, yogakkhema here cannot mean nibbana, a rare use in a worldly sense.
#. </h2><p>
#. <a class="pts-cs" id="pts-cs2.4"></a>
#. <a class="sc" id="sc90"></a>
msgctxt "dn30:2.4.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:2.4.2"
msgid "bahujanassa atthakāmo ahosi hitakāmo phāsukāmo yogakkhemakāmo:"
msgstr ""

#. VAR: sutena vaḍḍheyyuṃ → buddhiyā vaḍḍheyyuṃ (s1-3)
msgctxt "dn30:2.4.3"
msgid ""
"‘kintime saddhāya vaḍḍheyyuṃ, sīlena vaḍḍheyyuṃ, sutena vaḍḍheyyuṃ, cāgena "
"vaḍḍheyyuṃ, dhammena vaḍḍheyyuṃ, paññāya vaḍḍheyyuṃ, dhanadhaññena "
"vaḍḍheyyuṃ, khettavatthunā vaḍḍheyyuṃ, dvipadacatuppadehi vaḍḍheyyuṃ, "
"puttadārehi vaḍḍheyyuṃ, dāsakammakaraporisehi vaḍḍheyyuṃ, ñātīhi vaḍḍheyyuṃ, "
"mittehi vaḍḍheyyuṃ, bandhavehi vaḍḍheyyun’ti."
msgstr ""

msgctxt "dn30:2.4.4"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:2.4.5"
msgid ""
"so tato cuto itthattaṃ āgato samāno imāni tīṇi mahāpurisalakkhaṇāni "
"paṭilabhati."
msgstr ""

msgctxt "dn30:2.4.6"
msgid "Sīhapubbaddhakāyo ca hoti citantaraṃso ca samavaṭṭakkhandho ca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.5"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.165"></a>
#. <a class="sc" id="sc91"></a>
msgctxt "dn30:2.5.1"
msgid ""
"So tehi lakkhaṇehi samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:2.5.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.5.3"
msgid ""
"Aparihānadhammo hoti, na parihāyati dhanadhaññena khettavatthunā "
"dvipadacatuppadehi puttadārehi dāsakammakaraporisehi ñātīhi mittehi "
"bandhavehi, na parihāyati sabbasampattiyā."
msgstr ""

msgctxt "dn30:2.5.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:2.5.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

# Note dhamma is absent here, but present both above and below in verse.
msgctxt "dn30:2.5.6"
msgid ""
"Aparihānadhammo hoti, na parihāyati saddhāya sīlena sutena cāgena paññāya, "
"na parihāyati sabbasampattiyā."
msgstr ""

msgctxt "dn30:2.5.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:2.5.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.6"></a>
#. <a class="sc" id="sc92"></a>
msgctxt "dn30:2.6.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc93"></a>
msgctxt "dn30:2.6.2"
msgid "“Saddhāya sīlena sutena buddhiyā,"
msgstr ""

#. <br>
msgctxt "dn30:2.6.3"
msgid "Cāgena dhammena bahūhi sādhuhi;"
msgstr ""

#. <br>
msgctxt "dn30:2.6.4"
msgid "Dhanena dhaññena ca khettavatthunā,"
msgstr ""

#. <br>
msgctxt "dn30:2.6.5"
msgid "Puttehi dārehi catuppadehi ca."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc94"></a>
msgctxt "dn30:2.6.6"
msgid "Ñātīhi mittehi ca bandhavehi ca,"
msgstr ""

#. <br>
msgctxt "dn30:2.6.7"
msgid "Balena vaṇṇena sukhena cūbhayaṃ;"
msgstr ""

#. <br>
msgctxt "dn30:2.6.8"
msgid "Kathaṃ na hāyeyyuṃ pareti icchati,"
msgstr ""

#. <br>
#. VAR: Atthassa middhī ca → idaṃ samiddhañca (bj, mr) | addhaṃ samiddhañca (s1-3)
msgctxt "dn30:2.6.9"
msgid "Atthassa middhī ca panābhikaṅkhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc95"></a>
msgctxt "dn30:2.6.10"
msgid "Sa sīhapubbaddhasusaṇṭhito ahu,"
msgstr ""

#. <br>
msgctxt "dn30:2.6.11"
msgid "Samavaṭṭakhandho ca citantaraṃso;"
msgstr ""

#. <br>
msgctxt "dn30:2.6.12"
msgid "Pubbe suciṇṇena katena kammunā,"
msgstr ""

#. <br>
msgctxt "dn30:2.6.13"
msgid "Ahāniyaṃ pubbanimittamassa taṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc96"></a>
msgctxt "dn30:2.6.14"
msgid "Gihīpi dhaññena dhanena vaḍḍhati,"
msgstr ""

#. <br>
msgctxt "dn30:2.6.15"
msgid "Puttehi dārehi catuppadehi ca;"
msgstr ""

#. <br>
msgctxt "dn30:2.6.16"
msgid "Akiñcano pabbajito anuttaraṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.6.17"
msgid "Pappoti bodhiṃ asahānadhammatan”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:2.6.18"
msgid "20. Rasaggasaggitālakkhaṇaṃ"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs2.7"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.166"></a>
#. <a class="sc" id="sc97"></a>
msgctxt "dn30:2.7.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:2.7.2"
msgid ""
"sattānaṃ aviheṭhakajātiko ahosi pāṇinā vā leḍḍunā vā daṇḍena vā satthena vā."
msgstr ""

msgctxt "dn30:2.7.3"
msgid "So tassa kammassa kaṭattā upacitattā … pe …"
msgstr ""

msgctxt "dn30:2.7.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imaṃ mahāpurisalakkhaṇaṃ paṭilabhati, "
"rasaggasaggī hoti, uddhaggāssa rasaharaṇīyo gīvāya jātā honti "
"samābhivāhiniyo."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.8"></a>
#. <a class="sc" id="sc98"></a>
msgctxt "dn30:2.8.1"
msgid ""
"So tena lakkhaṇena samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:2.8.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.8.3"
msgid ""
"Appābādho hoti appātaṅko, samavepākiniyā gahaṇiyā samannāgato nātisītāya "
"nāccuṇhāya."
msgstr ""

msgctxt "dn30:2.8.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:2.8.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.8.6"
msgid ""
"Appābādho hoti appātaṅko samavepākiniyā gahaṇiyā samannāgato nātisītāya "
"nāccuṇhāya majjhimāya padhānakkhamāya."
msgstr ""

msgctxt "dn30:2.8.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:2.8.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.9"></a>
#. <a class="sc" id="sc99"></a>
msgctxt "dn30:2.9.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc100"></a>
msgctxt "dn30:2.9.2"
msgid "“Na pāṇidaṇḍehi panātha leḍḍunā,"
msgstr ""

#. <br>
#. VAR: maraṇavadhena → māraṇavadhena (mr)
msgctxt "dn30:2.9.3"
msgid "Satthena vā maraṇavadhena vā pana;"
msgstr ""

#. <br>
msgctxt "dn30:2.9.4"
msgid "Ubbādhanāya paritajjanāya vā,"
msgstr ""

#. <br>
msgctxt "dn30:2.9.5"
msgid "Na heṭhayī janatamaheṭhako ahu."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.167"></a>
#. <a class="sc" id="sc101"></a>
msgctxt "dn30:2.9.6"
msgid "Teneva so sugatimupecca modati,"
msgstr ""

#. <br>
msgctxt "dn30:2.9.7"
msgid "Sukhapphalaṃ kariya sukhāni vindati;"
msgstr ""

#. <br>
#. VAR: Samojasā → pāmuñjasā (s1-3) | sampajjasā (pts1) | sāmañca sā (mr)
msgctxt "dn30:2.9.8"
msgid "Samojasā rasaharaṇī susaṇṭhitā,"
msgstr ""

#. <br>
msgctxt "dn30:2.9.9"
msgid "Idhāgato labhati rasaggasaggitaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc102"></a>
msgctxt "dn30:2.9.10"
msgid "Tenāhu naṃ atinipuṇā vicakkhaṇā,"
msgstr ""

#. <br>
msgctxt "dn30:2.9.11"
msgid "Ayaṃ naro sukhabahulo bhavissati;"
msgstr ""

#. <br>
#. VAR: puna → pana (s1-3)
msgctxt "dn30:2.9.12"
msgid "Gihissa vā pabbajitassa vā puna,"
msgstr ""

#. <br>
msgctxt "dn30:2.9.13"
msgid "Taṃ lakkhaṇaṃ bhavati tadatthajotakan”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:2.9.14"
msgid "21–22. Abhinīlanettagopakhumalakkhaṇāni"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs2.10"></a>
#. <a class="sc" id="sc103"></a>
msgctxt "dn30:2.10.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

#. VAR: na ca visāci → na ca visācitaṃ (bj, pts1) | na ca visāvi (s1-3)
msgctxt "dn30:2.10.2"
msgid ""
"na ca visaṭaṃ, na ca visāci, na ca pana viceyya pekkhitā, ujuṃ tathā "
"pasaṭamujumano, piyacakkhunā bahujanaṃ udikkhitā ahosi."
msgstr ""

msgctxt "dn30:2.10.3"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:2.10.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imāni dve mahāpurisalakkhaṇāni "
"paṭilabhati."
msgstr ""

msgctxt "dn30:2.10.5"
msgid "Abhinīlanetto ca hoti gopakhumo ca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.11"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.168"></a>
#. <a class="sc" id="sc104"></a>
msgctxt "dn30:2.11.1"
msgid ""
"So tehi lakkhaṇehi samannāgato, sace agāraṃ ajjhāvasati, rājā hoti "
"cakkavattī … pe …"
msgstr ""

msgctxt "dn30:2.11.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.11.3"
msgid ""
"Piyadassano hoti bahuno janassa, piyo hoti manāpo brāhmaṇagahapatikānaṃ "
"negamajānapadānaṃ gaṇakamahāmattānaṃ anīkaṭṭhānaṃ dovārikānaṃ amaccānaṃ "
"pārisajjānaṃ rājūnaṃ bhogiyānaṃ kumārānaṃ."
msgstr ""

msgctxt "dn30:2.11.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:2.11.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.11.6"
msgid ""
"Piyadassano hoti bahuno janassa, piyo hoti manāpo bhikkhūnaṃ bhikkhunīnaṃ "
"upāsakānaṃ upāsikānaṃ devānaṃ manussānaṃ asurānaṃ nāgānaṃ gandhabbānaṃ."
msgstr ""

msgctxt "dn30:2.11.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:2.11.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.12"></a>
#. <a class="sc" id="sc105"></a>
msgctxt "dn30:2.12.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc106"></a>
#. VAR: visāci → visāvi (s1-3) | visācitaṃ (pts1)
msgctxt "dn30:2.12.2"
msgid "“Na ca visaṭaṃ na ca visāci,"
msgstr ""

#. <br>
msgctxt "dn30:2.12.3"
msgid "Na ca pana viceyyapekkhitā;"
msgstr ""

#. <br>
msgctxt "dn30:2.12.4"
msgid "Ujuṃ tathā pasaṭamujumano,"
msgstr ""

#. <br>
msgctxt "dn30:2.12.5"
msgid "Piyacakkhunā bahujanaṃ udikkhitā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc107"></a>
msgctxt "dn30:2.12.6"
msgid "Sugatīsu so phalavipākaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.12.7"
msgid "Anubhavati tattha modati;"
msgstr ""

#. <br>
msgctxt "dn30:2.12.8"
msgid "Idha ca pana bhavati gopakhumo,"
msgstr ""

#. <br>
msgctxt "dn30:2.12.9"
msgid "Abhinīlanettanayano sudassano."
msgstr ""

# Comm: Abhiyoginoti lakkhaṇasatthe yuttā.
#. </p><p>
#. <a class="sc" id="sc108"></a>
msgctxt "dn30:2.12.10"
msgid "Abhiyogino ca nipuṇā,"
msgstr ""

#. <br>
msgctxt "dn30:2.12.11"
msgid "Bahū pana nimittakovidā;"
msgstr ""

#. <br>
msgctxt "dn30:2.12.12"
msgid "Sukhumanayanakusalā manujā,"
msgstr ""

#. <br>
msgctxt "dn30:2.12.13"
msgid "Piyadassanoti abhiniddisanti naṃ."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.169"></a>
#. <a class="sc" id="sc109"></a>
msgctxt "dn30:2.12.14"
msgid "Piyadassano gihīpi santo ca,"
msgstr ""

#. <br>
msgctxt "dn30:2.12.15"
msgid "Bhavati bahujanapiyāyito;"
msgstr ""

#. <br>
msgctxt "dn30:2.12.16"
msgid "Yadi ca na bhavati gihī samaṇo hoti,"
msgstr ""

#. <br>
msgctxt "dn30:2.12.17"
msgid "Piyo bahūnaṃ sokanāsano”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:2.12.18"
msgid "23. Uṇhīsasīsalakkhaṇaṃ"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs2.13"></a>
#. <a class="sc" id="sc110"></a>
msgctxt "dn30:2.13.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:2.13.2"
msgid ""
"bahujanapubbaṅgamo ahosi kusalesu dhammesu bahujanapāmokkho kāyasucarite "
"vacīsucarite manosucarite dānasaṃvibhāge sīlasamādāne uposathupavāse "
"matteyyatāya petteyyatāya sāmaññatāya brahmaññatāya kule jeṭṭhāpacāyitāya "
"aññataraññataresu ca adhikusalesu dhammesu."
msgstr ""

msgctxt "dn30:2.13.3"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:2.13.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imaṃ mahāpurisalakkhaṇaṃ paṭilabhati—"
msgstr ""

msgctxt "dn30:2.13.5"
msgid "uṇhīsasīso hoti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.14"></a>
#. <a class="sc" id="sc111"></a>
msgctxt "dn30:2.14.1"
msgid ""
"So tena lakkhaṇena samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:2.14.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.14.3"
msgid ""
"Mahāssa jano anvāyiko hoti, brāhmaṇagahapatikā negamajānapadā "
"gaṇakamahāmattā anīkaṭṭhā dovārikā amaccā pārisajjā rājāno bhogiyā kumārā."
msgstr ""

msgctxt "dn30:2.14.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:2.14.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.14.6"
msgid ""
"Mahāssa jano anvāyiko hoti, bhikkhū bhikkhuniyo upāsakā upāsikāyo devā "
"manussā asurā nāgā gandhabbā."
msgstr ""

msgctxt "dn30:2.14.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:2.14.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.15"></a>
#. <a class="sc" id="sc112"></a>
msgctxt "dn30:2.15.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc113"></a>
msgctxt "dn30:2.15.2"
msgid "“Pubbaṅgamo sucaritesu ahu,"
msgstr ""

#. <br>
msgctxt "dn30:2.15.3"
msgid "Dhammesu dhammacariyābhirato;"
msgstr ""

#. <br>
msgctxt "dn30:2.15.4"
msgid "Anvāyiko bahujanassa ahu,"
msgstr ""

#. <br>
msgctxt "dn30:2.15.5"
msgid "Saggesu vedayittha puññaphalaṃ."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.170"></a>
#. <a class="sc" id="sc114"></a>
msgctxt "dn30:2.15.6"
msgid "Veditvā so sucaritassa phalaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.15.7"
msgid "Uṇhīsasīsattamidhajjhagamā;"
msgstr ""

#. <br>
msgctxt "dn30:2.15.8"
msgid "Byākaṃsu byañjananimittadharā,"
msgstr ""

#. <br>
msgctxt "dn30:2.15.9"
msgid "Pubbaṅgamo bahujanaṃ hessati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc115"></a>
msgctxt "dn30:2.15.10"
msgid "Paṭibhogiyā manujesu idha,"
msgstr ""

#. <br>
msgctxt "dn30:2.15.11"
msgid "Pubbeva tassa abhiharanti tadā;"
msgstr ""

#. <br>
msgctxt "dn30:2.15.12"
msgid "Yadi khattiyo bhavati bhūmipati,"
msgstr ""

#. <br>
msgctxt "dn30:2.15.13"
msgid "Paṭihārakaṃ bahujane labhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc116"></a>
msgctxt "dn30:2.15.14"
msgid "Atha cepi pabbajati so manujo,"
msgstr ""

#. <br>
msgctxt "dn30:2.15.15"
msgid "Dhammesu hoti paguṇo visavī;"
msgstr ""

#. <br>
msgctxt "dn30:2.15.16"
msgid "Tassānusāsaniguṇābhirato,"
msgstr ""

#. <br>
msgctxt "dn30:2.15.17"
msgid "Anvāyiko bahujano bhavatī”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:2.15.18"
msgid "24–25. Ekekalomatāuṇṇālakkhaṇāni"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs2.16"></a>
#. <a class="sc" id="sc117"></a>
msgctxt "dn30:2.16.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:2.16.2"
msgid ""
"musāvādaṃ pahāya musāvādā paṭivirato ahosi, saccavādī saccasandho theto "
"paccayiko avisaṃvādako lokassa."
msgstr ""

msgctxt "dn30:2.16.3"
msgid "So tassa kammassa kaṭattā upacitattā … pe …"
msgstr ""

msgctxt "dn30:2.16.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imāni dve mahāpurisalakkhaṇāni "
"paṭilabhati."
msgstr ""

msgctxt "dn30:2.16.5"
msgid ""
"Ekekalomo ca hoti, uṇṇā ca bhamukantare jātā hoti odātā mudutūlasannibhā."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.17"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.171"></a>
#. <a class="sc" id="sc118"></a>
msgctxt "dn30:2.17.1"
msgid ""
"So tehi lakkhaṇehi samannāgato, sace agāraṃ ajjhāvasati, rājā hoti "
"cakkavattī … pe …"
msgstr ""

msgctxt "dn30:2.17.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.17.3"
msgid ""
"Mahāssa jano upavattati, brāhmaṇagahapatikā negamajānapadā gaṇakamahāmattā "
"anīkaṭṭhā dovārikā amaccā pārisajjā rājāno bhogiyā kumārā."
msgstr ""

msgctxt "dn30:2.17.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:2.17.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.17.6"
msgid ""
"Mahāssa jano upavattati, bhikkhū bhikkhuniyo upāsakā upāsikāyo devā manussā "
"asurā nāgā gandhabbā."
msgstr ""

msgctxt "dn30:2.17.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:2.17.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.18"></a>
#. <a class="sc" id="sc119"></a>
msgctxt "dn30:2.18.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc120"></a>
msgctxt "dn30:2.18.2"
msgid "“Saccappaṭiñño purimāsu jātisu,"
msgstr ""

#. <br>
msgctxt "dn30:2.18.3"
msgid "Advejjhavāco alikaṃ vivajjayi;"
msgstr ""

#. <br>
msgctxt "dn30:2.18.4"
msgid "Na so visaṃvādayitāpi kassaci,"
msgstr ""

#. <br>
msgctxt "dn30:2.18.5"
msgid "Bhūtena tacchena tathena bhāsayi."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc121"></a>
msgctxt "dn30:2.18.6"
msgid "Setā susukkā mudutūlasannibhā,"
msgstr ""

#. <br>
#. VAR: sujātā → uṇṇāssa jātā (si)
msgctxt "dn30:2.18.7"
msgid "Uṇṇā sujātā bhamukantare ahu;"
msgstr ""

#. <br>
msgctxt "dn30:2.18.8"
msgid "Na lomakūpesu duve ajāyisuṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.18.9"
msgid "Ekekalomūpacitaṅgavā ahu."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc122"></a>
msgctxt "dn30:2.18.10"
msgid "Taṃ lakkhaṇaññū bahavo samāgatā,"
msgstr ""

#. <br>
msgctxt "dn30:2.18.11"
msgid "Byākaṃsu uppādanimittakovidā;"
msgstr ""

#. <br>
msgctxt "dn30:2.18.12"
msgid "Uṇṇā ca lomā ca yathā susaṇṭhitā,"
msgstr ""

#. <br>
msgctxt "dn30:2.18.13"
msgid "Upavattatī īdisakaṃ bahujjano."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc123"></a>
msgctxt "dn30:2.18.14"
msgid "Gihimpi santaṃ upavattatī jano,"
msgstr ""

#. <br>
msgctxt "dn30:2.18.15"
msgid "Bahu puratthāpakatena kammunā;"
msgstr ""

#. <br>
msgctxt "dn30:2.18.16"
msgid "Akiñcanaṃ pabbajitaṃ anuttaraṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.18.17"
msgid "Buddhampi santaṃ upavattati jano”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:2.18.18"
msgid "26–27. Cattālīsaaviraḷadantalakkhaṇāni"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs2.19"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.172"></a>
#. <a class="sc" id="sc124"></a>
msgctxt "dn30:2.19.1"
msgid ""
"“Yampi, bhikkhave tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:2.19.2"
msgid ""
"pisuṇaṃ vācaṃ pahāya pisuṇāya vācāya paṭivirato ahosi. Ito sutvā na amutra "
"akkhātā imesaṃ bhedāya, amutra vā sutvā na imesaṃ akkhātā amūsaṃ bhedāya, "
"iti bhinnānaṃ vā sandhātā, sahitānaṃ vā anuppadātā, samaggārāmo samaggarato "
"samagganandī samaggakaraṇiṃ vācaṃ bhāsitā ahosi."
msgstr ""

msgctxt "dn30:2.19.3"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:2.19.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imāni dve mahāpurisalakkhaṇāni "
"paṭilabhati."
msgstr ""

msgctxt "dn30:2.19.5"
msgid "Cattālīsadanto ca hoti aviraḷadanto ca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.20"></a>
#. <a class="sc" id="sc125"></a>
msgctxt "dn30:2.20.1"
msgid ""
"So tehi lakkhaṇehi samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:2.20.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.20.3"
msgid ""
"Abhejjapariso hoti, abhejjāssa honti parisā, brāhmaṇagahapatikā "
"negamajānapadā gaṇakamahāmattā anīkaṭṭhā dovārikā amaccā pārisajjā rājāno "
"bhogiyā kumārā."
msgstr ""

msgctxt "dn30:2.20.4"
msgid "Rājā samāno idaṃ labhati …"
msgstr ""

msgctxt "dn30:2.20.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.20.6"
msgid ""
"Abhejjapariso hoti, abhejjāssa honti parisā, bhikkhū bhikkhuniyo upāsakā "
"upāsikāyo devā manussā asurā nāgā gandhabbā."
msgstr ""

msgctxt "dn30:2.20.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:2.20.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.21"></a>
#. <a class="sc" id="sc126"></a>
msgctxt "dn30:2.21.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc127"></a>
msgctxt "dn30:2.21.2"
msgid "“Vebhūtiyaṃ sahitabhedakāriṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.21.3"
msgid "Bhedappavaḍḍhanavivādakāriṃ;"
msgstr ""

#. <br>
msgctxt "dn30:2.21.4"
msgid "Kalahappavaḍḍhanaākiccakāriṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.21.5"
msgid "Sahitānaṃ bhedajananiṃ na bhaṇi."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.173"></a>
#. <a class="sc" id="sc128"></a>
msgctxt "dn30:2.21.6"
msgid "Avivādavaḍḍhanakariṃ sugiraṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.21.7"
msgid "Bhinnānusandhijananiṃ abhaṇi;"
msgstr ""

#. <br>
msgctxt "dn30:2.21.8"
msgid "Kalahaṃ janassa panudī samaṅgī,"
msgstr ""

#. <br>
msgctxt "dn30:2.21.9"
msgid "Sahitehi nandati pamodati ca."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc129"></a>
msgctxt "dn30:2.21.10"
msgid "Sugatīsu so phalavipākaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.21.11"
msgid "Anubhavati tattha modati;"
msgstr ""

#. <br>
msgctxt "dn30:2.21.12"
msgid "Dantā idha honti aviraḷā sahitā,"
msgstr ""

#. <br>
msgctxt "dn30:2.21.13"
msgid "Caturo dasassa mukhajā susaṇṭhitā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc130"></a>
msgctxt "dn30:2.21.14"
msgid "Yadi khattiyo bhavati bhūmipati,"
msgstr ""

#. <br>
msgctxt "dn30:2.21.15"
msgid "Avibhediyāssa parisā bhavati;"
msgstr ""

#. <br>
msgctxt "dn30:2.21.16"
msgid "Samaṇo ca hoti virajo vimalo,"
msgstr ""

#. <br>
msgctxt "dn30:2.21.17"
msgid "Parisāssa hoti anugatā acalā”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:2.21.18"
msgid "28–29. Pahūtajivhābrahmassaralakkhaṇāni"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs2.22"></a>
#. <a class="sc" id="sc131"></a>
msgctxt "dn30:2.22.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:2.22.2"
msgid ""
"pharusaṃ vācaṃ pahāya pharusāya vācāya paṭivirato ahosi. Yā sā vācā nelā "
"kaṇṇasukhā pemanīyā hadayaṅgamā porī bahujanakantā bahujanamanāpā, "
"tathārūpiṃ vācaṃ bhāsitā ahosi."
msgstr ""

msgctxt "dn30:2.22.3"
msgid "So tassa kammassa kaṭattā upacitattā … pe …"
msgstr ""

msgctxt "dn30:2.22.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imāni dve mahāpurisalakkhaṇāni "
"paṭilabhati."
msgstr ""

msgctxt "dn30:2.22.5"
msgid "Pahūtajivho ca hoti brahmassaro ca karavīkabhāṇī."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.23"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.174"></a>
#. <a class="sc" id="sc132"></a>
msgctxt "dn30:2.23.1"
msgid ""
"So tehi lakkhaṇehi samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:2.23.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.23.3"
msgid ""
"Ādeyyavāco hoti, ādiyantissa vacanaṃ brāhmaṇagahapatikā negamajānapadā "
"gaṇakamahāmattā anīkaṭṭhā dovārikā amaccā pārisajjā rājāno bhogiyā kumārā."
msgstr ""

msgctxt "dn30:2.23.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:2.23.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.23.6"
msgid ""
"Ādeyyavāco hoti, ādiyantissa vacanaṃ bhikkhū bhikkhuniyo upāsakā upāsikāyo "
"devā manussā asurā nāgā gandhabbā."
msgstr ""

msgctxt "dn30:2.23.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:2.23.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.24"></a>
#. <a class="sc" id="sc133"></a>
msgctxt "dn30:2.24.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc134"></a>
msgctxt "dn30:2.24.2"
msgid "“Akkosabhaṇḍanavihesakāriṃ,"
msgstr ""

#. <br>
#. VAR: Ubbādhikaṃ → ubbādhakaṃ (bj) | ubbādhakaraṃ (s1-3) | ubbāyikaṃ (pts1)
msgctxt "dn30:2.24.3"
msgid "Ubbādhikaṃ bahujanappamaddanaṃ;"
msgstr ""

#. <br>
msgctxt "dn30:2.24.4"
msgid "Abāḷhaṃ giraṃ so na bhaṇi pharusaṃ,"
msgstr ""

#. <br>
#. VAR: susaṃhitaṃ → susahitaṃ (s1-3)
msgctxt "dn30:2.24.5"
msgid "Madhuraṃ bhaṇi susaṃhitaṃ sakhilaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc135"></a>
msgctxt "dn30:2.24.6"
msgid "Manaso piyā hadayagāminiyo,"
msgstr ""

#. <br>
msgctxt "dn30:2.24.7"
msgid "Vācā so erayati kaṇṇasukhā;"
msgstr ""

#. <br>
msgctxt "dn30:2.24.8"
msgid "Vācāsuciṇṇaphalamanubhavi,"
msgstr ""

#. <br>
#. VAR: vedayatha → vedaya (bj) | vedayitha (s1-3) | vedayati (?)
msgctxt "dn30:2.24.9"
msgid "Saggesu vedayatha puññaphalaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc136"></a>
msgctxt "dn30:2.24.10"
msgid "Veditvā so sucaritassa phalaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.24.11"
msgid "Brahmassarattamidhamajjhagamā;"
msgstr ""

#. <br>
msgctxt "dn30:2.24.12"
msgid "Jivhāssa hoti vipulā puthulā,"
msgstr ""

#. <br>
msgctxt "dn30:2.24.13"
msgid "Ādeyyavākyavacano bhavati."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.175"></a>
#. <a class="sc" id="sc137"></a>
msgctxt "dn30:2.24.14"
msgid "Gihinopi ijjhati yathā bhaṇato,"
msgstr ""

#. <br>
msgctxt "dn30:2.24.15"
msgid "Atha ce pabbajati so manujo;"
msgstr ""

#. <br>
msgctxt "dn30:2.24.16"
msgid "Ādiyantissa vacanaṃ janatā,"
msgstr ""

#. <br>
msgctxt "dn30:2.24.17"
msgid "Bahuno bahuṃ subhaṇitaṃ bhaṇato”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:2.24.18"
msgid "30. Sīhahanulakkhaṇaṃ"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs2.25"></a>
#. <a class="sc" id="sc138"></a>
msgctxt "dn30:2.25.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:2.25.2"
msgid ""
"samphappalāpaṃ pahāya samphappalāpā paṭivirato ahosi kālavādī bhūtavādī "
"atthavādī dhammavādī vinayavādī, nidhānavatiṃ vācaṃ bhāsitā ahosi kālena "
"sāpadesaṃ pariyantavatiṃ atthasaṃhitaṃ."
msgstr ""

msgctxt "dn30:2.25.3"
msgid "So tassa kammassa kaṭattā … pe …"
msgstr ""

msgctxt "dn30:2.25.4"
msgid ""
"so tato cuto itthattaṃ āgato samāno imaṃ mahāpurisalakkhaṇaṃ paṭilabhati, "
msgstr ""

msgctxt "dn30:2.25.5"
msgid "sīhahanu hoti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.26"></a>
#. <a class="sc" id="sc139"></a>
msgctxt "dn30:2.26.1"
msgid ""
"So tena lakkhaṇena samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"… pe …"
msgstr ""

msgctxt "dn30:2.26.2"
msgid "rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.26.3"
msgid "Appadhaṃsiyo hoti kenaci manussabhūtena paccatthikena paccāmittena."
msgstr ""

msgctxt "dn30:2.26.4"
msgid "Rājā samāno idaṃ labhati … pe …"
msgstr ""

msgctxt "dn30:2.26.5"
msgid "buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.26.6"
msgid ""
"Appadhaṃsiyo hoti abbhantarehi vā bāhirehi vā paccatthikehi paccāmittehi, "
"rāgena vā dosena vā mohena vā samaṇena vā brāhmaṇena vā devena vā mārena vā "
"brahmunā vā kenaci vā lokasmiṃ."
msgstr ""

msgctxt "dn30:2.26.7"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:2.26.8"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.27"></a>
#. <a class="sc" id="sc140"></a>
msgctxt "dn30:2.27.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc141"></a>
#. VAR: samphappalāpaṃ na muddhataṃ → na samphappalāpaṃ na vuccaddhatanti (s1-3) | samphappalāpaṃ na abuddhatanti (mr)
msgctxt "dn30:2.27.2"
msgid "“Na samphappalāpaṃ na muddhataṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.27.3"
msgid "Avikiṇṇavacanabyappatho ahosi;"
msgstr ""

#. <br>
msgctxt "dn30:2.27.4"
msgid "Ahitamapi ca apanudi,"
msgstr ""

#. <br>
msgctxt "dn30:2.27.5"
msgid "Hitamapi ca bahujanasukhañca abhaṇi."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.176"></a>
#. <a class="sc" id="sc142"></a>
msgctxt "dn30:2.27.6"
msgid "Taṃ katvā ito cuto divamupapajji,"
msgstr ""

#. <br>
msgctxt "dn30:2.27.7"
msgid "Sukataphalavipākamanubhosi;"
msgstr ""

#. <br>
msgctxt "dn30:2.27.8"
msgid "Caviya punaridhāgato samāno,"
msgstr ""

#. <br>
msgctxt "dn30:2.27.9"
msgid "Dvidugamavaratarahanuttamalattha."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc143"></a>
msgctxt "dn30:2.27.10"
msgid "Rājā hoti suduppadhaṃsiyo,"
msgstr ""

#. <br>
msgctxt "dn30:2.27.11"
msgid "Manujindo manujādhipati mahānubhāvo;"
msgstr ""

#. <br>
msgctxt "dn30:2.27.12"
msgid "Tidivapuravarasamo bhavati,"
msgstr ""

#. <br>
msgctxt "dn30:2.27.13"
msgid "Suravarataroriva indo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc144"></a>
msgctxt "dn30:2.27.14"
msgid "Gandhabbāsurayakkharakkhasebhi,"
msgstr ""

#. <br>
msgctxt "dn30:2.27.15"
msgid "Surehi na hi bhavati suppadhaṃsiyo;"
msgstr ""

#. <br>
msgctxt "dn30:2.27.16"
msgid "Tathatto yadi bhavati tathāvidho,"
msgstr ""

#. <br>
msgctxt "dn30:2.27.17"
msgid "Idha disā ca paṭidisā ca vidisā cā”ti."
msgstr ""

#. </p></blockquote><h2>
msgctxt "dn30:2.27.18"
msgid "31–32. Samadantasusukkadāṭhālakkhaṇāni"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs2.28"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.177"></a>
#. <a class="sc" id="sc145"></a>
msgctxt "dn30:2.28.1"
msgid ""
"“Yampi, bhikkhave, tathāgato purimaṃ jātiṃ purimaṃ bhavaṃ purimaṃ niketaṃ "
"pubbe manussabhūto samāno "
msgstr ""

msgctxt "dn30:2.28.2"
msgid ""
"micchājīvaṃ pahāya sammāājīvena jīvikaṃ kappesi, tulākūṭakaṃsakūṭamānakūṭaukk"
"oṭanavañcananikatisāciyogachedanavadhabandhanaviparāmosaālopasahasākārā "
"paṭivirato ahosi."
msgstr ""

msgctxt "dn30:2.28.3"
msgid ""
"So tassa kammassa kaṭattā upacitattā ussannattā vipulattā kāyassa bhedā "
"paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjati."
msgstr ""

msgctxt "dn30:2.28.4"
msgid ""
"So tattha aññe deve dasahi ṭhānehi adhigaṇhāti dibbena āyunā dibbena vaṇṇena "
"dibbena sukhena dibbena yasena dibbena ādhipateyyena dibbehi rūpehi dibbehi "
"saddehi dibbehi gandhehi dibbehi rasehi dibbehi phoṭṭhabbehi."
msgstr ""

msgctxt "dn30:2.28.5"
msgid ""
"So tato cuto itthattaṃ āgato samāno imāni dve mahāpurisalakkhaṇāni "
"paṭilabhati, samadanto ca hoti susukkadāṭho ca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.29"></a>
#. <a class="sc" id="sc146"></a>
msgctxt "dn30:2.29.1"
msgid ""
"So tehi lakkhaṇehi samannāgato sace agāraṃ ajjhāvasati, rājā hoti cakkavattī "
"dhammiko dhammarājā cāturanto vijitāvī janapadatthāvariyappatto "
"sattaratanasamannāgato."
msgstr ""

msgctxt "dn30:2.29.2"
msgid "Tassimāni satta ratanāni bhavanti, seyyathidaṃ—"
msgstr ""

msgctxt "dn30:2.29.3"
msgid ""
"cakkaratanaṃ hatthiratanaṃ assaratanaṃ maṇiratanaṃ itthiratanaṃ "
"gahapatiratanaṃ pariṇāyakaratanameva sattamaṃ."
msgstr ""

msgctxt "dn30:2.29.4"
msgid ""
"Parosahassaṃ kho panassa puttā bhavanti sūrā vīraṅgarūpā parasenappamaddanā."
msgstr ""

# Comm: Akhilamanimittamakaṇṭakanti niccoraṃ. Corā hi kharasamphassaṭṭhena khilā, upaddavapaccayaṭṭhena nimittā, vijjhanaṭṭhena kaṇṭakāti vuccanti. It’s possible that, as per RD, and partly MW, this refers to physical characteristics of the land, but in this instance I think comm is more plausible. We don’t expect a king to eliminate all rough terrain, but we do expect him to quell banditry.
msgctxt "dn30:2.29.5"
msgid ""
"So imaṃ pathaviṃ sāgarapariyantaṃ akhilamanimittamakaṇṭakaṃ iddhaṃ phītaṃ "
"khemaṃ sivaṃ nirabbudaṃ adaṇḍena asatthena dhammena abhivijiya ajjhāvasati."
msgstr ""

msgctxt "dn30:2.29.6"
msgid "Rājā samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.29.7"
msgid ""
"Suciparivāro hoti sucissa honti parivārā brāhmaṇagahapatikā negamajānapadā "
"gaṇakamahāmattā anīkaṭṭhā dovārikā amaccā pārisajjā rājāno bhogiyā kumārā."
msgstr ""

msgctxt "dn30:2.29.8"
msgid "Rājā samāno idaṃ labhati."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.30"></a>
#. <a class="sc" id="sc147"></a>
msgctxt "dn30:2.30.1"
msgid ""
"Sace kho pana agārasmā anagāriyaṃ pabbajati, arahaṃ hoti sammāsambuddho loke "
"vivaṭṭacchado."
msgstr ""

msgctxt "dn30:2.30.2"
msgid "Buddho samāno kiṃ labhati?"
msgstr ""

msgctxt "dn30:2.30.3"
msgid ""
"Suciparivāro hoti, sucissa honti parivārā, bhikkhū bhikkhuniyo upāsakā "
"upāsikāyo devā manussā asurā nāgā gandhabbā."
msgstr ""

msgctxt "dn30:2.30.4"
msgid "Buddho samāno idaṃ labhati”."
msgstr ""

msgctxt "dn30:2.30.5"
msgid "Etamatthaṃ bhagavā avoca."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.31"></a>
#. <a class="sc" id="sc148"></a>
msgctxt "dn30:2.31.1"
msgid "Tatthetaṃ vuccati:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.178"></a>
#. <a class="sc" id="sc149"></a>
msgctxt "dn30:2.31.2"
msgid "“Micchājīvañca avassaji samena vuttiṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.31.3"
msgid "Sucinā so janayittha dhammikena;"
msgstr ""

#. <br>
#. VAR: apanudi → apānudi (bj)
msgctxt "dn30:2.31.4"
msgid "Ahitamapi ca apanudi,"
msgstr ""

#. <br>
#. VAR: acari → ācari (bj, pts1)
msgctxt "dn30:2.31.5"
msgid "Hitamapi ca bahujanasukhañca acari."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc150"></a>
msgctxt "dn30:2.31.6"
msgid "Sagge vedayati naro sukhapphalāni,"
msgstr ""

#. <br>
msgctxt "dn30:2.31.7"
msgid "Karitvā nipuṇebhi vidūhi sabbhi;"
msgstr ""

#. <br>
msgctxt "dn30:2.31.8"
msgid "Vaṇṇitāni tidivapuravarasamo,"
msgstr ""

#. <br>
msgctxt "dn30:2.31.9"
msgid "Abhiramati ratikhiḍḍāsamaṅgī."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc151"></a>
#. VAR: Laddhāna → laddhā (bj)
msgctxt "dn30:2.31.10"
msgid "Laddhāna mānusakaṃ bhavaṃ tato,"
msgstr ""

#. <br>
msgctxt "dn30:2.31.11"
msgid "Cavitvāna sukataphalavipākaṃ;"
msgstr ""

#. <br>
msgctxt "dn30:2.31.12"
msgid "Sesakena paṭilabhati lapanajaṃ,"
msgstr ""

#. <br>
#. VAR: Samamapi sucisusukkaṃ → suci ca suvi­sud­dha­susuk­kaṃ. (s1-3) | suvisuddhaṃ suvisukkaṃ. (pts1)
msgctxt "dn30:2.31.13"
msgid "Samamapi sucisusukkaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc152"></a>
msgctxt "dn30:2.31.14"
msgid "Taṃ veyyañjanikā samāgatā bahavo,"
msgstr ""

#. <br>
msgctxt "dn30:2.31.15"
msgid "Byākaṃsu nipuṇasammatā manujā;"
msgstr ""

#. <br>
msgctxt "dn30:2.31.16"
msgid "Sucijanaparivāragaṇo bhavati,"
msgstr ""

#. <br>
msgctxt "dn30:2.31.17"
msgid "Dijasamasukkasucisobhanadanto."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.179"></a>
#. <a class="sc" id="sc153"></a>
msgctxt "dn30:2.31.18"
msgid "Rañño hoti bahujano,"
msgstr ""

#. <br>
msgctxt "dn30:2.31.19"
msgid "Suciparivāro mahatiṃ mahiṃ anusāsato;"
msgstr ""

#. <br>
msgctxt "dn30:2.31.20"
msgid "Pasayha na ca janapadatudanaṃ,"
msgstr ""

#. <br>
msgctxt "dn30:2.31.21"
msgid "Hitamapi ca bahujanasukhañca caranti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc154"></a>
msgctxt "dn30:2.31.22"
msgid "Atha ce pabbajati bhavati vipāpo,"
msgstr ""

#. <br>
msgctxt "dn30:2.31.23"
msgid "Samaṇo samitarajo vivaṭṭacchado;"
msgstr ""

#. <br>
msgctxt "dn30:2.31.24"
msgid "Vigatadarathakilamatho,"
msgstr ""

#. <br>
#. VAR: Imamapi ca paramapi ca → paraṃpi paramaṃpi ca (s1-3) | imampi ca parampi ca (pts1)
msgctxt "dn30:2.31.25"
msgid "Imamapi ca paramapi ca passati lokaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc155"></a>
msgctxt "dn30:2.31.26"
msgid "Tassovādakarā bahugihī ca pabbajitā ca,"
msgstr ""

#. <br>
#. VAR: ti → tassovādakarā bahugihī ca,
msgctxt "dn30:2.31.27"
msgid "Asuciṃ garahitaṃ dhunanti pāpaṃ;"
msgstr ""

#. <br>
msgctxt "dn30:2.31.28"
msgid "Sa hi sucibhi parivuto bhavati,"
msgstr ""

#. <br>
msgctxt "dn30:2.31.29"
msgid "Malakhilakalikilese panudehī”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc156"></a>
msgctxt "dn30:2.31.30"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "dn30:2.31.31"
msgid "Attamanā te bhikkhū bhagavato bhāsitaṃ abhinandunti."
msgstr ""

#. </p><p class="endsutta">
msgctxt "dn30:2.31.32"
msgid "Lakkhaṇasuttaṃ niṭṭhitaṃ sattamaṃ."
msgstr ""
