msgctxt "dn16:1.10.7"
msgid "asubhasaññaṃ bhāvessanti …"
msgstr ""

msgctxt "dn16:1.10.8"
msgid "ādīnavasaññaṃ bhāvessanti …"
msgstr ""

msgctxt "dn16:1.10.9"
msgid "pahānasaññaṃ bhāvessanti …"
msgstr ""

msgctxt "dn16:1.10.10"
msgid "virāgasaññaṃ bhāvessanti …"
msgstr ""

msgctxt "dn16:1.10.11"
msgid ""
"nirodhasaññaṃ bhāvessanti, vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no "
"parihāni."
msgstr ""

