#. <section class="sutta" id="dn16"><article><div class="hgroup"><p class="division">
msgctxt "dn16:0.1"
msgid "Dīgha Nikāya 16"
msgstr ""

#. </p><h1>
msgctxt "dn16:0.2"
msgid "Mahāparinibbānasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-cs" id="pts-cs1.1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.72"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "dn16:1.1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "dn16:1.1.2"
msgid "ekaṃ samayaṃ bhagavā rājagahe viharati gijjhakūṭe pabbate."
msgstr ""

msgctxt "dn16:1.1.3"
msgid ""
"Tena kho pana samayena rājā māgadho ajātasattu vedehiputto vajjī "
"abhiyātukāmo hoti."
msgstr ""

msgctxt "dn16:1.1.4"
msgid "So evamāha:"
msgstr ""

#. VAR: ucchecchāmi → ucchejjāmi (s1-3, km, pts1) | ucchijjāmi (mr)
#. VAR: anayabyasanaṃ āpādessāmī”ti → āpādessāmi vajjīti (bj) | āpādessāmi vajjinti (s1-3, km)
msgctxt "dn16:1.1.5"
msgid ""
"“ahaṃ hime vajjī evaṃmahiddhike evaṃmahānubhāve ucchecchāmi vajjī, "
"vināsessāmi vajjī, anayabyasanaṃ āpādessāmī”ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.2"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.73"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "dn16:1.2.1"
msgid ""
"Atha kho rājā māgadho ajātasattu vedehiputto vassakāraṃ brāhmaṇaṃ "
"magadhamahāmattaṃ āmantesi:"
msgstr ""

msgctxt "dn16:1.2.2"
msgid ""
"“ehi tvaṃ, brāhmaṇa, yena bhagavā tenupasaṅkama; upasaṅkamitvā mama vacanena "
"bhagavato pāde sirasā vandāhi, appābādhaṃ appātaṅkaṃ lahuṭṭhānaṃ balaṃ "
"phāsuvihāraṃ puccha:"
msgstr ""

msgctxt "dn16:1.2.3"
msgid ""
"‘rājā, bhante, māgadho ajātasattu vedehiputto bhagavato pāde sirasā vandati, "
"appābādhaṃ appātaṅkaṃ lahuṭṭhānaṃ balaṃ phāsuvihāraṃ pucchatī’ti."
msgstr ""

msgctxt "dn16:1.2.4"
msgid "Evañca vadehi:"
msgstr ""

msgctxt "dn16:1.2.5"
msgid "‘rājā, bhante, māgadho ajātasattu vedehiputto vajjī abhiyātukāmo."
msgstr ""

msgctxt "dn16:1.2.6"
msgid "So evamāha:"
msgstr ""

msgctxt "dn16:1.2.7"
msgid ""
"“ahaṃ hime vajjī evaṃmahiddhike evaṃmahānubhāve ucchecchāmi vajjī, "
"vināsessāmi vajjī, anayabyasanaṃ āpādessāmī”’ti."
msgstr ""

msgctxt "dn16:1.2.8"
msgid "Yathā te bhagavā byākaroti, taṃ sādhukaṃ uggahetvā mama āroceyyāsi."
msgstr ""

msgctxt "dn16:1.2.9"
msgid "Na hi tathāgatā vitathaṃ bhaṇantī”ti."
msgstr ""

#. </p><h2>
msgctxt "dn16:1.2.10"
msgid "1. Vassakārabrāhmaṇa"
msgstr ""

# Reading yojapetva as per PTS.
#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.3"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "dn16:1.3.1"
msgid ""
"“Evaṃ, bho”ti kho vassakāro brāhmaṇo magadhamahāmatto rañño māgadhassa "
"ajātasattussa vedehiputtassa paṭissutvā bhaddāni bhaddāni yānāni yojetvā "
"bhaddaṃ bhaddaṃ yānaṃ abhiruhitvā bhaddehi bhaddehi yānehi rājagahamhā "
"niyyāsi, yena gijjhakūṭo pabbato tena pāyāsi."
msgstr ""

msgctxt "dn16:1.3.2"
msgid ""
"Yāvatikā yānassa bhūmi, yānena gantvā, yānā paccorohitvā pattikova yena "
"bhagavā tenupasaṅkami; upasaṅkamitvā bhagavatā saddhiṃ sammodi."
msgstr ""

msgctxt "dn16:1.3.3"
msgid ""
"Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdi. Ekamantaṃ "
"nisinno kho vassakāro brāhmaṇo magadhamahāmatto bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn16:1.3.4"
msgid ""
"“rājā, bho gotama, māgadho ajātasattu vedehiputto bhoto gotamassa pāde "
"sirasā vandati, appābādhaṃ appātaṅkaṃ lahuṭṭhānaṃ balaṃ phāsuvihāraṃ "
"pucchati."
msgstr ""

#. VAR: Rājā → evañca vadeti rājā (mr)
msgctxt "dn16:1.3.5"
msgid "Rājā, bho gotama, māgadho ajātasattu vedehiputto vajjī abhiyātukāmo."
msgstr ""

msgctxt "dn16:1.3.6"
msgid "So evamāha:"
msgstr ""

msgctxt "dn16:1.3.7"
msgid ""
"‘ahaṃ hime vajjī evaṃmahiddhike evaṃmahānubhāve ucchecchāmi vajjī, "
"vināsessāmi vajjī, anayabyasanaṃ āpādessāmī’”ti."
msgstr ""

#. </p><h2>
msgctxt "dn16:1.3.8"
msgid "2. Rājaaparihāniyadhamma"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.4"></a>
#. <a class="sc" id="sc4"></a>
#. VAR: bījayamāno → vījayamāno (bj) | vījiyamāno (s1-3) | vījamāno (pts1)
msgctxt "dn16:1.4.1"
msgid ""
"Tena kho pana samayena āyasmā ānando bhagavato piṭṭhito ṭhito hoti "
"bhagavantaṃ bījayamāno."
msgstr ""

msgctxt "dn16:1.4.2"
msgid "Atha kho bhagavā āyasmantaṃ ānandaṃ āmantesi:"
msgstr ""

msgctxt "dn16:1.4.3"
msgid ""
"“kinti te, ānanda, sutaṃ, ‘vajjī abhiṇhaṃ sannipātā sannipātabahulā’”ti?"
msgstr ""

msgctxt "dn16:1.4.4"
msgid "“Sutaṃ metaṃ, bhante: ‘vajjī abhiṇhaṃ sannipātā sannipātabahulā’”ti."
msgstr ""

msgctxt "dn16:1.4.5"
msgid ""
"“Yāvakīvañca, ānanda, vajjī abhiṇhaṃ sannipātā sannipātabahulā bhavissanti, "
"vuddhiyeva, ānanda, vajjīnaṃ pāṭikaṅkhā, no parihāni. (1)"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.74"></a>
#. <a class="sc" id="sc5"></a>
msgctxt "dn16:1.4.6"
msgid ""
"Kinti te, ānanda, sutaṃ, ‘vajjī samaggā sannipatanti, samaggā vuṭṭhahanti, "
"samaggā vajjikaraṇīyāni karontī’”ti?"
msgstr ""

msgctxt "dn16:1.4.7"
msgid ""
"“Sutaṃ metaṃ, bhante: ‘vajjī samaggā sannipatanti, samaggā vuṭṭhahanti, "
"samaggā vajjikaraṇīyāni karontī’”ti."
msgstr ""

msgctxt "dn16:1.4.8"
msgid ""
"“Yāvakīvañca, ānanda, vajjī samaggā sannipatissanti, samaggā vuṭṭhahissanti, "
"samaggā vajjikaraṇīyāni karissanti, vuddhiyeva, ānanda, vajjīnaṃ pāṭikaṅkhā, "
"no parihāni. (2)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "dn16:1.4.9"
msgid ""
"Kinti te, ānanda, sutaṃ, ‘vajjī apaññattaṃ na paññapenti, paññattaṃ na "
"samucchindanti, yathāpaññatte porāṇe vajjidhamme samādāya vattantī’”ti?"
msgstr ""

msgctxt "dn16:1.4.10"
msgid ""
"“Sutaṃ metaṃ, bhante: ‘vajjī apaññattaṃ na paññapenti, paññattaṃ na "
"samucchindanti, yathāpaññatte porāṇe vajjidhamme samādāya vattantī’”ti."
msgstr ""

msgctxt "dn16:1.4.11"
msgid ""
"“Yāvakīvañca, ānanda, vajjī apaññattaṃ na paññapessanti, paññattaṃ na "
"samucchindissanti, yathāpaññatte porāṇe vajjidhamme samādāya vattissanti, "
"vuddhiyeva, ānanda, vajjīnaṃ pāṭikaṅkhā, no parihāni. (3)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
#. VAR: garuṃ karonti → garukaronti (bj, s1-3, km, pts1)
msgctxt "dn16:1.4.12"
msgid ""
"Kinti te, ānanda, sutaṃ, ‘vajjī ye te vajjīnaṃ vajjimahallakā, te sakkaronti "
"garuṃ karonti mānenti pūjenti, tesañca sotabbaṃ maññantī’”ti?"
msgstr ""

msgctxt "dn16:1.4.13"
msgid ""
"“Sutaṃ metaṃ, bhante: ‘vajjī ye te vajjīnaṃ vajjimahallakā, te sakkaronti "
"garuṃ karonti mānenti pūjenti, tesañca sotabbaṃ maññantī’”ti."
msgstr ""

msgctxt "dn16:1.4.14"
msgid ""
"“Yāvakīvañca, ānanda, vajjī ye te vajjīnaṃ vajjimahallakā, te sakkarissanti "
"garuṃ karissanti mānessanti pūjessanti, tesañca sotabbaṃ maññissanti, "
"vuddhiyeva, ānanda, vajjīnaṃ pāṭikaṅkhā, no parihāni. (4)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "dn16:1.4.15"
msgid ""
"Kinti te, ānanda, sutaṃ, ‘vajjī yā tā kulitthiyo kulakumāriyo, tā na okkassa "
"pasayha vāsentī’”ti?"
msgstr ""

msgctxt "dn16:1.4.16"
msgid ""
"“Sutaṃ metaṃ, bhante: ‘vajjī yā tā kulitthiyo kulakumāriyo tā na okkassa "
"pasayha vāsentī’”ti."
msgstr ""

msgctxt "dn16:1.4.17"
msgid ""
"“Yāvakīvañca, ānanda, vajjī yā tā kulitthiyo kulakumāriyo, tā na okkassa "
"pasayha vāsessanti, vuddhiyeva, ānanda, vajjīnaṃ pāṭikaṅkhā, no parihāni. (5)"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.75"></a>
#. <a class="sc" id="sc9"></a>
msgctxt "dn16:1.4.18"
msgid ""
"Kinti te, ānanda, sutaṃ, ‘vajjī yāni tāni vajjīnaṃ vajjicetiyāni "
"abbhantarāni ceva bāhirāni ca, tāni sakkaronti garuṃ karonti mānenti "
"pūjenti, tesañca dinnapubbaṃ katapubbaṃ dhammikaṃ baliṃ no parihāpentī’”ti?"
msgstr ""

msgctxt "dn16:1.4.19"
msgid ""
"“Sutaṃ metaṃ, bhante: ‘vajjī yāni tāni vajjīnaṃ vajjicetiyāni abbhantarāni "
"ceva bāhirāni ca, tāni sakkaronti garuṃ karonti mānenti pūjenti tesañca "
"dinnapubbaṃ katapubbaṃ dhammikaṃ baliṃ no parihāpentī’”ti."
msgstr ""

msgctxt "dn16:1.4.20"
msgid ""
"“Yāvakīvañca, ānanda, vajjī yāni tāni vajjīnaṃ vajjicetiyāni abbhantarāni "
"ceva bāhirāni ca, tāni sakkarissanti garuṃ karissanti mānessanti pūjessanti, "
"tesañca dinnapubbaṃ katapubbaṃ dhammikaṃ baliṃ no parihāpessanti, "
"vuddhiyeva, ānanda, vajjīnaṃ pāṭikaṅkhā, no parihāni. (6)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "dn16:1.4.21"
msgid ""
"Kinti te, ānanda, sutaṃ, ‘vajjīnaṃ arahantesu dhammikā rakkhāvaraṇagutti "
"susaṃvihitā, kinti anāgatā ca arahanto vijitaṃ āgaccheyyuṃ, āgatā ca "
"arahanto vijite phāsu vihareyyun’”ti?"
msgstr ""

msgctxt "dn16:1.4.22"
msgid ""
"“Sutaṃ metaṃ, bhante ‘vajjīnaṃ arahantesu dhammikā rakkhāvaraṇagutti "
"susaṃvihitā kinti anāgatā ca arahanto vijitaṃ āgaccheyyuṃ, āgatā ca arahanto "
"vijite phāsu vihareyyun’”ti."
msgstr ""

msgctxt "dn16:1.4.23"
msgid ""
"“Yāvakīvañca, ānanda, vajjīnaṃ arahantesu dhammikā rakkhāvaraṇagutti "
"susaṃvihitā bhavissati, kinti anāgatā ca arahanto vijitaṃ āgaccheyyuṃ, āgatā "
"ca arahanto vijite phāsu vihareyyunti. Vuddhiyeva, ānanda, vajjīnaṃ "
"pāṭikaṅkhā, no parihānī”ti. (7)"
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.5"></a>
#. <a class="sc" id="sc11"></a>
msgctxt "dn16:1.5.1"
msgid "Atha kho bhagavā vassakāraṃ brāhmaṇaṃ magadhamahāmattaṃ āmantesi:"
msgstr ""

#. VAR: sārandade → sānandare (mr)
msgctxt "dn16:1.5.2"
msgid "“ekamidāhaṃ, brāhmaṇa, samayaṃ vesāliyaṃ viharāmi sārandade cetiye."
msgstr ""

msgctxt "dn16:1.5.3"
msgid "Tatrāhaṃ vajjīnaṃ ime satta aparihāniye dhamme desesiṃ."
msgstr ""

msgctxt "dn16:1.5.4"
msgid ""
"Yāvakīvañca, brāhmaṇa, ime satta aparihāniyā dhammā vajjīsu ṭhassanti, imesu "
"ca sattasu aparihāniyesu dhammesu vajjī sandississanti, vuddhiyeva, "
"brāhmaṇa, vajjīnaṃ pāṭikaṅkhā, no parihānī”ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.76"></a>
#. <a class="sc" id="sc12"></a>
msgctxt "dn16:1.5.5"
msgid "Evaṃ vutte, vassakāro brāhmaṇo magadhamahāmatto bhagavantaṃ etadavoca:"
msgstr ""

#. VAR: vajjī → vajjīnaṃ (mr)
msgctxt "dn16:1.5.6"
msgid ""
"“ekamekenapi, bho gotama, aparihāniyena dhammena samannāgatānaṃ vajjīnaṃ "
"vuddhiyeva pāṭikaṅkhā, no parihāni."
msgstr ""

msgctxt "dn16:1.5.7"
msgid "Ko pana vādo sattahi aparihāniyehi dhammehi."
msgstr ""

#. VAR: Akaraṇīyāva → akaraṇīyā ca (bj, s1-3, km, mr)
msgctxt "dn16:1.5.8"
msgid ""
"Akaraṇīyāva, bho gotama, vajjī raññā māgadhena ajātasattunā vedehiputtena "
"yadidaṃ yuddhassa, aññatra upalāpanāya aññatra mithubhedā."
msgstr ""

msgctxt "dn16:1.5.9"
msgid ""
"Handa ca dāni mayaṃ, bho gotama, gacchāma, bahukiccā mayaṃ bahukaraṇīyā”ti."
msgstr ""

msgctxt "dn16:1.5.10"
msgid "“Yassadāni tvaṃ, brāhmaṇa, kālaṃ maññasī”ti."
msgstr ""

msgctxt "dn16:1.5.11"
msgid ""
"Atha kho vassakāro brāhmaṇo magadhamahāmatto bhagavato bhāsitaṃ abhinanditvā "
"anumoditvā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. </p><h2>
msgctxt "dn16:1.5.12"
msgid "3. Bhikkhuaparihāniyadhamma"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.6"></a>
#. <a class="sc" id="sc13"></a>
msgctxt "dn16:1.6.1"
msgid ""
"Atha kho bhagavā acirapakkante vassakāre brāhmaṇe magadhamahāmatte "
"āyasmantaṃ ānandaṃ āmantesi:"
msgstr ""

msgctxt "dn16:1.6.2"
msgid ""
"“gaccha tvaṃ, ānanda, yāvatikā bhikkhū rājagahaṃ upanissāya viharanti, te "
"sabbe upaṭṭhānasālāyaṃ sannipātehī”ti."
msgstr ""

msgctxt "dn16:1.6.3"
msgid ""
"“Evaṃ, bhante”ti kho āyasmā ānando bhagavato paṭissutvā yāvatikā bhikkhū "
"rājagahaṃ upanissāya viharanti, te sabbe upaṭṭhānasālāyaṃ sannipātetvā yena "
"bhagavā tenupasaṅkami; upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ "
"aṭṭhāsi. Ekamantaṃ ṭhito kho āyasmā ānando bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "dn16:1.6.4"
msgid ""
"“sannipatito, bhante, bhikkhusaṅgho, yassadāni, bhante, bhagavā kālaṃ "
"maññatī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc14"></a>
msgctxt "dn16:1.6.5"
msgid ""
"Atha kho bhagavā uṭṭhāyāsanā yena upaṭṭhānasālā tenupasaṅkami; upasaṅkamitvā "
"paññatte āsane nisīdi."
msgstr ""

msgctxt "dn16:1.6.6"
msgid "Nisajja kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "dn16:1.6.7"
msgid "“satta vo, bhikkhave, aparihāniye dhamme desessāmi, "
msgstr ""

msgctxt "dn16:1.6.8"
msgid "taṃ suṇātha, sādhukaṃ manasikarotha, bhāsissāmī”ti."
msgstr ""

msgctxt "dn16:1.6.9"
msgid "“Evaṃ, bhante”ti kho te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "dn16:1.6.10"
msgid "Bhagavā etadavoca:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc15"></a>
msgctxt "dn16:1.6.11"
msgid ""
"“Yāvakīvañca, bhikkhave, bhikkhū abhiṇhaṃ sannipātā sannipātabahulā "
"bhavissanti, vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no parihāni. (1)"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.77"></a>
#. <a class="sc" id="sc16"></a>
msgctxt "dn16:1.6.12"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū samaggā sannipatissanti, samaggā "
"vuṭṭhahissanti, samaggā saṅghakaraṇīyāni karissanti, vuddhiyeva, bhikkhave, "
"bhikkhūnaṃ pāṭikaṅkhā, no parihāni. (2)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc17"></a>
msgctxt "dn16:1.6.13"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū apaññattaṃ na paññapessanti, paññattaṃ na "
"samucchindissanti, yathāpaññattesu sikkhāpadesu samādāya vattissanti, "
"vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no parihāni. (3)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc18"></a>
msgctxt "dn16:1.6.14"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū ye te bhikkhū therā rattaññū cirapabbajitā "
"saṅghapitaro saṅghapariṇāyakā, te sakkarissanti garuṃ karissanti mānessanti "
"pūjessanti, tesañca sotabbaṃ maññissanti, vuddhiyeva, bhikkhave, bhikkhūnaṃ "
"pāṭikaṅkhā, no parihāni. (4)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc19"></a>
msgctxt "dn16:1.6.15"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū uppannāya taṇhāya ponobbhavikāya na vasaṃ "
"gacchissanti, vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no parihāni. (5)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc20"></a>
msgctxt "dn16:1.6.16"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū āraññakesu senāsanesu sāpekkhā bhavissanti, "
"vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no parihāni. (6)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc21"></a>
#. VAR: phāsu → phāsuṃ (bj, s1-3, km, pts1)
msgctxt "dn16:1.6.17"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū paccattaññeva satiṃ upaṭṭhapessanti: ‘kinti "
"anāgatā ca pesalā sabrahmacārī āgaccheyyuṃ, āgatā ca pesalā sabrahmacārī "
"phāsu vihareyyun’ti. Vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no "
"parihāni. (7)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc22"></a>
msgctxt "dn16:1.6.18"
msgid ""
"Yāvakīvañca, bhikkhave, ime satta aparihāniyā dhammā bhikkhūsu ṭhassanti, "
"imesu ca sattasu aparihāniyesu dhammesu bhikkhū sandississanti, vuddhiyeva, "
"bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no parihāni."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.7"></a>
#. <a class="sc" id="sc23"></a>
msgctxt "dn16:1.7.1"
msgid ""
"Aparepi vo, bhikkhave, satta aparihāniye dhamme desessāmi, taṃ suṇātha, "
"sādhukaṃ manasikarotha, bhāsissāmī”ti."
msgstr ""

msgctxt "dn16:1.7.2"
msgid "“Evaṃ, bhante”ti kho te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "dn16:1.7.3"
msgid "Bhagavā etadavoca:"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.78"></a>
#. <a class="sc" id="sc24"></a>
msgctxt "dn16:1.7.4"
msgid ""
"“Yāvakīvañca, bhikkhave, bhikkhū na kammārāmā bhavissanti na kammaratā na "
"kammārāmatamanuyuttā, vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no "
"parihāni. (1)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc25"></a>
msgctxt "dn16:1.7.5"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū na bhassārāmā bhavissanti na bhassaratā na "
"bhassārāmatamanuyuttā, vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no "
"parihāni. (2)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc26"></a>
msgctxt "dn16:1.7.6"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū na niddārāmā bhavissanti na niddāratā na "
"niddārāmatamanuyuttā, vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no "
"parihāni. (3)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc27"></a>
msgctxt "dn16:1.7.7"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū na saṅgaṇikārāmā bhavissanti na "
"saṅgaṇikaratā na saṅgaṇikārāmatamanuyuttā, vuddhiyeva, bhikkhave, bhikkhūnaṃ "
"pāṭikaṅkhā, no parihāni. (4)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc28"></a>
msgctxt "dn16:1.7.8"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū na pāpicchā bhavissanti na pāpikānaṃ "
"icchānaṃ vasaṃ gatā, vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no "
"parihāni. (5)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc29"></a>
msgctxt "dn16:1.7.9"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū na pāpamittā bhavissanti na pāpasahāyā na "
"pāpasampavaṅkā, vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no parihāni. "
"(6)"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc30"></a>
msgctxt "dn16:1.7.10"
msgid ""
"Yāvakīvañca, bhikkhave, bhikkhū na oramattakena visesādhigamena "
"antarāvosānaṃ āpajjissanti, vuddhiyeva, bhikkhave, bhikkhūnaṃ pāṭikaṅkhā, no "
"parihāni. (7)"
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.8"></a>
