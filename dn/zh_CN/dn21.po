#. <section class="sutta" id="dn21"><article><div class="hgroup"><p class="division">
msgctxt "dn21:0.1"
msgid "Dīgha Nikāya 21"
msgstr ""

#. </p><h1>
msgctxt "dn21:0.2"
msgid "Sakkapañhasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-cs" id="pts-cs1.1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.263"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "dn21:1.1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

# Comm says the sala = sal tree. RD dismisses the Sanskritization as śaila. Note, however, that the subsequent publication of Skt fragments by Waldschmidt confirms this reading: chailaguhāyām at https://suttacentral.net/skt/sf241.
#. </span>
msgctxt "dn21:1.1.2"
msgid ""
"ekaṃ samayaṃ bhagavā magadhesu viharati, pācīnato rājagahassa ambasaṇḍā nāma "
"brāhmaṇagāmo, tassuttarato vediyake pabbate indasālaguhāyaṃ."
msgstr ""

msgctxt "dn21:1.1.3"
msgid ""
"Tena kho pana samayena sakkassa devānamindassa ussukkaṃ udapādi bhagavantaṃ "
"dassanāya."
msgstr ""

msgctxt "dn21:1.1.4"
msgid "Atha kho sakkassa devānamindassa etadahosi:"
msgstr ""

msgctxt "dn21:1.1.5"
msgid "“kahaṃ nu kho bhagavā etarahi viharati arahaṃ sammāsambuddho”ti?"
msgstr ""

msgctxt "dn21:1.1.6"
msgid ""
"Addasā kho sakko devānamindo bhagavantaṃ magadhesu viharantaṃ pācīnato "
"rājagahassa ambasaṇḍā nāma brāhmaṇagāmo, tassuttarato vediyake pabbate "
"indasālaguhāyaṃ."
msgstr ""

msgctxt "dn21:1.1.7"
msgid "Disvāna deve tāvatiṃse āmantesi:"
msgstr ""

msgctxt "dn21:1.1.8"
msgid ""
"“ayaṃ, mārisā, bhagavā magadhesu viharati, pācīnato rājagahassa ambasaṇḍā "
"nāma brāhmaṇagāmo, tassuttarato vediyake pabbate indasālaguhāyaṃ."
msgstr ""

msgctxt "dn21:1.1.9"
msgid ""
"Yadi pana, mārisā, mayaṃ taṃ bhagavantaṃ dassanāya upasaṅkameyyāma arahantaṃ "
"sammāsambuddhan”ti?"
msgstr ""

msgctxt "dn21:1.1.10"
msgid ""
"“Evaṃ, bhaddantavā”ti kho devā tāvatiṃsā sakkassa devānamindassa paccassosuṃ."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.2"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.264"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "dn21:1.2.1"
msgid "Atha kho sakko devānamindo pañcasikhaṃ gandhabbadevaputtaṃ āmantesi:"
msgstr ""

msgctxt "dn21:1.2.2"
msgid ""
"“ayaṃ, tāta pañcasikha, bhagavā magadhesu viharati pācīnato rājagahassa "
"ambasaṇḍā nāma brāhmaṇagāmo, tassuttarato vediyake pabbate indasālaguhāyaṃ."
msgstr ""

msgctxt "dn21:1.2.3"
msgid ""
"Yadi pana, tāta pañcasikha, mayaṃ taṃ bhagavantaṃ dassanāya upasaṅkameyyāma "
"arahantaṃ sammāsambuddhan”ti?"
msgstr ""

msgctxt "dn21:1.2.4"
msgid ""
"“Evaṃ, bhaddantavā”ti kho pañcasikho gandhabbadevaputto sakkassa "
"devānamindassa paṭissutvā beluvapaṇḍuvīṇaṃ ādāya sakkassa devānamindassa "
"anucariyaṃ upāgami."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "dn21:1.2.5"
msgid ""
"Atha kho sakko devānamindo devehi tāvatiṃsehi parivuto pañcasikhena "
"gandhabbadevaputtena purakkhato—"
msgstr ""

msgctxt "dn21:1.2.6"
msgid ""
"seyyathāpi nāma balavā puriso samiñjitaṃ vā bāhaṃ pasāreyya pasāritaṃ vā "
"bāhaṃ samiñjeyya; evameva—devesu tāvatiṃsesu antarahito magadhesu pācīnato "
"rājagahassa ambasaṇḍā nāma brāhmaṇagāmo, tassuttarato vediyake pabbate "
"paccuṭṭhāsi."
msgstr ""

# This phrase contrasts with atikkammeva devānaṃ devānubhāvaṃ
#. <a class="pts-cs" id="pts-cs1.3"></a>
msgctxt "dn21:1.3.1"
msgid ""
"Tena kho pana samayena vediyako pabbato atiriva obhāsajāto hoti ambasaṇḍā ca "
"brāhmaṇagāmo yathā taṃ devānaṃ devānubhāvena."
msgstr ""

msgctxt "dn21:1.3.2"
msgid "Apissudaṃ parito gāmesu manussā evamāhaṃsu:"
msgstr ""

#. VAR: jalatisu → jālatissu (bj) | jalatassu (s1-3, km) | jalitassu (pts1)
#. VAR: jhāyatisu → jhāyatissu (bj) | jhāyatassu (s1-3, km) | pajjhāyitassu (pts1)
msgctxt "dn21:1.3.3"
msgid ""
"“ādittassu nāmajja vediyako pabbato jhāyatisu nāmajja vediyako pabbato "
"jalatisu. Nāmajja vediyako pabbato."
msgstr ""

msgctxt "dn21:1.3.4"
msgid ""
"Kiṃsu nāmajja vediyako pabbato atiriva obhāsajāto ambasaṇḍā ca "
"brāhmaṇagāmo”ti;"
msgstr ""

msgctxt "dn21:1.3.5"
msgid "saṃviggā lomahaṭṭhajātā ahesuṃ."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.4"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.265"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "dn21:1.4.1"
msgid "Atha kho sakko devānamindo pañcasikhaṃ gandhabbadevaputtaṃ āmantesi:"
msgstr ""

#. VAR: tadantaraṃ → tadanantara (bj) | tadanantaraṃ (s1-3, km, pts1, mr)
msgctxt "dn21:1.4.2"
msgid ""
"“durupasaṅkamā kho, tāta pañcasikha, tathāgatā mādisena, jhāyī jhānaratā, "
"tadantaraṃ paṭisallīnā."
msgstr ""

msgctxt "dn21:1.4.3"
msgid ""
"Yadi pana tvaṃ, tāta pañcasikha, bhagavantaṃ paṭhamaṃ pasādeyyāsi, tayā, "
"tāta, paṭhamaṃ pasāditaṃ pacchā mayaṃ taṃ bhagavantaṃ dassanāya "
"upasaṅkameyyāma arahantaṃ sammāsambuddhan”ti."
msgstr ""

msgctxt "dn21:1.4.4"
msgid ""
"“Evaṃ, bhaddantavā”ti kho pañcasikho gandhabbadevaputto sakkassa "
"devānamindassa paṭissutvā beluvapaṇḍuvīṇaṃ ādāya yena indasālaguhā "
"tenupasaṅkami; upasaṅkamitvā:"
msgstr ""

msgctxt "dn21:1.4.5"
msgid ""
"“ettāvatā me bhagavā neva atidūre bhavissati nāccāsanne, saddañca me "
"sossatī”ti—"
msgstr ""

msgctxt "dn21:1.4.6"
msgid "ekamantaṃ aṭṭhāsi."
msgstr ""

#. </p><h2>
msgctxt "dn21:1.4.7"
msgid "1. Pañcasikhagītagāthā"
msgstr ""

#. </h2><p>
#. <a class="sc" id="sc5"></a>
msgctxt "dn21:1.4.8"
msgid ""
"Ekamantaṃ ṭhito kho pañcasikho gandhabbadevaputto beluvapaṇḍuvīṇaṃ assāvesi, "
"imā ca gāthā abhāsi buddhūpasañhitā dhammūpasañhitā saṃghūpasañhitā "
"arahantūpasañhitā kāmūpasañhitā:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts-cs" id="pts-cs1.5"></a>
#. <a class="sc" id="sc6"></a>
msgctxt "dn21:1.5.1"
msgid "“Vande te pitaraṃ bhadde,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.2"
msgid "timbaruṃ sūriyavacchase;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.3"
msgid "Yena jātāsi kalyāṇī,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.4"
msgid "ānandajananī mama."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "dn21:1.5.5"
msgid "Vātova sedataṃ kanto,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.6"
msgid "pānīyaṃva pipāsato;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.7"
msgid "Aṅgīrasi piyāmesi,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.8"
msgid "dhammo arahatāmiva."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.266"></a>
#. <a class="sc" id="sc8"></a>
msgctxt "dn21:1.5.9"
msgid "Āturasseva bhesajjaṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.10"
msgid "bhojanaṃva jighacchato;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.11"
msgid "Parinibbāpaya maṃ bhadde,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.12"
msgid "jalantamiva vārinā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "dn21:1.5.13"
msgid "Sītodakaṃ pokkharaṇiṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.14"
msgid "yuttaṃ kiñjakkhareṇunā;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.15"
msgid "Nāgo ghammābhitattova,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.16"
msgid "ogāhe te thanūdaraṃ."
msgstr ""

# Comm: Yo ca nāgo pabhinnamatto accaṅkuso hoti, aṅkusaṃ atīto
#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "dn21:1.5.17"
msgid "Accaṅkusova nāgova,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.18"
msgid "jitaṃ me tuttatomaraṃ;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.19"
msgid "Kāraṇaṃ nappajānāmi,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.20"
msgid "sammatto lakkhaṇūruyā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc11"></a>
msgctxt "dn21:1.5.21"
msgid "Tayi gedhitacittosmi,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.22"
msgid "cittaṃ vipariṇāmitaṃ;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.23"
msgid "Paṭigantuṃ na sakkomi,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.24"
msgid "vaṅkaghastova ambujo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc12"></a>
msgctxt "dn21:1.5.25"
msgid "Vāmūru saja maṃ bhadde,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.26"
msgid "saja maṃ mandalocane;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.27"
msgid "Palissaja maṃ kalyāṇi,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.28"
msgid "etaṃ me abhipatthitaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc13"></a>
msgctxt "dn21:1.5.29"
msgid "Appako vata me santo,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.30"
msgid "kāmo vellitakesiyā;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.31"
msgid "Anekabhāvo samuppādi,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.32"
msgid "arahanteva dakkhiṇā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc14"></a>
msgctxt "dn21:1.5.33"
msgid "Yaṃ me atthi kataṃ puññaṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.34"
msgid "arahantesu tādisu;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.35"
msgid "Taṃ me sabbaṅgakalyāṇi,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.36"
msgid "tayā saddhiṃ vipaccataṃ."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.267"></a>
#. <a class="sc" id="sc15"></a>
msgctxt "dn21:1.5.37"
msgid "Yaṃ me atthi kataṃ puññaṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.38"
msgid "asmiṃ pathavimaṇḍale;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.39"
msgid "Taṃ me sabbaṅgakalyāṇi,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.40"
msgid "tayā saddhiṃ vipaccataṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc16"></a>
msgctxt "dn21:1.5.41"
msgid "Sakyaputtova jhānena,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.42"
msgid "ekodi nipako sato;"
msgstr ""

#. <br>
#. VAR: jigīsāno → jigiṃsāno (bj, s1-3, km, pts1)
msgctxt "dn21:1.5.43"
msgid "Amataṃ muni jigīsāno,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.44"
msgid "tamahaṃ sūriyavacchase."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc17"></a>
msgctxt "dn21:1.5.45"
msgid "Yathāpi muni nandeyya,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.46"
msgid "patvā sambodhimuttamaṃ;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.47"
msgid "Evaṃ nandeyyaṃ kalyāṇi,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.48"
msgid "missībhāvaṃ gato tayā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc18"></a>
msgctxt "dn21:1.5.49"
msgid "Sakko ce me varaṃ dajjā,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.50"
msgid "tāvatiṃsānamissaro;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.51"
msgid "Tāhaṃ bhadde vareyyāhe,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.52"
msgid "evaṃ kāmo daḷho mama."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc19"></a>
msgctxt "dn21:1.5.53"
msgid "Sālaṃva na ciraṃ phullaṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.54"
msgid "pitaraṃ te sumedhase;"
msgstr ""

#. <br>
msgctxt "dn21:1.5.55"
msgid "Vandamāno namassāmi,"
msgstr ""

#. <br>
msgctxt "dn21:1.5.56"
msgid "yassāsetādisī pajā”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="pts-cs" id="pts-cs1.6"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.268"></a>
#. <a class="sc" id="sc20"></a>
msgctxt "dn21:1.6.1"
msgid "Evaṃ vutte, bhagavā pañcasikhaṃ gandhabbadevaputtaṃ etadavoca:"
msgstr ""

msgctxt "dn21:1.6.2"
msgid ""
"“saṃsandati kho te, pañcasikha, tantissaro gītassarena, gītassaro ca "
"tantissarena;"
msgstr ""

#. VAR: na ca pana → neva pana (s1-3, km)
msgctxt "dn21:1.6.3"
msgid ""
"na ca pana te, pañcasikha, tantissaro gītassaraṃ ativattati, gītassaro ca "
"tantissaraṃ."
msgstr ""

msgctxt "dn21:1.6.4"
msgid ""
"Kadā saṃyūḷhā pana te, pañcasikha, imā gāthā buddhūpasañhitā dhammūpasañhitā "
"saṃghūpasañhitā arahantūpasañhitā kāmūpasañhitā”ti?"
msgstr ""

msgctxt "dn21:1.6.5"
msgid ""
"“Ekamidaṃ, bhante, samayaṃ bhagavā uruvelāyaṃ viharati najjā nerañjarāya "
"tīre ajapālanigrodhe paṭhamābhisambuddho."
msgstr ""

msgctxt "dn21:1.6.6"
msgid ""
"Tena kho panāhaṃ, bhante, samayena bhaddā nāma sūriyavacchasā timbaruno "
"gandhabbarañño dhītā, tamabhikaṅkhāmi."
msgstr ""

# The use of bhagini is obviously conventional here, but is nonetheless curious.
msgctxt "dn21:1.6.7"
msgid "Sā kho pana, bhante, bhaginī parakāminī hoti;"
msgstr ""

msgctxt "dn21:1.6.8"
msgid "sikhaṇḍī nāma mātalissa saṅgāhakassa putto, tamabhikaṅkhati."
msgstr ""

msgctxt "dn21:1.6.9"
msgid "Yato kho ahaṃ, bhante, taṃ bhaginiṃ nālatthaṃ kenaci pariyāyena."
msgstr ""

msgctxt "dn21:1.6.10"
msgid ""
"Athāhaṃ beluvapaṇḍuvīṇaṃ ādāya yena timbaruno gandhabbarañño nivesanaṃ "
"tenupasaṅkamiṃ; upasaṅkamitvā beluvapaṇḍuvīṇaṃ assāvesiṃ, imā ca gāthā "
"abhāsiṃ buddhūpasañhitā dhammūpasañhitā saṃghūpasañhitā arahantūpasañhitā "
"kāmūpasañhitā—"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts-cs" id="pts-cs1.7"></a>
#. <a class="sc" id="sc21"></a>
msgctxt "dn21:1.7.1"
msgid "Vande te pitaraṃ bhadde,"
msgstr ""

#. <br>
msgctxt "dn21:1.7.2"
msgid "timbaruṃ sūriyavacchase;"
msgstr ""

#. <br>
msgctxt "dn21:1.7.3"
msgid "Yena jātāsi kalyāṇī,"
msgstr ""

#. <br>
msgctxt "dn21:1.7.4"
msgid "ānandajananī mama."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "dn21:1.7.5"
msgid "… pe …"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc22"></a>
msgctxt "dn21:1.7.6"
msgid "Sālaṃva na ciraṃ phullaṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.7.7"
msgid "pitaraṃ te sumedhase;"
msgstr ""

#. <br>
msgctxt "dn21:1.7.8"
msgid "Vandamāno namassāmi,"
msgstr ""

#. <br>
msgctxt "dn21:1.7.9"
msgid "yassāsetādisī pajāti."
msgstr ""

#. </p></blockquote><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.269"></a>
#. <a class="sc" id="sc23"></a>
msgctxt "dn21:1.7.10"
msgid "Evaṃ vutte, bhante, bhaddā sūriyavacchasā maṃ etadavoca:"
msgstr ""

msgctxt "dn21:1.7.11"
msgid ""
"‘na kho me, mārisa, so bhagavā sammukhā diṭṭho, api ca sutoyeva me so "
"bhagavā devānaṃ tāvatiṃsānaṃ sudhammāyaṃ sabhāyaṃ upanaccantiyā."
msgstr ""

msgctxt "dn21:1.7.12"
msgid ""
"Yato kho tvaṃ, mārisa, taṃ bhagavantaṃ kittesi, hotu no ajja samāgamo’ti."
msgstr ""

msgctxt "dn21:1.7.13"
msgid "Soyeva no, bhante, tassā bhaginiyā saddhiṃ samāgamo ahosi."
msgstr ""

msgctxt "dn21:1.7.14"
msgid "Na ca dāni tato pacchā”ti."
msgstr ""

#. </p><h2>
msgctxt "dn21:1.7.15"
msgid "2. Sakkūpasaṅkama"
msgstr ""

#. </h2><p>
#. <a class="pts-cs" id="pts-cs1.8"></a>
#. <a class="sc" id="sc24"></a>
msgctxt "dn21:1.8.1"
msgid "Atha kho sakkassa devānamindassa etadahosi:"
msgstr ""

msgctxt "dn21:1.8.2"
msgid ""
"“paṭisammodati pañcasikho gandhabbadevaputto bhagavatā, bhagavā ca "
"pañcasikhenā”ti."
msgstr ""

msgctxt "dn21:1.8.3"
msgid "Atha kho sakko devānamindo pañcasikhaṃ gandhabbadevaputtaṃ āmantesi:"
msgstr ""

msgctxt "dn21:1.8.4"
msgid "“abhivādehi me tvaṃ, tāta pañcasikha, bhagavantaṃ:"
msgstr ""

msgctxt "dn21:1.8.5"
msgid ""
"‘sakko, bhante, devānamindo sāmacco saparijano bhagavato pāde sirasā "
"vandatī’”ti."
msgstr ""

msgctxt "dn21:1.8.6"
msgid ""
"“Evaṃ, bhaddantavā”ti kho pañcasikho gandhabbadevaputto sakkassa "
"devānamindassa paṭissutvā bhagavantaṃ abhivādeti:"
msgstr ""

msgctxt "dn21:1.8.7"
msgid ""
"“sakko, bhante, devānamindo sāmacco saparijano bhagavato pāde sirasā "
"vandatī”ti."
msgstr ""

msgctxt "dn21:1.8.8"
msgid "“Evaṃ sukhī hotu, pañcasikha, sakko devānamindo sāmacco saparijano;"
msgstr ""

msgctxt "dn21:1.8.9"
msgid ""
"sukhakāmā hi devā manussā asurā nāgā gandhabbā ye caññe santi puthukāyā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc25"></a>
msgctxt "dn21:1.8.10"
msgid "Evañca pana tathāgatā evarūpe mahesakkhe yakkhe abhivadanti."
msgstr ""

msgctxt "dn21:1.8.11"
msgid ""
"Abhivadito sakko devānamindo bhagavato indasālaguhaṃ pavisitvā bhagavantaṃ "
"abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "dn21:1.8.12"
msgid ""
"Devāpi tāvatiṃsā indasālaguhaṃ pavisitvā bhagavantaṃ abhivādetvā ekamantaṃ "
"aṭṭhaṃsu."
msgstr ""

msgctxt "dn21:1.8.13"
msgid ""
"Pañcasikhopi gandhabbadevaputto indasālaguhaṃ pavisitvā bhagavantaṃ "
"abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs1.9"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.270"></a>
#. <a class="sc" id="sc26"></a>
#. VAR: urundā → uruddhā (s1-3, km) | uruddā (mr)
msgctxt "dn21:1.9.1"
msgid ""
"Tena kho pana samayena indasālaguhā visamā santī samā samapādi, sambādhā "
"santī urundā samapādi, andhakāro guhāyaṃ antaradhāyi, āloko udapādi yathā "
"taṃ devānaṃ devānubhāvena."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.271"></a>
#. <a class="sc" id="sc27"></a>
msgctxt "dn21:1.9.2"
msgid "Atha kho bhagavā sakkaṃ devānamindaṃ etadavoca:"
msgstr ""

msgctxt "dn21:1.9.3"
msgid ""
"“acchariyamidaṃ āyasmato kosiyassa, abbhutamidaṃ āyasmato kosiyassa tāva "
"bahukiccassa bahukaraṇīyassa yadidaṃ idhāgamanan”ti."
msgstr ""

#. VAR: kehici → kehici (s1-3, km)
msgctxt "dn21:1.9.4"
msgid ""
"“Cirapaṭikāhaṃ, bhante, bhagavantaṃ dassanāya upasaṅkamitukāmo; api ca "
"devānaṃ tāvatiṃsānaṃ kehici kehici kiccakaraṇīyehi byāvaṭo; evāhaṃ nāsakkhiṃ "
"bhagavantaṃ dassanāya upasaṅkamituṃ."
msgstr ""

msgctxt "dn21:1.9.5"
msgid "Ekamidaṃ, bhante, samayaṃ bhagavā sāvatthiyaṃ viharati salaḷāgārake."
msgstr ""

msgctxt "dn21:1.9.6"
msgid "Atha khvāhaṃ, bhante, sāvatthiṃ agamāsiṃ bhagavantaṃ dassanāya."
msgstr ""

# Both RD and MW have “wife” for paricarika. But from MN 37 we know that the paricarika was a maid attending on a nymph.
#. <a class="pts-cs" id="pts-cs1.10"></a>
#. VAR: bhūjati → bhuñjatī (bj) | bhujagī (s1-3, km) | bhuñjati (pts1)
msgctxt "dn21:1.10.1"
msgid ""
"Tena kho pana, bhante, samayena bhagavā aññatarena samādhinā nisinno hoti, "
"bhūjati ca nāma vessavaṇassa mahārājassa paricārikā bhagavantaṃ "
"paccupaṭṭhitā hoti, pañjalikā namassamānā tiṭṭhati."
msgstr ""

msgctxt "dn21:1.10.2"
msgid "Atha khvāhaṃ, bhante, bhūjatiṃ etadavocaṃ:"
msgstr ""

msgctxt "dn21:1.10.3"
msgid "‘abhivādehi me tvaṃ, bhagini, bhagavantaṃ:"
msgstr ""

msgctxt "dn21:1.10.4"
msgid ""
"“sakko, bhante, devānamindo sāmacco saparijano bhagavato pāde sirasā "
"vandatī”’ti."
msgstr ""

msgctxt "dn21:1.10.5"
msgid "Evaṃ vutte, bhante, sā bhūjati maṃ etadavoca:"
msgstr ""

msgctxt "dn21:1.10.6"
msgid "‘akālo kho, mārisa, bhagavantaṃ dassanāya;"
msgstr ""

msgctxt "dn21:1.10.7"
msgid "paṭisallīno bhagavā’ti."
msgstr ""

msgctxt "dn21:1.10.8"
msgid ""
"‘Tena hi, bhagini, yadā bhagavā tamhā samādhimhā vuṭṭhito hoti, atha mama "
"vacanena bhagavantaṃ abhivādehi:"
msgstr ""

msgctxt "dn21:1.10.9"
msgid ""
"“sakko, bhante, devānamindo sāmacco saparijano bhagavato pāde sirasā "
"vandatī”’ti."
msgstr ""

msgctxt "dn21:1.10.10"
msgid "Kacci me sā, bhante, bhaginī bhagavantaṃ abhivādesi?"
msgstr ""

msgctxt "dn21:1.10.11"
msgid "Sarati bhagavā tassā bhaginiyā vacanan”ti?"
msgstr ""

msgctxt "dn21:1.10.12"
msgid ""
"“Abhivādesi maṃ sā, devānaminda, bhaginī, sarāmahaṃ tassā bhaginiyā vacanaṃ."
msgstr ""

#. VAR: āyasmato nemisaddena → cakka­nemi­sad­dena (s1-3, km)
msgctxt "dn21:1.10.13"
msgid "Api cāhaṃ āyasmato nemisaddena tamhā samādhimhā vuṭṭhito”ti."
msgstr ""

#. <a class="pts-cs" id="pts-cs1.11"></a>
msgctxt "dn21:1.11.1"
msgid ""
"“Ye te, bhante, devā amhehi paṭhamataraṃ tāvatiṃsakāyaṃ upapannā, tesaṃ me "
"sammukhā sutaṃ sammukhā paṭiggahitaṃ:"
msgstr ""

msgctxt "dn21:1.11.2"
msgid ""
"‘yadā tathāgatā loke uppajjanti arahanto sammāsambuddhā, dibbā kāyā "
"paripūrenti, hāyanti asurakāyā’ti."
msgstr ""

msgctxt "dn21:1.11.3"
msgid ""
"Taṃ me idaṃ, bhante, sakkhidiṭṭhaṃ yato tathāgato loke uppanno arahaṃ "
"sammāsambuddho, dibbā kāyā paripūrenti, hāyanti asurakāyāti."
msgstr ""

#. </p><h3>
msgctxt "dn21:1.11.4"
msgid "2.1. Gopakavatthu"
msgstr ""

#. </h3><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.272"></a>
#. <a class="sc" id="sc28"></a>
msgctxt "dn21:1.11.5"
msgid ""
"Idheva, bhante, kapilavatthusmiṃ gopikā nāma sakyadhītā ahosi buddhe pasannā "
"dhamme pasannā saṃghe pasannā sīlesu paripūrakārinī."
msgstr ""

#. VAR: itthittaṃ → itthicittaṃ (s1, pts1) | itthīcittaṃ (s2, s3, km)
#. VAR: purisattaṃ → purisacittaṃ (s1-3, km, pts1)
msgctxt "dn21:1.11.6"
msgid ""
"Sā itthittaṃ virājetvā purisattaṃ bhāvetvā kāyassa bhedā paraṃ maraṇā "
"sugatiṃ saggaṃ lokaṃ upapannā."
msgstr ""

msgctxt "dn21:1.11.7"
msgid "Devānaṃ tāvatiṃsānaṃ sahabyataṃ amhākaṃ puttattaṃ ajjhupagatā."
msgstr ""

msgctxt "dn21:1.11.8"
msgid "Tatrapi naṃ evaṃ jānanti:"
msgstr ""

msgctxt "dn21:1.11.9"
msgid "‘gopako devaputto, gopako devaputto’ti."
msgstr ""

msgctxt "dn21:1.11.10"
msgid ""
"Aññepi, bhante, tayo bhikkhū bhagavati brahmacariyaṃ caritvā hīnaṃ "
"gandhabbakāyaṃ upapannā."
msgstr ""

msgctxt "dn21:1.11.11"
msgid ""
"Te pañcahi kāmaguṇehi samappitā samaṅgībhūtā paricārayamānā amhākaṃ "
"upaṭṭhānaṃ āgacchanti amhākaṃ pāricariyaṃ."
msgstr ""

msgctxt "dn21:1.11.12"
msgid ""
"Te amhākaṃ upaṭṭhānaṃ āgate amhākaṃ pāricariyaṃ gopako devaputto paṭicodesi:"
msgstr ""

# kutomukha contrasts with sammukha. Comm: “kutomukhāti bhagavati abhimukhe dhammaṃ desente tumhe kutomukhā kiṃ aññā vihitā ito cito ca olokayamānā udāhu niddāyamānā?” Alternatively, and perhaps more likely, it means “who on earth taught you the dhamma?”
#. VAR: assuttha → assutthā (bj) | āyūhittha (s1-3, km) | assutvā (pts1)
msgctxt "dn21:1.11.13"
msgid "‘kutomukhā nāma tumhe, mārisā, tassa bhagavato dhammaṃ assuttha—"
msgstr ""

msgctxt "dn21:1.11.14"
msgid ""
"ahañhi nāma itthikā samānā buddhe pasannā dhamme pasannā saṃghe pasannā "
"sīlesu paripūrakārinī itthittaṃ virājetvā purisattaṃ bhāvetvā kāyassa bhedā "
"paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapannā, devānaṃ tāvatiṃsānaṃ sahabyataṃ "
"sakkassa devānamindassa puttattaṃ ajjhupagatā."
msgstr ""

msgctxt "dn21:1.11.15"
msgid "Idhāpi maṃ evaṃ jānanti:"
msgstr ""

msgctxt "dn21:1.11.16"
msgid "“gopako devaputto gopako devaputto”ti."
msgstr ""

msgctxt "dn21:1.11.17"
msgid ""
"Tumhe pana, mārisā, bhagavati brahmacariyaṃ caritvā hīnaṃ gandhabbakāyaṃ "
"upapannā."
msgstr ""

msgctxt "dn21:1.11.18"
msgid ""
"Duddiṭṭharūpaṃ vata bho addasāma, ye mayaṃ addasāma sahadhammike hīnaṃ "
"gandhabbakāyaṃ upapanne’ti."
msgstr ""

# It seems that the patilabhimsu must serve duty for the two phrases, an unusual construction in prose. Either that or a verb for rebirth has been omitted.
msgctxt "dn21:1.11.19"
msgid ""
"Tesaṃ, bhante, gopakena devaputtena paṭicoditānaṃ dve devā diṭṭheva dhamme "
"satiṃ paṭilabhiṃsu kāyaṃ brahmapurohitaṃ, eko pana devo kāme ajjhāvasi."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts-cs" id="pts-cs1.12"></a>
#. <a class="sc" id="sc29"></a>
msgctxt "dn21:1.12.1"
msgid "‘Upāsikā cakkhumato ahosiṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.2"
msgid "Nāmampi mayhaṃ ahu “gopikā”ti;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.3"
msgid "Buddhe ca dhamme ca abhippasannā,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.4"
msgid "Saṅghañcupaṭṭhāsiṃ pasannacittā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc30"></a>
msgctxt "dn21:1.12.5"
msgid "Tasseva buddhassa sudhammatāya,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.6"
msgid "Sakkassa puttomhi mahānubhāvo;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.7"
msgid "Mahājutīko tidivūpapanno,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.8"
msgid "Jānanti maṃ idhāpi “gopako”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc31"></a>
msgctxt "dn21:1.12.9"
msgid "Athaddasaṃ bhikkhavo diṭṭhapubbe,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.10"
msgid "Gandhabbakāyūpagate vasīne;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.11"
msgid "Imehi te gotamasāvakāse,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.12"
msgid "Ye ca mayaṃ pubbe manussabhūtā."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.273"></a>
#. <a class="sc" id="sc32"></a>
msgctxt "dn21:1.12.13"
msgid "Annena pānena upaṭṭhahimhā,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.14"
msgid "Pādūpasaṅgayha sake nivesane;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.15"
msgid "Kutomukhā nāma ime bhavanto,"
msgstr ""

#. <br>
#. VAR: Buddhassa dhammāni paṭiggahesuṃ → buddhassa dhammaṃ na paṭiggahesuṃ (s1-3, km, pts1)
msgctxt "dn21:1.12.16"
msgid "Buddhassa dhammāni paṭiggahesuṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc33"></a>
msgctxt "dn21:1.12.17"
msgid "Paccattaṃ veditabbo hi dhammo,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.18"
msgid "Sudesito cakkhumatānubuddho;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.19"
msgid "Ahañhi tumheva upāsamāno,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.20"
msgid "Sutvāna ariyāna subhāsitāni."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc34"></a>
msgctxt "dn21:1.12.21"
msgid "Sakkassa puttomhi mahānubhāvo,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.22"
msgid "Mahājutīko tidivūpapanno;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.23"
msgid "Tumhe pana seṭṭhamupāsamānā,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.24"
msgid "Anuttaraṃ brahmacariyaṃ caritvā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc35"></a>
msgctxt "dn21:1.12.25"
msgid "Hīnaṃ kāyaṃ upapannā bhavanto,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.26"
msgid "Anānulomā bhavatūpapatti;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.27"
msgid "Duddiṭṭharūpaṃ vata addasāma,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.28"
msgid "Sahadhammike hīnakāyūpapanne."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc36"></a>
msgctxt "dn21:1.12.29"
msgid "Gandhabbakāyūpagatā bhavanto,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.30"
msgid "Devānamāgacchatha pāricariyaṃ;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.31"
msgid "Agāre vasato mayhaṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.32"
msgid "Imaṃ passa visesataṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc37"></a>
msgctxt "dn21:1.12.33"
msgid "Itthī hutvā svajja pumomhi devo,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.34"
msgid "Dibbehi kāmehi samaṅgibhūto’;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.35"
msgid "Te coditā gotamasāvakena,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.36"
msgid "Saṃvegamāpādu samecca gopakaṃ."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.274"></a>
#. <a class="sc" id="sc38"></a>
#. VAR: byāyāma → viyāyamāma (bj, s1-3, km, pts1)
#. VAR: viyāyāma → byāyamāma (bj) | vigāyāma (s1-3, km) | vitāyāma (pts1)
msgctxt "dn21:1.12.37"
msgid "‘Handa viyāyāma byāyāma,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.38"
msgid "Mā no mayaṃ parapessā ahumhā’;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.39"
msgid "Tesaṃ duve vīriyamārabhiṃsu,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.40"
msgid "Anussaraṃ gotamasāsanāni."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc39"></a>
msgctxt "dn21:1.12.41"
msgid "Idheva cittāni virājayitvā,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.42"
msgid "Kāmesu ādīnavamaddasaṃsu;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.43"
msgid "Te kāmasaṃyojanabandhanāni,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.44"
msgid "Pāpimayogāni duraccayāni."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc40"></a>
#. VAR: sannāni guṇāni → sandānaguṇāni (bj, pts1) | santāni guṇāni (s1-3, km)
msgctxt "dn21:1.12.45"
msgid "Nāgova sannāni guṇāni chetvā,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.46"
msgid "Deve tāvatiṃse atikkamiṃsu;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.47"
msgid "Saindā devā sapajāpatikā,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.48"
msgid "Sabbe sudhammāya sabhāyupaviṭṭhā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc41"></a>
msgctxt "dn21:1.12.49"
msgid "Tesaṃ nisinnānaṃ abhikkamiṃsu,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.50"
msgid "Vīrā virāgā virajaṃ karontā;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.51"
msgid "Te disvā saṃvegamakāsi vāsavo,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.52"
msgid "Devābhibhū devagaṇassa majjhe."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc42"></a>
msgctxt "dn21:1.12.53"
msgid "‘Imehi te hīnakāyūpapannā,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.54"
msgid "Deve tāvatiṃse abhikkamanti’;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.55"
msgid "Saṃvegajātassa vaco nisamma,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.56"
msgid "So gopako vāsavamajjhabhāsi."
msgstr ""

# Both RD and MW seem to take janinda as vocative, ignoring jan’. But Sakka is devinda, not janinda; and comm says Janindanti sabbalokuttamaṃ
#. </p><p>
#. <a class="sc" id="sc43"></a>
msgctxt "dn21:1.12.57"
msgid "‘Buddho janindatthi manussaloke,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.58"
msgid "Kāmābhibhū sakyamunīti ñāyati;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.59"
msgid "Tasseva te puttā satiyā vihīnā,"
msgstr ""

# end quote in MS is incorrect.
#. <br>
msgctxt "dn21:1.12.60"
msgid "Coditā mayā te satimajjhalatthuṃ’."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.275"></a>
#. <a class="sc" id="sc44"></a>
#. VAR: āvasinettha → vasīnettha (bj) | avasinettha (s1-3, km) | avasīnettha (pts1)
msgctxt "dn21:1.12.61"
msgid "Tiṇṇaṃ tesaṃ āvasinettha eko,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.62"
msgid "Gandhabbakāyūpagato vasīno;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.63"
msgid "Dve ca sambodhipathānusārino,"
msgstr ""

# The end point of Gopaka’s speech is hard to determine, as there is no close ti. MS places it on the previous verse, but this seems unlikely, as this verse is still telling the basic story. RD and MW place it after namassama below. But this seems unlikely, as Gopaka uses the singular referring to himself, where Sakka often uses the plural. Moreover, the logic flows better if we end it here. The next line refers to the “exposition of the teaching”, which must mean Gopaka’s teaching. Also, RD and MW’s idea that this is “The Truth may yet be realized” is wrong.
#. <br>
msgctxt "dn21:1.12.64"
msgid "Devepi hīḷenti samāhitattā."
msgstr ""

# The feminine etadisi is hard to explain. It occurs rarely, one occurrence being earlier in this sutta, where it applies to Suriyavacchasa. Here, however, Gopaka has already become a man; having labored this point, it seems odd to just ignore it. More likely dhammappakasanā is feminine. This use is fairly common in later texts (it occurs at the conclusion of the Tika for this sutta—Sakkapañhasuttavaṇṇanāya līnatthappakāsanā). Comm seems to want it to apply to both the disciple and the teaching: Etādisī dhammappakāsanetthāti ettha sāsane evarūpā dhammappakāsanā, yāya sāvakā etehi guṇehi samannāgatā honti.
#. </p><p>
#. <a class="sc" id="sc45"></a>
msgctxt "dn21:1.12.65"
msgid "Etādisī dhammappakāsanettha,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.66"
msgid "Na tattha kiṅkaṅkhati koci sāvako;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.67"
msgid "Nitiṇṇaoghaṃ vicikicchachinnaṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.68"
msgid "Buddhaṃ namassāma jinaṃ janindaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc46"></a>
msgctxt "dn21:1.12.69"
msgid "Yaṃ te dhammaṃ idhaññāya,"
msgstr ""

#. <br>
#. VAR: ajjhagaṃsu → ajjhagamaṃsu (s1-3) | ajjhagamaṃsuṃ (km)
msgctxt "dn21:1.12.70"
msgid "visesaṃ ajjhagaṃsu te;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.71"
msgid "Kāyaṃ brahmapurohitaṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.72"
msgid "duve tesaṃ visesagū."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc47"></a>
msgctxt "dn21:1.12.73"
msgid "Tassa dhammassa pattiyā,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.74"
msgid "āgatamhāsi mārisa;"
msgstr ""

#. <br>
msgctxt "dn21:1.12.75"
msgid "Katāvakāsā bhagavatā,"
msgstr ""

#. <br>
msgctxt "dn21:1.12.76"
msgid "pañhaṃ pucchemu mārisā”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="pts-cs" id="pts-cs1.13"></a>
#. <a class="sc" id="sc48"></a>
msgctxt "dn21:1.13.1"
msgid "Atha kho bhagavato etadahosi:"
msgstr ""

#. VAR: yakkho → sakko (bj, s1-3, km, pts1)
msgctxt "dn21:1.13.2"
msgid ""
"“dīgharattaṃ visuddho kho ayaṃ yakkho, yaṃ kiñci maṃ pañhaṃ pucchissati, "
"sabbaṃ taṃ atthasañhitaṃyeva pucchissati, no anatthasañhitaṃ."
msgstr ""

msgctxt "dn21:1.13.3"
msgid "Yañcassāhaṃ puṭṭho byākarissāmi, taṃ khippameva ājānissatī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc49"></a>
msgctxt "dn21:1.13.4"
msgid "Atha kho bhagavā sakkaṃ devānamindaṃ gāthāya ajjhabhāsi:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc50"></a>
msgctxt "dn21:1.13.5"
msgid "“Puccha vāsava maṃ pañhaṃ,"
msgstr ""

#. <br>
msgctxt "dn21:1.13.6"
msgid "yaṃ kiñci manasicchasi;"
msgstr ""

#. <br>
msgctxt "dn21:1.13.7"
msgid "Tassa tasseva pañhassa,"
msgstr ""

#. <br>
msgctxt "dn21:1.13.8"
msgid "ahaṃ antaṃ karomi te”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "dn21:1.13.9"
msgid "Paṭhamabhāṇavāro niṭṭhito."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.276"></a>
#. <a class="sc" id="sc51"></a>
#. VAR: devānamindo bhagavatā imaṃ bhagavantaṃ → devānamindo bhagavantaṃ imaṃ (pts1)
msgctxt "dn21:2.1.1"
msgid ""
"Katāvakāso sakko devānamindo bhagavatā imaṃ bhagavantaṃ paṭhamaṃ pañhaṃ "
"apucchi:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc52"></a>
msgctxt "dn21:2.1.2"
msgid ""
"“Kiṃsaṃyojanā nu kho, mārisa, devā manussā asurā nāgā gandhabbā ye caññe "
"santi puthukāyā, te:"
msgstr ""

msgctxt "dn21:2.1.3"
msgid ""
"‘averā adaṇḍā asapattā abyāpajjā viharemu averino’ti iti ca nesaṃ hoti, atha "
"ca pana saverā sadaṇḍā sasapattā sabyāpajjā viharanti saverino”ti?"
msgstr ""

#. VAR: bhagavantaṃ pañhaṃ → imaṃ paṭhamaṃ pañhaṃ (pts1)
msgctxt "dn21:2.1.4"
msgid "Itthaṃ sakko devānamindo bhagavantaṃ pañhaṃ apucchi."
msgstr ""

msgctxt "dn21:2.1.5"
msgid "Tassa bhagavā pañhaṃ puṭṭho byākāsi:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc53"></a>
msgctxt "dn21:2.1.6"
msgid ""
"“Issāmacchariyasaṃyojanā kho, devānaminda, devā manussā asurā nāgā gandhabbā "
"ye caññe santi puthukāyā, te:"
msgstr ""

msgctxt "dn21:2.1.7"
msgid ""
"‘averā adaṇḍā asapattā abyāpajjā viharemu averino’ti iti ca nesaṃ hoti, atha "
"ca pana saverā sadaṇḍā sasapattā sabyāpajjā viharanti saverino”ti."
msgstr ""

msgctxt "dn21:2.1.8"
msgid "Itthaṃ bhagavā sakkassa devānamindassa pañhaṃ puṭṭho byākāsi."
msgstr ""

msgctxt "dn21:2.1.9"
msgid "Attamano sakko devānamindo bhagavato bhāsitaṃ abhinandi anumodi:"
msgstr ""

msgctxt "dn21:2.1.10"
msgid "“evametaṃ, bhagavā, evametaṃ, sugata."
msgstr ""

msgctxt "dn21:2.1.11"
msgid ""
"Tiṇṇā mettha kaṅkhā vigatā kathaṅkathā bhagavato pañhaveyyākaraṇaṃ sutvā”ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.2"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.277"></a>
#. <a class="sc" id="sc54"></a>
#. VAR: uttari → uttariṃ (bj, s1-3, km, pts1)
msgctxt "dn21:2.2.1"
msgid ""
"Itiha sakko devānamindo bhagavato bhāsitaṃ abhinanditvā anumoditvā "
"bhagavantaṃ uttari pañhaṃ apucchi:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc55"></a>
msgctxt "dn21:2.2.2"
msgid ""
"“Issāmacchariyaṃ pana, mārisa, kiṃnidānaṃ kiṃsamudayaṃ kiṃjātikaṃ "
"kiṃpabhavaṃ;"
msgstr ""

msgctxt "dn21:2.2.3"
msgid "kismiṃ sati issāmacchariyaṃ hoti;"
msgstr ""

msgctxt "dn21:2.2.4"
msgid "kismiṃ asati issāmacchariyaṃ na hotī”ti?"
msgstr ""

msgctxt "dn21:2.2.5"
msgid ""
"“Issāmacchariyaṃ kho, devānaminda, piyāppiyanidānaṃ piyāppiyasamudayaṃ "
"piyāppiyajātikaṃ piyāppiyapabhavaṃ;"
msgstr ""

msgctxt "dn21:2.2.6"
msgid "piyāppiye sati issāmacchariyaṃ hoti, "
msgstr ""

msgctxt "dn21:2.2.7"
msgid "piyāppiye asati issāmacchariyaṃ na hotī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc56"></a>
#. VAR: pana → kho pana (bj, c1)
msgctxt "dn21:2.2.8"
msgid ""
"“Piyāppiyaṃ pana, mārisa, kiṃnidānaṃ kiṃsamudayaṃ kiṃjātikaṃ kiṃpabhavaṃ;"
msgstr ""

msgctxt "dn21:2.2.9"
msgid "kismiṃ sati piyāppiyaṃ hoti;"
msgstr ""

msgctxt "dn21:2.2.10"
msgid "kismiṃ asati piyāppiyaṃ na hotī”ti?"
msgstr ""

msgctxt "dn21:2.2.11"
msgid ""
"“Piyāppiyaṃ kho, devānaminda, chandanidānaṃ chandasamudayaṃ chandajātikaṃ "
"chandapabhavaṃ;"
msgstr ""

msgctxt "dn21:2.2.12"
msgid "chande sati piyāppiyaṃ hoti;"
msgstr ""

msgctxt "dn21:2.2.13"
msgid "chande asati piyāppiyaṃ na hotī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc57"></a>
#. VAR: Chando pana → kho pana (bj, c1)
msgctxt "dn21:2.2.14"
msgid "“Chando pana, mārisa, kiṃnidāno kiṃsamudayo kiṃjātiko kiṃpabhavo;"
msgstr ""

msgctxt "dn21:2.2.15"
msgid "kismiṃ sati chando hoti;"
msgstr ""

msgctxt "dn21:2.2.16"
msgid "kismiṃ asati chando na hotī”ti?"
msgstr ""

msgctxt "dn21:2.2.17"
msgid ""
"“Chando kho, devānaminda, vitakkanidāno vitakkasamudayo vitakkajātiko "
"vitakkapabhavo;"
msgstr ""

msgctxt "dn21:2.2.18"
msgid "vitakke sati chando hoti;"
msgstr ""

msgctxt "dn21:2.2.19"
msgid "vitakke asati chando na hotī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc58"></a>
#. VAR: Vitakko pana → kho pana (bj, c1)
msgctxt "dn21:2.2.20"
msgid "“Vitakko pana, mārisa, kiṃnidāno kiṃsamudayo kiṃjātiko kiṃpabhavo;"
msgstr ""

msgctxt "dn21:2.2.21"
msgid "kismiṃ sati vitakko hoti;"
msgstr ""

msgctxt "dn21:2.2.22"
msgid "kismiṃ asati vitakko na hotī”ti?"
msgstr ""

msgctxt "dn21:2.2.23"
msgid ""
"“Vitakko kho, devānaminda, papañcasaññāsaṅkhānidāno "
"papañcasaññāsaṅkhāsamudayo papañcasaññāsaṅkhājātiko "
"papañcasaññāsaṅkhāpabhavo;"
msgstr ""

msgctxt "dn21:2.2.24"
msgid "papañcasaññāsaṅkhāya sati vitakko hoti;"
msgstr ""

msgctxt "dn21:2.2.25"
msgid "papañcasaññāsaṅkhāya asati vitakko na hotī”ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.3"></a>
#. <a class="sc" id="sc59"></a>
msgctxt "dn21:2.3.1"
msgid ""
"“Kathaṃ paṭipanno pana, mārisa, bhikkhu "
"papañcasaññāsaṅkhānirodhasāruppagāminiṃ paṭipadaṃ paṭipanno hotī”ti?"
msgstr ""

#. </p><h3>
msgctxt "dn21:2.3.2"
msgid "2.2. Vedanākammaṭṭhāna"
msgstr ""

#. </h3><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.278"></a>
#. <a class="sc" id="sc60"></a>
msgctxt "dn21:2.3.3"
msgid "“Somanassampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.3.4"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

msgctxt "dn21:2.3.5"
msgid "Domanassampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.3.6"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

msgctxt "dn21:2.3.7"
msgid "Upekkhampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.3.8"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc61"></a>
msgctxt "dn21:2.3.9"
msgid ""
"Somanassampāhaṃ, devānaminda, duvidhena vadāmi sevitabbampi, asevitabbampīti "
"iti kho panetaṃ vuttaṃ, kiñcetaṃ paṭicca vuttaṃ?"
msgstr ""

# RD and MW both read this passage as applying to the Buddha, evidently taking jaññā to be absolutive. But cp. AN 9.6, where the identical idiom is used. There it cannot be the Buddha, so jaññā must be optative 3 singular. BB renders “If one knows of a person”. Note that I designed my rendering so as to enable breaking up the otherwise unwieldy sentence.
msgctxt "dn21:2.3.10"
msgid "Tattha yaṃ jaññā somanassaṃ "
msgstr ""

msgctxt "dn21:2.3.11"
msgid ""
"‘imaṃ kho me somanassaṃ sevato akusalā dhammā abhivaḍḍhanti, kusalā dhammā "
"parihāyantī’ti, evarūpaṃ somanassaṃ na sevitabbaṃ."
msgstr ""

msgctxt "dn21:2.3.12"
msgid "Tattha yaṃ jaññā somanassaṃ "
msgstr ""

msgctxt "dn21:2.3.13"
msgid ""
"‘imaṃ kho me somanassaṃ sevato akusalā dhammā parihāyanti, kusalā dhammā "
"abhivaḍḍhantī’ti, evarūpaṃ somanassaṃ sevitabbaṃ."
msgstr ""

#. VAR: te → se (pts1)
msgctxt "dn21:2.3.14"
msgid ""
"Tattha yañce savitakkaṃ savicāraṃ, yañce avitakkaṃ avicāraṃ, ye avitakke "
"avicāre, te paṇītatare."
msgstr ""

msgctxt "dn21:2.3.15"
msgid ""
"Somanassampāhaṃ, devānaminda, duvidhena vadāmi sevitabbampi, asevitabbampīti."
msgstr ""

msgctxt "dn21:2.3.16"
msgid "Iti yaṃ taṃ vuttaṃ, idametaṃ paṭicca vuttaṃ."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.279"></a>
#. <a class="sc" id="sc62"></a>
msgctxt "dn21:2.3.17"
msgid ""
"Domanassampāhaṃ, devānaminda, duvidhena vadāmi sevitabbampi, asevitabbampīti "
"iti kho panetaṃ vuttaṃ, kiñcetaṃ paṭicca vuttaṃ?"
msgstr ""

msgctxt "dn21:2.3.18"
msgid "Tattha yaṃ jaññā domanassaṃ "
msgstr ""

msgctxt "dn21:2.3.19"
msgid ""
"‘imaṃ kho me domanassaṃ sevato akusalā dhammā abhivaḍḍhanti, kusalā dhammā "
"parihāyantī’ti, evarūpaṃ domanassaṃ na sevitabbaṃ."
msgstr ""

msgctxt "dn21:2.3.20"
msgid "Tattha yaṃ jaññā domanassaṃ "
msgstr ""

msgctxt "dn21:2.3.21"
msgid ""
"‘imaṃ kho me domanassaṃ sevato akusalā dhammā parihāyanti, kusalā dhammā "
"abhivaḍḍhantī’ti, evarūpaṃ domanassaṃ sevitabbaṃ."
msgstr ""

msgctxt "dn21:2.3.22"
msgid ""
"Tattha yañce savitakkaṃ savicāraṃ, yañce avitakkaṃ avicāraṃ, ye avitakke "
"avicāre, te paṇītatare."
msgstr ""

msgctxt "dn21:2.3.23"
msgid ""
"Domanassampāhaṃ, devānaminda, duvidhena vadāmi sevitabbampi, asevitabbampīti "
msgstr ""

msgctxt "dn21:2.3.24"
msgid "iti yaṃ taṃ vuttaṃ, idametaṃ paṭicca vuttaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc63"></a>
msgctxt "dn21:2.3.25"
msgid ""
"Upekkhampāhaṃ, devānaminda, duvidhena vadāmi sevitabbampi, asevitabbampīti "
"iti kho panetaṃ vuttaṃ, kiñcetaṃ paṭicca vuttaṃ?"
msgstr ""

msgctxt "dn21:2.3.26"
msgid "Tattha yaṃ jaññā upekkhaṃ "
msgstr ""

msgctxt "dn21:2.3.27"
msgid ""
"‘imaṃ kho me upekkhaṃ sevato akusalā dhammā abhivaḍḍhanti, kusalā dhammā "
"parihāyantī’ti, evarūpā upekkhā na sevitabbā."
msgstr ""

msgctxt "dn21:2.3.28"
msgid "Tattha yaṃ jaññā upekkhaṃ "
msgstr ""

msgctxt "dn21:2.3.29"
msgid ""
"‘imaṃ kho me upekkhaṃ sevato akusalā dhammā parihāyanti, kusalā dhammā "
"abhivaḍḍhantī’ti, evarūpā upekkhā sevitabbā."
msgstr ""

msgctxt "dn21:2.3.30"
msgid ""
"Tattha yañce savitakkaṃ savicāraṃ, yañce avitakkaṃ avicāraṃ, ye avitakke "
"avicāre, te paṇītatare."
msgstr ""

msgctxt "dn21:2.3.31"
msgid ""
"Upekkhampāhaṃ, devānaminda, duvidhena vadāmi sevitabbampi, asevitabbampīti "
msgstr ""

msgctxt "dn21:2.3.32"
msgid "iti yaṃ taṃ vuttaṃ, idametaṃ paṭicca vuttaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc64"></a>
msgctxt "dn21:2.3.33"
msgid ""
"Evaṃ paṭipanno kho, devānaminda, bhikkhu "
"papañcasaññāsaṅkhānirodhasāruppagāminiṃ paṭipadaṃ paṭipanno hotī”ti."
msgstr ""

msgctxt "dn21:2.3.34"
msgid "Itthaṃ bhagavā sakkassa devānamindassa pañhaṃ puṭṭho byākāsi."
msgstr ""

msgctxt "dn21:2.3.35"
msgid "Attamano sakko devānamindo bhagavato bhāsitaṃ abhinandi anumodi:"
msgstr ""

msgctxt "dn21:2.3.36"
msgid "“evametaṃ, bhagavā, evametaṃ, sugata."
msgstr ""

msgctxt "dn21:2.3.37"
msgid ""
"Tiṇṇā mettha kaṅkhā vigatā kathaṅkathā bhagavato pañhaveyyākaraṇaṃ sutvā”ti."
msgstr ""

#. </p><h3>
msgctxt "dn21:2.3.38"
msgid "2.3. Pātimokkhasaṃvara"
msgstr ""

#. </h3><p>
#. <a class="pts-cs" id="pts-cs2.4"></a>
#. <a class="sc" id="sc65"></a>
msgctxt "dn21:2.4.1"
msgid ""
"Itiha sakko devānamindo bhagavato bhāsitaṃ abhinanditvā anumoditvā "
"bhagavantaṃ uttari pañhaṃ apucchi:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc66"></a>
msgctxt "dn21:2.4.2"
msgid ""
"“Kathaṃ paṭipanno pana, mārisa, bhikkhu pātimokkhasaṃvarāya paṭipanno "
"hotī”ti?"
msgstr ""

msgctxt "dn21:2.4.3"
msgid "“Kāyasamācārampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.4.4"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

msgctxt "dn21:2.4.5"
msgid "Vacīsamācārampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.4.6"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

msgctxt "dn21:2.4.7"
msgid "Pariyesanaṃpāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.4.8"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.280"></a>
#. <a class="sc" id="sc67"></a>
msgctxt "dn21:2.4.9"
msgid ""
"Kāyasamācārampāhaṃ, devānaminda, duvidhena vadāmi sevitabbampi "
"asevitabbampīti iti kho panetaṃ vuttaṃ, kiñcetaṃ paṭicca vuttaṃ?"
msgstr ""

msgctxt "dn21:2.4.10"
msgid "Tattha yaṃ jaññā kāyasamācāraṃ "
msgstr ""

msgctxt "dn21:2.4.11"
msgid ""
"‘imaṃ kho me kāyasamācāraṃ sevato akusalā dhammā abhivaḍḍhanti, kusalā "
"dhammā parihāyantī’ti, evarūpo kāyasamācāro na sevitabbo."
msgstr ""

msgctxt "dn21:2.4.12"
msgid "Tattha yaṃ jaññā kāyasamācāraṃ "
msgstr ""

msgctxt "dn21:2.4.13"
msgid ""
"‘imaṃ kho me kāyasamācāraṃ sevato akusalā dhammā parihāyanti, kusalā dhammā "
"abhivaḍḍhantī’ti, evarūpo kāyasamācāro sevitabbo."
msgstr ""

msgctxt "dn21:2.4.14"
msgid "Kāyasamācārampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.4.15"
msgid "sevitabbampi, asevitabbampīti "
msgstr ""

msgctxt "dn21:2.4.16"
msgid "iti yaṃ taṃ vuttaṃ, idametaṃ paṭicca vuttaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc68"></a>
msgctxt "dn21:2.4.17"
msgid "Vacīsamācārampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.4.18"
msgid ""
"sevitabbampi, asevitabbampīti iti kho panetaṃ vuttaṃ, kiñcetaṃ paṭicca "
"vuttaṃ?"
msgstr ""

msgctxt "dn21:2.4.19"
msgid ""
"Tattha yaṃ jaññā vacīsamācāraṃ ‘imaṃ kho me vacīsamācāraṃ sevato akusalā "
"dhammā abhivaḍḍhanti, kusalā dhammā parihāyantī’ti, evarūpo vacīsamācāro na "
"sevitabbo."
msgstr ""

msgctxt "dn21:2.4.20"
msgid ""
"Tattha yaṃ jaññā vacīsamācāraṃ ‘imaṃ kho me vacīsamācāraṃ sevato akusalā "
"dhammā parihāyanti, kusalā dhammā abhivaḍḍhantī’ti, evarūpo vacīsamācāro "
"sevitabbo."
msgstr ""

msgctxt "dn21:2.4.21"
msgid "Vacīsamācārampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.4.22"
msgid "sevitabbampi, asevitabbampīti "
msgstr ""

msgctxt "dn21:2.4.23"
msgid "iti yaṃ taṃ vuttaṃ, idametaṃ paṭicca vuttaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc69"></a>
msgctxt "dn21:2.4.24"
msgid "Pariyesanaṃpāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.4.25"
msgid ""
"sevitabbampi, asevitabbampīti iti kho panetaṃ vuttaṃ, kiñcetaṃ paṭicca "
"vuttaṃ?"
msgstr ""

msgctxt "dn21:2.4.26"
msgid ""
"Tattha yaṃ jaññā pariyesanaṃ ‘imaṃ kho me pariyesanaṃ sevato akusalā dhammā "
"abhivaḍḍhanti, kusalā dhammā parihāyantī’ti, evarūpā pariyesanā na sevitabbā."
msgstr ""

msgctxt "dn21:2.4.27"
msgid ""
"Tattha yaṃ jaññā pariyesanaṃ ‘imaṃ kho me pariyesanaṃ sevato akusalā dhammā "
"parihāyanti, kusalā dhammā abhivaḍḍhantī’ti, evarūpā pariyesanā sevitabbā."
msgstr ""

msgctxt "dn21:2.4.28"
msgid "Pariyesanaṃpāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.4.29"
msgid "sevitabbampi, asevitabbampīti "
msgstr ""

msgctxt "dn21:2.4.30"
msgid "iti yaṃ taṃ vuttaṃ, idametaṃ paṭicca vuttaṃ."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.281"></a>
#. <a class="sc" id="sc70"></a>
msgctxt "dn21:2.4.31"
msgid ""
"Evaṃ paṭipanno kho, devānaminda, bhikkhu pātimokkhasaṃvarāya paṭipanno "
"hotī”ti."
msgstr ""

msgctxt "dn21:2.4.32"
msgid "Itthaṃ bhagavā sakkassa devānamindassa pañhaṃ puṭṭho byākāsi."
msgstr ""

msgctxt "dn21:2.4.33"
msgid "Attamano sakko devānamindo bhagavato bhāsitaṃ abhinandi anumodi:"
msgstr ""

msgctxt "dn21:2.4.34"
msgid "“evametaṃ, bhagavā, evametaṃ, sugata."
msgstr ""

msgctxt "dn21:2.4.35"
msgid ""
"Tiṇṇā mettha kaṅkhā vigatā kathaṅkathā bhagavato pañhaveyyākaraṇaṃ sutvā”ti."
msgstr ""

#. </p><h3>
msgctxt "dn21:2.4.36"
msgid "2.4. Indriyasaṃvara"
msgstr ""

#. </h3><p>
#. <a class="pts-cs" id="pts-cs2.5"></a>
#. <a class="sc" id="sc71"></a>
msgctxt "dn21:2.5.1"
msgid ""
"Itiha sakko devānamindo bhagavato bhāsitaṃ abhinanditvā anumoditvā "
"bhagavantaṃ uttari pañhaṃ apucchi:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc72"></a>
msgctxt "dn21:2.5.2"
msgid ""
"“Kathaṃ paṭipanno pana, mārisa, bhikkhu indriyasaṃvarāya paṭipanno hotī”ti?"
msgstr ""

msgctxt "dn21:2.5.3"
msgid "“Cakkhuviññeyyaṃ rūpampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.5.4"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

msgctxt "dn21:2.5.5"
msgid "Sotaviññeyyaṃ saddampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.5.6"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

msgctxt "dn21:2.5.7"
msgid "Ghānaviññeyyaṃ gandhampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.5.8"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

msgctxt "dn21:2.5.9"
msgid "Jivhāviññeyyaṃ rasampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.5.10"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

msgctxt "dn21:2.5.11"
msgid "Kāyaviññeyyaṃ phoṭṭhabbampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.5.12"
msgid "sevitabbampi, asevitabbampi."
msgstr ""

msgctxt "dn21:2.5.13"
msgid "Manoviññeyyaṃ dhammampāhaṃ, devānaminda, duvidhena vadāmi—"
msgstr ""

msgctxt "dn21:2.5.14"
msgid "sevitabbampi, asevitabbampī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc73"></a>
msgctxt "dn21:2.5.15"
msgid "Evaṃ vutte, sakko devānamindo bhagavantaṃ etadavoca:"
msgstr ""

# Sakka switches from marisa to bhante here, and back to marisa below. This is probably a sign of sloppy editing. The whole passage is found at MN 114, where bhante is used, and this suggests it was imported from there.
#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.282"></a>
#. <a class="sc" id="sc74"></a>
msgctxt "dn21:2.5.16"
msgid ""
"“Imassa kho ahaṃ, bhante, bhagavatā saṅkhittena bhāsitassa evaṃ vitthārena "
"atthaṃ ājānāmi."
msgstr ""

msgctxt "dn21:2.5.17"
msgid ""
"Yathārūpaṃ, bhante, cakkhuviññeyyaṃ rūpaṃ sevato akusalā dhammā "
"abhivaḍḍhanti, kusalā dhammā parihāyanti, evarūpaṃ cakkhuviññeyyaṃ rūpaṃ na "
"sevitabbaṃ."
msgstr ""

msgctxt "dn21:2.5.18"
msgid ""
"Yathārūpañca kho, bhante, cakkhuviññeyyaṃ rūpaṃ sevato akusalā dhammā "
"parihāyanti, kusalā dhammā abhivaḍḍhanti, evarūpaṃ cakkhuviññeyyaṃ rūpaṃ "
"sevitabbaṃ."
msgstr ""

msgctxt "dn21:2.5.19"
msgid "Yathārūpañca kho, bhante, sotaviññeyyaṃ saddaṃ sevato … pe …"
msgstr ""

msgctxt "dn21:2.5.20"
msgid "ghānaviññeyyaṃ gandhaṃ sevato …"
msgstr ""

msgctxt "dn21:2.5.21"
msgid "jivhāviññeyyaṃ rasaṃ sevato …"
msgstr ""

msgctxt "dn21:2.5.22"
msgid "kāyaviññeyyaṃ phoṭṭhabbaṃ sevato …"
msgstr ""

msgctxt "dn21:2.5.23"
msgid ""
"manoviññeyyaṃ dhammaṃ sevato akusalā dhammā abhivaḍḍhanti, kusalā dhammā "
"parihāyanti, evarūpo manoviññeyyo dhammo na sevitabbo."
msgstr ""

msgctxt "dn21:2.5.24"
msgid ""
"Yathārūpañca kho, bhante, manoviññeyyaṃ dhammaṃ sevato akusalā dhammā "
"parihāyanti, kusalā dhammā abhivaḍḍhanti, evarūpo manoviññeyyo dhammo "
"sevitabbo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc75"></a>
msgctxt "dn21:2.5.25"
msgid ""
"Imassa kho me, bhante, bhagavatā saṅkhittena bhāsitassa evaṃ vitthārena "
"atthaṃ ājānato "
msgstr ""

msgctxt "dn21:2.5.26"
msgid ""
"tiṇṇā mettha kaṅkhā vigatā kathaṅkathā bhagavato pañhaveyyākaraṇaṃ sutvā”ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.6"></a>
#. <a class="sc" id="sc76"></a>
msgctxt "dn21:2.6.1"
msgid ""
"Itiha sakko devānamindo bhagavato bhāsitaṃ abhinanditvā anumoditvā "
"bhagavantaṃ uttari pañhaṃ apucchi:"
msgstr ""

# RD, MW, and Thanissaro all take this as “same doctrine”, etc. This is probably right, but it is not a simple as it seems. Normally ekanta has the sense of “exclusively, solely”. That doesn’t make sense here, and the text may be corrupt. Skt at SF 241 has na haiva sarvasatvā ekakāmā ekacchandāḥ, which is more expected. Taken literally, ekanta could mean “of one aim”. This would then be a slightly different question: “(though we know that they appear different, nevertheless) is the end result of spiritual practice the same?” It seems comm has this in mind at least for the first term, but it is unclear to me whether it intended this analysis to be applied to each term: “Ekantavādāti ekoyeva anto vādassa etesaṃ, na dvedhā gatavādāti ekantavādā, ekaññeva vadantīti pucchati. Ekantasīlāti ekācārā. Ekantachandāti ekaladdhikā. Ekantaajjhosānāti ekantapariyosānā.”
#. </p><p>
#. <a class="sc" id="sc77"></a>
msgctxt "dn21:2.6.2"
msgid ""
"“Sabbeva nu kho, mārisa, samaṇabrāhmaṇā ekantavādā ekantasīlā ekantachandā "
"ekantaajjhosānā”ti?"
msgstr ""

msgctxt "dn21:2.6.3"
msgid ""
"“Na kho, devānaminda, sabbe samaṇabrāhmaṇā ekantavādā ekantasīlā "
"ekantachandā ekantaajjhosānā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc78"></a>
msgctxt "dn21:2.6.4"
msgid ""
"“Kasmā pana, mārisa, na sabbe samaṇabrāhmaṇā ekantavādā ekantasīlā "
"ekantachandā ekantaajjhosānā”ti?"
msgstr ""

msgctxt "dn21:2.6.5"
msgid "“Anekadhātu nānādhātu kho, devānaminda, loko."
msgstr ""

msgctxt "dn21:2.6.6"
msgid ""
"Tasmiṃ anekadhātunānādhātusmiṃ loke yaṃ yadeva sattā dhātuṃ abhinivisanti, "
"taṃ tadeva thāmasā parāmāsā abhinivissa voharanti:"
msgstr ""

msgctxt "dn21:2.6.7"
msgid "‘idameva saccaṃ moghamaññan’ti."
msgstr ""

msgctxt "dn21:2.6.8"
msgid ""
"Tasmā na sabbe samaṇabrāhmaṇā ekantavādā ekantasīlā ekantachandā "
"ekantaajjhosānā”ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.283"></a>
#. <a class="sc" id="sc79"></a>
msgctxt "dn21:2.6.9"
msgid ""
"“Sabbeva nu kho, mārisa, samaṇabrāhmaṇā accantaniṭṭhā accantayogakkhemī "
"accantabrahmacārī accantapariyosānā”ti?"
msgstr ""

msgctxt "dn21:2.6.10"
msgid ""
"“Na kho, devānaminda, sabbe samaṇabrāhmaṇā accantaniṭṭhā accantayogakkhemī "
"accantabrahmacārī accantapariyosānā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc80"></a>
msgctxt "dn21:2.6.11"
msgid ""
"“Kasmā pana, mārisa, na sabbe samaṇabrāhmaṇā accantaniṭṭhā accantayogakkhemī "
"accantabrahmacārī accantapariyosānā”ti?"
msgstr ""

msgctxt "dn21:2.6.12"
msgid ""
"“Ye kho, devānaminda, bhikkhū taṇhāsaṅkhayavimuttā te accantaniṭṭhā "
"accantayogakkhemī accantabrahmacārī accantapariyosānā."
msgstr ""

msgctxt "dn21:2.6.13"
msgid ""
"Tasmā na sabbe samaṇabrāhmaṇā accantaniṭṭhā accantayogakkhemī "
"accantabrahmacārī accantapariyosānā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc81"></a>
msgctxt "dn21:2.6.14"
msgid "Itthaṃ bhagavā sakkassa devānamindassa pañhaṃ puṭṭho byākāsi."
msgstr ""

msgctxt "dn21:2.6.15"
msgid "Attamano sakko devānamindo bhagavato bhāsitaṃ abhinandi anumodi:"
msgstr ""

msgctxt "dn21:2.6.16"
msgid "“evametaṃ, bhagavā, evametaṃ, sugata."
msgstr ""

msgctxt "dn21:2.6.17"
msgid ""
"Tiṇṇā mettha kaṅkhā vigatā kathaṅkathā bhagavato pañhaveyyākaraṇaṃ sutvā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc82"></a>
msgctxt "dn21:2.6.18"
msgid ""
"Itiha sakko devānamindo bhagavato bhāsitaṃ abhinanditvā anumoditvā "
"bhagavantaṃ etadavoca:"
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.7"></a>
#. <a class="sc" id="sc83"></a>
msgctxt "dn21:2.7.1"
msgid ""
"“Ejā, bhante, rogo, ejā gaṇḍo, ejā sallaṃ, ejā imaṃ purisaṃ parikaḍḍhati "
"tassa tasseva bhavassa abhinibbattiyā."
msgstr ""

msgctxt "dn21:2.7.2"
msgid "Tasmā ayaṃ puriso uccāvacamāpajjati."
msgstr ""

msgctxt "dn21:2.7.3"
msgid ""
"Yesāhaṃ, bhante, pañhānaṃ ito bahiddhā aññesu samaṇabrāhmaṇesu okāsakammampi "
"nālatthaṃ, te me bhagavatā byākatā."
msgstr ""

#. VAR: pana → yañca pana (s1-3, km) | yañca pana (pts1)
msgctxt "dn21:2.7.4"
msgid ""
"Dīgharattānusayitañca pana me vicikicchākathaṃkathāsallaṃ, tañca bhagavatā "
"abbuḷhan”ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.284"></a>
#. <a class="sc" id="sc84"></a>
#. VAR: devānaminda → devānamindo (pts1)
msgctxt "dn21:2.7.5"
msgid ""
"“Abhijānāsi no tvaṃ, devānaminda, ime pañhe aññe samaṇabrāhmaṇe pucchitā”ti?"
msgstr ""

msgctxt "dn21:2.7.6"
msgid "“Abhijānāmahaṃ, bhante, ime pañhe aññe samaṇabrāhmaṇe pucchitā”ti."
msgstr ""

msgctxt "dn21:2.7.7"
msgid ""
"“Yathā kathaṃ pana te, devānaminda, byākaṃsu? Sace te agaru bhāsassū”ti."
msgstr ""

msgctxt "dn21:2.7.8"
msgid ""
"“Na kho me, bhante, garu yatthassa bhagavā nisinno bhagavantarūpo vā”ti."
msgstr ""

msgctxt "dn21:2.7.9"
msgid "“Tena hi, devānaminda, bhāsassū”ti."
msgstr ""

#. VAR: Yesvāhaṃ → yesāhaṃ (s1-3, km) | ye sāhaṃ (pts1)
msgctxt "dn21:2.7.10"
msgid ""
"“Yesvāhaṃ, bhante, maññāmi samaṇabrāhmaṇā āraññikā pantasenāsanāti, tyāhaṃ "
"upasaṅkamitvā ime pañhe pucchāmi, te mayā puṭṭhā na sampāyanti, asampāyantā "
"mamaṃyeva paṭipucchanti:"
msgstr ""

msgctxt "dn21:2.7.11"
msgid "‘ko nāmo āyasmā’ti?"
msgstr ""

msgctxt "dn21:2.7.12"
msgid "Tesāhaṃ puṭṭho byākaromi:"
msgstr ""

msgctxt "dn21:2.7.13"
msgid "‘ahaṃ kho, mārisa, sakko devānamindo’ti."
msgstr ""

msgctxt "dn21:2.7.14"
msgid "Te mamaṃyeva uttari paṭipucchanti:"
msgstr ""

msgctxt "dn21:2.7.15"
msgid "‘kiṃ panāyasmā, devānaminda, kammaṃ katvā imaṃ ṭhānaṃ patto’ti?"
msgstr ""

msgctxt "dn21:2.7.16"
msgid "Tesāhaṃ yathāsutaṃ yathāpariyattaṃ dhammaṃ desemi."
msgstr ""

msgctxt "dn21:2.7.17"
msgid "Te tāvatakeneva attamanā honti:"
msgstr ""

msgctxt "dn21:2.7.18"
msgid ""
"‘sakko ca no devānamindo diṭṭho, yañca no apucchimhā, tañca no byākāsī’ti."
msgstr ""

msgctxt "dn21:2.7.19"
msgid "Te aññadatthu mamaṃyeva sāvakā sampajjanti, na cāhaṃ tesaṃ."
msgstr ""

msgctxt "dn21:2.7.20"
msgid ""
"Ahaṃ kho pana, bhante, bhagavato sāvako sotāpanno avinipātadhammo niyato "
"sambodhiparāyaṇo”ti."
msgstr ""

#. </p><h3>
msgctxt "dn21:2.7.21"
msgid "2.5. Somanassapaṭilābhakathā"
msgstr ""

#. </h3><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.285"></a>
#. <a class="sc" id="sc85"></a>
msgctxt "dn21:2.7.22"
msgid ""
"“Abhijānāsi no tvaṃ, devānaminda, ito pubbe evarūpaṃ vedapaṭilābhaṃ "
"somanassapaṭilābhan”ti?"
msgstr ""

msgctxt "dn21:2.7.23"
msgid ""
"“Abhijānāmahaṃ, bhante, ito pubbe evarūpaṃ vedapaṭilābhaṃ "
"somanassapaṭilābhan”ti."
msgstr ""

msgctxt "dn21:2.7.24"
msgid ""
"“Yathā kathaṃ pana tvaṃ, devānaminda, abhijānāsi ito pubbe evarūpaṃ "
"vedapaṭilābhaṃ somanassapaṭilābhan”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc86"></a>
#. VAR: samupabyūḷho → samūpabyuḷho (s1) | samupabyuḷho (s2, s3, km) | samūpabbūḷho (pts1)
msgctxt "dn21:2.7.25"
msgid "“Bhūtapubbaṃ, bhante, devāsurasaṅgāmo samupabyūḷho ahosi."
msgstr ""

#. VAR: parājayiṃsu → parājiyiṃsu (bj) | parājiṃsu (pts1)
msgctxt "dn21:2.7.26"
msgid "Tasmiṃ kho pana, bhante, saṅgāme devā jiniṃsu, asurā parājayiṃsu."
msgstr ""

msgctxt "dn21:2.7.27"
msgid ""
"Tassa mayhaṃ, bhante, taṃ saṅgāmaṃ abhivijinitvā vijitasaṅgāmassa etadahosi:"
msgstr ""

#. VAR: ubhayametaṃ → ubhayamettha (bj, s1-3, km)
msgctxt "dn21:2.7.28"
msgid ""
"‘yā ceva dāni dibbā ojā yā ca asurā ojā, ubhayametaṃ devā "
"paribhuñjissantī’ti."
msgstr ""

msgctxt "dn21:2.7.29"
msgid ""
"So kho pana me, bhante, vedapaṭilābho somanassapaṭilābho sadaṇḍāvacaro "
"sasatthāvacaro na nibbidāya na virāgāya na nirodhāya na upasamāya na "
"abhiññāya na sambodhāya na nibbānāya saṃvattati."
msgstr ""

msgctxt "dn21:2.7.30"
msgid ""
"Yo kho pana me ayaṃ, bhante, bhagavato dhammaṃ sutvā vedapaṭilābho "
"somanassapaṭilābho, so adaṇḍāvacaro asatthāvacaro ekantanibbidāya virāgāya "
"nirodhāya upasamāya abhiññāya sambodhāya nibbānāya saṃvattatī”ti."
msgstr ""

#. </p><p>
#. <a class="pts-cs" id="pts-cs2.8"></a>
#. <a class="sc" id="sc87"></a>
msgctxt "dn21:2.8.1"
msgid ""
"“Kiṃ pana tvaṃ, devānaminda, atthavasaṃ sampassamāno evarūpaṃ vedapaṭilābhaṃ "
"somanassapaṭilābhaṃ pavedesī”ti?"
msgstr ""

msgctxt "dn21:2.8.2"
msgid ""
"“Cha kho ahaṃ, bhante, atthavase sampassamāno evarūpaṃ vedapaṭilābhaṃ "
"somanassapaṭilābhaṃ pavedemi."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc88"></a>
msgctxt "dn21:2.8.3"
msgid "Idheva tiṭṭhamānassa,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.4"
msgid "devabhūtassa me sato;"
msgstr ""

# This is odd, and i am not sure what it means. MW says “The chance, by kamma, of another earthly life”, but there is no mention of chance, kamma, or earthly. Comm says: “Punarāyu ca me laddhoti puna aññena kammavipākena me jīvitaṃ laddhanti, iminā attano cutabhāvaṃ ceva upapannabhāvañca āvikaroti.” But what? Everyone gets reborn anyway, the point of Buddhism is to stop rebirth. Moreover, the nbext verse speaks of rebirth. Perhaps, rather, it simply means that the merit of Dhamma has extended his stay in his current fortunate birth.
#. <br>
msgctxt "dn21:2.8.5"
msgid "Punarāyu ca me laddho,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.6"
msgid "evaṃ jānāhi mārisa."
msgstr ""

#. </p></blockquote><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.286"></a>
#. <a class="sc" id="sc89"></a>
msgctxt "dn21:2.8.7"
msgid ""
"Imaṃ kho ahaṃ, bhante, paṭhamaṃ atthavasaṃ sampassamāno evarūpaṃ "
"vedapaṭilābhaṃ somanassapaṭilābhaṃ pavedemi."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc90"></a>
msgctxt "dn21:2.8.8"
msgid "Cutāhaṃ diviyā kāyā,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.9"
msgid "āyuṃ hitvā amānusaṃ;"
msgstr ""

#. <br>
msgctxt "dn21:2.8.10"
msgid "Amūḷho gabbhamessāmi,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.11"
msgid "yattha me ramatī mano."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc91"></a>
msgctxt "dn21:2.8.12"
msgid ""
"Imaṃ kho ahaṃ, bhante, dutiyaṃ atthavasaṃ sampassamāno evarūpaṃ "
"vedapaṭilābhaṃ somanassapaṭilābhaṃ pavedemi."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc92"></a>
#. VAR: amūḷhapaññassa → amūḷhapañhassa (s1-3, km) | amūḷhapaṅh’assu (pts1)
msgctxt "dn21:2.8.13"
msgid "Svāhaṃ amūḷhapaññassa,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.14"
msgid "viharaṃ sāsane rato;"
msgstr ""

#. <br>
msgctxt "dn21:2.8.15"
msgid "Ñāyena viharissāmi,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.16"
msgid "sampajāno paṭissato."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc93"></a>
msgctxt "dn21:2.8.17"
msgid ""
"Imaṃ kho ahaṃ, bhante, tatiyaṃ atthavasaṃ sampassamāno evarūpaṃ "
"vedapaṭilābhaṃ somanassapaṭilābhaṃ pavedemi."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc94"></a>
msgctxt "dn21:2.8.18"
msgid "Ñāyena me carato ca,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.19"
msgid "sambodhi ce bhavissati;"
msgstr ""

#. <br>
msgctxt "dn21:2.8.20"
msgid "Aññātā viharissāmi,"
msgstr ""

# Comm: Sveva anto bhavissatīti so eva me manussaloke anto bhavissatīti.
#. <br>
msgctxt "dn21:2.8.21"
msgid "sveva anto bhavissati."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc95"></a>
msgctxt "dn21:2.8.22"
msgid ""
"Imaṃ kho ahaṃ, bhante, catutthaṃ atthavasaṃ sampassamāno evarūpaṃ "
"vedapaṭilābhaṃ somanassapaṭilābhaṃ pavedemi."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc96"></a>
msgctxt "dn21:2.8.23"
msgid "Cutāhaṃ mānusā kāyā,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.24"
msgid "āyuṃ hitvāna mānusaṃ;"
msgstr ""

#. <br>
msgctxt "dn21:2.8.25"
msgid "Puna devo bhavissāmi,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.26"
msgid "devalokamhi uttamo."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc97"></a>
msgctxt "dn21:2.8.27"
msgid ""
"Imaṃ kho ahaṃ, bhante, pañcamaṃ atthavasaṃ sampassamāno evarūpaṃ "
"vedapaṭilābhaṃ somanassapaṭilābhaṃ pavedemi."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc98"></a>
#. VAR: Te → ye (?)
msgctxt "dn21:2.8.28"
msgid "Te paṇītatarā devā,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.29"
msgid "akaniṭṭhā yasassino;"
msgstr ""

#. <br>
msgctxt "dn21:2.8.30"
msgid "Antime vattamānamhi,"
msgstr ""

#. <br>
msgctxt "dn21:2.8.31"
msgid "so nivāso bhavissati."
msgstr ""

#. </p></blockquote><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.287"></a>
#. <a class="sc" id="sc99"></a>
msgctxt "dn21:2.8.32"
msgid ""
"Imaṃ kho ahaṃ, bhante, chaṭṭhaṃ atthavasaṃ sampassamāno evarūpaṃ "
"vedapaṭilābhaṃ somanassapaṭilābhaṃ pavedemi."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc100"></a>
msgctxt "dn21:2.8.33"
msgid ""
"Ime kho ahaṃ, bhante, cha atthavase sampassamāno evarūpaṃ vedapaṭilābhaṃ "
"somanassapaṭilābhaṃ pavedemi."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts-cs" id="pts-cs2.9"></a>
#. <a class="sc" id="sc101"></a>
msgctxt "dn21:2.9.1"
msgid "Apariyositasaṅkappo,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.2"
msgid "vicikiccho kathaṅkathī;"
msgstr ""

#. <br>
msgctxt "dn21:2.9.3"
msgid "Vicariṃ dīghamaddhānaṃ,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.4"
msgid "anvesanto tathāgataṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc102"></a>
msgctxt "dn21:2.9.5"
msgid "Yassu maññāmi samaṇe,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.6"
msgid "pavivittavihārino;"
msgstr ""

#. <br>
msgctxt "dn21:2.9.7"
msgid "Sambuddhā iti maññāno,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.8"
msgid "gacchāmi te upāsituṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc103"></a>
msgctxt "dn21:2.9.9"
msgid "‘Kathaṃ ārādhanā hoti,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.10"
msgid "kathaṃ hoti virādhanā’;"
msgstr ""

#. <br>
#. VAR: sampāyanti → sambhonti (bj, s1-3, km, pts1)
msgctxt "dn21:2.9.11"
msgid "Iti puṭṭhā na sampāyanti,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.12"
msgid "magge paṭipadāsu ca."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc104"></a>
msgctxt "dn21:2.9.13"
msgid "Tyassu yadā maṃ jānanti,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.14"
msgid "sakko devānamāgato;"
msgstr ""

#. <br>
msgctxt "dn21:2.9.15"
msgid "Tyassu mameva pucchanti,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.16"
msgid "‘kiṃ katvā pāpuṇī idaṃ’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc105"></a>
msgctxt "dn21:2.9.17"
msgid "Tesaṃ yathāsutaṃ dhammaṃ,"
msgstr ""

#. <br>
#. VAR: jane sutaṃ → janesuta (bj)
msgctxt "dn21:2.9.18"
msgid "desayāmi jane sutaṃ;"
msgstr ""

#. <br>
msgctxt "dn21:2.9.19"
msgid "Tena attamanā honti,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.20"
msgid "‘diṭṭho no vāsavoti ca’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc106"></a>
msgctxt "dn21:2.9.21"
msgid "Yadā ca buddhamaddakkhiṃ,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.22"
msgid "vicikicchāvitāraṇaṃ;"
msgstr ""

#. <br>
msgctxt "dn21:2.9.23"
msgid "Somhi vītabhayo ajja,"
msgstr ""

#. <br>
#. VAR: payirupāsiya → payirupāsayiṃ (s1-3, km, mr) | payirūpāsiya (pts1)
msgctxt "dn21:2.9.24"
msgid "sambuddhaṃ payirupāsiya."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc107"></a>
msgctxt "dn21:2.9.25"
msgid "Taṇhāsallassa hantāraṃ,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.26"
msgid "buddhaṃ appaṭipuggalaṃ;"
msgstr ""

#. <br>
msgctxt "dn21:2.9.27"
msgid "Ahaṃ vande mahāvīraṃ,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.28"
msgid "buddhamādiccabandhunaṃ."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.288"></a>
#. <a class="sc" id="sc108"></a>
msgctxt "dn21:2.9.29"
msgid "Yaṃ karomasi brahmuno,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.30"
msgid "samaṃ devehi mārisa;"
msgstr ""

#. <br>
#. VAR: kassāma → dassāmi (s1-3, km) | dassāma (mr)
msgctxt "dn21:2.9.31"
msgid "Tadajja tuyhaṃ kassāma,"
msgstr ""

# Sāmaṃ karomāti namakkāraṃ karoma
#. <br>
msgctxt "dn21:2.9.32"
msgid "handa sāmaṃ karoma te."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc109"></a>
#. VAR: Tvameva asi → tvameva sivaṃ (s1-3, km) | tuvamevasi (pts1)
msgctxt "dn21:2.9.33"
msgid "Tvameva asi sambuddho,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.34"
msgid "tuvaṃ satthā anuttaro;"
msgstr ""

#. <br>
msgctxt "dn21:2.9.35"
msgid "Sadevakasmiṃ lokasmiṃ,"
msgstr ""

#. <br>
msgctxt "dn21:2.9.36"
msgid "natthi te paṭipuggalo”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="pts-cs" id="pts-cs2.10"></a>
#. <a class="sc" id="sc110"></a>
msgctxt "dn21:2.10.1"
msgid "Atha kho sakko devānamindo pañcasikhaṃ gandhabbaputtaṃ āmantesi:"
msgstr ""

msgctxt "dn21:2.10.2"
msgid ""
"“bahūpakāro kho mesi tvaṃ, tāta pañcasikha, yaṃ tvaṃ bhagavantaṃ paṭhamaṃ "
"pasādesi."
msgstr ""

msgctxt "dn21:2.10.3"
msgid ""
"Tayā, tāta, paṭhamaṃ pasāditaṃ pacchā mayaṃ taṃ bhagavantaṃ dassanāya "
"upasaṅkamimhā arahantaṃ sammāsambuddhaṃ."
msgstr ""

msgctxt "dn21:2.10.4"
msgid ""
"Pettike vā ṭhāne ṭhapayissāmi, gandhabbarājā bhavissasi, bhaddañca te "
"sūriyavacchasaṃ dammi, sā hi te abhipatthitā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc111"></a>
msgctxt "dn21:2.10.5"
msgid ""
"Atha kho sakko devānamindo pāṇinā pathaviṃ parāmasitvā tikkhattuṃ udānaṃ "
"udānesi:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc112"></a>
msgctxt "dn21:2.10.6"
msgid "“Namo tassa bhagavato arahato sammāsambuddhassa."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc113"></a>
msgctxt "dn21:2.10.7"
msgid "Namo tassa bhagavato arahato sammāsambuddhassa."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc114"></a>
msgctxt "dn21:2.10.8"
msgid "Namo tassa bhagavato arahato sammāsambuddhassā”ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.289"></a>
#. <a class="sc" id="sc115"></a>
msgctxt "dn21:2.10.9"
msgid ""
"Imasmiñca pana veyyākaraṇasmiṃ bhaññamāne sakkassa devānamindassa virajaṃ "
"vītamalaṃ dhammacakkhuṃ udapādi:"
msgstr ""

msgctxt "dn21:2.10.10"
msgid "“yaṃ kiñci samudayadhammaṃ sabbaṃ taṃ nirodhadhamman”ti."
msgstr ""

msgctxt "dn21:2.10.11"
msgid "Aññesañca asītiyā devatāsahassānaṃ;"
msgstr ""

msgctxt "dn21:2.10.12"
msgid ""
"iti ye sakkena devānamindena ajjhiṭṭhapañhā puṭṭhā, te bhagavatā byākatā."
msgstr ""

msgctxt "dn21:2.10.13"
msgid "Tasmā imassa veyyākaraṇassa sakkapañhātveva adhivacananti."
msgstr ""

#. </p><p class="endsutta">
msgctxt "dn21:2.10.14"
msgid "Sakkapañhasuttaṃ niṭṭhitaṃ aṭṭhamaṃ."
msgstr ""
