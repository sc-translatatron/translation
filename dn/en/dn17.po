msgstr ""

msgctxt "dn17:69.17"
msgid "Ettha, deva, chandaṃ pajaha jīvite apekkhaṃ mākāsi."
msgstr ""

msgctxt "dn17:69.18"
msgid "Imāni te, deva, caturāsīti itthisahassāni itthiratanappamukhāni."
msgstr ""

msgctxt "dn17:69.19"
msgid "Ettha, deva, chandaṃ pajaha, jīvite apekkhaṃ mākāsi."
msgstr ""

msgctxt "dn17:69.20"
msgid "Imāni te, deva, caturāsīti gahapatisahassāni gahapatiratanappamukhāni."
msgstr ""

msgctxt "dn17:69.21"
msgid "Ettha, deva, chandaṃ pajaha jīvite apekkhaṃ mākāsi."
msgstr ""

msgctxt "dn17:69.22"
msgid ""
"Imāni te, deva, caturāsīti khattiyasahassāni anuyantāni "
"pariṇāyakaratanappamukhāni."
msgstr ""

msgctxt "dn17:69.23"
msgid "Ettha, deva, chandaṃ pajaha jīvite apekkhaṃ mākāsi."
msgstr ""

msgctxt "dn17:69.24"
msgid ""
"Imāni te, deva, caturāsīti dhenusahassāni duhasandanāni kaṃsūpadhāraṇāni."
msgstr ""

msgctxt "dn17:69.25"
msgid "Ettha, deva, chandaṃ pajaha jīvite apekkhaṃ mākāsi."
msgstr ""

msgctxt "dn17:69.26"
msgid ""
"Imāni te, deva, caturāsīti vatthakoṭisahassāni khomasukhumānaṃ "
"kappāsikasukhumānaṃ koseyyasukhumānaṃ kambalasukhumānaṃ."
msgstr ""

msgctxt "dn17:69.27"
msgid "Ettha, deva, chandaṃ pajaha jīvite apekkhaṃ mākāsi."
msgstr ""

