#. <section class="sutta" id="mn98"><article><div class="hgroup"><p class="division">
msgctxt "mn98:0.1"
msgid "Majjhima Nikāya 98"
msgstr ""

#. </p><h1>
msgctxt "mn98:0.2"
msgid "Vāseṭṭhasutta"
msgstr ""

#. </h1></div><p>
#. <a class="nya" id="nya1"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "mn98:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
#. VAR: icchānaṅgale → icchānaṅkale (pts1)
msgctxt "mn98:1.2"
msgid "ekaṃ samayaṃ bhagavā icchānaṅgale viharati icchānaṅgalavanasaṇḍe."
msgstr ""

#. <a class="nya" id="nya2"></a>
msgctxt "mn98:2.1"
msgid ""
"Tena kho pana samayena sambahulā abhiññātā abhiññātā brāhmaṇamahāsālā "
"icchānaṅgale paṭivasanti, seyyathidaṃ—"
msgstr ""

#. VAR: jāṇussoṇi → jāṇusoṇī (mr)
msgctxt "mn98:2.2"
msgid ""
"caṅkī brāhmaṇo, tārukkho brāhmaṇo, pokkharasāti brāhmaṇo, jāṇussoṇi "
"brāhmaṇo, todeyyo brāhmaṇo, aññe ca abhiññātā abhiññātā brāhmaṇamahāsālā."
msgstr ""

#. <a class="nya" id="nya3"></a>
msgctxt "mn98:3.1"
msgid ""
"Atha kho vāseṭṭhabhāradvājānaṃ māṇavānaṃ jaṅghāvihāraṃ anucaṅkamantānaṃ "
"anuvicarantānaṃ ayamantarākathā udapādi:"
msgstr ""

msgctxt "mn98:3.2"
msgid "“kathaṃ, bho, brāhmaṇo hotī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "mn98:3.3"
msgid "Bhāradvājo māṇavo evamāha:"
msgstr ""

msgctxt "mn98:3.4"
msgid ""
"“yato kho, bho, ubhato sujāto mātito ca pitito ca saṃsuddhagahaṇiko yāva "
"sattamā pitāmahayugā akkhitto anupakkuṭṭho jātivādena—"
msgstr ""

msgctxt "mn98:3.5"
msgid "ettāvatā kho, bho, brāhmaṇo hotī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "mn98:3.6"
msgid "Vāseṭṭho māṇavo evamāha:"
msgstr ""

# Note that vrt and its derivates in Sanskrit don’t seem to have any special ritual meaning, but rather just behavior, work, actions, etc.
msgctxt "mn98:3.7"
msgid "“yato kho, bho, sīlavā ca hoti vattasampanno ca—"
msgstr ""

msgctxt "mn98:3.8"
msgid "ettāvatā kho, bho, brāhmaṇo hotī”ti."
msgstr ""

#. <a class="nya" id="nya4"></a>
msgctxt "mn98:4.1"
msgid ""
"Neva kho asakkhi bhāradvājo māṇavo vāseṭṭhaṃ māṇavaṃ saññāpetuṃ, na pana "
"asakkhi vāseṭṭho māṇavo bhāradvājaṃ māṇavaṃ saññāpetuṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya5"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "mn98:5.1"
msgid "Atha kho vāseṭṭho māṇavo bhāradvājaṃ māṇavaṃ āmantesi:"
msgstr ""

msgctxt "mn98:5.2"
msgid ""
"“ayaṃ kho, bho bhāradvāja, samaṇo gotamo sakyaputto sakyakulā pabbajito "
"icchānaṅgale viharati icchānaṅgalavanasaṇḍe."
msgstr ""

msgctxt "mn98:5.3"
msgid "Taṃ kho pana bhavantaṃ gotamaṃ evaṃ kalyāṇo kittisaddo abbhuggato:"
msgstr ""

msgctxt "mn98:5.4"
msgid ""
"‘itipi so bhagavā arahaṃ sammāsambuddho vijjācaraṇasampanno sugato lokavidū "
"anuttaro purisadammasārathi satthā devamanussānaṃ buddho bhagavā’ti."
msgstr ""

msgctxt "mn98:5.5"
msgid ""
"Āyāma, bho bhāradvāja, yena samaṇo gotamo tenupasaṅkamissāma; upasaṅkamitvā "
"samaṇaṃ gotamaṃ etamatthaṃ pucchissāma."
msgstr ""

msgctxt "mn98:5.6"
msgid "Yathā no samaṇo gotamo byākarissati tathā naṃ dhāressāmā”ti."
msgstr ""

msgctxt "mn98:5.7"
msgid "“Evaṃ, bho”ti kho bhāradvājo māṇavo vāseṭṭhassa māṇavassa paccassosi."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya6"></a>
#. <a class="sc" id="sc5"></a>
msgctxt "mn98:6.1"
msgid ""
"Atha kho vāseṭṭhabhāradvājā māṇavā yena bhagavā tenupasaṅkamiṃsu; "
"upasaṅkamitvā bhagavatā saddhiṃ sammodiṃsu."
msgstr ""

msgctxt "mn98:6.2"
msgid "Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdiṃsu."
msgstr ""

msgctxt "mn98:6.3"
msgid "Ekamantaṃ nisinno kho vāseṭṭho māṇavo bhagavantaṃ gāthāhi ajjhabhāsi:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="nya" id="nya7"></a>
#. <a class="sc" id="sc6"></a>
msgctxt "mn98:7.1"
msgid "“Anuññātapaṭiññātā,"
msgstr ""

#. <br>
msgctxt "mn98:7.2"
msgid "tevijjā mayamasmubho;"
msgstr ""

#. <br>
msgctxt "mn98:7.3"
msgid "Ahaṃ pokkharasātissa,"
msgstr ""

#. <br>
msgctxt "mn98:7.4"
msgid "tārukkhassāyaṃ māṇavo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "mn98:7.5"
msgid "Tevijjānaṃ yadakkhātaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:7.6"
msgid "tatra kevalinosmase;"
msgstr ""

#. <br>
#. VAR: veyyākaraṇā → no byākaraṇā (si, s1-3, km, mr)
msgctxt "mn98:7.7"
msgid "Padakasmā veyyākaraṇā,"
msgstr ""

#. <br>
msgctxt "mn98:7.8"
msgid "jappe ācariyasādisā;"
msgstr ""

#. <br>
msgctxt "mn98:7.9"
msgid "Tesaṃ no jātivādasmiṃ,"
msgstr ""

#. <br>
msgctxt "mn98:7.10"
msgid "vivādo atthi gotama."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "mn98:7.11"
msgid "Jātiyā brāhmaṇo hoti,"
msgstr ""

#. <br>
msgctxt "mn98:7.12"
msgid "bhāradvājo iti bhāsati;"
msgstr ""

#. <br>
#. VAR: kammunā → kammanā (bj, pts1)
msgctxt "mn98:7.13"
msgid "Ahañca kammunā brūmi,"
msgstr ""

#. <br>
msgctxt "mn98:7.14"
msgid "evaṃ jānāhi cakkhuma."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
#. VAR: ñāpetuṃ → saññattuṃ (pts1) | saññāpetuṃ (mr)
msgctxt "mn98:7.15"
msgid "Te na sakkoma ñāpetuṃ,"
msgstr ""

#. <br>
msgctxt "mn98:7.16"
msgid "aññamaññaṃ mayaṃ ubho;"
msgstr ""

#. <br>
msgctxt "mn98:7.17"
msgid "Bhavantaṃ puṭṭhumāgamā,"
msgstr ""

#. <br>
msgctxt "mn98:7.18"
msgid "sambuddhaṃ iti vissutaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "mn98:7.19"
msgid "Candaṃ yathā khayātītaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:7.20"
msgid "pecca pañjalikā janā;"
msgstr ""

#. <br>
msgctxt "mn98:7.21"
msgid "Vandamānā namassanti,"
msgstr ""

#. <br>
msgctxt "mn98:7.22"
msgid "lokasmiṃ gotamaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc11"></a>
msgctxt "mn98:7.23"
msgid "Cakkhuṃ loke samuppannaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:7.24"
msgid "mayaṃ pucchāma gotamaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:7.25"
msgid "Jātiyā brāhmaṇo hoti,"
msgstr ""

#. <br>
#. VAR: kammunā → kammanā (bj, pts1)
msgctxt "mn98:7.26"
msgid "udāhu bhavati kammunā;"
msgstr ""

#. <br>
msgctxt "mn98:7.27"
msgid "Ajānataṃ no pabrūhi,"
msgstr ""

#. <br>
msgctxt "mn98:7.28"
msgid "yathā jānemu brāhmaṇan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya8"></a>
#. <a class="sc" id="sc12"></a>
msgctxt "mn98:8.1"
msgid "“Tesaṃ vo ahaṃ byakkhissaṃ, (vāseṭṭhāti bhagavā)"
msgstr ""

#. <br>
msgctxt "mn98:8.2"
msgid "Anupubbaṃ yathātathaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:8.3"
msgid "Jātivibhaṅgaṃ pāṇānaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:8.4"
msgid "Aññamaññāhi jātiyo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc13"></a>
msgctxt "mn98:8.5"
msgid "Tiṇarukkhepi jānātha,"
msgstr ""

#. <br>
msgctxt "mn98:8.6"
msgid "na cāpi paṭijānare;"
msgstr ""

#. <br>
msgctxt "mn98:8.7"
msgid "Liṅgaṃ jātimayaṃ tesaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:8.8"
msgid "aññamaññā hi jātiyo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc14"></a>
msgctxt "mn98:8.9"
msgid "Tato kīṭe paṭaṅge ca,"
msgstr ""

#. <br>
msgctxt "mn98:8.10"
msgid "yāva kunthakipillike;"
msgstr ""

#. <br>
msgctxt "mn98:8.11"
msgid "Liṅgaṃ jātimayaṃ tesaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:8.12"
msgid "aññamaññā hi jātiyo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc15"></a>
msgctxt "mn98:8.13"
msgid "Catuppadepi jānātha,"
msgstr ""

#. <br>
msgctxt "mn98:8.14"
msgid "khuddake ca mahallake;"
msgstr ""

#. <br>
msgctxt "mn98:8.15"
msgid "Liṅgaṃ jātimayaṃ tesaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:8.16"
msgid "aññamaññā hi jātiyo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc16"></a>
msgctxt "mn98:8.17"
msgid "Pādudarepi jānātha,"
msgstr ""

#. <br>
msgctxt "mn98:8.18"
msgid "urage dīghapiṭṭhike;"
msgstr ""

#. <br>
msgctxt "mn98:8.19"
msgid "Liṅgaṃ jātimayaṃ tesaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:8.20"
msgid "aññamaññā hi jātiyo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc17"></a>
msgctxt "mn98:8.21"
msgid "Tato macchepi jānātha,"
msgstr ""

#. <br>
msgctxt "mn98:8.22"
msgid "udake vārigocare;"
msgstr ""

#. <br>
msgctxt "mn98:8.23"
msgid "Liṅgaṃ jātimayaṃ tesaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:8.24"
msgid "aññamaññā hi jātiyo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc18"></a>
msgctxt "mn98:8.25"
msgid "Tato pakkhīpi jānātha,"
msgstr ""

# I think yana should be taken literally here as a charriot; consider the classic Indic imagery of flying chariots of the gods.
#. <br>
msgctxt "mn98:8.26"
msgid "pattayāne vihaṅgame;"
msgstr ""

#. <br>
msgctxt "mn98:8.27"
msgid "Liṅgaṃ jātimayaṃ tesaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:8.28"
msgid "aññamaññā hi jātiyo."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya9"></a>
#. <a class="sc" id="sc19"></a>
msgctxt "mn98:9.1"
msgid "Yathā etāsu jātīsu,"
msgstr ""

#. <br>
msgctxt "mn98:9.2"
msgid "liṅgaṃ jātimayaṃ puthu;"
msgstr ""

#. <br>
msgctxt "mn98:9.3"
msgid "Evaṃ natthi manussesu,"
msgstr ""

#. <br>
msgctxt "mn98:9.4"
msgid "liṅgaṃ jātimayaṃ puthu."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc20"></a>
msgctxt "mn98:9.5"
msgid "Na kesehi na sīsehi,"
msgstr ""

#. <br>
msgctxt "mn98:9.6"
msgid "na kaṇṇehi na akkhīhi;"
msgstr ""

#. <br>
msgctxt "mn98:9.7"
msgid "Na mukhena na nāsāya,"
msgstr ""

#. <br>
msgctxt "mn98:9.8"
msgid "na oṭṭhehi bhamūhi vā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc21"></a>
msgctxt "mn98:9.9"
msgid "Na gīvāya na aṃsehi,"
msgstr ""

#. <br>
msgctxt "mn98:9.10"
msgid "na udarena na piṭṭhiyā;"
msgstr ""

#. <br>
msgctxt "mn98:9.11"
msgid "Na soṇiyā na urasā,"
msgstr ""

# sambadha means the “groin”, i.e. the cramped area including the genital region, anus, etc. Methuna here must be specifrically the sexual organs.
#. <br>
#. VAR: na sambādhe na methune → na sambādhā na methunā (mr)
msgctxt "mn98:9.12"
msgid "na sambādhe na methune."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc22"></a>
msgctxt "mn98:9.13"
msgid "Na hatthehi na pādehi,"
msgstr ""

#. <br>
msgctxt "mn98:9.14"
msgid "naṅgulīhi nakhehi vā;"
msgstr ""

#. <br>
msgctxt "mn98:9.15"
msgid "Na jaṅghāhi na ūrūhi,"
msgstr ""

#. <br>
msgctxt "mn98:9.16"
msgid "na vaṇṇena sarena vā;"
msgstr ""

#. <br>
msgctxt "mn98:9.17"
msgid "Liṅgaṃ jātimayaṃ neva,"
msgstr ""

#. <br>
msgctxt "mn98:9.18"
msgid "yathā aññāsu jātisu."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc23"></a>
msgctxt "mn98:9.19"
msgid "Paccattañca sarīresu,"
msgstr ""

#. <br>
msgctxt "mn98:9.20"
msgid "manussesvetaṃ na vijjati;"
msgstr ""

#. <br>
msgctxt "mn98:9.21"
msgid "Vokārañca manussesu,"
msgstr ""

#. <br>
msgctxt "mn98:9.22"
msgid "samaññāya pavuccati."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya10"></a>
#. <a class="sc" id="sc24"></a>
msgctxt "mn98:10.1"
msgid "Yo hi koci manussesu,"
msgstr ""

#. <br>
msgctxt "mn98:10.2"
msgid "gorakkhaṃ upajīvati;"
msgstr ""

#. <br>
msgctxt "mn98:10.3"
msgid "Evaṃ vāseṭṭha jānāhi,"
msgstr ""

#. <br>
msgctxt "mn98:10.4"
msgid "kassako so na brāhmaṇo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc25"></a>
msgctxt "mn98:10.5"
msgid "Yo hi koci manussesu,"
msgstr ""

# sippa here is usually translated “craft”, but this refers primarily to occupations making things by hand. In DN 2 there is a long list of “sippa’, only a few of which are “crafts”. profession” fits better.
#. <br>
msgctxt "mn98:10.6"
msgid "puthusippena jīvati;"
msgstr ""

#. <br>
msgctxt "mn98:10.7"
msgid "Evaṃ vāseṭṭha jānāhi,"
msgstr ""

#. <br>
msgctxt "mn98:10.8"
msgid "sippiko so na brāhmaṇo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc26"></a>
msgctxt "mn98:10.9"
msgid "Yo hi koci manussesu,"
msgstr ""

#. <br>
msgctxt "mn98:10.10"
msgid "vohāraṃ upajīvati;"
msgstr ""

#. <br>
msgctxt "mn98:10.11"
msgid "Evaṃ vāseṭṭha jānāhi,"
msgstr ""

#. <br>
msgctxt "mn98:10.12"
msgid "vāṇijo so na brāhmaṇo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc27"></a>
msgctxt "mn98:10.13"
msgid "Yo hi koci manussesu,"
msgstr ""

#. <br>
msgctxt "mn98:10.14"
msgid "parapessena jīvati;"
msgstr ""

#. <br>
msgctxt "mn98:10.15"
msgid "Evaṃ vāseṭṭha jānāhi,"
msgstr ""

#. <br>
#. VAR: pessako → pessiko (bj, s1-3, km, pts1)
msgctxt "mn98:10.16"
msgid "pessako so na brāhmaṇo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc28"></a>
msgctxt "mn98:10.17"
msgid "Yo hi koci manussesu,"
msgstr ""

#. <br>
msgctxt "mn98:10.18"
msgid "adinnaṃ upajīvati;"
msgstr ""

#. <br>
msgctxt "mn98:10.19"
msgid "Evaṃ vāseṭṭha jānāhi,"
msgstr ""

#. <br>
msgctxt "mn98:10.20"
msgid "coro eso na brāhmaṇo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc29"></a>
msgctxt "mn98:10.21"
msgid "Yo hi koci manussesu,"
msgstr ""

#. <br>
msgctxt "mn98:10.22"
msgid "issatthaṃ upajīvati;"
msgstr ""

#. <br>
msgctxt "mn98:10.23"
msgid "Evaṃ vāseṭṭha jānāhi,"
msgstr ""

#. <br>
msgctxt "mn98:10.24"
msgid "yodhājīvo na brāhmaṇo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc30"></a>
msgctxt "mn98:10.25"
msgid "Yo hi koci manussesu,"
msgstr ""

#. <br>
msgctxt "mn98:10.26"
msgid "porohiccena jīvati;"
msgstr ""

#. <br>
msgctxt "mn98:10.27"
msgid "Evaṃ vāseṭṭha jānāhi,"
msgstr ""

#. <br>
msgctxt "mn98:10.28"
msgid "yājako so na brāhmaṇo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc31"></a>
msgctxt "mn98:10.29"
msgid "Yo hi koci manussesu,"
msgstr ""

# Bhunjati at MN 98 must relate to the problematic yathābhuttañca bhuñjatha in MN 129, DN 17, and DN 26. Most translators there have, implausibly, “eat”. Here, Norman has “enjoy” while BB has “govern”. But the meaning probably is similar to the archaic English form “use”, in the legal sense of “the benefit or profit of lands”. Thus yathābhuttañca bhuñjatha means “use as has been used”, i.e. “don’t increase taxes”. That fits with the context, as this passage is all about ways people earn a living.
#. <br>
msgctxt "mn98:10.30"
msgid "gāmaṃ raṭṭhañca bhuñjati;"
msgstr ""

#. <br>
msgctxt "mn98:10.31"
msgid "Evaṃ vāseṭṭha jānāhi,"
msgstr ""

#. <br>
msgctxt "mn98:10.32"
msgid "rājā eso na brāhmaṇo."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya11"></a>
#. <a class="sc" id="sc32"></a>
msgctxt "mn98:11.1"
msgid "Na cāhaṃ brāhmaṇaṃ brūmi,"
msgstr ""

#. <br>
msgctxt "mn98:11.2"
msgid "yonijaṃ mattisambhavaṃ;"
msgstr ""

#. <br>
#. VAR: Bhovādi → bhovādī (s1-3, km)
msgctxt "mn98:11.3"
msgid "Bhovādi nāma so hoti,"
msgstr ""

#. <br>
msgctxt "mn98:11.4"
msgid "sace hoti sakiñcano;"
msgstr ""

#. <br>
msgctxt "mn98:11.5"
msgid "Akiñcanaṃ anādānaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.6"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc33"></a>
msgctxt "mn98:11.7"
msgid "Sabbasaṃyojanaṃ chetvā,"
msgstr ""

#. <br>
msgctxt "mn98:11.8"
msgid "yo ve na paritassati;"
msgstr ""

#. <br>
#. VAR: visaṃyuttaṃ → visaññuttaṃ (bj, s1, mr)
msgctxt "mn98:11.9"
msgid "Saṅgātigaṃ visaṃyuttaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.10"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc34"></a>
#. VAR: naddhiṃ → nandiṃ (bj) | nandhiṃ (pts1)
msgctxt "mn98:11.11"
msgid "Chetvā naddhiṃ varattañca,"
msgstr ""

#. <br>
msgctxt "mn98:11.12"
msgid "sandānaṃ sahanukkamaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:11.13"
msgid "Ukkhittapalighaṃ buddhaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.14"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc35"></a>
msgctxt "mn98:11.15"
msgid "Akkosaṃ vadhabandhañca,"
msgstr ""

#. <br>
msgctxt "mn98:11.16"
msgid "aduṭṭho yo titikkhati;"
msgstr ""

#. <br>
msgctxt "mn98:11.17"
msgid "Khantībalaṃ balānīkaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.18"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc36"></a>
msgctxt "mn98:11.19"
msgid "Akkodhanaṃ vatavantaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.20"
msgid "sīlavantaṃ anussadaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:11.21"
msgid "Dantaṃ antimasārīraṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.22"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc37"></a>
msgctxt "mn98:11.23"
msgid "Vāripokkharapatteva,"
msgstr ""

#. <br>
msgctxt "mn98:11.24"
msgid "āraggeriva sāsapo;"
msgstr ""

#. <br>
msgctxt "mn98:11.25"
msgid "Yo na limpati kāmesu,"
msgstr ""

#. <br>
msgctxt "mn98:11.26"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc38"></a>
msgctxt "mn98:11.27"
msgid "Yo dukkhassa pajānāti,"
msgstr ""

#. <br>
msgctxt "mn98:11.28"
msgid "idheva khayamattano;"
msgstr ""

#. <br>
msgctxt "mn98:11.29"
msgid "Pannabhāraṃ visaṃyuttaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.30"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc39"></a>
msgctxt "mn98:11.31"
msgid "Gambhīrapaññaṃ medhāviṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.32"
msgid "maggāmaggassa kovidaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:11.33"
msgid "Uttamatthamanuppattaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.34"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc40"></a>
msgctxt "mn98:11.35"
msgid "Asaṃsaṭṭhaṃ gahaṭṭhehi,"
msgstr ""

#. <br>
msgctxt "mn98:11.36"
msgid "anāgārehi cūbhayaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:11.37"
msgid "Anokasārimappicchaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.38"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc41"></a>
msgctxt "mn98:11.39"
msgid "Nidhāya daṇḍaṃ bhūtesu,"
msgstr ""

#. <br>
msgctxt "mn98:11.40"
msgid "tasesu thāvaresu ca;"
msgstr ""

#. <br>
msgctxt "mn98:11.41"
msgid "Yo na hanti na ghāteti,"
msgstr ""

#. <br>
msgctxt "mn98:11.42"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc42"></a>
msgctxt "mn98:11.43"
msgid "Aviruddhaṃ viruddhesu,"
msgstr ""

#. <br>
msgctxt "mn98:11.44"
msgid "attadaṇḍesu nibbutaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:11.45"
msgid "Sādānesu anādānaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.46"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc43"></a>
msgctxt "mn98:11.47"
msgid "Yassa rāgo ca doso ca,"
msgstr ""

#. <br>
msgctxt "mn98:11.48"
msgid "māno makkho ca ohito;"
msgstr ""

#. <br>
msgctxt "mn98:11.49"
msgid "Sāsaporiva āraggā,"
msgstr ""

#. <br>
msgctxt "mn98:11.50"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc44"></a>
msgctxt "mn98:11.51"
msgid "Akakkasaṃ viññāpaniṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.52"
msgid "giraṃ saccaṃ udīraye;"
msgstr ""

#. <br>
msgctxt "mn98:11.53"
msgid "Yāya nābhisajje kiñci,"
msgstr ""

#. <br>
msgctxt "mn98:11.54"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc45"></a>
msgctxt "mn98:11.55"
msgid "Yo ca dīghaṃ va rassaṃ vā,"
msgstr ""

#. <br>
msgctxt "mn98:11.56"
msgid "aṇuṃ thūlaṃ subhāsubhaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:11.57"
msgid "Loke adinnaṃ nādeti,"
msgstr ""

#. <br>
msgctxt "mn98:11.58"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc46"></a>
msgctxt "mn98:11.59"
msgid "Āsā yassa na vijjanti,"
msgstr ""

#. <br>
msgctxt "mn98:11.60"
msgid "asmiṃ loke paramhi ca;"
msgstr ""

#. <br>
#. VAR: Nirāsāsaṃ → nirāsayaṃ (bj, pts1)
msgctxt "mn98:11.61"
msgid "Nirāsāsaṃ visaṃyuttaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.62"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc47"></a>
msgctxt "mn98:11.63"
msgid "Yassālayā na vijjanti,"
msgstr ""

#. <br>
msgctxt "mn98:11.64"
msgid "aññāya akathaṅkathiṃ;"
msgstr ""

#. <br>
msgctxt "mn98:11.65"
msgid "Amatogadhaṃ anuppattaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.66"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc48"></a>
msgctxt "mn98:11.67"
msgid "Yodhapuññañca pāpañca,"
msgstr ""

#. <br>
msgctxt "mn98:11.68"
msgid "ubho saṅgaṃ upaccagā;"
msgstr ""

#. <br>
msgctxt "mn98:11.69"
msgid "Asokaṃ virajaṃ suddhaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.70"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc49"></a>
msgctxt "mn98:11.71"
msgid "Candaṃ va vimalaṃ suddhaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.72"
msgid "vippasannaṃ anāvilaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:11.73"
msgid "Nandībhavaparikkhīṇaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.74"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc50"></a>
msgctxt "mn98:11.75"
msgid "Yo imaṃ palipathaṃ duggaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.76"
msgid "saṃsāraṃ mohamaccagā;"
msgstr ""

#. <br>
msgctxt "mn98:11.77"
msgid "Tiṇṇo pāraṅgato jhāyī,"
msgstr ""

#. <br>
msgctxt "mn98:11.78"
msgid "anejo akathaṅkathī;"
msgstr ""

#. <br>
msgctxt "mn98:11.79"
msgid "Anupādāya nibbuto,"
msgstr ""

#. <br>
msgctxt "mn98:11.80"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc51"></a>
#. VAR: pahantvāna → pahatvāna (bj)
msgctxt "mn98:11.81"
msgid "Yodhakāme pahantvāna,"
msgstr ""

#. <br>
msgctxt "mn98:11.82"
msgid "anāgāro paribbaje;"
msgstr ""

#. <br>
msgctxt "mn98:11.83"
msgid "Kāmabhavaparikkhīṇaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.84"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc52"></a>
msgctxt "mn98:11.85"
msgid "Yodhataṇhaṃ pahantvāna,"
msgstr ""

#. <br>
msgctxt "mn98:11.86"
msgid "anāgāro paribbaje;"
msgstr ""

#. <br>
msgctxt "mn98:11.87"
msgid "Taṇhābhavaparikkhīṇaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.88"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc53"></a>
msgctxt "mn98:11.89"
msgid "Hitvā mānusakaṃ yogaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.90"
msgid "dibbaṃ yogaṃ upaccagā;"
msgstr ""

#. <br>
msgctxt "mn98:11.91"
msgid "Sabbayogavisaṃyuttaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.92"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc54"></a>
msgctxt "mn98:11.93"
msgid "Hitvā ratiñca aratiṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.94"
msgid "sītībhūtaṃ nirūpadhiṃ;"
msgstr ""

#. <br>
msgctxt "mn98:11.95"
msgid "Sabbalokābhibhuṃ vīraṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.96"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc55"></a>
msgctxt "mn98:11.97"
msgid "Cutiṃ yo vedi sattānaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.98"
msgid "upapattiñca sabbaso;"
msgstr ""

#. <br>
msgctxt "mn98:11.99"
msgid "Asattaṃ sugataṃ buddhaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.100"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc56"></a>
msgctxt "mn98:11.101"
msgid "Yassa gatiṃ na jānanti,"
msgstr ""

#. <br>
msgctxt "mn98:11.102"
msgid "devā gandhabbamānusā;"
msgstr ""

#. <br>
msgctxt "mn98:11.103"
msgid "Khīṇāsavaṃ arahantaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.104"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc57"></a>
msgctxt "mn98:11.105"
msgid "Yassa pure ca pacchā ca,"
msgstr ""

#. <br>
msgctxt "mn98:11.106"
msgid "majjhe ca natthi kiñcanaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:11.107"
msgid "Akiñcanaṃ anādānaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.108"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc58"></a>
msgctxt "mn98:11.109"
msgid "Usabhaṃ pavaraṃ vīraṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.110"
msgid "mahesiṃ vijitāvinaṃ;"
msgstr ""

#. <br>
#. VAR: nhātakaṃ → nahātakaṃ (bj, s1, pts1)
msgctxt "mn98:11.111"
msgid "Anejaṃ nhātakaṃ buddhaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:11.112"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc59"></a>
msgctxt "mn98:11.113"
msgid "Pubbenivāsaṃ yo vedi,"
msgstr ""

#. <br>
msgctxt "mn98:11.114"
msgid "saggāpāyañca passati;"
msgstr ""

#. <br>
msgctxt "mn98:11.115"
msgid "Atho jātikkhayaṃ patto,"
msgstr ""

#. <br>
msgctxt "mn98:11.116"
msgid "tamahaṃ brūmi brāhmaṇaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya12"></a>
#. <a class="sc" id="sc60"></a>
msgctxt "mn98:12.1"
msgid "Samaññā hesā lokasmiṃ,"
msgstr ""

#. <br>
msgctxt "mn98:12.2"
msgid "nāmagottaṃ pakappitaṃ;"
msgstr ""

#. <br>
msgctxt "mn98:12.3"
msgid "Sammuccā samudāgataṃ,"
msgstr ""

#. <br>
msgctxt "mn98:12.4"
msgid "tattha tattha pakappitaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc61"></a>
msgctxt "mn98:12.5"
msgid "Dīgharattānusayitaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:12.6"
msgid "diṭṭhigatamajānataṃ;"
msgstr ""

#. <br>
#. VAR: Ajānantā no → ajānantā no ca (s1-3) | ajānantā noti ajānantā eva (ṭīkā)
#. VAR: pabrunti → pabruvanti (bj, pts1) | brūhanti (s1-3)
msgctxt "mn98:12.7"
msgid "Ajānantā no pabrunti,"
msgstr ""

#. <br>
msgctxt "mn98:12.8"
msgid "jātiyā hoti brāhmaṇo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc62"></a>
#. VAR: brāhmaṇo → vasalo (s1-3, km, mr)
msgctxt "mn98:12.9"
msgid "Na jaccā brāhmaṇo hoti,"
msgstr ""

#. <br>
#. VAR: abrāhmaṇo → brāhmaṇo (s1-3, km, mr)
msgctxt "mn98:12.10"
msgid "na jaccā hoti abrāhmaṇo;"
msgstr ""

#. <br>
msgctxt "mn98:12.11"
msgid "Kammunā brāhmaṇo hoti,"
msgstr ""

#. <br>
msgctxt "mn98:12.12"
msgid "kammunā hoti abrāhmaṇo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc63"></a>
msgctxt "mn98:12.13"
msgid "Kassako kammunā hoti,"
msgstr ""

#. <br>
msgctxt "mn98:12.14"
msgid "sippiko hoti kammunā;"
msgstr ""

#. <br>
msgctxt "mn98:12.15"
msgid "Vāṇijo kammunā hoti,"
msgstr ""

#. <br>
msgctxt "mn98:12.16"
msgid "pessako hoti kammunā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc64"></a>
msgctxt "mn98:12.17"
msgid "Coropi kammunā hoti,"
msgstr ""

#. <br>
msgctxt "mn98:12.18"
msgid "yodhājīvopi kammunā;"
msgstr ""

#. <br>
msgctxt "mn98:12.19"
msgid "Yājako kammunā hoti,"
msgstr ""

#. <br>
msgctxt "mn98:12.20"
msgid "rājāpi hoti kammunā."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya13"></a>
#. <a class="sc" id="sc65"></a>
msgctxt "mn98:13.1"
msgid "Evametaṃ yathābhūtaṃ,"
msgstr ""

#. <br>
msgctxt "mn98:13.2"
msgid "kammaṃ passanti paṇḍitā;"
msgstr ""

#. <br>
msgctxt "mn98:13.3"
msgid "Paṭiccasamuppādadassā,"
msgstr ""

#. <br>
msgctxt "mn98:13.4"
msgid "kammavipākakovidā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc66"></a>
msgctxt "mn98:13.5"
msgid "Kammunā vattati loko,"
msgstr ""

#. <br>
msgctxt "mn98:13.6"
msgid "kammunā vattati pajā;"
msgstr ""

#. <br>
msgctxt "mn98:13.7"
msgid "Kammanibandhanā sattā,"
msgstr ""

#. <br>
msgctxt "mn98:13.8"
msgid "rathassāṇīva yāyato."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc67"></a>
msgctxt "mn98:13.9"
msgid "Tapena brahmacariyena,"
msgstr ""

#. <br>
msgctxt "mn98:13.10"
msgid "saṃyamena damena ca;"
msgstr ""

#. <br>
msgctxt "mn98:13.11"
msgid "Etena brāhmaṇo hoti,"
msgstr ""

#. <br>
msgctxt "mn98:13.12"
msgid "etaṃ brāhmaṇamuttamaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc68"></a>
msgctxt "mn98:13.13"
msgid "Tīhi vijjāhi sampanno,"
msgstr ""

#. <br>
msgctxt "mn98:13.14"
msgid "santo khīṇapunabbhavo;"
msgstr ""

#. <br>
msgctxt "mn98:13.15"
msgid "Evaṃ vāseṭṭha jānāhi,"
msgstr ""

#. <br>
msgctxt "mn98:13.16"
msgid "brahmā sakko vijānatan”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="nya" id="nya14"></a>
#. <a class="sc" id="sc69"></a>
msgctxt "mn98:14.1"
msgid "Evaṃ vutte, vāseṭṭhabhāradvājā māṇavā bhagavantaṃ etadavocuṃ:"
msgstr ""

msgctxt "mn98:14.2"
msgid "“abhikkantaṃ, bho gotama, abhikkantaṃ, bho gotama."
msgstr ""

msgctxt "mn98:14.3"
msgid ""
"Seyyathāpi, bho gotama, nikkujjitaṃ vā ukkujjeyya, paṭicchannaṃ vā "
"vivareyya, mūḷhassa vā maggaṃ ācikkheyya, andhakāre vā telapajjotaṃ dhāreyya "
"‘cakkhumanto rūpāni dakkhantī’ti; evamevaṃ bhotā gotamena anekapariyāyena "
"dhammo pakāsito."
msgstr ""

msgctxt "mn98:14.4"
msgid ""
"Ete mayaṃ bhavantaṃ gotamaṃ saraṇaṃ gacchāma dhammañca bhikkhusaṅghañca."
msgstr ""

msgctxt "mn98:14.5"
msgid "Upāsake no bhavaṃ gotamo dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gate”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "mn98:14.6"
msgid "Vāseṭṭhasuttaṃ niṭṭhitaṃ aṭṭhamaṃ."
msgstr ""
