#. <a class="sc" id="sc13"></a>
msgctxt "mn46:14.1"
msgid ""
"Katamañca, bhikkhave, dhammasamādānaṃ paccuppannadukkhañceva āyatiñca "
"dukkhavipākaṃ?"
msgstr ""

msgctxt "mn46:14.2"
msgid ""
"Idha, bhikkhave, ekacco sahāpi dukkhena sahāpi domanassena pāṇātipātī hoti, "
"pāṇātipātapaccayā ca dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:14.3"
msgid ""
"sahāpi dukkhena sahāpi domanassena adinnādāyī hoti, adinnādānapaccayā ca "
"dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:14.4"
msgid ""
"sahāpi dukkhena sahāpi domanassena kāmesu micchācārī hoti, kāmesu "
"micchācārapaccayā ca dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:14.5"
msgid ""
"sahāpi dukkhena sahāpi domanassena musāvādī hoti, musāvādapaccayā ca dukkhaṃ "
"domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:14.6"
msgid ""
"sahāpi dukkhena sahāpi domanassena pisuṇavāco hoti, pisuṇavācāpaccayā ca "
"dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:14.7"
msgid ""
"sahāpi dukkhena sahāpi domanassena pharusavāco hoti, pharusavācāpaccayā ca "
"dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:14.8"
msgid ""
"sahāpi dukkhena sahāpi domanassena samphappalāpī hoti, samphappalāpapaccayā "
"ca dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:14.9"
msgid ""
"sahāpi dukkhena sahāpi domanassena abhijjhālu hoti, abhijjhāpaccayā ca "
"dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:14.10"
msgid ""
"sahāpi dukkhena sahāpi domanassena byāpannacitto hoti, byāpādapaccayā ca "
"dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:14.11"
msgid ""
"sahāpi dukkhena sahāpi domanassena micchādiṭṭhi hoti, micchādiṭṭhipaccayā ca "
"dukkhaṃ domanassaṃ paṭisaṃvedeti."
msgstr ""

msgctxt "mn46:14.12"
msgid ""
"So kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapajjati."
msgstr ""

msgctxt "mn46:14.13"
msgid ""
"Idaṃ vuccati, bhikkhave, dhammasamādānaṃ paccuppannadukkhañceva āyatiñca "
"dukkhavipākaṃ. (1)"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya15"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.314"></a>
#. <a class="sc" id="sc14"></a>
msgctxt "mn46:15.1"
msgid ""
"Katamañca, bhikkhave, dhammasamādānaṃ paccuppannasukhaṃ āyatiṃ dukkhavipākaṃ?"
msgstr ""

msgctxt "mn46:15.2"
msgid ""
"Idha, bhikkhave, ekacco sahāpi sukhena sahāpi somanassena pāṇātipātī hoti, "
"pāṇātipātapaccayā ca sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:15.3"
msgid ""
"sahāpi sukhena sahāpi somanassena adinnādāyī hoti, adinnādānapaccayā ca "
"sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:15.4"
msgid ""
"sahāpi sukhena sahāpi somanassena kāmesumicchācārī hoti, "
"kāmesumicchācārapaccayā ca sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:15.5"
msgid ""
"sahāpi sukhena sahāpi somanassena musāvādī hoti, musāvādapaccayā ca sukhaṃ "
"somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:15.6"
msgid ""
"sahāpi sukhena sahāpi somanassena pisuṇavāco hoti, pisuṇavācāpaccayā ca "
"sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:15.7"
msgid ""
"sahāpi sukhena sahāpi somanassena pharusavāco hoti, pharusavācāpaccayā ca "
"sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:15.8"
msgid ""
"sahāpi sukhena sahāpi somanassena samphappalāpī hoti, samphappalāpapaccayā "
"ca sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:15.9"
msgid ""
"sahāpi sukhena sahāpi somanassena abhijjhālu hoti, abhijjhāpaccayā ca sukhaṃ "
"somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:15.10"
msgid ""
"sahāpi sukhena sahāpi somanassena byāpannacitto hoti, byāpādapaccayā ca "
"sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:15.11"
msgid ""
"sahāpi sukhena sahāpi somanassena micchādiṭṭhi hoti, micchādiṭṭhipaccayā ca "
"sukhaṃ somanassaṃ paṭisaṃvedeti."
msgstr ""

msgctxt "mn46:15.12"
msgid ""
"So kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapajjati."
msgstr ""

msgctxt "mn46:15.13"
msgid ""
"Idaṃ vuccati, bhikkhave, dhammasamādānaṃ paccuppannasukhaṃ āyatiṃ "
"dukkhavipākaṃ. (2)"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya16"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.315"></a>
#. <a class="sc" id="sc15"></a>
msgctxt "mn46:16.1"
msgid ""
"Katamañca, bhikkhave, dhammasamādānaṃ paccuppannadukkhaṃ āyatiṃ sukhavipākaṃ?"
msgstr ""

msgctxt "mn46:16.2"
msgid ""
"Idha, bhikkhave, ekacco sahāpi dukkhena sahāpi domanassena pāṇātipātā "
"paṭivirato hoti, pāṇātipātā veramaṇīpaccayā ca dukkhaṃ domanassaṃ "
"paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:16.3"
msgid ""
"sahāpi dukkhena sahāpi domanassena adinnādānā paṭivirato hoti, adinnādānā "
"veramaṇīpaccayā ca dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:16.4"
msgid ""
"sahāpi dukkhena sahāpi domanassena kāmesumicchācārā paṭivirato hoti, "
"kāmesumicchācārā veramaṇīpaccayā ca dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:16.5"
msgid ""
"sahāpi dukkhena sahāpi domanassena musāvādā paṭivirato hoti, musāvādā "
"veramaṇīpaccayā ca dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:16.6"
msgid ""
"sahāpi dukkhena sahāpi domanassena pisuṇāya vācāya paṭivirato hoti, pisuṇāya "
"vācāya veramaṇīpaccayā ca dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:16.7"
msgid ""
"sahāpi dukkhena sahāpi domanassena pharusāya vācāya paṭivirato hoti, "
"pharusāya vācāya veramaṇīpaccayā ca dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:16.8"
msgid ""
"sahāpi dukkhena sahāpi domanassena samphappalāpā paṭivirato hoti, "
"samphappalāpā veramaṇīpaccayā ca dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:16.9"
msgid ""
"sahāpi dukkhena sahāpi domanassena anabhijjhālu hoti, anabhijjhāpaccayā ca "
"dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:16.10"
msgid ""
"sahāpi dukkhena sahāpi domanassena abyāpannacitto hoti, abyāpādapaccayā ca "
"dukkhaṃ domanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:16.11"
msgid ""
"sahāpi dukkhena sahāpi domanassena sammādiṭṭhi hoti, sammādiṭṭhipaccayā ca "
"dukkhaṃ domanassaṃ paṭisaṃvedeti."
msgstr ""

msgctxt "mn46:16.12"
msgid "So kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjati."
msgstr ""

msgctxt "mn46:16.13"
msgid ""
"Idaṃ vuccati, bhikkhave, dhammasamādānaṃ paccuppannadukkhaṃ āyatiṃ "
"sukhavipākaṃ. (3)"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya17"></a>
#. <a class="sc" id="sc16"></a>
msgctxt "mn46:17.1"
msgid ""
"Katamañca, bhikkhave, dhammasamādānaṃ paccuppannasukhañceva āyatiñca "
"sukhavipākaṃ?"
msgstr ""

