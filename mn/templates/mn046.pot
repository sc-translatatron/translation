msgid ""
"Idha, bhikkhave, ekacco sahāpi sukhena sahāpi somanassena pāṇātipātā "
"paṭivirato hoti, pāṇātipātā veramaṇīpaccayā ca sukhaṃ somanassaṃ "
"paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:17.3"
msgid ""
"sahāpi sukhena sahāpi somanassena adinnādānā paṭivirato hoti, adinnādānā "
"veramaṇīpaccayā ca sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:17.4"
msgid ""
"sahāpi sukhena sahāpi somanassena kāmesumicchācārā paṭivirato hoti, "
"kāmesumicchācārā veramaṇīpaccayā ca sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:17.5"
msgid ""
"sahāpi sukhena sahāpi somanassena musāvādā paṭivirato hoti, musāvādā "
"veramaṇīpaccayā ca sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:17.6"
msgid ""
"sahāpi sukhena sahāpi somanassena pisuṇāya vācāya paṭivirato hoti, pisuṇāya "
"vācāya veramaṇīpaccayā ca sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:17.7"
msgid ""
"sahāpi sukhena sahāpi somanassena pharusāya vācāya paṭivirato hoti, "
"pharusāya vācāya veramaṇīpaccayā ca sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:17.8"
msgid ""
"sahāpi sukhena sahāpi somanassena samphappalāpā paṭivirato hoti, "
"samphappalāpā veramaṇīpaccayā ca sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:17.9"
msgid ""
"sahāpi sukhena sahāpi somanassena anabhijjhālu hoti, anabhijjhāpaccayā ca "
"sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:17.10"
msgid ""
"sahāpi sukhena sahāpi somanassena abyāpannacitto hoti, abyāpādapaccayā ca "
"sukhaṃ somanassaṃ paṭisaṃvedeti;"
msgstr ""

msgctxt "mn46:17.11"
msgid ""
"sahāpi sukhena sahāpi somanassena sammādiṭṭhi hoti, sammādiṭṭhipaccayā ca "
"sukhaṃ somanassaṃ paṭisaṃvedeti."
msgstr ""

msgctxt "mn46:17.12"
msgid "So kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjati."
msgstr ""

msgctxt "mn46:17.13"
msgid ""
"Idaṃ, vuccati, bhikkhave, dhammasamādānaṃ paccuppannasukhañceva āyatiñca "
"sukhavipākaṃ."
msgstr ""

msgctxt "mn46:17.14"
msgid "Imāni kho, bhikkhave, cattāri dhammasamādānāni. (4)"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya18"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.316"></a>
#. <a class="sc" id="sc17"></a>
msgctxt "mn46:18.1"
msgid "Seyyathāpi, bhikkhave, tittakālābu visena saṃsaṭṭho."
msgstr ""

msgctxt "mn46:18.2"
msgid ""
"Atha puriso āgaccheyya jīvitukāmo amaritukāmo sukhakāmo dukkhappaṭikūlo."
msgstr ""

msgctxt "mn46:18.3"
msgid "Tamenaṃ evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "mn46:18.4"
msgid "‘ambho purisa, ayaṃ tittakālābu visena saṃsaṭṭho, "
msgstr ""

#. VAR: piva → pipa (si, pts1)
msgctxt "mn46:18.5"
msgid "sace ākaṅkhasi piva."
msgstr ""

#. VAR: pivitvā → pītvā (bj, pts1)
#. VAR: pivato → pipato (si, pts1)
msgctxt "mn46:18.6"
msgid ""
"Tassa te pivato ceva nacchādessati vaṇṇenapi gandhenapi rasenapi, pivitvā ca "
"pana maraṇaṃ vā nigacchasi maraṇamattaṃ vā dukkhan’ti."
msgstr ""

msgctxt "mn46:18.7"
msgid "So taṃ appaṭisaṅkhāya piveyya, nappaṭinissajjeyya."
msgstr ""

msgctxt "mn46:18.8"
msgid ""
"Tassa taṃ pivato ceva nacchādeyya vaṇṇenapi gandhenapi rasenapi, pivitvā ca "
"pana maraṇaṃ vā nigaccheyya maraṇamattaṃ vā dukkhaṃ."
msgstr ""

msgctxt "mn46:18.9"
msgid ""
"Tathūpamāhaṃ, bhikkhave, imaṃ dhammasamādānaṃ vadāmi, yamidaṃ "
"dhammasamādānaṃ paccuppannadukkhañceva āyatiñca dukkhavipākaṃ. (1)"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya19"></a>
#. <a class="sc" id="sc18"></a>
msgctxt "mn46:19.1"
msgid ""
"Seyyathāpi, bhikkhave, āpānīyakaṃso vaṇṇasampanno gandhasampanno "
"rasasampanno."
msgstr ""

msgctxt "mn46:19.2"
msgid "So ca kho visena saṃsaṭṭho."
msgstr ""

msgctxt "mn46:19.3"
msgid ""
"Atha puriso āgaccheyya jīvitukāmo amaritukāmo sukhakāmo dukkhappaṭikūlo."
msgstr ""

msgctxt "mn46:19.4"
msgid "Tamenaṃ evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "mn46:19.5"
msgid ""
"‘ambho purisa, ayaṃ āpānīyakaṃso vaṇṇasampanno gandhasampanno rasasampanno."
msgstr ""

msgctxt "mn46:19.6"
msgid "So ca kho visena saṃsaṭṭho, "
msgstr ""

msgctxt "mn46:19.7"
msgid "sace ākaṅkhasi piva."
msgstr ""

#. VAR: pivatohi → pipatohi (pts1) | pivatopi (mr)
msgctxt "mn46:19.8"
msgid ""
"Tassa te pivatohi kho chādessati vaṇṇenapi gandhenapi rasenapi, pivitvā ca "
"pana maraṇaṃ vā nigacchasi maraṇamattaṃ vā dukkhan’ti."
msgstr ""

msgctxt "mn46:19.9"
msgid "So taṃ appaṭisaṅkhāya piveyya, nappaṭinissajjeyya."
msgstr ""

msgctxt "mn46:19.10"
msgid ""
"Tassa taṃ pivatohi kho chādeyya vaṇṇenapi gandhenapi rasenapi, pivitvā ca "
"pana maraṇaṃ vā nigaccheyya maraṇamattaṃ vā dukkhaṃ."
msgstr ""

msgctxt "mn46:19.11"
msgid ""
"Tathūpamāhaṃ, bhikkhave, imaṃ dhammasamādānaṃ vadāmi, yamidaṃ "
"dhammasamādānaṃ paccuppannasukhaṃ āyatiṃ dukkhavipākaṃ. (2)"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya20"></a>
#. <a class="sc" id="sc19"></a>
msgctxt "mn46:20.1"
msgid "Seyyathāpi, bhikkhave, pūtimuttaṃ nānābhesajjehi saṃsaṭṭhaṃ."
msgstr ""

msgctxt "mn46:20.2"
msgid "Atha puriso āgaccheyya paṇḍukarogī."
msgstr ""

msgctxt "mn46:20.3"
msgid "Tamenaṃ evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "mn46:20.4"
msgid ""
"‘ambho purisa, idaṃ pūtimuttaṃ nānābhesajjehi saṃsaṭṭhaṃ, sace ākaṅkhasi "
"piva."
msgstr ""

msgctxt "mn46:20.5"
msgid ""
"Tassa te pivatohi kho nacchādessati vaṇṇenapi gandhenapi rasenapi, pivitvā "
"ca pana sukhī bhavissasī’ti."
msgstr ""

msgctxt "mn46:20.6"
msgid "So taṃ paṭisaṅkhāya piveyya, nappaṭinissajjeyya."
msgstr ""

msgctxt "mn46:20.7"
msgid ""
"Tassa taṃ pivatohi kho nacchādeyya vaṇṇenapi gandhenapi rasenapi, pivitvā ca "
"pana sukhī assa."
msgstr ""

msgctxt "mn46:20.8"
msgid ""
"Tathūpamāhaṃ, bhikkhave, imaṃ dhammasamādānaṃ vadāmi, yamidaṃ "
"dhammasamādānaṃ paccuppannadukkhaṃ āyatiṃ sukhavipākaṃ. (3)"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya21"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.317"></a>
#. <a class="sc" id="sc20"></a>
msgctxt "mn46:21.1"
msgid ""
"Seyyathāpi, bhikkhave, dadhi ca madhu ca sappi ca phāṇitañca ekajjhaṃ "
"saṃsaṭṭhaṃ."
msgstr ""

msgctxt "mn46:21.2"
msgid "Atha puriso āgaccheyya lohitapakkhandiko."
msgstr ""

msgctxt "mn46:21.3"
msgid "Tamenaṃ evaṃ vadeyyuṃ:"
msgstr ""

msgctxt "mn46:21.4"
msgid ""
"‘ambho purisa, idaṃ dadhi ca madhu ca sappi ca phāṇitañca ekajjhaṃ "
"saṃsaṭṭhaṃ, sace ākaṅkhasi piva."
msgstr ""

msgctxt "mn46:21.5"
msgid ""
"Tassa te pivato ceva chādessati vaṇṇenapi gandhenapi rasenapi, pivitvā ca "
"pana sukhī bhavissasī’ti."
msgstr ""

msgctxt "mn46:21.6"
msgid "So taṃ paṭisaṅkhāya piveyya, nappaṭinissajjeyya."
msgstr ""

msgctxt "mn46:21.7"
msgid ""
"Tassa taṃ pivato ceva chādeyya vaṇṇenapi gandhenapi rasenapi, pivitvā ca "
"pana sukhī assa."
msgstr ""

msgctxt "mn46:21.8"
msgid ""
"Tathūpamāhaṃ, bhikkhave, imaṃ dhammasamādānaṃ vadāmi, yamidaṃ "
"dhammasamādānaṃ paccuppannasukhañceva āyatiñca sukhavipākaṃ. (4)"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya22"></a>
#. <a class="sc" id="sc21"></a>
msgctxt "mn46:22.1"
msgid ""
"Seyyathāpi, bhikkhave, vassānaṃ pacchime māse saradasamaye viddhe "
"vigatavalāhake deve ādicco nabhaṃ abbhussakkamāno sabbaṃ ākāsagataṃ "
"tamagataṃ abhivihacca bhāsate ca tapate ca virocate ca;"
msgstr ""

msgctxt "mn46:22.2"
msgid ""
"evameva kho, bhikkhave, yamidaṃ dhammasamādānaṃ paccuppannasukhañceva "
"āyatiñca sukhavipākaṃ tadaññe puthusamaṇabrāhmaṇaparappavāde abhivihacca "
"bhāsate ca tapate ca virocate cā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc22"></a>
msgctxt "mn46:22.3"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "mn46:22.4"
msgid "Attamanā te bhikkhū bhagavato bhāsitaṃ abhinandunti."
msgstr ""

#. </p><p class="endsection">
msgctxt "mn46:22.5"
msgid "Mahādhammasamādānasuttaṃ niṭṭhitaṃ chaṭṭhaṃ."
msgstr ""
