msgstr ""

#. </p><p>
#. <a class="sc" id="sc20"></a>
msgctxt "mn134:14.13"
msgid "Evaṃvihāriṃ ātāpiṃ,"
msgstr ""

#. <br>
msgctxt "mn134:14.14"
msgid "ahorattamatanditaṃ;"
msgstr ""

#. <br>
msgctxt "mn134:14.15"
msgid "Taṃ ve bhaddekarattoti,"
msgstr ""

#. <br>
msgctxt "mn134:14.16"
msgid "santo ācikkhate munī”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc21"></a>
msgctxt "mn134:14.17"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "mn134:14.18"
msgid "Attamano āyasmā lomasakaṅgiyo bhagavato bhāsitaṃ abhinandīti."
msgstr ""

#. </p><p class="endsection">
msgctxt "mn134:14.19"
msgid "Lomasakaṅgiyabhaddekarattasuttaṃ niṭṭhitaṃ catutthaṃ."
msgstr ""
