#. <section class="sutta" id="mn67"><article><div class="hgroup"><p class="division">
msgctxt "mn67:0.1"
msgid "Majjhima Nikāya 67"
msgstr ""

#. </p><h1>
msgctxt "mn67:0.2"
msgid "Cātumasutta"
msgstr ""

#. </h1></div><p>
#. <a class="nya" id="nya1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.457"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "mn67:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "mn67:1.2"
msgid "ekaṃ samayaṃ bhagavā cātumāyaṃ viharati āmalakīvane."
msgstr ""

#. <a class="nya" id="nya2"></a>
msgctxt "mn67:2.1"
msgid ""
"Tena kho pana samayena sāriputtamoggallānappamukhāni pañcamattāni "
"bhikkhusatāni cātumaṃ anuppattāni honti bhagavantaṃ dassanāya."
msgstr ""

msgctxt "mn67:2.2"
msgid ""
"Te ca āgantukā bhikkhū nevāsikehi bhikkhūhi saddhiṃ paṭisammodamānā "
"senāsanāni paññāpayamānā pattacīvarāni paṭisāmayamānā uccāsaddā mahāsaddā "
"ahesuṃ."
msgstr ""

#. <a class="nya" id="nya3"></a>
msgctxt "mn67:3.1"
msgid "Atha kho bhagavā āyasmantaṃ ānandaṃ āmantesi:"
msgstr ""

msgctxt "mn67:3.2"
msgid "“ke panete, ānanda, uccāsaddā mahāsaddā, kevaṭṭā maññe macchavilope”ti?"
msgstr ""

msgctxt "mn67:3.3"
msgid ""
"“Etāni, bhante, sāriputtamoggallānappamukhāni pañcamattāni bhikkhusatāni "
"cātumaṃ anuppattāni bhagavantaṃ dassanāya."
msgstr ""

msgctxt "mn67:3.4"
msgid ""
"Te āgantukā bhikkhū nevāsikehi bhikkhūhi saddhiṃ paṭisammodamānā senāsanāni "
"paññāpayamānā pattacīvarāni paṭisāmayamānā uccāsaddā mahāsaddā”ti. "
msgstr ""

#. <a class="nya" id="nya4"></a>
msgctxt "mn67:4.1"
msgid "“Tenahānanda, mama vacanena te bhikkhū āmantehi:"
msgstr ""

msgctxt "mn67:4.2"
msgid "‘satthā āyasmante āmantetī’”ti."
msgstr ""

msgctxt "mn67:4.3"
msgid ""
"“Evaṃ, bhante”ti kho āyasmā ānando bhagavato paṭissutvā yena te bhikkhū "
"tenupasaṅkami; upasaṅkamitvā te bhikkhū etadavoca:"
msgstr ""

msgctxt "mn67:4.4"
msgid "“satthā āyasmante āmantetī”ti."
msgstr ""

msgctxt "mn67:4.5"
msgid ""
"“Evamāvuso”ti kho te bhikkhū āyasmato ānandassa paṭissutvā yena bhagavā "
"tenupasaṅkamiṃsu; upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdiṃsu. "
"Ekamantaṃ nisinne kho te bhikkhū bhagavā etadavoca:"
msgstr ""

msgctxt "mn67:4.6"
msgid ""
"“kiṃ nu tumhe, bhikkhave, uccāsaddā mahāsaddā, kevaṭṭā maññe macchavilope”ti?"
msgstr ""

msgctxt "mn67:4.7"
msgid ""
"“Imāni, bhante, sāriputtamoggallānappamukhāni pañcamattāni bhikkhusatāni "
"cātumaṃ anuppattāni bhagavantaṃ dassanāya."
msgstr ""

msgctxt "mn67:4.8"
msgid ""
"Teme āgantukā bhikkhū nevāsikehi bhikkhūhi saddhiṃ paṭisammodamānā "
"senāsanāni paññāpayamānā pattacīvarāni paṭisāmayamānā uccāsaddā mahāsaddā”ti."
msgstr ""

#. <a class="nya" id="nya5"></a>
msgctxt "mn67:5.1"
msgid "“Gacchatha, bhikkhave, paṇāmemi vo, na vo mama santike vatthabban”ti."
msgstr ""

msgctxt "mn67:5.2"
msgid ""
"“Evaṃ, bhante”ti kho te bhikkhū bhagavato paṭissutvā uṭṭhāyāsanā bhagavantaṃ "
"abhivādetvā padakkhiṇaṃ katvā senāsanaṃ saṃsāmetvā pattacīvaramādāya "
"pakkamiṃsu."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya6"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.458"></a>
#. <a class="sc" id="sc2"></a>
#. VAR: santhāgāre → sandhāgāre (mr)
msgctxt "mn67:6.1"
msgid ""
"Tena kho pana samayena cātumeyyakā sakyā santhāgāre sannipatitā honti "
"kenacideva karaṇīyena."
msgstr ""

msgctxt "mn67:6.2"
msgid "Addasaṃsu kho cātumeyyakā sakyā te bhikkhū dūratova āgacchante;"
msgstr ""

msgctxt "mn67:6.3"
msgid ""
"disvāna yena te bhikkhū tenupasaṅkamiṃsu; upasaṅkamitvā te bhikkhū "
"etadavocuṃ:"
msgstr ""

msgctxt "mn67:6.4"
msgid "“handa kahaṃ pana tumhe āyasmanto gacchathā”ti?"
msgstr ""

msgctxt "mn67:6.5"
msgid "“Bhagavatā kho, āvuso, bhikkhusaṃgho paṇāmito”ti."
msgstr ""

msgctxt "mn67:6.6"
msgid ""
"“Tenahāyasmanto muhuttaṃ nisīdatha, appeva nāma mayaṃ sakkuṇeyyāma "
"bhagavantaṃ pasādetun”ti."
msgstr ""

msgctxt "mn67:6.7"
msgid "“Evamāvuso”ti kho te bhikkhū cātumeyyakānaṃ sakyānaṃ paccassosuṃ."
msgstr ""

#. <a class="nya" id="nya7"></a>
msgctxt "mn67:7.1"
msgid ""
"Atha kho cātumeyyakā sakyā yena bhagavā tenupasaṅkamiṃsu; upasaṅkamitvā "
"bhagavantaṃ abhivādetvā ekamantaṃ nisīdiṃsu. Ekamantaṃ nisinnā kho "
"cātumeyyakā sakyā bhagavantaṃ etadavocuṃ:"
msgstr ""

msgctxt "mn67:7.2"
msgid "“abhinandatu, bhante, bhagavā bhikkhusaṃghaṃ;"
msgstr ""

msgctxt "mn67:7.3"
msgid "abhivadatu, bhante, bhagavā bhikkhusaṃghaṃ."
msgstr ""

msgctxt "mn67:7.4"
msgid ""
"Seyyathāpi, bhante, bhagavatā pubbe bhikkhusaṃgho anuggahito; evameva "
"bhagavā etarahi anuggaṇhātu bhikkhusaṃghaṃ."
msgstr ""

msgctxt "mn67:7.5"
msgid ""
"Santettha, bhante, bhikkhū navā acirapabbajitā adhunāgatā imaṃ dhammavinayaṃ."
msgstr ""

msgctxt "mn67:7.6"
msgid ""
"Tesaṃ bhagavantaṃ dassanāya alabhantānaṃ siyā aññathattaṃ, siyā vipariṇāmo."
msgstr ""

msgctxt "mn67:7.7"
msgid ""
"Seyyathāpi, bhante, bījānaṃ taruṇānaṃ udakaṃ alabhantānaṃ siyā aññathattaṃ "
"siyā vipariṇāmo;"
msgstr ""

msgctxt "mn67:7.8"
msgid ""
"evameva kho, bhante, santettha bhikkhū navā acirapabbajitā adhunāgatā imaṃ "
"dhammavinayaṃ, tesaṃ bhagavantaṃ dassanāya alabhantānaṃ siyā aññathattaṃ, "
"siyā vipariṇāmo."
msgstr ""

msgctxt "mn67:7.9"
msgid ""
"Seyyathāpi, bhante, vacchassa taruṇassa mātaraṃ apassantassa siyā "
"aññathattaṃ, siyā vipariṇāmo;"
msgstr ""

msgctxt "mn67:7.10"
msgid ""
"evameva kho, bhante, santettha bhikkhū navā acirapabbajitā adhunāgatā imaṃ "
"dhammavinayaṃ, tesaṃ bhagavantaṃ apassantānaṃ siyā aññathattaṃ, siyā "
"vipariṇāmo."
msgstr ""

msgctxt "mn67:7.11"
msgid "Abhinandatu, bhante, bhagavā bhikkhusaṃghaṃ;"
msgstr ""

msgctxt "mn67:7.12"
msgid "abhivadatu, bhante, bhagavā bhikkhusaṃghaṃ."
msgstr ""

msgctxt "mn67:7.13"
msgid ""
"Seyyathāpi, bhante, bhagavatā pubbe bhikkhusaṃgho anuggahito; evameva "
"bhagavā etarahi anuggaṇhātu bhikkhusaṃghan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya8"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.459"></a>
#. <a class="sc" id="sc3"></a>
#. VAR: samiñjitaṃ → sammiñjitaṃ (bj, s1-3, km)
msgctxt "mn67:8.1"
msgid ""
"Atha kho brahmā sahampati bhagavato cetasā cetoparivitakkamaññāya—seyyathāpi "
"nāma balavā puriso samiñjitaṃ vā bāhaṃ pasāreyya, pasāritaṃ vā bāhaṃ "
"samiñjeyya; evameva—brahmaloke antarahito bhagavato purato pāturahosi."
msgstr ""

msgctxt "mn67:8.2"
msgid ""
"Atha kho brahmā sahampati ekaṃsaṃ uttarāsaṅgaṃ karitvā yena bhagavā "
"tenañjaliṃ paṇāmetvā bhagavantaṃ etadavoca:"
msgstr ""

#. <a class="nya" id="nya9"></a>
msgctxt "mn67:9.1"
msgid "“abhinandatu, bhante, bhagavā bhikkhusaṃghaṃ;"
msgstr ""

msgctxt "mn67:9.2"
msgid "abhivadatu, bhante, bhagavā bhikkhusaṃghaṃ."
msgstr ""

msgctxt "mn67:9.3"
msgid ""
"Seyyathāpi, bhante, bhagavatā pubbe bhikkhusaṃgho anuggahito; evameva "
"bhagavā etarahi anuggaṇhātu bhikkhusaṃghaṃ."
msgstr ""

msgctxt "mn67:9.4"
msgid ""
"Santettha, bhante, bhikkhū navā acirapabbajitā adhunāgatā imaṃ "
"dhammavinayaṃ, tesaṃ bhagavantaṃ dassanāya alabhantānaṃ siyā aññathattaṃ, "
"siyā vipariṇāmo."
msgstr ""

msgctxt "mn67:9.5"
msgid ""
"Seyyathāpi, bhante, bījānaṃ taruṇānaṃ udakaṃ alabhantānaṃ siyā aññathattaṃ, "
"siyā vipariṇāmo;"
msgstr ""

msgctxt "mn67:9.6"
msgid ""
"evameva kho, bhante, santettha bhikkhū navā acirapabbajitā adhunāgatā imaṃ "
"dhammavinayaṃ, tesaṃ bhagavantaṃ dassanāya alabhantānaṃ siyā aññathattaṃ, "
"siyā vipariṇāmo."
msgstr ""

msgctxt "mn67:9.7"
msgid ""
"Seyyathāpi, bhante, vacchassa taruṇassa mātaraṃ apassantassa siyā "
"aññathattaṃ, siyā vipariṇāmo;"
msgstr ""

msgctxt "mn67:9.8"
msgid ""
"evameva kho, bhante, santettha bhikkhū navā acirapabbajitā adhunāgatā imaṃ "
"dhammavinayaṃ, tesaṃ bhagavantaṃ apassantānaṃ siyā aññathattaṃ, siyā "
"vipariṇāmo."
msgstr ""

msgctxt "mn67:9.9"
msgid "Abhinandatu, bhante, bhagavā bhikkhusaṃghaṃ;"
msgstr ""

msgctxt "mn67:9.10"
msgid "abhivadatu, bhante, bhagavā bhikkhusaṃghaṃ."
msgstr ""

msgctxt "mn67:9.11"
msgid ""
"Seyyathāpi, bhante, bhagavatā pubbe bhikkhusaṃgho anuggahito; evameva "
"bhagavā etarahi anuggaṇhātu bhikkhusaṃghan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya10"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "mn67:10.1"
msgid ""
"Asakkhiṃsu kho cātumeyyakā ca sakyā brahmā ca sahampati bhagavantaṃ "
"pasādetuṃ bījūpamena ca taruṇūpamena ca."
msgstr ""

#. <a class="nya" id="nya11"></a>
msgctxt "mn67:11.1"
msgid "Atha kho āyasmā mahāmoggallāno bhikkhū āmantesi:"
msgstr ""

msgctxt "mn67:11.2"
msgid "“uṭṭhethāvuso, gaṇhatha pattacīvaraṃ."
msgstr ""

msgctxt "mn67:11.3"
msgid ""
"Pasādito bhagavā cātumeyyakehi ca sakyehi brahmunā ca sahampatinā bījūpamena "
"ca taruṇūpamena cā”ti."
msgstr ""

#. <a class="nya" id="nya12"></a>
msgctxt "mn67:12.1"
msgid ""
"“Evamāvuso”ti kho te bhikkhū āyasmato mahāmoggallānassa paṭissutvā "
"uṭṭhāyāsanā pattacīvaramādāya yena bhagavā tenupasaṅkamiṃsu; upasaṅkamitvā "
"bhagavantaṃ abhivādetvā ekamantaṃ nisīdiṃsu. Ekamantaṃ nisinnaṃ kho "
"āyasmantaṃ sāriputtaṃ bhagavā etadavoca:"
msgstr ""

msgctxt "mn67:12.2"
msgid "“kinti te, sāriputta, ahosi mayā bhikkhusaṃghe paṇāmite”ti?"
msgstr ""

msgctxt "mn67:12.3"
msgid "“Evaṃ kho me, bhante, ahosi:"
msgstr ""

msgctxt "mn67:12.4"
msgid "‘bhagavatā bhikkhusaṃgho paṇāmito."
msgstr ""

msgctxt "mn67:12.5"
msgid ""
"Appossukko dāni bhagavā diṭṭhadhammasukhavihāraṃ anuyutto viharissati, "
"mayampi dāni appossukkā diṭṭhadhammasukhavihāramanuyuttā viharissāmā’”ti."
msgstr ""

# The PTS reading is clearly preferable: na kho te Sāriputta puna pi evarūpaṁ cittaṁ uppādetabbanti. Note that the MS reading is already mentioned in the PTS variants.
msgctxt "mn67:12.6"
msgid ""
"“Āgamehi tvaṃ, sāriputta, āgamehi tvaṃ, sāriputta, "
"diṭṭhadhammasukhavihāran”ti."
msgstr ""

#. <a class="nya" id="nya13"></a>
msgctxt "mn67:13.1"
msgid "Atha kho bhagavā āyasmantaṃ mahāmoggallānaṃ āmantesi:"
msgstr ""

msgctxt "mn67:13.2"
msgid "“kinti te, moggallāna, ahosi mayā bhikkhusaṃghe paṇāmite”ti?"
msgstr ""

msgctxt "mn67:13.3"
msgid "“Evaṃ kho me, bhante, ahosi:"
msgstr ""

msgctxt "mn67:13.4"
msgid "‘bhagavatā bhikkhusaṃgho paṇāmito."
msgstr ""

msgctxt "mn67:13.5"
msgid ""
"Appossukko dāni bhagavā diṭṭhadhammasukhavihāraṃ anuyutto viharissati, "
"ahañca dāni āyasmā ca sāriputto bhikkhusaṃghaṃ pariharissāmā’”ti."
msgstr ""

msgctxt "mn67:13.6"
msgid "“Sādhu sādhu, moggallāna."
msgstr ""

msgctxt "mn67:13.7"
msgid ""
"Ahaṃ vā hi, moggallāna, bhikkhusaṃghaṃ parihareyyaṃ sāriputtamoggallānā "
"vā”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya14"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.460"></a>
#. <a class="sc" id="sc5"></a>
msgctxt "mn67:14.1"
msgid "Atha kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "mn67:14.2"
msgid "“cattārimāni, bhikkhave, bhayāni udakorohante pāṭikaṅkhitabbāni."
msgstr ""

msgctxt "mn67:14.3"
msgid "Katamāni cattāri?"
msgstr ""

#. VAR: Ūmibhayaṃ → ummibhayaṃ (s1-3, km)
msgctxt "mn67:14.4"
msgid "Ūmibhayaṃ, kumbhīlabhayaṃ, āvaṭṭabhayaṃ, susukābhayaṃ—"
msgstr ""

msgctxt "mn67:14.5"
msgid "imāni, bhikkhave, cattāri bhayāni udakorohante pāṭikaṅkhitabbāni."
msgstr ""

#. <a class="nya" id="nya15"></a>
msgctxt "mn67:15.1"
msgid ""
"Evameva kho, bhikkhave, cattārimāni bhayāni idhekacce puggale imasmiṃ "
"dhammavinaye agārasmā anagāriyaṃ pabbajite pāṭikaṅkhitabbāni."
msgstr ""

msgctxt "mn67:15.2"
msgid "Katamāni cattāri?"
msgstr ""

msgctxt "mn67:15.3"
msgid "Ūmibhayaṃ, kumbhīlabhayaṃ, āvaṭṭabhayaṃ, susukābhayaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya16"></a>
#. <a class="sc" id="sc6"></a>
msgctxt "mn67:16.1"
msgid "Katamañca, bhikkhave, ūmibhayaṃ?"
msgstr ""

msgctxt "mn67:16.2"
msgid ""
"Idha, bhikkhave, ekacco kulaputto saddhā agārasmā anagāriyaṃ pabbajito hoti:"
msgstr ""

msgctxt "mn67:16.3"
msgid ""
"‘otiṇṇomhi jātiyā jarāya maraṇena sokehi paridevehi dukkhehi domanassehi "
"upāyāsehi dukkhotiṇṇo dukkhapareto;"
msgstr ""

msgctxt "mn67:16.4"
msgid ""
"appeva nāma imassa kevalassa dukkhakkhandhassa antakiriyā paññāyethā’ti."
msgstr ""

msgctxt "mn67:16.5"
msgid "Tamenaṃ tathā pabbajitaṃ samānaṃ sabrahmacārī ovadanti, anusāsanti:"
msgstr ""

msgctxt "mn67:16.6"
msgid ""
"‘evaṃ te abhikkamitabbaṃ, evaṃ te paṭikkamitabbaṃ, evaṃ te ālokitabbaṃ, evaṃ "
"te vilokitabbaṃ, evaṃ te samiñjitabbaṃ, evaṃ te pasāritabbaṃ, evaṃ te "
"saṅghāṭipattacīvaraṃ dhāretabban’ti."
msgstr ""

msgctxt "mn67:16.7"
msgid "Tassa evaṃ hoti:"
msgstr ""

#. VAR: ovadāma, anusāsāma → ovadāmapi anusāsāmapi (bj, s1-3, km, pts1)
msgctxt "mn67:16.8"
msgid "‘mayaṃ kho pubbe agāriyabhūtā samānā aññe ovadāma, anusāsāma."
msgstr ""

#. VAR: amhe → evaṃ (mr)
msgctxt "mn67:16.9"
msgid ""
"Ime panamhākaṃ puttamattā maññe, nattamattā maññe, amhe ovaditabbaṃ "
"anusāsitabbaṃ maññantī’ti."
msgstr ""

msgctxt "mn67:16.10"
msgid "So sikkhaṃ paccakkhāya hīnāyāvattati."
msgstr ""

msgctxt "mn67:16.11"
msgid ""
"Ayaṃ vuccati, bhikkhave, ūmibhayassa bhīto sikkhaṃ paccakkhāya hīnāyāvatto."
msgstr ""

msgctxt "mn67:16.12"
msgid "‘Ūmibhayan’ti kho, bhikkhave, kodhupāyāsassetaṃ adhivacanaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya17"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.461"></a>
#. <a class="sc" id="sc7"></a>
msgctxt "mn67:17.1"
msgid "Katamañca, bhikkhave, kumbhīlabhayaṃ?"
msgstr ""

msgctxt "mn67:17.2"
msgid ""
"Idha, bhikkhave, ekacco kulaputto saddhā agārasmā anagāriyaṃ pabbajito hoti:"
msgstr ""

msgctxt "mn67:17.3"
msgid ""
"‘otiṇṇomhi jātiyā jarāya maraṇena sokehi paridevehi dukkhehi domanassehi "
"upāyāsehi dukkhotiṇṇo dukkhapareto;"
msgstr ""

msgctxt "mn67:17.4"
msgid ""
"appeva nāma imassa kevalassa dukkhakkhandhassa antakiriyā paññāyethā’ti."
msgstr ""

msgctxt "mn67:17.5"
msgid "Tamenaṃ tathā pabbajitaṃ samānaṃ sabrahmacārī ovadanti anusāsanti:"
msgstr ""

msgctxt "mn67:17.6"
msgid ""
"‘idaṃ te khāditabbaṃ, idaṃ te na khāditabbaṃ; idaṃ te bhuñjitabbaṃ, idaṃ te "
"na bhuñjitabbaṃ; idaṃ te sāyitabbaṃ, idaṃ te na sāyitabbaṃ; idaṃ te "
"pātabbaṃ, idaṃ te na pātabbaṃ; kappiyaṃ te khāditabbaṃ, akappiyaṃ te na "
"khāditabbaṃ; kappiyaṃ te bhuñjitabbaṃ, akappiyaṃ te na bhuñjitabbaṃ; "
"kappiyaṃ te sāyitabbaṃ, akappiyaṃ te na sāyitabbaṃ; kappiyaṃ te pātabbaṃ, "
"akappiyaṃ te na pātabbaṃ; kāle te khāditabbaṃ, vikāle te na khāditabbaṃ; "
"kāle te bhuñjitabbaṃ, vikāle te na bhuñjitabbaṃ; kāle te sāyitabbaṃ, vikāle "
"te na sāyitabbaṃ; kāle te pātabbaṃ, vikāle te na pātabban’ti."
msgstr ""

#. VAR: pivāma → pipāma (si, pts1)
msgctxt "mn67:17.7"
msgid ""
"Tassa evaṃ hoti: ‘mayaṃ kho pubbe agāriyabhūtā samānā yaṃ icchāma taṃ "
"khādāma, yaṃ na icchāma na taṃ khādāma; yaṃ icchāma taṃ bhuñjāma, yaṃ na "
"icchāma na taṃ bhuñjāma; yaṃ icchāma taṃ sāyāma, yaṃ na icchāma na taṃ "
"sāyāma; yaṃ icchāma taṃ pivāma, yaṃ na icchāma na taṃ pivāma;"
msgstr ""

msgctxt "mn67:17.8"
msgid ""
"kappiyampi khādāma, akappiyampi khādāma; kappiyampi bhuñjāma, akappiyampi "
"bhuñjāma; kappiyampi sāyāma, akappiyampi sāyāma; kappiyampi pivāma, "
"akappiyampi pivāma; kālepi khādāma, vikālepi khādāma; kālepi bhuñjāma "
"vikālepi bhuñjāma; kālepi sāyāma, vikālepi sāyāma; kālepi pivāma, vikālepi "
"pivāma."
msgstr ""

msgctxt "mn67:17.9"
msgid ""
"Yampi no saddhā gahapatikā divā vikāle paṇītaṃ khādanīyaṃ bhojanīyaṃ denti "
"tatthapime mukhāvaraṇaṃ maññe karontī’ti."
msgstr ""

msgctxt "mn67:17.10"
msgid "So sikkhaṃ paccakkhāya hīnāyāvattati."
msgstr ""

msgctxt "mn67:17.11"
msgid ""
"Ayaṃ vuccati, bhikkhave, kumbhīlabhayassa bhīto sikkhaṃ paccakkhāya "
"hīnāyāvatto."
msgstr ""

msgctxt "mn67:17.12"
msgid "‘Kumbhīlabhayan’ti kho, bhikkhave, odarikattassetaṃ adhivacanaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya18"></a>
#. <a class="sc" id="sc8"></a>
msgctxt "mn67:18.1"
msgid "Katamañca, bhikkhave, āvaṭṭabhayaṃ?"
msgstr ""

msgctxt "mn67:18.2"
msgid ""
"Idha, bhikkhave, ekacco kulaputto saddhā agārasmā anagāriyaṃ pabbajito hoti:"
msgstr ""

msgctxt "mn67:18.3"
msgid ""
"‘otiṇṇomhi jātiyā jarāya maraṇena sokehi paridevehi dukkhehi domanassehi "
"upāyāsehi dukkhotiṇṇo dukkhapareto;"
msgstr ""

msgctxt "mn67:18.4"
msgid ""
"appeva nāma imassa kevalassa dukkhakkhandhassa antakiriyā paññāyethā’ti."
msgstr ""

msgctxt "mn67:18.5"
msgid ""
"So evaṃ pabbajito samāno pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya gāmaṃ "
"vā nigamaṃ vā piṇḍāya pavisati."
msgstr ""

msgctxt "mn67:18.6"
msgid ""
"Arakkhiteneva kāyena arakkhitāya vācāya anupaṭṭhitāya satiyā asaṃvutehi "
"indriyehi so tattha passati gahapatiṃ vā gahapatiputtaṃ vā pañcahi "
"kāmaguṇehi samappitaṃ samaṅgībhūtaṃ paricārayamānaṃ."
msgstr ""

msgctxt "mn67:18.7"
msgid "Tassa evaṃ hoti:"
msgstr ""

msgctxt "mn67:18.8"
msgid ""
"‘mayaṃ kho pubbe agāriyabhūtā samānā pañcahi kāmaguṇehi samappitā "
"samaṅgībhūtā paricārimhā."
msgstr ""

#. VAR: Saṃvijjanti kho pana me kule → saṃvijjante kho kule (bj, s1-3, km, pts1)
msgctxt "mn67:18.9"
msgid "Saṃvijjanti kho pana me kule bhogā."
msgstr ""

msgctxt "mn67:18.10"
msgid "Sakkā bhoge ca bhuñjituṃ puññāni ca kātun’ti."
msgstr ""

msgctxt "mn67:18.11"
msgid "So sikkhaṃ paccakkhāya hīnāyāvattati."
msgstr ""

msgctxt "mn67:18.12"
msgid ""
"Ayaṃ vuccati, bhikkhave, āvaṭṭabhayassa bhīto sikkhaṃ paccakkhāya "
"hīnāyāvatto."
msgstr ""

msgctxt "mn67:18.13"
msgid "‘Āvaṭṭabhayan’ti kho, bhikkhave, pañcannetaṃ kāmaguṇānaṃ adhivacanaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya19"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.462"></a>
#. <a class="sc" id="sc9"></a>
msgctxt "mn67:19.1"
msgid "Katamañca, bhikkhave, susukābhayaṃ?"
msgstr ""

msgctxt "mn67:19.2"
msgid ""
"Idha, bhikkhave, ekacco kulaputto saddhā agārasmā anagāriyaṃ pabbajito hoti:"
msgstr ""

msgctxt "mn67:19.3"
msgid ""
"‘otiṇṇomhi jātiyā jarāya maraṇena sokehi paridevehi dukkhehi domanassehi "
"upāyāsehi dukkhotiṇṇo dukkhapareto;"
msgstr ""

msgctxt "mn67:19.4"
msgid ""
"appeva nāma imassa kevalassa dukkhakkhandhassa antakiriyā paññāyethā’ti."
msgstr ""

msgctxt "mn67:19.5"
msgid ""
"So evaṃ pabbajito samāno pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya gāmaṃ "
"vā nigamaṃ vā piṇḍāya pavisati."
msgstr ""

msgctxt "mn67:19.6"
msgid ""
"Arakkhiteneva kāyena arakkhitāya vācāya anupaṭṭhitāya satiyā asaṃvutehi "
"indriyehi so tattha passati mātugāmaṃ dunnivatthaṃ vā duppārutaṃ vā."
msgstr ""

msgctxt "mn67:19.7"
msgid ""
"Tassa mātugāmaṃ disvā dunnivatthaṃ vā duppārutaṃ vā rāgo cittaṃ anuddhaṃseti."
msgstr ""

msgctxt "mn67:19.8"
msgid "So rāgānuddhaṃsena cittena sikkhaṃ paccakkhāya hīnāyāvattati."
msgstr ""

msgctxt "mn67:19.9"
msgid ""
"Ayaṃ vuccati, bhikkhave, susukābhayassa bhīto sikkhaṃ paccakkhāya "
"hīnāyāvatto."
msgstr ""

msgctxt "mn67:19.10"
msgid "‘Susukābhayan’ti kho, bhikkhave, mātugāmassetaṃ adhivacanaṃ."
msgstr ""

#. <a class="nya" id="nya20"></a>
msgctxt "mn67:20.1"
msgid ""
"Imāni kho, bhikkhave, cattāri bhayāni, idhekacce puggale imasmiṃ "
"dhammavinaye agārasmā anagāriyaṃ pabbajite pāṭikaṅkhitabbānī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "mn67:20.2"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "mn67:20.3"
msgid "Attamanā te bhikkhū bhagavato bhāsitaṃ abhinandunti."
msgstr ""

#. </p><p class="endsection">
msgctxt "mn67:20.4"
msgid "Cātumasuttaṃ niṭṭhitaṃ sattamaṃ."
msgstr ""
