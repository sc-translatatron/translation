#. <section class="sutta" id="mn38"><article><div class="hgroup"><p class="division">
msgctxt "mn38:0.1"
msgid "Majjhima Nikāya 38"
msgstr ""

#. </p><h1>
msgctxt "mn38:0.2"
msgid "Mahātaṇhāsaṅkhayasutta"
msgstr ""

#. </h1></div><p>
#. <a class="nya" id="nya1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.257"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "mn38:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "mn38:1.2"
msgid ""
"ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

#. <a class="nya" id="nya2"></a>
msgctxt "mn38:2.1"
msgid ""
"Tena kho pana samayena sātissa nāma bhikkhuno kevaṭṭaputtassa evarūpaṃ "
"pāpakaṃ diṭṭhigataṃ uppannaṃ hoti:"
msgstr ""

msgctxt "mn38:2.2"
msgid ""
"“tathāhaṃ bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ viññāṇaṃ "
"sandhāvati saṃsarati anaññan”ti."
msgstr ""

#. <a class="nya" id="nya3"></a>
msgctxt "mn38:3.1"
msgid "Assosuṃ kho sambahulā bhikkhū:"
msgstr ""

msgctxt "mn38:3.2"
msgid ""
"“sātissa kira nāma bhikkhuno kevaṭṭaputtassa evarūpaṃ pāpakaṃ diṭṭhigataṃ "
"uppannaṃ:"
msgstr ""

msgctxt "mn38:3.3"
msgid ""
"‘tathāhaṃ bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ viññāṇaṃ "
"sandhāvati saṃsarati, anaññan’”ti."
msgstr ""

msgctxt "mn38:3.4"
msgid ""
"Atha kho te bhikkhū yena sāti bhikkhu kevaṭṭaputto tenupasaṅkamiṃsu; "
"upasaṅkamitvā sātiṃ bhikkhuṃ kevaṭṭaputtaṃ etadavocuṃ:"
msgstr ""

msgctxt "mn38:3.5"
msgid "“saccaṃ kira te, āvuso sāti, evarūpaṃ pāpakaṃ diṭṭhigataṃ uppannaṃ:"
msgstr ""

msgctxt "mn38:3.6"
msgid ""
"‘tathāhaṃ bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ viññāṇaṃ "
"sandhāvati saṃsarati, anaññan’”ti?"
msgstr ""

msgctxt "mn38:3.7"
msgid ""
"“Evaṃ byā kho ahaṃ, āvuso, bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ "
"viññāṇaṃ sandhāvati saṃsarati, anaññan”ti."
msgstr ""

msgctxt "mn38:3.8"
msgid ""
"Atha kho te bhikkhū sātiṃ bhikkhuṃ kevaṭṭaputtaṃ etasmā pāpakā diṭṭhigatā "
"vivecetukāmā samanuyuñjanti samanugāhanti samanubhāsanti:"
msgstr ""

msgctxt "mn38:3.9"
msgid ""
"“mā evaṃ, āvuso sāti, avaca, mā bhagavantaṃ abbhācikkhi, na hi sādhu "
"bhagavato abbhakkhānaṃ, na hi bhagavā evaṃ vadeyya."
msgstr ""

msgctxt "mn38:3.10"
msgid ""
"Anekapariyāyenāvuso sāti, paṭiccasamuppannaṃ viññāṇaṃ vuttaṃ bhagavatā, "
"aññatra paccayā natthi viññāṇassa sambhavo”ti."
msgstr ""

msgctxt "mn38:3.11"
msgid ""
"Evampi kho sāti bhikkhu kevaṭṭaputto tehi bhikkhūhi samanuyuñjiyamāno "
"samanugāhiyamāno samanubhāsiyamāno tadeva pāpakaṃ diṭṭhigataṃ thāmasā "
"parāmāsā abhinivissa voharati:"
msgstr ""

msgctxt "mn38:3.12"
msgid ""
"“evaṃ byā kho ahaṃ, āvuso, bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ "
"viññāṇaṃ sandhāvati saṃsarati anaññan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya4"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "mn38:4.1"
msgid ""
"Yato kho te bhikkhū nāsakkhiṃsu sātiṃ bhikkhuṃ kevaṭṭaputtaṃ etasmā pāpakā "
"diṭṭhigatā vivecetuṃ, atha kho te bhikkhū yena bhagavā tenupasaṅkamiṃsu; "
"upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdiṃsu. Ekamantaṃ nisinnā "
"kho te bhikkhū bhagavantaṃ etadavocuṃ:"
msgstr ""

msgctxt "mn38:4.2"
msgid ""
"“sātissa nāma, bhante, bhikkhuno kevaṭṭaputtassa evarūpaṃ pāpakaṃ "
"diṭṭhigataṃ uppannaṃ:"
msgstr ""

msgctxt "mn38:4.3"
msgid ""
"‘tathāhaṃ bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ viññāṇaṃ "
"sandhāvati saṃsarati, anaññan’ti."
msgstr ""

msgctxt "mn38:4.4"
msgid ""
"Assumha kho mayaṃ, bhante, sātissa kira nāma bhikkhuno kevaṭṭaputtassa "
"evarūpaṃ pāpakaṃ diṭṭhigataṃ uppannaṃ:"
msgstr ""

msgctxt "mn38:4.5"
msgid ""
"‘tathāhaṃ bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ viññāṇaṃ "
"sandhāvati saṃsarati, anaññan’ti."
msgstr ""

msgctxt "mn38:4.6"
msgid ""
"Atha kho mayaṃ, bhante, yena sāti bhikkhu kevaṭṭaputto tenupasaṅkamimha; "
"upasaṅkamitvā sātiṃ bhikkhuṃ kevaṭṭaputtaṃ etadavocumha:"
msgstr ""

msgctxt "mn38:4.7"
msgid "‘saccaṃ kira te, āvuso sāti, evarūpaṃ pāpakaṃ diṭṭhigataṃ uppannaṃ:"
msgstr ""

msgctxt "mn38:4.8"
msgid ""
"“tathāhaṃ bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ viññāṇaṃ "
"sandhāvati saṃsarati, anaññan”’ti?"
msgstr ""

msgctxt "mn38:4.9"
msgid "Evaṃ vutte, bhante, sāti bhikkhu kevaṭṭaputto amhe etadavoca:"
msgstr ""

msgctxt "mn38:4.10"
msgid ""
"‘evaṃ byā kho ahaṃ, āvuso, bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ "
"viññāṇaṃ sandhāvati saṃsarati, anaññan’ti."
msgstr ""

msgctxt "mn38:4.11"
msgid ""
"Atha kho mayaṃ, bhante, sātiṃ bhikkhuṃ kevaṭṭaputtaṃ etasmā pāpakā "
"diṭṭhigatā vivecetukāmā samanuyuñjimha samanugāhimha samanubhāsimha:"
msgstr ""

msgctxt "mn38:4.12"
msgid ""
"‘mā evaṃ, āvuso sāti, avaca, mā bhagavantaṃ abbhācikkhi, na hi sādhu "
"bhagavato abbhakkhānaṃ, na hi bhagavā evaṃ vadeyya."
msgstr ""

msgctxt "mn38:4.13"
msgid ""
"Anekapariyāyenāvuso sāti, paṭiccasamuppannaṃ viññāṇaṃ vuttaṃ bhagavatā, "
"aññatra paccayā natthi viññāṇassa sambhavo’ti."
msgstr ""

msgctxt "mn38:4.14"
msgid ""
"Evampi kho, bhante, sāti bhikkhu kevaṭṭaputto amhehi samanuyuñjiyamāno "
"samanugāhiyamāno samanubhāsiyamāno tadeva pāpakaṃ diṭṭhigataṃ thāmasā "
"parāmasā abhinivissa voharati:"
msgstr ""

msgctxt "mn38:4.15"
msgid ""
"‘evaṃ byā kho ahaṃ, āvuso, bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ "
"viññāṇaṃ sandhāvati saṃsarati, anaññan’ti."
msgstr ""

msgctxt "mn38:4.16"
msgid ""
"Yato kho mayaṃ, bhante, nāsakkhimha sātiṃ bhikkhuṃ kevaṭṭaputtaṃ etasmā "
"pāpakā diṭṭhigatā vivecetuṃ, atha mayaṃ etamatthaṃ bhagavato ārocemā”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya5"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.258"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "mn38:5.1"
msgid "Atha kho bhagavā aññataraṃ bhikkhuṃ āmantesi:"
msgstr ""

msgctxt "mn38:5.2"
msgid "“ehi tvaṃ bhikkhu, mama vacanena sātiṃ bhikkhuṃ kevaṭṭaputtaṃ āmantehi:"
msgstr ""

msgctxt "mn38:5.3"
msgid "‘satthā taṃ, āvuso sāti, āmantetī’”ti."
msgstr ""

msgctxt "mn38:5.4"
msgid ""
"“Evaṃ, bhante”ti kho so bhikkhu bhagavato paṭissutvā yena sāti bhikkhu "
"kevaṭṭaputto tenupasaṅkami; upasaṅkamitvā sātiṃ bhikkhuṃ kevaṭṭaputtaṃ "
"etadavoca:"
msgstr ""

msgctxt "mn38:5.5"
msgid "“satthā taṃ, āvuso sāti, āmantetī”ti."
msgstr ""

msgctxt "mn38:5.6"
msgid ""
"“Evamāvuso”ti kho sāti bhikkhu kevaṭṭaputto tassa bhikkhuno paṭissutvā yena "
"bhagavā tenupasaṅkami; upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ "
"nisīdi. Ekamantaṃ nisinnaṃ kho sātiṃ bhikkhuṃ kevaṭṭaputtaṃ bhagavā "
"etadavoca:"
msgstr ""

msgctxt "mn38:5.7"
msgid "“saccaṃ kira te, sāti, evarūpaṃ pāpakaṃ diṭṭhigataṃ uppannaṃ:"
msgstr ""

msgctxt "mn38:5.8"
msgid ""
"‘tathāhaṃ bhagavatā dhammaṃ desitaṃ ājānāmi yathā tadevidaṃ viññāṇaṃ "
"sandhāvati saṃsarati, anaññan’”ti?"
msgstr ""

msgctxt "mn38:5.9"
msgid ""
"“Evaṃ byā kho ahaṃ, bhante, bhagavatā dhammaṃ desitaṃ ājānāmi yathā "
"tadevidaṃ viññāṇaṃ sandhāvati saṃsarati, anaññan”ti."
msgstr ""

msgctxt "mn38:5.10"
msgid "“Katamaṃ taṃ, sāti, viññāṇan”ti?"
msgstr ""

# Nyanatusita points out that keeping the msculine and hence personal pronoun here is more appropriate. this view is also in MN 2.
msgctxt "mn38:5.11"
msgid ""
"“Yvāyaṃ, bhante, vado vedeyyo tatra tatra kalyāṇapāpakānaṃ kammānaṃ vipākaṃ "
"paṭisaṃvedetī”ti."
msgstr ""

msgctxt "mn38:5.12"
msgid ""
"“Kassa nu kho nāma tvaṃ, moghapurisa, mayā evaṃ dhammaṃ desitaṃ ājānāsi?"
msgstr ""

msgctxt "mn38:5.13"
msgid ""
"Nanu mayā, moghapurisa, anekapariyāyena paṭiccasamuppannaṃ viññāṇaṃ vuttaṃ, "
"aññatra paccayā natthi viññāṇassa sambhavoti?"
msgstr ""

msgctxt "mn38:5.14"
msgid ""
"Atha ca pana tvaṃ, moghapurisa, attanā duggahitena amhe ceva abbhācikkhasi, "
"attānañca khaṇasi, bahuñca apuññaṃ pasavasi."
msgstr ""

msgctxt "mn38:5.15"
msgid "Tañhi te, moghapurisa, bhavissati dīgharattaṃ ahitāya dukkhāyā”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya6"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.259"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "mn38:6.1"
msgid "Atha kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "mn38:6.2"
msgid "“Taṃ kiṃ maññatha, bhikkhave, "
msgstr ""

msgctxt "mn38:6.3"
msgid "api nāyaṃ sāti bhikkhu kevaṭṭaputto usmīkatopi imasmiṃ dhammavinaye”ti?"
msgstr ""

msgctxt "mn38:6.4"
msgid "“Kiñhi siyā, bhante?"
msgstr ""

msgctxt "mn38:6.5"
msgid "No hetaṃ, bhante”ti."
msgstr ""

msgctxt "mn38:6.6"
msgid ""
"Evaṃ vutte, sāti bhikkhu kevaṭṭaputto tuṇhībhūto maṅkubhūto pattakkhandho "
"adhomukho pajjhāyanto appaṭibhāno nisīdi."
msgstr ""

msgctxt "mn38:6.7"
msgid ""
"Atha kho bhagavā sātiṃ bhikkhuṃ kevaṭṭaputtaṃ tuṇhībhūtaṃ maṅkubhūtaṃ "
"pattakkhandhaṃ adhomukhaṃ pajjhāyantaṃ appaṭibhānaṃ viditvā sātiṃ bhikkhuṃ "
"kevaṭṭaputtaṃ etadavoca:"
msgstr ""

msgctxt "mn38:6.8"
msgid ""
"“paññāyissasi kho tvaṃ, moghapurisa, etena sakena pāpakena diṭṭhigatena."
msgstr ""

msgctxt "mn38:6.9"
msgid "Idhāhaṃ bhikkhū paṭipucchissāmī”ti."
msgstr ""

#. <a class="nya" id="nya7"></a>
msgctxt "mn38:7.1"
msgid "Atha kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "mn38:7.2"
msgid ""
"“tumhepi me, bhikkhave, evaṃ dhammaṃ desitaṃ ājānātha yathāyaṃ sāti bhikkhu "
"kevaṭṭaputto attanā duggahitena amhe ceva abbhācikkhati, attānañca khaṇati, "
"bahuñca apuññaṃ pasavatī”ti?"
msgstr ""

msgctxt "mn38:7.3"
msgid "“No hetaṃ, bhante."
msgstr ""

msgctxt "mn38:7.4"
msgid ""
"Anekapariyāyena hi no, bhante, paṭiccasamuppannaṃ viññāṇaṃ vuttaṃ bhagavatā, "
"aññatra paccayā natthi viññāṇassa sambhavo”ti."
msgstr ""

msgctxt "mn38:7.5"
msgid "“Sādhu sādhu, bhikkhave."
msgstr ""

msgctxt "mn38:7.6"
msgid "Sādhu kho me tumhe, bhikkhave, evaṃ dhammaṃ desitaṃ ājānātha."
msgstr ""

# Texts close quote incorrect here.
msgctxt "mn38:7.7"
msgid ""
"Anekapariyāyena hi vo, bhikkhave, paṭiccasamuppannaṃ viññāṇaṃ vuttaṃ mayā, "
"aññatra paccayā natthi viññāṇassa sambhavo”ti."
msgstr ""

msgctxt "mn38:7.8"
msgid ""
"Atha ca panāyaṃ sāti bhikkhu kevaṭṭaputto attanā duggahitena amhe ceva "
"abbhācikkhati, attānañca khaṇati, bahuñca apuññaṃ pasavati."
msgstr ""

msgctxt "mn38:7.9"
msgid "Tañhi tassa moghapurisassa bhavissati dīgharattaṃ ahitāya dukkhāya."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya8"></a>
#. <a class="sc" id="sc5"></a>
#. VAR: saṅkhyaṃ gacchati → saṅkhaṃ gacchati (bj, pts1)
msgctxt "mn38:8.1"
msgid ""
"“Yaṃ yadeva, bhikkhave, paccayaṃ paṭicca uppajjati viññāṇaṃ, tena teneva "
"viññāṇantveva saṅkhyaṃ gacchati."
msgstr ""

msgctxt "mn38:8.2"
msgid ""
"Cakkhuñca paṭicca rūpe ca uppajjati viññāṇaṃ, cakkhuviññāṇantveva saṅkhyaṃ "
"gacchati;"
msgstr ""

msgctxt "mn38:8.3"
msgid ""
"sotañca paṭicca sadde ca uppajjati viññāṇaṃ, sotaviññāṇantveva saṅkhyaṃ "
"gacchati;"
msgstr ""

msgctxt "mn38:8.4"
msgid ""
"ghānañca paṭicca gandhe ca uppajjati viññāṇaṃ, ghānaviññāṇantveva saṅkhyaṃ "
"gacchati;"
msgstr ""

msgctxt "mn38:8.5"
msgid ""
"jivhañca paṭicca rase ca uppajjati viññāṇaṃ, jivhāviññāṇantveva saṅkhyaṃ "
"gacchati;"
msgstr ""

msgctxt "mn38:8.6"
msgid ""
"kāyañca paṭicca phoṭṭhabbe ca uppajjati viññāṇaṃ, kāyaviññāṇantveva saṅkhyaṃ "
"gacchati;"
msgstr ""

msgctxt "mn38:8.7"
msgid ""
"manañca paṭicca dhamme ca uppajjati viññāṇaṃ, manoviññāṇantveva saṅkhyaṃ "
"gacchati."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.260"></a>
#. <a class="sc" id="sc6"></a>
msgctxt "mn38:8.8"
msgid ""
"Seyyathāpi, bhikkhave, yaṃ yadeva paccayaṃ paṭicca aggi jalati tena teneva "
"saṅkhyaṃ gacchati."
msgstr ""

msgctxt "mn38:8.9"
msgid "Kaṭṭhañca paṭicca aggi jalati, kaṭṭhaggitveva saṅkhyaṃ gacchati;"
msgstr ""

msgctxt "mn38:8.10"
msgid "sakalikañca paṭicca aggi jalati, sakalikaggitveva saṅkhyaṃ gacchati;"
msgstr ""

msgctxt "mn38:8.11"
msgid "tiṇañca paṭicca aggi jalati, tiṇaggitveva saṅkhyaṃ gacchati;"
msgstr ""

msgctxt "mn38:8.12"
msgid "gomayañca paṭicca aggi jalati, gomayaggitveva saṅkhyaṃ gacchati;"
msgstr ""

msgctxt "mn38:8.13"
msgid "thusañca paṭicca aggi jalati, thusaggitveva saṅkhyaṃ gacchati;"
msgstr ""

msgctxt "mn38:8.14"
msgid "saṅkārañca paṭicca aggi jalati, saṅkāraggitveva saṅkhyaṃ gacchati."
msgstr ""

msgctxt "mn38:8.15"
msgid ""
"Evameva kho, bhikkhave, yaṃ yadeva paccayaṃ paṭicca uppajjati viññāṇaṃ, tena "
"teneva saṅkhyaṃ gacchati."
msgstr ""

msgctxt "mn38:8.16"
msgid ""
"Cakkhuñca paṭicca rūpe ca uppajjati viññāṇaṃ, cakkhuviññāṇantveva saṅkhyaṃ "
"gacchati;"
msgstr ""

msgctxt "mn38:8.17"
msgid ""
"sotañca paṭicca sadde ca uppajjati viññāṇaṃ, sotaviññāṇantveva saṅkhyaṃ "
"gacchati, "
msgstr ""

msgctxt "mn38:8.18"
msgid ""
"ghānañca paṭicca gandhe ca uppajjati viññāṇaṃ, ghānaviññāṇantveva saṅkhyaṃ "
"gacchati, "
msgstr ""

msgctxt "mn38:8.19"
msgid ""
"jivhañca paṭicca rase ca uppajjati viññāṇaṃ, jivhāviññāṇantveva saṅkhyaṃ "
"gacchati."
msgstr ""

msgctxt "mn38:8.20"
msgid ""
"Kāyañca paṭicca phoṭṭhabbe ca uppajjati viññāṇaṃ, kāyaviññāṇantveva saṅkhyaṃ "
"gacchati."
msgstr ""

msgctxt "mn38:8.21"
msgid ""
"Manañca paṭicca dhamme ca uppajjati viññāṇaṃ, manoviññāṇantveva saṅkhyaṃ "
"gacchati."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya9"></a>
#. <a class="sc" id="sc7"></a>
msgctxt "mn38:9.1"
msgid "Bhūtamidanti, bhikkhave, passathā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "mn38:9.2"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "mn38:9.3"
msgid "“Tadāhārasambhavanti, bhikkhave, passathā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "mn38:9.4"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc11"></a>
msgctxt "mn38:9.5"
msgid ""
"“Tadāhāranirodhā yaṃ bhūtaṃ, taṃ nirodhadhammanti, bhikkhave, passathā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc12"></a>
msgctxt "mn38:9.6"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya10"></a>
#. <a class="sc" id="sc13"></a>
msgctxt "mn38:10.1"
msgid "“Bhūtamidaṃ nossūti, bhikkhave, kaṅkhato uppajjati vicikicchā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc14"></a>
msgctxt "mn38:10.2"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc15"></a>
msgctxt "mn38:10.3"
msgid ""
"“Tadāhārasambhavaṃ nossūti, bhikkhave, kaṅkhato uppajjati vicikicchā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc16"></a>
msgctxt "mn38:10.4"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc17"></a>
msgctxt "mn38:10.5"
msgid ""
"“Tadāhāranirodhā yaṃ bhūtaṃ, taṃ nirodhadhammaṃ nossūti, bhikkhave, kaṅkhato "
"uppajjati vicikicchā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc18"></a>
msgctxt "mn38:10.6"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya11"></a>
#. <a class="sc" id="sc19"></a>
msgctxt "mn38:11.1"
msgid ""
"“Bhūtamidanti, bhikkhave, yathābhūtaṃ sammappaññāya passato yā vicikicchā sā "
"pahīyatī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc20"></a>
msgctxt "mn38:11.2"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc21"></a>
msgctxt "mn38:11.3"
msgid ""
"“Tadāhārasambhavanti, bhikkhave, yathābhūtaṃ sammappaññāya passato yā "
"vicikicchā sā pahīyatī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc22"></a>
msgctxt "mn38:11.4"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc23"></a>
msgctxt "mn38:11.5"
msgid ""
"“Tadāhāranirodhā yaṃ bhūtaṃ, taṃ nirodhadhammanti, bhikkhave, yathābhūtaṃ "
"sammappaññāya passato yā vicikicchā sā pahīyatī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc24"></a>
msgctxt "mn38:11.6"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya12"></a>
#. <a class="sc" id="sc25"></a>
msgctxt "mn38:12.1"
msgid "“Bhūtamidanti, bhikkhave, itipi vo ettha nibbicikicchā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc26"></a>
msgctxt "mn38:12.2"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc27"></a>
msgctxt "mn38:12.3"
msgid "“Tadāhārasambhavanti, bhikkhave, itipi vo ettha nibbicikicchā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc28"></a>
msgctxt "mn38:12.4"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc29"></a>
msgctxt "mn38:12.5"
msgid ""
"“Tadāhāranirodhā yaṃ bhūtaṃ taṃ nirodhadhammanti, bhikkhave, itipi vo ettha "
"nibbicikicchā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc30"></a>
msgctxt "mn38:12.6"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya13"></a>
#. <a class="sc" id="sc31"></a>
msgctxt "mn38:13.1"
msgid "“Bhūtamidanti, bhikkhave, yathābhūtaṃ sammappaññāya sudiṭṭhan”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc32"></a>
msgctxt "mn38:13.2"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc33"></a>
msgctxt "mn38:13.3"
msgid ""
"“Tadāhārasambhavanti, bhikkhave, yathābhūtaṃ sammappaññāya sudiṭṭhan”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc34"></a>
msgctxt "mn38:13.4"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc35"></a>
msgctxt "mn38:13.5"
msgid ""
"“Tadāhāranirodhā yaṃ bhūtaṃ taṃ nirodhadhammanti, bhikkhave, yathābhūtaṃ "
"sammappaññāya sudiṭṭhan”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc36"></a>
msgctxt "mn38:13.6"
msgid "“Evaṃ, bhante”."
msgstr ""

# An obvious callback to MN 22. the verbs here are used of children playing with sandcastles at SN 23.2. See entries in Cone and BHS dict for kelayati.
#. </p><p>
#. <a class="nya" id="nya14"></a>
#. <a class="sc" id="sc37"></a>
msgctxt "mn38:14.1"
msgid ""
"“Imañce tumhe, bhikkhave, diṭṭhiṃ evaṃ parisuddhaṃ evaṃ pariyodātaṃ "
"allīyetha kelāyetha dhanāyetha mamāyetha, api nu me tumhe, bhikkhave, "
"kullūpamaṃ dhammaṃ desitaṃ ājāneyyātha nittharaṇatthāya no gahaṇatthāyā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc38"></a>
msgctxt "mn38:14.2"
msgid "“No hetaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.261"></a>
#. <a class="sc" id="sc39"></a>
msgctxt "mn38:14.3"
msgid ""
"“Imañce tumhe, bhikkhave, diṭṭhiṃ evaṃ parisuddhaṃ evaṃ pariyodātaṃ na "
"allīyetha na kelāyetha na dhanāyetha na mamāyetha, api nu me tumhe, "
"bhikkhave, kullūpamaṃ dhammaṃ desitaṃ ājāneyyātha nittharaṇatthāya no "
"gahaṇatthāyā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc40"></a>
msgctxt "mn38:14.4"
msgid "“Evaṃ, bhante”."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya15"></a>
#. <a class="sc" id="sc41"></a>
msgctxt "mn38:15.1"
msgid ""
"“Cattārome, bhikkhave, āhārā bhūtānaṃ vā sattānaṃ ṭhitiyā, sambhavesīnaṃ vā "
"anuggahāya."
msgstr ""

msgctxt "mn38:15.2"
msgid "Katame cattāro?"
msgstr ""

msgctxt "mn38:15.3"
msgid ""
"Kabaḷīkāro āhāro oḷāriko vā sukhumo vā, phasso dutiyo, manosañcetanā tatiyā, "
"viññāṇaṃ catutthaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya16"></a>
#. <a class="sc" id="sc42"></a>
msgctxt "mn38:16.1"
msgid ""
"Ime ca, bhikkhave, cattāro āhārā kiṃnidānā kiṃsamudayā kiṃjātikā kiṃpabhavā?"
msgstr ""

msgctxt "mn38:16.2"
msgid "Ime cattāro āhārā taṇhānidānā taṇhāsamudayā taṇhājātikā taṇhāpabhavā."
msgstr ""

msgctxt "mn38:16.3"
msgid "Taṇhā cāyaṃ, bhikkhave, kiṃnidānā kiṃsamudayā kiṃjātikā kiṃpabhavā?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc43"></a>
msgctxt "mn38:16.4"
msgid "Taṇhā vedanānidānā vedanāsamudayā vedanājātikā vedanāpabhavā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc44"></a>
msgctxt "mn38:16.5"
msgid "Vedanā cāyaṃ, bhikkhave, kiṃnidānā kiṃsamudayā kiṃjātikā kiṃpabhavā?"
msgstr ""

msgctxt "mn38:16.6"
msgid "Vedanā phassanidānā phassasamudayā phassajātikā phassapabhavā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc45"></a>
msgctxt "mn38:16.7"
msgid "Phasso cāyaṃ, bhikkhave, kiṃnidāno kiṃsamudayo kiṃjātiko kiṃpabhavo?"
msgstr ""

msgctxt "mn38:16.8"
msgid ""
"Phasso saḷāyatananidāno saḷāyatanasamudayo saḷāyatanajātiko "
"saḷāyatanapabhavo."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc46"></a>
msgctxt "mn38:16.9"
msgid ""
"Saḷāyatanañcidaṃ, bhikkhave, kiṃnidānaṃ kiṃsamudayaṃ kiṃjātikaṃ kiṃpabhavaṃ?"
msgstr ""

msgctxt "mn38:16.10"
msgid ""
"Saḷāyatanaṃ nāmarūpanidānaṃ nāmarūpasamudayaṃ nāmarūpajātikaṃ "
"nāmarūpapabhavaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc47"></a>
msgctxt "mn38:16.11"
msgid ""
"Nāmarūpañcidaṃ, bhikkhave, kiṃnidānaṃ kiṃsamudayaṃ kiṃjātikaṃ kiṃpabhavaṃ?"
msgstr ""

msgctxt "mn38:16.12"
msgid ""
"Nāmarūpaṃ viññāṇanidānaṃ viññāṇasamudayaṃ viññāṇajātikaṃ viññāṇapabhavaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc48"></a>
msgctxt "mn38:16.13"
msgid ""
"Viññāṇañcidaṃ, bhikkhave, kiṃnidānaṃ kiṃsamudayaṃ kiṃjātikaṃ kiṃpabhavaṃ?"
msgstr ""

msgctxt "mn38:16.14"
msgid ""
"Viññāṇaṃ saṅkhāranidānaṃ saṅkhārasamudayaṃ saṅkhārajātikaṃ saṅkhārapabhavaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc49"></a>
msgctxt "mn38:16.15"
msgid "Saṅkhārā cime, bhikkhave, kiṃnidānā kiṃsamudayā kiṃjātikā kiṃpabhavā?"
msgstr ""

msgctxt "mn38:16.16"
msgid "Saṅkhārā avijjānidānā avijjāsamudayā avijjājātikā avijjāpabhavā."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya17"></a>
#. <a class="sc" id="sc50"></a>
msgctxt "mn38:17.1"
msgid "Iti kho, bhikkhave, avijjāpaccayā saṅkhārā, "
msgstr ""

msgctxt "mn38:17.2"
msgid "saṅkhārapaccayā viññāṇaṃ, "
msgstr ""

msgctxt "mn38:17.3"
msgid "viññāṇapaccayā nāmarūpaṃ, "
msgstr ""

msgctxt "mn38:17.4"
msgid "nāmarūpapaccayā saḷāyatanaṃ, "
msgstr ""

msgctxt "mn38:17.5"
msgid "saḷāyatanapaccayā phasso, "
msgstr ""

msgctxt "mn38:17.6"
msgid "phassapaccayā vedanā, "
msgstr ""

msgctxt "mn38:17.7"
msgid "vedanāpaccayā taṇhā, "
msgstr ""

msgctxt "mn38:17.8"
msgid "taṇhāpaccayā upādānaṃ, "
msgstr ""

msgctxt "mn38:17.9"
msgid "upādānapaccayā bhavo, "
msgstr ""

msgctxt "mn38:17.10"
msgid "bhavapaccayā jāti, "
msgstr ""

msgctxt "mn38:17.11"
msgid "jātipaccayā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā sambhavanti."
msgstr ""

msgctxt "mn38:17.12"
msgid "Evametassa kevalassa dukkhakkhandhassa samudayo hoti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya18"></a>
#. <a class="sc" id="sc51"></a>
msgctxt "mn38:18.1"
msgid "Jātipaccayā jarāmaraṇanti iti kho panetaṃ vuttaṃ;"
msgstr ""

#. VAR: kathaṃ vā ettha → kathaṃ vo ettha (bj) | kathaṃ vā vo ettha (?)
msgctxt "mn38:18.2"
msgid ""
"jātipaccayā nu kho, bhikkhave, jarāmaraṇaṃ, no vā, kathaṃ vā ettha hotī”ti?"
msgstr ""

msgctxt "mn38:18.3"
msgid "“Jātipaccayā, bhante, jarāmaraṇaṃ;"
msgstr ""

#. VAR: evaṃ no ettha hoti → evaṃ no ettha hotīti (mr)
msgctxt "mn38:18.4"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.5"
msgid "jātipaccayā jarāmaraṇan”ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.262"></a>
#. <a class="sc" id="sc52"></a>
msgctxt "mn38:18.6"
msgid "“Bhavapaccayā jātīti iti kho panetaṃ vuttaṃ;"
msgstr ""

msgctxt "mn38:18.7"
msgid "bhavapaccayā nu kho, bhikkhave, jāti, no vā, kathaṃ vā ettha hotī”ti?"
msgstr ""

msgctxt "mn38:18.8"
msgid "“Bhavapaccayā, bhante, jāti;"
msgstr ""

msgctxt "mn38:18.9"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.10"
msgid "bhavapaccayā jātī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc53"></a>
msgctxt "mn38:18.11"
msgid "“Upādānapaccayā bhavoti iti kho panetaṃ vuttaṃ;"
msgstr ""

msgctxt "mn38:18.12"
msgid ""
"upādānapaccayā nu kho, bhikkhave, bhavo, no vā, kathaṃ vā ettha hotī”ti?"
msgstr ""

msgctxt "mn38:18.13"
msgid "“Upādānapaccayā, bhante, bhavo;"
msgstr ""

msgctxt "mn38:18.14"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.15"
msgid "upādānapaccayā bhavo”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc54"></a>
msgctxt "mn38:18.16"
msgid ""
"“Taṇhāpaccayā upādānanti iti kho panetaṃ vuttaṃ, taṇhāpaccayā nu kho, "
"bhikkhave, upādānaṃ, no vā, kathaṃ vā ettha hotī”ti?"
msgstr ""

msgctxt "mn38:18.17"
msgid "“Taṇhāpaccayā, bhante, upādānaṃ;"
msgstr ""

msgctxt "mn38:18.18"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.19"
msgid "taṇhāpaccayā upādānan”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc55"></a>
msgctxt "mn38:18.20"
msgid "“Vedanāpaccayā taṇhāti iti kho panetaṃ vuttaṃ;"
msgstr ""

msgctxt "mn38:18.21"
msgid "vedanāpaccayā nu kho, bhikkhave, taṇhā, no vā, kathaṃ vā ettha hotī”ti?"
msgstr ""

msgctxt "mn38:18.22"
msgid "“Vedanāpaccayā, bhante, taṇhā;"
msgstr ""

msgctxt "mn38:18.23"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.24"
msgid "vedanāpaccayā taṇhā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc56"></a>
msgctxt "mn38:18.25"
msgid "“Phassapaccayā vedanāti iti kho panetaṃ vuttaṃ;"
msgstr ""

msgctxt "mn38:18.26"
msgid ""
"phassapaccayā nu kho, bhikkhave, vedanā, no vā, kathaṃ vā ettha hotī”ti?"
msgstr ""

msgctxt "mn38:18.27"
msgid "“Phassapaccayā, bhante, vedanā;"
msgstr ""

msgctxt "mn38:18.28"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.29"
msgid "phassapaccayā vedanā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc57"></a>
msgctxt "mn38:18.30"
msgid "“Saḷāyatanapaccayā phassoti iti kho panetaṃ vuttaṃ;"
msgstr ""

msgctxt "mn38:18.31"
msgid ""
"saḷāyatanapaccayā nu kho, bhikkhave, phasso, no vā, kathaṃ vā ettha hotī”ti?"
msgstr ""

msgctxt "mn38:18.32"
msgid "“Saḷāyatanapaccayā, bhante, phasso;"
msgstr ""

msgctxt "mn38:18.33"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.34"
msgid "saḷāyatanapaccayā phasso”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc58"></a>
msgctxt "mn38:18.35"
msgid "“Nāmarūpapaccayā saḷāyatananti iti kho panetaṃ vuttaṃ;"
msgstr ""

msgctxt "mn38:18.36"
msgid ""
"nāmarūpapaccayā nu kho, bhikkhave, saḷāyatanaṃ, no vā, kathaṃ vā ettha "
"hotī”ti?"
msgstr ""

msgctxt "mn38:18.37"
msgid "“Nāmarūpapaccayā, bhante, saḷāyatanaṃ;"
msgstr ""

msgctxt "mn38:18.38"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.39"
msgid "nāmarūpapaccayā saḷāyatanan”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc59"></a>
msgctxt "mn38:18.40"
msgid "“Viññāṇapaccayā nāmarūpanti iti kho panetaṃ vuttaṃ;"
msgstr ""

msgctxt "mn38:18.41"
msgid ""
"viññāṇapaccayā nu kho, bhikkhave, nāmarūpaṃ, no vā, kathaṃ vā ettha hotī”ti?"
msgstr ""

msgctxt "mn38:18.42"
msgid "“Viññāṇapaccayā, bhante, nāmarūpaṃ;"
msgstr ""

msgctxt "mn38:18.43"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.44"
msgid "viññāṇapaccayā nāmarūpan”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc60"></a>
msgctxt "mn38:18.45"
msgid "“Saṅkhārapaccayā viññāṇanti iti kho panetaṃ vuttaṃ;"
msgstr ""

msgctxt "mn38:18.46"
msgid ""
"saṅkhārapaccayā nu kho, bhikkhave, viññāṇaṃ, no vā, kathaṃ vā ettha hotī”ti?"
msgstr ""

msgctxt "mn38:18.47"
msgid "“Saṅkhārapaccayā, bhante, viññāṇaṃ;"
msgstr ""

msgctxt "mn38:18.48"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.49"
msgid "saṅkhārapaccayā viññāṇan”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc61"></a>
msgctxt "mn38:18.50"
msgid "“Avijjāpaccayā saṅkhārāti iti kho panetaṃ vuttaṃ;"
msgstr ""

msgctxt "mn38:18.51"
msgid ""
"avijjāpaccayā nu kho, bhikkhave, saṅkhārā, no vā, kathaṃ vā ettha hotī”ti?"
msgstr ""

msgctxt "mn38:18.52"
msgid "“Avijjāpaccayā, bhante, saṅkhārā;"
msgstr ""

msgctxt "mn38:18.53"
msgid "evaṃ no ettha hoti—"
msgstr ""

msgctxt "mn38:18.54"
msgid "avijjāpaccayā saṅkhārā”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya19"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.263"></a>
#. <a class="sc" id="sc62"></a>
msgctxt "mn38:19.1"
msgid "“Sādhu, bhikkhave."
msgstr ""

msgctxt "mn38:19.2"
msgid "Iti kho, bhikkhave, tumhepi evaṃ vadetha, ahampi evaṃ vadāmi—"
msgstr ""

msgctxt "mn38:19.3"
msgid "imasmiṃ sati idaṃ hoti, imassuppādā idaṃ uppajjati, yadidaṃ—"
msgstr ""

msgctxt "mn38:19.4"
msgid "avijjāpaccayā saṅkhārā, "
msgstr ""

msgctxt "mn38:19.5"
msgid "saṅkhārapaccayā viññāṇaṃ, "
msgstr ""

msgctxt "mn38:19.6"
msgid "viññāṇapaccayā nāmarūpaṃ, "
msgstr ""

msgctxt "mn38:19.7"
msgid "nāmarūpapaccayā saḷāyatanaṃ, "
msgstr ""

msgctxt "mn38:19.8"
msgid "saḷāyatanapaccayā phasso, "
msgstr ""

msgctxt "mn38:19.9"
msgid "phassapaccayā vedanā, "
msgstr ""

msgctxt "mn38:19.10"
msgid "vedanāpaccayā taṇhā, "
msgstr ""

msgctxt "mn38:19.11"
msgid "taṇhāpaccayā upādānaṃ, "
msgstr ""

msgctxt "mn38:19.12"
msgid "upādānapaccayā bhavo, "
msgstr ""

msgctxt "mn38:19.13"
msgid "bhavapaccayā jāti, "
msgstr ""

msgctxt "mn38:19.14"
msgid "jātipaccayā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā sambhavanti."
msgstr ""

msgctxt "mn38:19.15"
msgid "Evametassa kevalassa dukkhakkhandhassa samudayo hoti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya20"></a>
#. <a class="sc" id="sc63"></a>
msgctxt "mn38:20.1"
msgid "Avijjāya tveva asesavirāganirodhā saṅkhāranirodho, "
msgstr ""

msgctxt "mn38:20.2"
msgid "saṅkhāranirodhā viññāṇanirodho, "
msgstr ""

msgctxt "mn38:20.3"
msgid "viññāṇanirodhā nāmarūpanirodho, "
msgstr ""

msgctxt "mn38:20.4"
msgid "nāmarūpanirodhā saḷāyatananirodho, "
msgstr ""

msgctxt "mn38:20.5"
