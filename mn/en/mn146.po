msgid "“jivhā niccā vā aniccā vā”ti?"
msgstr "tongue …"

msgctxt "mn146:6.15"
msgid "“Aniccā, bhante” …"
msgstr ""

msgctxt "mn146:6.16"
msgid "“kāyo nicco vā anicco vā”ti?"
msgstr "body …"

msgctxt "mn146:6.17"
msgid "“Anicco, bhante” …"
msgstr ""

msgctxt "mn146:6.18"
msgid "“mano nicco vā anicco vā”ti?"
msgstr "mind permanent or impermanent?”"

msgctxt "mn146:6.19"
msgid "“Anicco, bhante”."
msgstr "“Impermanent, sir.”"

msgctxt "mn146:6.20"
msgid "“Yaṃ panāniccaṃ dukkhaṃ vā taṃ sukhaṃ vā”ti?"
msgstr "“But if it’s impermanent, is it suffering or happiness?”"

msgctxt "mn146:6.21"
msgid "“Dukkhaṃ, bhante”."
msgstr "“Suffering, sir.”"

msgctxt "mn146:6.22"
msgid ""
"“Yaṃ panāniccaṃ dukkhaṃ vipariṇāmadhammaṃ, kallaṃ nu taṃ samanupassituṃ:"
msgstr ""
