msgid "Majjhima Nikāya 147"
msgstr ""

#. </p><h1>
msgctxt "mn147:0.2"
msgid "Cūḷarāhulovādasutta"
msgstr ""

#. </h1></div><p>
#. <a class="nya" id="nya1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.278"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "mn147:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "mn147:1.2"
msgid ""
"ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "mn147:1.3"
msgid ""
"Atha kho bhagavato rahogatassa paṭisallīnassa evaṃ cetaso parivitakko "
"udapādi:"
msgstr ""

msgctxt "mn147:1.4"
msgid "“paripakkā kho rāhulassa vimuttiparipācanīyā dhammā."
msgstr ""

msgctxt "mn147:1.5"
msgid "Yannūnāhaṃ rāhulaṃ uttariṃ āsavānaṃ khaye vineyyan”ti."
msgstr ""

msgctxt "mn147:1.6"
msgid ""
"Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya sāvatthiṃ "
"piṇḍāya pāvisi."
msgstr ""

msgctxt "mn147:1.7"
msgid ""
"Sāvatthiyaṃ piṇḍāya caritvā pacchābhattaṃ piṇḍapātapaṭikkanto āyasmantaṃ "
"rāhulaṃ āmantesi:"
msgstr ""

msgctxt "mn147:1.8"
msgid "“gaṇhāhi, rāhula, nisīdanaṃ;"
msgstr ""

msgctxt "mn147:1.9"
msgid "yena andhavanaṃ tenupasaṅkamissāma divāvihārāyā”ti."
msgstr ""

msgctxt "mn147:1.10"
msgid ""
"“Evaṃ, bhante”ti kho āyasmā rāhulo bhagavato paṭissutvā nisīdanaṃ ādāya "
"bhagavantaṃ piṭṭhito piṭṭhito anubandhi."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya2"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "mn147:2.1"
msgid ""
"Tena kho pana samayena anekāni devatāsahassāni bhagavantaṃ anubandhāni honti:"
msgstr ""

msgctxt "mn147:2.2"
msgid "“ajja bhagavā āyasmantaṃ rāhulaṃ uttariṃ āsavānaṃ khaye vinessatī”ti."
msgstr ""

msgctxt "mn147:2.3"
msgid ""
"Atha kho bhagavā andhavanaṃ ajjhogāhetvā aññatarasmiṃ rukkhamūle paññatte "
"āsane nisīdi."
msgstr ""

msgctxt "mn147:2.4"
msgid "Āyasmāpi kho rāhulo bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "mn147:2.5"
msgid "Ekamantaṃ nisinnaṃ kho āyasmantaṃ rāhulaṃ bhagavā etadavoca:"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.279"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "mn147:2.6"
msgid "“Taṃ kiṃ maññasi, rāhula, "
msgstr ""

msgctxt "mn147:2.7"
msgid "cakkhu niccaṃ vā aniccaṃ vā”ti?"
msgstr ""

msgctxt "mn147:2.8"
msgid "“Aniccaṃ, bhante”."
msgstr ""

msgctxt "mn147:2.9"
msgid "“Yaṃ panāniccaṃ dukkhaṃ vā taṃ sukhaṃ vā”ti?"
msgstr ""

msgctxt "mn147:2.10"
msgid "“Dukkhaṃ, bhante”."
msgstr ""

msgctxt "mn147:2.11"
msgid ""
"“Yaṃ panāniccaṃ dukkhaṃ vipariṇāmadhammaṃ, kallaṃ nu taṃ samanupassituṃ:"
msgstr ""

msgctxt "mn147:2.12"
msgid "‘etaṃ mama, esohamasmi, eso me attā’”ti?"
msgstr ""

msgctxt "mn147:2.13"
msgid "“No hetaṃ, bhante”."
msgstr ""

