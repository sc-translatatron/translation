msgctxt "mn35:20.1"
msgid "“Manasi karohi, aggivessana;"
msgstr ""

msgctxt "mn35:20.2"
msgid "manasi karitvā kho, aggivessana, byākarohi."
msgstr ""

msgctxt "mn35:20.3"
msgid "Na kho te sandhiyati purimena vā pacchimaṃ, pacchimena vā purimaṃ."
msgstr ""

msgctxt "mn35:20.4"
msgid "Taṃ kiṃ maññasi, aggivessana, "
msgstr ""

msgctxt "mn35:20.5"
msgid "rūpaṃ niccaṃ vā aniccaṃ vā”ti?"
msgstr ""

msgctxt "mn35:20.6"
msgid "“Aniccaṃ, bho gotama”."
msgstr ""

msgctxt "mn35:20.7"
msgid "“Yaṃ panāniccaṃ dukkhaṃ vā taṃ sukhaṃ vā”ti?"
msgstr ""

msgctxt "mn35:20.8"
msgid "“Dukkhaṃ, bho gotama”."
msgstr ""

msgctxt "mn35:20.9"
msgid ""
"“Yaṃ panāniccaṃ dukkhaṃ vipariṇāmadhammaṃ, kallaṃ nu taṃ samanupassituṃ:"
msgstr ""

msgctxt "mn35:20.10"
msgid "‘etaṃ mama, esohamasmi, eso me attā’”ti?"
msgstr ""

msgctxt "mn35:20.11"
msgid "“No hidaṃ, bho gotama”."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc19"></a>
msgctxt "mn35:20.12"
msgid "“Taṃ kiṃ maññasi, aggivessana, "
msgstr ""

msgctxt "mn35:20.13"
msgid "vedanā … pe …"
msgstr ""

msgctxt "mn35:20.14"
msgid "saññā … pe …"
msgstr ""

msgctxt "mn35:20.15"
msgid "saṅkhārā … pe …"
msgstr ""

msgctxt "mn35:20.16"
msgid "taṃ kiṃ maññasi, aggivessana, viññāṇaṃ niccaṃ vā aniccaṃ vā”ti?"
msgstr ""

msgctxt "mn35:20.17"
msgid "“Aniccaṃ, bho gotama”."
msgstr ""

msgctxt "mn35:20.18"
msgid "“Yaṃ panāniccaṃ dukkhaṃ vā taṃ sukhaṃ vā”ti?"
msgstr ""

msgctxt "mn35:20.19"
msgid "“Dukkhaṃ, bho gotama”."
msgstr ""

msgctxt "mn35:20.20"
msgid ""
"“Yaṃ panāniccaṃ dukkhaṃ vipariṇāmadhammaṃ, kallaṃ nu taṃ samanupassituṃ:"
msgstr ""

msgctxt "mn35:20.21"
msgid "‘etaṃ mama, esohamasmi, eso me attā’”ti?"
msgstr ""

msgctxt "mn35:20.22"
msgid "“No hidaṃ, bho gotama”."
