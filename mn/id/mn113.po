msgctxt "mn113:0.1"
msgid "Majjhima Nikāya 113"
msgstr ""

#. </p><h1>
msgctxt "mn113:0.2"
msgid "Sappurisasutta"
msgstr ""

#. </h1></div><p>
#. <a class="nya" id="nya1"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "mn113:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "mn113:1.2"
msgid ""
"ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "mn113:1.3"
msgid "Tatra kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "mn113:1.4"
msgid "“bhikkhavo”ti."
msgstr ""

msgctxt "mn113:1.5"
msgid "“Bhadante”ti te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "mn113:1.6"
msgid "Bhagavā etadavoca:"
msgstr ""

#. <a class="nya" id="nya2"></a>
msgctxt "mn113:2.1"
msgid "“sappurisadhammañca vo, bhikkhave, desessāmi asappurisadhammañca."
msgstr ""

msgctxt "mn113:2.2"
msgid "Taṃ suṇātha, sādhukaṃ manasi karotha, bhāsissāmī”ti."
msgstr ""

msgctxt "mn113:2.3"
msgid "“Evaṃ, bhante”ti kho te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "mn113:2.4"
msgid "Bhagavā etadavoca:"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya3"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.38"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "mn113:3.1"
msgid "“Katamo ca, bhikkhave, asappurisadhammo?"
msgstr ""

msgctxt "mn113:3.2"
msgid "Idha, bhikkhave, asappuriso uccākulā pabbajito hoti."
msgstr ""

msgctxt "mn113:3.3"
msgid "So iti paṭisañcikkhati:"
msgstr ""

msgctxt "mn113:3.4"
msgid ""
"‘ahaṃ khomhi uccākulā pabbajito, ime panaññe bhikkhū na uccākulā "
"pabbajitā’ti."
msgstr ""

msgctxt "mn113:3.5"
msgid "So tāya uccākulīnatāya attānukkaṃseti, paraṃ vambheti."
msgstr ""

#. VAR: Ayaṃ → ayampi (bj, pts1)
msgctxt "mn113:3.6"
msgid "Ayaṃ, bhikkhave, asappurisadhammo."
msgstr ""

msgctxt "mn113:3.7"
msgid "Sappuriso ca kho, bhikkhave, iti paṭisañcikkhati:"
msgstr ""

msgctxt "mn113:3.8"
msgid ""
"‘na kho uccākulīnatāya lobhadhammā vā parikkhayaṃ gacchanti, dosadhammā vā "
"parikkhayaṃ gacchanti, mohadhammā vā parikkhayaṃ gacchanti."
msgstr ""

msgctxt "mn113:3.9"
msgid "No cepi uccākulā pabbajito hoti;"
msgstr ""

msgctxt "mn113:3.10"
msgid ""
"so ca hoti dhammānudhammappaṭipanno sāmīcippaṭipanno anudhammacārī, so "
"tattha pujjo, so tattha pāsaṃso’ti."
msgstr ""

# antaram karitva is unusual here, normally it yields the expected sense of “hidden within”. Comm is no help.
msgctxt "mn113:3.11"
msgid ""
"So paṭipadaṃyeva antaraṃ karitvā tāya uccākulīnatāya nevattānukkaṃseti na "
"paraṃ vambheti."
msgstr ""

msgctxt "mn113:3.12"
msgid "Ayaṃ, bhikkhave, sappurisadhammo. (1)"
msgstr ""

