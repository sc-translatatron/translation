msgctxt "mn143:13.2"
msgid ""
"‘na idhalokaṃ upādiyissāmi, na ca me idhalokanissitaṃ viññāṇaṃ bhavissatī’ti."
msgstr ""

msgctxt "mn143:13.3"
msgid "Evañhi te, gahapati, sikkhitabbaṃ."
msgstr ""

#. <a class="nya" id="nya14"></a>
msgctxt "mn143:14.1"
msgid "Tasmātiha te, gahapati, evaṃ sikkhitabbaṃ:"
msgstr ""

msgctxt "mn143:14.2"
msgid ""
"‘na paralokaṃ upādiyissāmi, na ca me paralokanissitaṃ viññāṇaṃ bhavissatī’ti."
msgstr ""

msgctxt "mn143:14.3"
msgid "Evañhi te, gahapati, sikkhitabbaṃ."
msgstr ""

msgctxt "mn143:14.4"
msgid "Tasmātiha te, gahapati, evaṃ sikkhitabbaṃ:"
msgstr ""

msgctxt "mn143:14.5"
msgid ""
"‘yampi me diṭṭhaṃ sutaṃ mutaṃ viññātaṃ pattaṃ pariyesitaṃ anupariyesitaṃ "
"anucaritaṃ manasā tampi na upādiyissāmi, na ca me tannissitaṃ viññāṇaṃ "
"bhavissatī’ti."
msgstr ""

msgctxt "mn143:14.6"
msgid "Evañhi te, gahapati, sikkhitabban”ti. (9)"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya15"></a>
#. <a class="sc" id="sc14"></a>
msgctxt "mn143:15.1"
msgid "Evaṃ vutte, anāthapiṇḍiko gahapati parodi, assūni pavattesi."
msgstr ""

msgctxt "mn143:15.2"
msgid "Atha kho āyasmā ānando anāthapiṇḍikaṃ gahapatiṃ etadavoca:"
msgstr ""

msgctxt "mn143:15.3"
msgid "“olīyasi kho tvaṃ, gahapati, saṃsīdasi kho tvaṃ, gahapatī”ti?"
msgstr ""

msgctxt "mn143:15.4"
msgid "“Nāhaṃ, bhante ānanda, olīyāmi, napi saṃsīdāmi;"
msgstr ""

msgctxt "mn143:15.5"
msgid "api ca me dīgharattaṃ satthā payirupāsito manobhāvanīyā ca bhikkhū;"
msgstr ""

msgctxt "mn143:15.6"
msgid "na ca me evarūpī dhammī kathā sutapubbā”ti."
msgstr ""

# Note that the verb here is patibhati. Rather than saying such talk is never given to lay people, patibhati refers to the spontaneous occurrence of the urge to give a Dhamma talk on such and such a topic.
msgctxt "mn143:15.7"
msgid ""
"“Na kho, gahapati, gihīnaṃ odātavasanānaṃ evarūpī dhammī kathā paṭibhāti;"
msgstr ""

msgctxt "mn143:15.8"
msgid "pabbajitānaṃ kho, gahapati, evarūpī dhammī kathā paṭibhātī”ti."
msgstr ""

msgctxt "mn143:15.9"
msgid ""
"“Tena hi, bhante sāriputta, gihīnampi odātavasanānaṃ evarūpī dhammī kathā "
"paṭibhātu."
msgstr ""

msgctxt "mn143:15.10"
msgid ""
"Santi hi, bhante, kulaputtā apparajakkhajātikā, assavanatā dhammassa "
"parihāyanti;"
msgstr ""

msgctxt "mn143:15.11"
msgid "bhavissanti dhammassa aññātāro”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya16"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli3.262"></a>
#. <a class="sc" id="sc15"></a>
msgctxt "mn143:16.1"
msgid ""
"Atha kho āyasmā ca sāriputto āyasmā ca ānando anāthapiṇḍikaṃ gahapatiṃ iminā "
"ovādena ovaditvā uṭṭhāyāsanā pakkamiṃsu."
msgstr ""

msgctxt "mn143:16.2"
msgid ""
"Atha kho anāthapiṇḍiko gahapati, acirapakkante āyasmante ca sāriputte "
"āyasmante ca ānande, kālamakāsi tusitaṃ kāyaṃ upapajji."
msgstr ""

#. <a class="nya" id="nya17"></a>
msgctxt "mn143:17.1"
msgid ""
"Atha kho anāthapiṇḍiko devaputto abhikkantāya rattiyā abhikkantavaṇṇo "
"kevalakappaṃ jetavanaṃ obhāsetvā yena bhagavā tenupasaṅkami; upasaṅkamitvā "
"bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "mn143:17.2"
msgid ""
"Ekamantaṃ ṭhito kho anāthapiṇḍiko devaputto bhagavantaṃ gāthāhi ajjhabhāsi:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc16"></a>
msgctxt "mn143:17.3"
msgid "“Idañhi taṃ jetavanaṃ,"
msgstr ""

#. <br>
msgctxt "mn143:17.4"
msgid "isisaṅghanisevitaṃ;"
msgstr ""

#. <br>
msgctxt "mn143:17.5"
msgid "Āvutthaṃ dhammarājena,"
msgstr ""

#. <br>
msgctxt "mn143:17.6"
msgid "pītisañjananaṃ mama."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc17"></a>
msgctxt "mn143:17.7"
msgid "Kammaṃ vijjā ca dhammo ca,"
msgstr ""

#. <br>
msgctxt "mn143:17.8"
msgid "sīlaṃ jīvitamuttamaṃ;"
msgstr ""

#. <br>
msgctxt "mn143:17.9"
msgid "Etena maccā sujjhanti,"
msgstr ""

#. <br>
msgctxt "mn143:17.10"
msgid "na gottena dhanena vā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc18"></a>
msgctxt "mn143:17.11"
msgid "Tasmā hi paṇḍito poso,"
msgstr ""

#. <br>
msgctxt "mn143:17.12"
msgid "sampassaṃ atthamattano;"
msgstr ""

#. <br>
msgctxt "mn143:17.13"
msgid "Yoniso vicine dhammaṃ,"
msgstr ""

#. <br>
msgctxt "mn143:17.14"
msgid "evaṃ tattha visujjhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc19"></a>
msgctxt "mn143:17.15"
msgid "Sāriputtova paññāya,"
msgstr ""

#. <br>
msgctxt "mn143:17.16"
msgid "sīlena upasamena ca;"
msgstr ""

#. <br>
msgctxt "mn143:17.17"
msgid "Yopi pāraṅgato bhikkhu,"
msgstr ""

#. <br>
msgctxt "mn143:17.18"
msgid "etāvaparamo siyā”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="nya" id="nya18"></a>
#. <a class="sc" id="sc20"></a>
msgctxt "mn143:18.1"
msgid "Idamavoca anāthapiṇḍiko devaputto."
msgstr ""

msgctxt "mn143:18.2"
msgid "Samanuñño satthā ahosi."
msgstr ""

msgctxt "mn143:18.3"
msgid "Atha kho anāthapiṇḍiko devaputto:"
msgstr ""

msgctxt "mn143:18.4"
msgid ""
"“samanuñño me satthā”ti bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā "
"tatthevantaradhāyi."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya19"></a>
#. <a class="sc" id="sc21"></a>
msgctxt "mn143:19.1"
msgid "Atha kho bhagavā tassā rattiyā accayena bhikkhū āmantesi:"
msgstr ""

msgctxt "mn143:19.2"
msgid ""
"“imaṃ, bhikkhave, rattiṃ aññataro devaputto abhikkantāya rattiyā "
"abhikkantavaṇṇo kevalakappaṃ jetavanaṃ obhāsetvā yenāhaṃ tenupasaṅkami; "
"upasaṅkamitvā maṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "mn143:19.3"
msgid "Ekamantaṃ ṭhito kho so devaputto maṃ gāthāhi ajjhabhāsi:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc22"></a>
msgctxt "mn143:19.4"
msgid "‘Idañhi taṃ jetavanaṃ,"
msgstr ""

#. <br>
msgctxt "mn143:19.5"
msgid "isisaṅghanisevitaṃ;"
msgstr ""

#. <br>
msgctxt "mn143:19.6"
msgid "Āvutthaṃ dhammarājena,"
msgstr ""

#. <br>
msgctxt "mn143:19.7"
msgid "pītisañjananaṃ mama."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc23"></a>
msgctxt "mn143:19.8"
msgid "Kammaṃ vijjā ca dhammo ca,"
msgstr ""

#. <br>
msgctxt "mn143:19.9"
msgid "sīlaṃ jīvitamuttamaṃ;"
msgstr ""

#. <br>
msgctxt "mn143:19.10"
msgid "Etena maccā sujjhanti,"
msgstr ""

#. <br>
msgctxt "mn143:19.11"
msgid "na gottena dhanena vā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc24"></a>
msgctxt "mn143:19.12"
msgid "Tasmā hi paṇḍito poso,"
msgstr ""

#. <br>
msgctxt "mn143:19.13"
msgid "sampassaṃ atthamattano;"
msgstr ""

#. <br>
msgctxt "mn143:19.14"
msgid "Yoniso vicine dhammaṃ,"
msgstr ""

#. <br>
msgctxt "mn143:19.15"
msgid "evaṃ tattha visujjhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc25"></a>
msgctxt "mn143:19.16"
msgid "Sāriputtova paññāya,"
msgstr ""

#. <br>
msgctxt "mn143:19.17"
msgid "sīlena upasamena ca;"
msgstr ""

#. <br>
msgctxt "mn143:19.18"
msgid "Yopi pāraṅgato bhikkhu,"
msgstr ""

#. <br>
msgctxt "mn143:19.19"
msgid "etāvaparamo siyā’ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="pts-vp-pli" id="pts-vp-pli3.263"></a>
#. <a class="sc" id="sc26"></a>
msgctxt "mn143:19.20"
msgid "Idamavoca, bhikkhave, so devaputto."
msgstr ""

msgctxt "mn143:19.21"
msgid ""
"‘Samanuñño me satthā’ti maṃ abhivādetvā padakkhiṇaṃ katvā "
"tatthevantaradhāyī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya20"></a>
#. <a class="sc" id="sc27"></a>
msgctxt "mn143:20.1"
msgid "Evaṃ vutte, āyasmā ānando bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "mn143:20.2"
msgid "“so hi nūna so, bhante, anāthapiṇḍiko devaputto bhavissati."
msgstr ""

msgctxt "mn143:20.3"
msgid ""
"Anāthapiṇḍiko, bhante, gahapati āyasmante sāriputte abhippasanno ahosī”ti."
msgstr ""

msgctxt "mn143:20.4"
msgid "“Sādhu sādhu, ānanda."
msgstr ""

msgctxt "mn143:20.5"
msgid "Yāvatakaṃ kho, ānanda, takkāya pattabbaṃ, anuppattaṃ taṃ tayā."
msgstr ""

msgctxt "mn143:20.6"
msgid "Anāthapiṇḍiko so, ānanda, devaputto”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc28"></a>
msgctxt "mn143:20.7"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "mn143:20.8"
msgid "Attamano āyasmā ānando bhagavato bhāsitaṃ abhinandīti."
msgstr ""

#. </p><p class="endsection">
msgctxt "mn143:20.9"
msgid "Anāthapiṇḍikovādasuttaṃ niṭṭhitaṃ paṭhamaṃ."
msgstr ""
