msgctxt "mn17:0.1"
msgid "Majjhima Nikāya 17"
msgstr ""

#. </p><h1>
msgctxt "mn17:0.2"
msgid "Vanapatthasutta"
msgstr ""

#. </h1></div><p>
#. <a class="nya" id="nya1"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "mn17:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "mn17:1.2"
msgid ""
"ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "mn17:1.3"
msgid "Tatra kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "mn17:1.4"
msgid "“bhikkhavo”ti."
msgstr ""

msgctxt "mn17:1.5"
msgid "“Bhadante”ti te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "mn17:1.6"
msgid "Bhagavā etadavoca:"
msgstr ""

#. <a class="nya" id="nya2"></a>
msgctxt "mn17:2.1"
msgid "“vanapatthapariyāyaṃ vo, bhikkhave, desessāmi, "
msgstr ""

msgctxt "mn17:2.2"
msgid "taṃ suṇātha, sādhukaṃ manasikarotha, bhāsissāmī”ti."
msgstr ""

msgctxt "mn17:2.3"
msgid "“Evaṃ, bhante”ti kho te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "mn17:2.4"
msgid "Bhagavā etadavoca:"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya3"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.105"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "mn17:3.1"
msgid "“Idha, bhikkhave, bhikkhu aññataraṃ vanapatthaṃ upanissāya viharati."
msgstr ""

msgctxt "mn17:3.2"
msgid ""
"Tassa taṃ vanapatthaṃ upanissāya viharato anupaṭṭhitā ceva sati na "
"upaṭṭhāti, asamāhitañca cittaṃ na samādhiyati, aparikkhīṇā ca āsavā na "
"parikkhayaṃ gacchanti, ananuppattañca anuttaraṃ yogakkhemaṃ nānupāpuṇāti."
msgstr ""

msgctxt "mn17:3.3"
msgid ""
"Ye ca kho ime pabbajitena jīvitaparikkhārā "
"samudānetabbā—cīvarapiṇḍapātasenāsanagilānappaccayabhesajjaparikkhārā—te "
"kasirena samudāgacchanti."
msgstr ""

msgctxt "mn17:3.4"
msgid "Tena, bhikkhave, bhikkhunā iti paṭisañcikkhitabbaṃ:"
msgstr ""

msgctxt "mn17:3.5"
msgid ""
"‘ahaṃ kho imaṃ vanapatthaṃ upanissāya viharāmi, tassa me imaṃ vanapatthaṃ "
"upanissāya viharato anupaṭṭhitā ceva sati na upaṭṭhāti, asamāhitañca cittaṃ "
"na samādhiyati, aparikkhīṇā ca āsavā na parikkhayaṃ gacchanti, "
"ananuppattañca anuttaraṃ yogakkhemaṃ nānupāpuṇāmi."
msgstr ""

msgctxt "mn17:3.6"
msgid ""
"Ye ca kho ime pabbajitena jīvitaparikkhārā "
"samudānetabbā—cīvarapiṇḍapātasenāsanagilānappaccayabhesajjaparikkhārā—te "
"kasirena samudāgacchantī’ti."
msgstr ""

msgctxt "mn17:3.7"
msgid ""
"Tena, bhikkhave, bhikkhunā rattibhāgaṃ vā divasabhāgaṃ vā tamhā vanapatthā "
"pakkamitabbaṃ, na vatthabbaṃ."
msgstr ""

