msgctxt "mn81:22.4"
msgid "Tāni, bhante, paṭiggaṇhathā’ti."
msgstr ""

msgctxt "mn81:22.5"
msgid "‘Rājā kho bahukicco bahukaraṇīyo."
msgstr ""

msgctxt "mn81:22.6"
msgid "Alaṃ me."
msgstr ""

msgctxt "mn81:22.7"
msgid "Raññova hotū’ti."
msgstr ""

#. <a class="nya" id="nya23"></a>
msgctxt "mn81:23.1"
msgid "Siyā kho pana te, ānanda, evamassa:"
msgstr ""

msgctxt "mn81:23.2"
msgid "‘añño nūna tena samayena jotipālo māṇavo ahosī’ti."
msgstr ""

msgctxt "mn81:23.3"
msgid "Na kho panetaṃ, ānanda, evaṃ daṭṭhabbaṃ."
msgstr ""

msgctxt "mn81:23.4"
msgid "Ahaṃ tena samayena jotipālo māṇavo ahosin”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc14"></a>
msgctxt "mn81:23.5"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "mn81:23.6"
msgid "Attamano āyasmā ānando bhagavato bhāsitaṃ abhinandīti."
msgstr ""

#. </p><p class="endsection">
msgctxt "mn81:23.7"
msgid "Ghaṭikārasuttaṃ niṭṭhitaṃ paṭhamaṃ."
msgstr ""
