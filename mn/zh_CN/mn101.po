#. <section class="sutta" id="mn101"><article><div class="hgroup"><p class="division">
msgctxt "mn101:0.1"
msgid "Majjhima Nikāya 101"
msgstr ""

#. </p><h1>
msgctxt "mn101:0.2"
msgid "Devadahasutta"
msgstr ""

#. </h1></div><p>
#. <a class="nya" id="nya1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.214"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "mn101:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "mn101:1.2"
msgid "ekaṃ samayaṃ bhagavā sakkesu viharati devadahaṃ nāma sakyānaṃ nigamo."
msgstr ""

msgctxt "mn101:1.3"
msgid "Tatra kho bhagavā bhikkhū āmantesi:"
msgstr ""

#. <a class="nya" id="nya2"></a>
msgctxt "mn101:2.1"
msgid "“bhikkhavo”ti."
msgstr ""

msgctxt "mn101:2.2"
msgid "“Bhadante”ti te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "mn101:2.3"
msgid "Bhagavā etadavoca:"
msgstr ""

msgctxt "mn101:2.4"
msgid "“santi, bhikkhave, eke samaṇabrāhmaṇā evaṃvādino evaṃdiṭṭhino:"
msgstr ""

msgctxt "mn101:2.5"
msgid ""
"‘yaṃ kiñcāyaṃ purisapuggalo paṭisaṃvedeti sukhaṃ vā dukkhaṃ vā "
"adukkhamasukhaṃ vā, sabbaṃ taṃ pubbekatahetu."
msgstr ""

msgctxt "mn101:2.6"
msgid ""
"Iti purāṇānaṃ kammānaṃ tapasā byantībhāvā, navānaṃ kammānaṃ akaraṇā, āyatiṃ "
"anavassavo;"
msgstr ""

msgctxt "mn101:2.7"
msgid ""
"āyatiṃ anavassavā kammakkhayo; kammakkhayā dukkhakkhayo; dukkhakkhayā "
"vedanākkhayo; vedanākkhayā sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī’ti."
msgstr ""

msgctxt "mn101:2.8"
msgid "Evaṃvādino, bhikkhave, nigaṇṭhā."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya3"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "mn101:3.1"
msgid "Evaṃvādāhaṃ, bhikkhave, nigaṇṭhe upasaṅkamitvā evaṃ vadāmi:"
msgstr ""

msgctxt "mn101:3.2"
msgid "‘saccaṃ kira tumhe, āvuso nigaṇṭhā, evaṃvādino evaṃdiṭṭhino—"
msgstr ""

msgctxt "mn101:3.3"
msgid ""
"yaṃ kiñcāyaṃ purisapuggalo paṭisaṃvedeti sukhaṃ vā dukkhaṃ vā "
"adukkhamasukhaṃ vā, sabbaṃ taṃ pubbekatahetu."
msgstr ""

msgctxt "mn101:3.4"
msgid ""
"Iti purāṇānaṃ kammānaṃ tapasā byantībhāvā, navānaṃ kammānaṃ akaraṇā, āyatiṃ "
"anavassavo;"
msgstr ""

msgctxt "mn101:3.5"
msgid ""
"āyatiṃ anavassavā kammakkhayo; kammakkhayā dukkhakkhayo; dukkhakkhayā "
"vedanākkhayo; vedanākkhayā sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī’ti?"
msgstr ""

msgctxt "mn101:3.6"
msgid "Te ca me, bhikkhave, nigaṇṭhā evaṃ puṭṭhā ‘āmā’ti paṭijānanti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya4"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "mn101:4.1"
msgid "Tyāhaṃ evaṃ vadāmi:"
msgstr ""

msgctxt "mn101:4.2"
msgid "‘kiṃ pana tumhe, āvuso nigaṇṭhā, jānātha—"
msgstr ""

msgctxt "mn101:4.3"
msgid "ahuvamheva mayaṃ pubbe, na nāhuvamhā’ti?"
msgstr ""

msgctxt "mn101:4.4"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "mn101:4.5"
msgid "‘Kiṃ pana tumhe, āvuso nigaṇṭhā, jānātha—"
msgstr ""

msgctxt "mn101:4.6"
msgid "akaramheva mayaṃ pubbe pāpakammaṃ, na nākaramhā’ti?"
msgstr ""

msgctxt "mn101:4.7"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "mn101:4.8"
msgid "‘Kiṃ pana tumhe, āvuso nigaṇṭhā, jānātha—"
msgstr ""

msgctxt "mn101:4.9"
msgid "evarūpaṃ vā evarūpaṃ vā pāpakammaṃ akaramhā’ti?"
msgstr ""

msgctxt "mn101:4.10"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.215"></a>
#. <a class="sc" id="sc6"></a>
msgctxt "mn101:4.11"
msgid "‘Kiṃ pana tumhe, āvuso nigaṇṭhā, jānātha—"
msgstr ""

msgctxt "mn101:4.12"
msgid ""
"ettakaṃ vā dukkhaṃ nijjiṇṇaṃ, ettakaṃ vā dukkhaṃ nijjīretabbaṃ, ettakamhi vā "
"dukkhe nijjiṇṇe sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī’ti?"
msgstr ""

msgctxt "mn101:4.13"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "mn101:4.14"
msgid "‘Kiṃ pana tumhe, āvuso nigaṇṭhā, jānātha—"
msgstr ""

msgctxt "mn101:4.15"
msgid ""
"diṭṭheva dhamme akusalānaṃ dhammānaṃ pahānaṃ, kusalānaṃ dhammānaṃ "
"upasampadan’ti?"
msgstr ""

msgctxt "mn101:4.16"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya5"></a>
#. <a class="sc" id="sc8"></a>
msgctxt "mn101:5.1"
msgid "‘Iti kira tumhe, āvuso nigaṇṭhā, na jānātha—"
msgstr ""

msgctxt "mn101:5.2"
msgid "ahuvamheva mayaṃ pubbe, na nāhuvamhāti, na jānātha—"
msgstr ""

msgctxt "mn101:5.3"
msgid "akaramheva mayaṃ pubbe pāpakammaṃ, na nākaramhāti, na jānātha—"
msgstr ""

msgctxt "mn101:5.4"
msgid "evarūpaṃ vā evarūpaṃ vā pāpakammaṃ akaramhāti, na jānātha—"
msgstr ""

msgctxt "mn101:5.5"
msgid ""
"ettakaṃ vā dukkhaṃ nijjiṇṇaṃ, ettakaṃ vā dukkhaṃ nijjīretabbaṃ, ettakamhi vā "
"dukkhe nijjiṇṇe sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatīti, na jānātha—"
msgstr ""

msgctxt "mn101:5.6"
msgid ""
"diṭṭheva dhamme akusalānaṃ dhammānaṃ pahānaṃ, kusalānaṃ dhammānaṃ "
"upasampadaṃ;"
msgstr ""

msgctxt "mn101:5.7"
msgid "evaṃ sante āyasmantānaṃ nigaṇṭhānaṃ na kallamassa veyyākaraṇāya:"
msgstr ""

msgctxt "mn101:5.8"
msgid ""
"“yaṃ kiñcāyaṃ purisapuggalo paṭisaṃvedeti sukhaṃ vā dukkhaṃ vā "
"adukkhamasukhaṃ vā, sabbaṃ taṃ pubbekatahetu."
msgstr ""

msgctxt "mn101:5.9"
msgid ""
"Iti purāṇānaṃ kammānaṃ tapasā byantībhāvā, navānaṃ kammānaṃ akaraṇā, āyatiṃ "
"anavassavo;"
msgstr ""

msgctxt "mn101:5.10"
msgid ""
"āyatiṃ anavassavā kammakkhayo; kammakkhayā dukkhakkhayo; dukkhakkhayā "
"vedanākkhayo; vedanākkhayā sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya6"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.216"></a>
#. <a class="sc" id="sc9"></a>
msgctxt "mn101:6.1"
msgid "Sace pana tumhe, āvuso nigaṇṭhā, jāneyyātha—"
msgstr ""

msgctxt "mn101:6.2"
msgid "ahuvamheva mayaṃ pubbe, na nāhuvamhāti, jāneyyātha—"
msgstr ""

msgctxt "mn101:6.3"
msgid "akaramheva mayaṃ pubbe pāpakammaṃ, na nākaramhāti, jāneyyātha—"
msgstr ""

msgctxt "mn101:6.4"
msgid "evarūpaṃ vā evarūpaṃ vā pāpakammaṃ akaramhāti, jāneyyātha—"
msgstr ""

msgctxt "mn101:6.5"
msgid ""
"ettakaṃ vā dukkhaṃ nijjiṇṇaṃ, ettakaṃ vā dukkhaṃ nijjīretabbaṃ, ettakamhi vā "
"dukkhe nijjiṇṇe sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatīti, jāneyyātha—"
msgstr ""

msgctxt "mn101:6.6"
msgid ""
"diṭṭheva dhamme akusalānaṃ dhammānaṃ pahānaṃ, kusalānaṃ dhammānaṃ "
"upasampadaṃ;"
msgstr ""

msgctxt "mn101:6.7"
msgid "evaṃ sante āyasmantānaṃ nigaṇṭhānaṃ kallamassa veyyākaraṇāya:"
msgstr ""

msgctxt "mn101:6.8"
msgid ""
"“yaṃ kiñcāyaṃ purisapuggalo paṭisaṃvedeti sukhaṃ vā dukkhaṃ vā "
"adukkhamasukhaṃ vā, sabbaṃ taṃ pubbekatahetu."
msgstr ""

msgctxt "mn101:6.9"
msgid ""
"Iti purāṇānaṃ kammānaṃ tapasā byantībhāvā, navānaṃ kammānaṃ akaraṇā, āyatiṃ "
"anavassavo;"
msgstr ""

msgctxt "mn101:6.10"
msgid ""
"āyatiṃ anavassavā kammakkhayo; kammakkhayā dukkhakkhayo; dukkhakkhayā "
"vedanākkhayo; vedanākkhayā sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya7"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.217"></a>
#. <a class="sc" id="sc10"></a>
msgctxt "mn101:7.1"
msgid ""
"Seyyathāpi, āvuso nigaṇṭhā, puriso sallena viddho assa savisena "
"gāḷhūpalepanena;"
msgstr ""

#. VAR: vedhanahetu → vedanāhetu (bj, pts1, mr)
#. VAR: tibbā → tippā (bj, s1-3, km, pts1)
msgctxt "mn101:7.2"
msgid "so sallassapi vedhanahetu dukkhā tibbā kaṭukā vedanā vediyeyya."
msgstr ""

msgctxt "mn101:7.3"
msgid "Tassa mittāmaccā ñātisālohitā bhisakkaṃ sallakattaṃ upaṭṭhāpeyyuṃ."
msgstr ""

msgctxt "mn101:7.4"
msgid "Tassa so bhisakko sallakatto satthena vaṇamukhaṃ parikanteyya;"
msgstr ""

msgctxt "mn101:7.5"
msgid ""
"so satthenapi vaṇamukhassa parikantanahetu dukkhā tibbā kaṭukā vedanā "
"vediyeyya."
msgstr ""

msgctxt "mn101:7.6"
msgid "Tassa so bhisakko sallakatto esaniyā sallaṃ eseyya;"
msgstr ""

msgctxt "mn101:7.7"
msgid "so esaniyāpi sallassa esanāhetu dukkhā tibbā kaṭukā vedanā vediyeyya."
msgstr ""

#. VAR: abbuheyya → abbaheyya (bj) | abbhūṇheyya (s1-3, km) | abbyaheyya (pts1)
msgctxt "mn101:7.8"
msgid "Tassa so bhisakko sallakatto sallaṃ abbuheyya;"
msgstr ""

#. VAR: abbuhanahetu → abbahanahetu (bj) | abbhūṇhanahetu (s1-3, km) | abbyahanahetu (pts1)
msgctxt "mn101:7.9"
msgid "so sallassapi abbuhanahetu dukkhā tibbā kaṭukā vedanā vediyeyya."
msgstr ""

msgctxt "mn101:7.10"
msgid "Tassa so bhisakko sallakatto agadaṅgāraṃ vaṇamukhe odaheyya;"
msgstr ""

msgctxt "mn101:7.11"
msgid ""
"so agadaṅgārassapi vaṇamukhe odahanahetu dukkhā tibbā kaṭukā vedanā "
"vediyeyya."
msgstr ""

msgctxt "mn101:7.12"
msgid ""
"So aparena samayena rūḷhena vaṇena sañchavinā arogo assa sukhī serī "
"sayaṃvasī yena kāmaṅgamo."
msgstr ""

msgctxt "mn101:7.13"
msgid "Tassa evamassa:"
msgstr ""

msgctxt "mn101:7.14"
msgid "“ahaṃ kho pubbe sallena viddho ahosiṃ savisena gāḷhūpalepanena."
msgstr ""

msgctxt "mn101:7.15"
msgid "Sohaṃ sallassapi vedhanahetu dukkhā tibbā kaṭukā vedanā vediyiṃ."
msgstr ""

msgctxt "mn101:7.16"
msgid "Tassa me mittāmaccā ñātisālohitā bhisakkaṃ sallakattaṃ upaṭṭhapesuṃ."
msgstr ""

msgctxt "mn101:7.17"
msgid "Tassa me so bhisakko sallakatto satthena vaṇamukhaṃ parikanti;"
msgstr ""

msgctxt "mn101:7.18"
msgid ""
"sohaṃ satthenapi vaṇamukhassa parikantanahetu dukkhā tibbā kaṭukā vedanā "
"vediyiṃ."
msgstr ""

msgctxt "mn101:7.19"
msgid "Tassa me so bhisakko sallakatto esaniyā sallaṃ esi;"
msgstr ""

msgctxt "mn101:7.20"
msgid ""
"so ahaṃ esaniyāpi sallassa esanāhetu dukkhā tibbā kaṭukā vedanā vediyiṃ."
msgstr ""

#. VAR: abbuhi → abbahi (bj) | abbhūṇhi (s1-3, km) | abbyahi (pts1)
msgctxt "mn101:7.21"
msgid "Tassa me so bhisakko sallakatto sallaṃ abbuhi;"
msgstr ""

msgctxt "mn101:7.22"
msgid "sohaṃ sallassapi abbuhanahetu dukkhā tibbā kaṭukā vedanā vediyiṃ."
msgstr ""

msgctxt "mn101:7.23"
msgid "Tassa me so bhisakko sallakatto agadaṅgāraṃ vaṇamukhe odahi;"
msgstr ""

msgctxt "mn101:7.24"
msgid ""
"sohaṃ agadaṅgārassapi vaṇamukhe odahanahetu dukkhā tibbā kaṭukā vedanā "
"vediyiṃ."
msgstr ""

msgctxt "mn101:7.25"
msgid ""
"Somhi etarahi rūḷhena vaṇena sañchavinā arogo sukhī serī sayaṃvasī yena "
"kāmaṅgamo”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya8"></a>
#. <a class="sc" id="sc11"></a>
msgctxt "mn101:8.1"
msgid "Evameva kho, āvuso nigaṇṭhā, sace tumhe jāneyyātha—"
msgstr ""

msgctxt "mn101:8.2"
msgid "ahuvamheva mayaṃ pubbe, na nāhuvamhāti, jāneyyātha—"
msgstr ""

msgctxt "mn101:8.3"
msgid "akaramheva mayaṃ pubbe pāpakammaṃ, na nākaramhāti, jāneyyātha—"
msgstr ""

msgctxt "mn101:8.4"
msgid "evarūpaṃ vā evarūpaṃ vā pāpakammaṃ akaramhāti, jāneyyātha—"
msgstr ""

msgctxt "mn101:8.5"
msgid ""
"ettakaṃ vā dukkhaṃ nijjiṇṇaṃ, ettakaṃ vā dukkhaṃ nijjīretabbaṃ, ettakamhi vā "
"dukkhe nijjiṇṇe sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatīti, jāneyyātha—"
msgstr ""

msgctxt "mn101:8.6"
msgid ""
"diṭṭheva dhamme akusalānaṃ dhammānaṃ pahānaṃ, kusalānaṃ dhammānaṃ "
"upasampadaṃ;"
msgstr ""

msgctxt "mn101:8.7"
msgid "evaṃ sante āyasmantānaṃ nigaṇṭhānaṃ kallamassa veyyākaraṇāya:"
msgstr ""

msgctxt "mn101:8.8"
msgid ""
"“yaṃ kiñcāyaṃ purisapuggalo paṭisaṃvedeti sukhaṃ vā dukkhaṃ vā "
"adukkhamasukhaṃ vā, sabbaṃ taṃ pubbekatahetu."
msgstr ""

msgctxt "mn101:8.9"
msgid ""
"Iti purāṇānaṃ kammānaṃ tapasā byantībhāvā, navānaṃ kammānaṃ akaraṇā, āyatiṃ "
"anavassavo;"
msgstr ""

msgctxt "mn101:8.10"
msgid ""
"āyatiṃ anavassavā kammakkhayo; kammakkhayā dukkhakkhayo; dukkhakkhayā "
"vedanākkhayo; vedanākkhayā sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya9"></a>
#. <a class="sc" id="sc12"></a>
msgctxt "mn101:9.1"
msgid "Yasmā ca kho tumhe, āvuso nigaṇṭhā, na jānātha—"
msgstr ""

msgctxt "mn101:9.2"
msgid "ahuvamheva mayaṃ pubbe, na nāhuvamhāti, na jānātha—"
msgstr ""

msgctxt "mn101:9.3"
msgid "akaramheva mayaṃ pubbe pāpakammaṃ, na nākaramhāti, na jānātha—"
msgstr ""

msgctxt "mn101:9.4"
msgid "evarūpaṃ vā evarūpaṃ vā pāpakammaṃ akaramhāti, na jānātha—"
msgstr ""

msgctxt "mn101:9.5"
msgid ""
"ettakaṃ vā dukkhaṃ nijjiṇṇaṃ, ettakaṃ vā dukkhaṃ nijjīretabbaṃ, ettakamhi vā "
"dukkhe nijjiṇṇe sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatīti, na jānātha—"
msgstr ""

msgctxt "mn101:9.6"
msgid ""
"diṭṭheva dhamme akusalānaṃ dhammānaṃ pahānaṃ, kusalānaṃ dhammānaṃ "
"upasampadaṃ;"
msgstr ""

msgctxt "mn101:9.7"
msgid "tasmā āyasmantānaṃ nigaṇṭhānaṃ na kallamassa veyyākaraṇāya:"
msgstr ""

msgctxt "mn101:9.8"
msgid ""
"“yaṃ kiñcāyaṃ purisapuggalo paṭisaṃvedeti sukhaṃ vā dukkhaṃ vā "
"adukkhamasukhaṃ vā, sabbaṃ taṃ pubbekatahetu."
msgstr ""

msgctxt "mn101:9.9"
msgid ""
"Iti purāṇānaṃ kammānaṃ tapasā byantībhāvā, navānaṃ kammānaṃ akaraṇā, āyatiṃ "
"anavassavo;"
msgstr ""

msgctxt "mn101:9.10"
msgid ""
"āyatiṃ anavassavā kammakkhayo; kammakkhayā dukkhakkhayo; dukkhakkhayā "
"vedanākkhayo; vedanākkhayā sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī”’ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya10"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.218"></a>
#. <a class="sc" id="sc13"></a>
msgctxt "mn101:10.1"
msgid "Evaṃ vutte, bhikkhave, te nigaṇṭhā maṃ etadavocuṃ:"
msgstr ""

#. VAR: nāṭaputto → nātaputto (bj)
msgctxt "mn101:10.2"
msgid ""
"‘nigaṇṭho, āvuso, nāṭaputto sabbaññū sabbadassāvī, aparisesaṃ ñāṇadassanaṃ "
"paṭijānāti."
msgstr ""

msgctxt "mn101:10.3"
msgid ""
"“Carato ca me tiṭṭhato ca suttassa ca jāgarassa ca satataṃ samitaṃ "
"ñāṇadassanaṃ paccupaṭṭhitan”ti."
msgstr ""

msgctxt "mn101:10.4"
msgid "So evamāha:"
msgstr ""

msgctxt "mn101:10.5"
msgid ""
"“atthi kho vo, āvuso nigaṇṭhā, pubbeva pāpakammaṃ kataṃ, taṃ imāya kaṭukāya "
"dukkarakārikāya nijjīretha, "
msgstr ""

msgctxt "mn101:10.6"
msgid ""
"yaṃ panettha etarahi kāyena saṃvutā vācāya saṃvutā manasā saṃvutā taṃ āyatiṃ "
"pāpakammassa akaraṇaṃ."
msgstr ""

msgctxt "mn101:10.7"
msgid ""
"Iti purāṇānaṃ kammānaṃ tapasā byantībhāvā, navānaṃ kammānaṃ akaraṇā, āyatiṃ "
"anavassavo;"
msgstr ""

msgctxt "mn101:10.8"
msgid ""
"āyatiṃ anavassavā kammakkhayo; kammakkhayā dukkhakkhayo; dukkhakkhayā "
"vedanākkhayo; vedanākkhayā sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī”ti."
msgstr ""

msgctxt "mn101:10.9"
msgid "Tañca panamhākaṃ ruccati ceva khamati ca, tena camhā attamanā’ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya11"></a>
#. <a class="sc" id="sc14"></a>
msgctxt "mn101:11.1"
msgid "Evaṃ vutte, ahaṃ, bhikkhave, te nigaṇṭhe etadavocaṃ:"
msgstr ""

msgctxt "mn101:11.2"
msgid "‘pañca kho ime, āvuso nigaṇṭhā, dhammā diṭṭheva dhamme dvidhāvipākā."
msgstr ""

msgctxt "mn101:11.3"
msgid "Katame pañca?"
msgstr ""

msgctxt "mn101:11.4"
msgid "Saddhā, ruci, anussavo, ākāraparivitakko, diṭṭhinijjhānakkhanti—"
msgstr ""

msgctxt "mn101:11.5"
msgid "ime kho, āvuso nigaṇṭhā, pañca dhammā diṭṭheva dhamme dvidhāvipākā."
msgstr ""

msgctxt "mn101:11.6"
msgid ""
"Tatrāyasmantānaṃ nigaṇṭhānaṃ kā atītaṃse satthari saddhā, kā ruci, ko "
"anussavo, ko ākāraparivitakko, kā diṭṭhinijjhānakkhantī’ti."
msgstr ""

#. VAR: Evaṃvādī → evaṃvādīsu (mr)
#. VAR: kañci → kiñci (bj, s1, pts1, mr)
msgctxt "mn101:11.7"
msgid ""
"Evaṃvādī kho ahaṃ, bhikkhave, nigaṇṭhesu na kañci sahadhammikaṃ "
"vādapaṭihāraṃ samanupassāmi."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya12"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.219"></a>
#. <a class="sc" id="sc15"></a>
#. VAR: Puna caparāhaṃ → puna ca parāhaṃ (pts1) | puna ca panāhaṃ (mr)
msgctxt "mn101:12.1"
msgid "Puna caparāhaṃ, bhikkhave, te nigaṇṭhe evaṃ vadāmi:"
msgstr ""

msgctxt "mn101:12.2"
msgid "‘taṃ kiṃ maññatha, āvuso nigaṇṭhā."
msgstr ""

#. VAR: tibbo → tippo (pts1)
msgctxt "mn101:12.3"
msgid ""
"Yasmiṃ vo samaye tibbo upakkamo hoti tibbaṃ padhānaṃ, tibbā tasmiṃ samaye "
"opakkamikā dukkhā tibbā kaṭukā vedanā vediyetha;"
msgstr ""

msgctxt "mn101:12.4"
msgid ""
"yasmiṃ pana vo samaye na tibbo upakkamo hoti na tibbaṃ padhānaṃ, na tibbā "
"tasmiṃ samaye opakkamikā dukkhā tibbā kaṭukā vedanā vediyethā’ti?"
msgstr ""

msgctxt "mn101:12.5"
msgid ""
"‘Yasmiṃ no, āvuso gotama, samaye tibbo upakkamo hoti tibbaṃ padhānaṃ, tibbā "
"tasmiṃ samaye opakkamikā dukkhā tibbā kaṭukā vedanā vediyāma;"
msgstr ""

msgctxt "mn101:12.6"
msgid ""
"yasmiṃ pana no samaye na tibbo upakkamo hoti na tibbaṃ padhānaṃ, na tibbā "
"tasmiṃ samaye opakkamikā dukkhā tibbā kaṭukā vedanā vediyāmā’ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya13"></a>
#. <a class="sc" id="sc16"></a>
msgctxt "mn101:13.1"
msgid ""
"‘Iti kira, āvuso nigaṇṭhā, yasmiṃ vo samaye tibbo upakkamo hoti tibbaṃ "
"padhānaṃ, tibbā tasmiṃ samaye opakkamikā dukkhā tibbā kaṭukā vedanā "
"vediyetha;"
msgstr ""

msgctxt "mn101:13.2"
msgid ""
"yasmiṃ pana vo samaye na tibbo upakkamo hoti na tibbaṃ padhānaṃ, na tibbā "
"tasmiṃ samaye opakkamikā dukkhā tibbā kaṭukā vedanā vediyetha."
msgstr ""

msgctxt "mn101:13.3"
msgid "Evaṃ sante āyasmantānaṃ nigaṇṭhānaṃ na kallamassa veyyākaraṇāya:"
msgstr ""

msgctxt "mn101:13.4"
msgid ""
"“yaṃ kiñcāyaṃ purisapuggalo paṭisaṃvedeti sukhaṃ vā dukkhaṃ vā "
"adukkhamasukhaṃ vā, sabbaṃ taṃ pubbekatahetu."
msgstr ""

msgctxt "mn101:13.5"
msgid ""
"Iti purāṇānaṃ kammānaṃ tapasā byantībhāvā, navānaṃ kammānaṃ akaraṇā, āyatiṃ "
"anavassavo;"
msgstr ""

msgctxt "mn101:13.6"
msgid ""
"āyatiṃ anavassavā kammakkhayo; kammakkhayā dukkhakkhayo; dukkhakkhayā "
"vedanākkhayo; vedanākkhayā sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya14"></a>
#. <a class="sc" id="sc17"></a>
#. VAR: tasmiṃ samaye opakkamikā dukkhā tibbā kaṭukā vedanā vediyetha → tiṭṭheyyeva tasmiṃ samaye … vedanā (s1-3, km, pts1)
msgctxt "mn101:14.1"
msgid ""
"Sace, āvuso nigaṇṭhā, yasmiṃ vo samaye tibbo upakkamo hoti tibbaṃ padhānaṃ, "
"na tibbā tasmiṃ samaye opakkamikā dukkhā tibbā kaṭukā vedanā vediyetha;"
msgstr ""

msgctxt "mn101:14.2"
msgid ""
"yasmiṃ pana vo samaye na tibbo upakkamo hoti na tibbaṃ padhānaṃ, tibbā "
"tasmiṃ samaye opakkamikā dukkhā tibbā kaṭukā vedanā vediyetha;"
msgstr ""

msgctxt "mn101:14.3"
msgid "evaṃ sante āyasmantānaṃ nigaṇṭhānaṃ kallamassa veyyākaraṇāya:"
msgstr ""

msgctxt "mn101:14.4"
msgid ""
"“yaṃ kiñcāyaṃ purisapuggalo paṭisaṃvedeti sukhaṃ vā dukkhaṃ vā "
"adukkhamasukhaṃ vā, sabbaṃ taṃ pubbekatahetu."
msgstr ""

msgctxt "mn101:14.5"
msgid ""
"Iti purāṇānaṃ kammānaṃ tapasā byantībhāvā, navānaṃ kammānaṃ akaraṇā, āyatiṃ "
"anavassavo;"
msgstr ""

msgctxt "mn101:14.6"
msgid ""
"āyatiṃ anavassavā kammakkhayo; kammakkhayā dukkhakkhayo; dukkhakkhayā "
"vedanākkhayo; vedanākkhayā sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya15"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.220"></a>
#. <a class="sc" id="sc18"></a>
msgctxt "mn101:15.1"
msgid ""
"Yasmā ca kho, āvuso nigaṇṭhā, yasmiṃ vo samaye tibbo upakkamo hoti tibbaṃ "
"padhānaṃ, tibbā tasmiṃ samaye opakkamikā dukkhā tibbā kaṭukā vedanā "
"vediyetha;"
msgstr ""

msgctxt "mn101:15.2"
msgid ""
"yasmiṃ pana vo samaye na tibbo upakkamo hoti na tibbaṃ padhānaṃ, na tibbā "
"tasmiṃ samaye opakkamikā dukkhā tibbā kaṭukā vedanā vediyetha;"
msgstr ""

# This is a difficult sentence, and different translators handle it in quite different ways. I take vipaccetha as second plural optative, intended as a rhetorical question. The sense, I think, plays on the common meaning of “ripen”, but in the sense “make something out of it that it isn’t”, i.e. (mis)construe.
msgctxt "mn101:15.3"
msgid ""
"te tumhe sāmaṃyeva opakkamikā dukkhā tibbā kaṭukā vedanā vedayamānā avijjā "
"aññāṇā sammohā vipaccetha:"
msgstr ""

msgctxt "mn101:15.4"
msgid ""
"“yaṃ kiñcāyaṃ purisapuggalo paṭisaṃvedeti sukhaṃ vā dukkhaṃ vā "
"adukkhamasukhaṃ vā, sabbaṃ taṃ pubbekatahetu."
msgstr ""

msgctxt "mn101:15.5"
msgid ""
"Iti purāṇānaṃ kammānaṃ tapasā byantībhāvā, navānaṃ kammānaṃ akaraṇā, āyatiṃ "
"anavassavo;"
msgstr ""

msgctxt "mn101:15.6"
msgid ""
"āyatiṃ anavassavā kammakkhayo; kammakkhayā dukkhakkhayo; dukkhakkhayā "
"vedanākkhayo; vedanākkhayā sabbaṃ dukkhaṃ nijjiṇṇaṃ bhavissatī”’ti."
msgstr ""

#. VAR: Evaṃvādīpi → evaṃvādīsupi (mr)
msgctxt "mn101:15.7"
msgid ""
"Evaṃvādīpi kho ahaṃ, bhikkhave, nigaṇṭhesu na kañci sahadhammikaṃ "
"vādapaṭihāraṃ samanupassāmi."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya16"></a>
#. <a class="sc" id="sc19"></a>
msgctxt "mn101:16.1"
msgid "Puna caparāhaṃ, bhikkhave, te nigaṇṭhe evaṃ vadāmi:"
msgstr ""

msgctxt "mn101:16.2"
msgid ""
"‘taṃ kiṃ maññathāvuso nigaṇṭhā, yamidaṃ kammaṃ diṭṭhadhammavedanīyaṃ taṃ "
"upakkamena vā padhānena vā samparāyavedanīyaṃ hotūti labbhametan’ti?"
msgstr ""

msgctxt "mn101:16.3"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc20"></a>
msgctxt "mn101:16.4"
msgid ""
"‘Yaṃ panidaṃ kammaṃ samparāyavedanīyaṃ taṃ upakkamena vā padhānena vā "
"diṭṭhadhammavedanīyaṃ hotūti labbhametan’ti?"
msgstr ""

msgctxt "mn101:16.5"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya17"></a>
#. <a class="sc" id="sc21"></a>
msgctxt "mn101:17.1"
msgid ""
"‘Taṃ kiṃ maññathāvuso nigaṇṭhā, yamidaṃ kammaṃ sukhavedanīyaṃ taṃ upakkamena "
"vā padhānena vā dukkhavedanīyaṃ hotūti labbhametan’ti?"
msgstr ""

msgctxt "mn101:17.2"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc22"></a>
msgctxt "mn101:17.3"
msgid ""
"‘Yaṃ panidaṃ kammaṃ dukkhavedanīyaṃ taṃ upakkamena vā padhānena vā "
"sukhavedanīyaṃ hotūti labbhametan’ti?"
msgstr ""

msgctxt "mn101:17.4"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

# BB’s translation is based on Abhidhamma via comm, and is incorrect.
#. </p><p>
#. <a class="nya" id="nya18"></a>
#. <a class="sc" id="sc23"></a>
msgctxt "mn101:18.1"
msgid ""
"‘Taṃ kiṃ maññathāvuso nigaṇṭhā, yamidaṃ kammaṃ paripakkavedanīyaṃ taṃ "
"upakkamena vā padhānena vā aparipakkavedanīyaṃ hotūti labbhametan’ti?"
msgstr ""

msgctxt "mn101:18.2"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc24"></a>
msgctxt "mn101:18.3"
msgid ""
"‘Yaṃ panidaṃ kammaṃ aparipakkavedanīyaṃ taṃ upakkamena vā padhānena vā "
"paripakkavedanīyaṃ hotūti labbhametan’ti?"
msgstr ""

msgctxt "mn101:18.4"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya19"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.221"></a>
#. <a class="sc" id="sc25"></a>
msgctxt "mn101:19.1"
msgid ""
"‘Taṃ kiṃ maññathāvuso nigaṇṭhā, yamidaṃ kammaṃ bahuvedanīyaṃ taṃ upakkamena "
"vā padhānena vā appavedanīyaṃ hotūti labbhametan’ti?"
msgstr ""

msgctxt "mn101:19.2"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc26"></a>
msgctxt "mn101:19.3"
msgid ""
"‘Yaṃ panidaṃ kammaṃ appavedanīyaṃ taṃ upakkamena vā padhānena vā "
"bahuvedanīyaṃ hotūti labbhametan’ti?"
msgstr ""

msgctxt "mn101:19.4"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya20"></a>
#. <a class="sc" id="sc27"></a>
msgctxt "mn101:20.1"
msgid ""
"‘Taṃ kiṃ maññathāvuso nigaṇṭhā, yamidaṃ kammaṃ savedanīyaṃ taṃ upakkamena vā "
"padhānena vā avedanīyaṃ hotūti labbhametan’ti?"
msgstr ""

msgctxt "mn101:20.2"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc28"></a>
msgctxt "mn101:20.3"
msgid ""
"‘Yaṃ panidaṃ kammaṃ avedanīyaṃ taṃ upakkamena vā padhānena vā savedanīyaṃ "
"hotūti labbhametan’ti?"
msgstr ""

msgctxt "mn101:20.4"
msgid "‘No hidaṃ, āvuso’."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya21"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.222"></a>
#. <a class="sc" id="sc29"></a>
msgctxt "mn101:21.1"
msgid ""
"‘Iti kira, āvuso nigaṇṭhā, yamidaṃ kammaṃ diṭṭhadhammavedanīyaṃ taṃ "
"upakkamena vā padhānena vā samparāyavedanīyaṃ hotūti alabbhametaṃ, yaṃ "
"panidaṃ kammaṃ samparāyavedanīyaṃ taṃ upakkamena vā padhānena vā "
"diṭṭhadhammavedanīyaṃ hotūti alabbhametaṃ, yamidaṃ kammaṃ sukhavedanīyaṃ taṃ "
"upakkamena vā padhānena vā dukkhavedanīyaṃ hotūti alabbhametaṃ, yamidaṃ "
"kammaṃ dukkhavedanīyaṃ taṃ upakkamena vā padhānena vā sukhavedanīyaṃ hotūti "
"alabbhametaṃ, yamidaṃ kammaṃ paripakkavedanīyaṃ taṃ upakkamena vā padhānena "
"vā aparipakkavedanīyaṃ hotūti alabbhametaṃ, yamidaṃ kammaṃ "
"aparipakkavedanīyaṃ taṃ upakkamena vā padhānena vā paripakkavedanīyaṃ hotūti "
"alabbhametaṃ, yamidaṃ kammaṃ bahuvedanīyaṃ taṃ upakkamena vā padhānena vā "
"appavedanīyaṃ hotūti alabbhametaṃ, yamidaṃ kammaṃ appavedanīyaṃ taṃ "
"upakkamena vā padhānena vā bahuvedanīyaṃ hotūti alabbhametaṃ, yamidaṃ kammaṃ "
"savedanīyaṃ taṃ upakkamena vā padhānena vā avedanīyaṃ hotūti alabbhametaṃ, "
"yamidaṃ kammaṃ avedanīyaṃ taṃ upakkamena vā padhānena vā savedanīyaṃ hotūti "
"alabbhametaṃ;"
msgstr ""

msgctxt "mn101:21.2"
msgid ""
"evaṃ sante āyasmantānaṃ nigaṇṭhānaṃ aphalo upakkamo hoti, aphalaṃ padhānaṃ’."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya22"></a>
#. <a class="sc" id="sc30"></a>
msgctxt "mn101:22.1"
msgid "Evaṃvādī, bhikkhave, nigaṇṭhā."
msgstr ""

msgctxt "mn101:22.2"
msgid ""
"Evaṃvādīnaṃ, bhikkhave, nigaṇṭhānaṃ dasa sahadhammikā vādānuvādā gārayhaṃ "
"ṭhānaṃ āgacchanti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc31"></a>
msgctxt "mn101:22.3"
msgid "Sace, bhikkhave, sattā pubbekatahetu sukhadukkhaṃ paṭisaṃvedenti;"
msgstr ""

msgctxt "mn101:22.4"
msgid ""
"addhā, bhikkhave, nigaṇṭhā pubbe dukkaṭakammakārino yaṃ etarahi evarūpā "
"dukkhā tibbā kaṭukā vedanā vediyanti."
msgstr ""

msgctxt "mn101:22.5"
msgid "Sace, bhikkhave, sattā issaranimmānahetu sukhadukkhaṃ paṭisaṃvedenti;"
msgstr ""

msgctxt "mn101:22.6"
msgid ""
"addhā, bhikkhave, nigaṇṭhā pāpakena issarena nimmitā yaṃ etarahi evarūpā "
"dukkhā tibbā kaṭukā vedanā vediyanti."
msgstr ""

msgctxt "mn101:22.7"
msgid "Sace, bhikkhave, sattā saṅgatibhāvahetu sukhadukkhaṃ paṭisaṃvedenti;"
msgstr ""

msgctxt "mn101:22.8"
msgid ""
"addhā, bhikkhave, nigaṇṭhā pāpasaṅgatikā yaṃ etarahi evarūpā dukkhā tibbā "
"kaṭukā vedanā vediyanti."
msgstr ""

msgctxt "mn101:22.9"
msgid "Sace, bhikkhave, sattā abhijātihetu sukhadukkhaṃ paṭisaṃvedenti;"
msgstr ""

msgctxt "mn101:22.10"
msgid ""
"addhā, bhikkhave, nigaṇṭhā pāpābhijātikā yaṃ etarahi evarūpā dukkhā tibbā "
"kaṭukā vedanā vediyanti."
msgstr ""

msgctxt "mn101:22.11"
msgid ""
"Sace, bhikkhave, sattā diṭṭhadhammūpakkamahetu sukhadukkhaṃ paṭisaṃvedenti;"
msgstr ""

# PTS edition has the expected papa.
msgctxt "mn101:22.12"
msgid ""
"addhā, bhikkhave, nigaṇṭhā evarūpā diṭṭhadhammūpakkamā yaṃ etarahi evarūpā "
"dukkhā tibbā kaṭukā vedanā vediyanti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.223"></a>
#. <a class="sc" id="sc32"></a>
msgctxt "mn101:22.13"
msgid ""
"Sace, bhikkhave, sattā pubbekatahetu sukhadukkhaṃ paṭisaṃvedenti, gārayhā "
"nigaṇṭhā;"
msgstr ""

msgctxt "mn101:22.14"
msgid ""
"no ce sattā pubbekatahetu sukhadukkhaṃ paṭisaṃvedenti, gārayhā nigaṇṭhā."
msgstr ""

msgctxt "mn101:22.15"
msgid ""
"Sace, bhikkhave, sattā issaranimmānahetu sukhadukkhaṃ paṭisaṃvedenti, "
"gārayhā nigaṇṭhā;"
msgstr ""

msgctxt "mn101:22.16"
msgid ""
"no ce sattā issaranimmānahetu sukhadukkhaṃ paṭisaṃvedenti, gārayhā nigaṇṭhā."
msgstr ""

msgctxt "mn101:22.17"
msgid ""
"Sace, bhikkhave, sattā saṅgatibhāvahetu sukhadukkhaṃ paṭisaṃvedenti, gārayhā "
"nigaṇṭhā;"
msgstr ""

msgctxt "mn101:22.18"
msgid ""
"no ce sattā saṅgatibhāvahetu sukhadukkhaṃ paṭisaṃvedenti, gārayhā nigaṇṭhā."
msgstr ""

msgctxt "mn101:22.19"
msgid ""
"Sace, bhikkhave, sattā abhijātihetu sukhadukkhaṃ paṭisaṃvedenti, gārayhā "
"nigaṇṭhā;"
msgstr ""

msgctxt "mn101:22.20"
msgid "no ce sattā abhijātihetu sukhadukkhaṃ paṭisaṃvedenti, gārayhā nigaṇṭhā."
msgstr ""

msgctxt "mn101:22.21"
msgid ""
"Sace, bhikkhave, sattā diṭṭhadhammūpakkamahetu sukhadukkhaṃ paṭisaṃvedenti, "
"gārayhā nigaṇṭhā;"
msgstr ""

msgctxt "mn101:22.22"
msgid ""
"no ce sattā diṭṭhadhammūpakkamahetu sukhadukkhaṃ paṭisaṃvedenti, gārayhā "
"nigaṇṭhā."
msgstr ""

msgctxt "mn101:22.23"
msgid "Evaṃvādī, bhikkhave, nigaṇṭhā."
msgstr ""

msgctxt "mn101:22.24"
msgid ""
"Evaṃvādīnaṃ, bhikkhave, nigaṇṭhānaṃ ime dasa sahadhammikā vādānuvādā "
"gārayhaṃ ṭhānaṃ āgacchanti."
msgstr ""

msgctxt "mn101:22.25"
msgid "Evaṃ kho, bhikkhave, aphalo upakkamo hoti, aphalaṃ padhānaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya23"></a>
#. <a class="sc" id="sc33"></a>
msgctxt "mn101:23.1"
msgid "Kathañca, bhikkhave, saphalo upakkamo hoti, saphalaṃ padhānaṃ?"
msgstr ""

msgctxt "mn101:23.2"
msgid ""
"Idha, bhikkhave, bhikkhu na heva anaddhabhūtaṃ attānaṃ dukkhena "
"addhabhāveti, dhammikañca sukhaṃ na pariccajati, tasmiñca sukhe "
"anadhimucchito hoti."
msgstr ""

msgctxt "mn101:23.3"
msgid "So evaṃ pajānāti:"
msgstr ""

# BB takes viraga here in the sense of “fade away”, but it seems hard then to differentiate it from nijjinna. In addition, in the simile viraga is used in the sense of dispassion. Thus I think that is the sense here, too.
msgctxt "mn101:23.4"
msgid ""
"‘imassa kho me dukkhanidānassa saṅkhāraṃ padahato saṅkhārappadhānā virāgo "
"hoti, imassa pana me dukkhanidānassa ajjhupekkhato upekkhaṃ bhāvayato virāgo "
"hotī’ti."
msgstr ""

#. VAR: yassa hi khvāssa → yassa kho hi panassa (si) | yassa hi khvassa (s1-3) | yassa khvāssa (pts1)
msgctxt "mn101:23.5"
msgid ""
"So yassa hi khvāssa dukkhanidānassa saṅkhāraṃ padahato saṅkhārappadhānā "
"virāgo hoti, saṅkhāraṃ tattha padahati."
msgstr ""

msgctxt "mn101:23.6"
msgid ""
"Yassa panassa dukkhanidānassa ajjhupekkhato upekkhaṃ bhāvayato virāgo hoti, "
"upekkhaṃ tattha bhāveti."
msgstr ""

msgctxt "mn101:23.7"
msgid ""
"Tassa tassa dukkhanidānassa saṅkhāraṃ padahato saṅkhārappadhānā virāgo hoti—"
msgstr ""

msgctxt "mn101:23.8"
msgid "evampissa taṃ dukkhaṃ nijjiṇṇaṃ hoti."
msgstr ""

msgctxt "mn101:23.9"
msgid ""
"Tassa tassa dukkhanidānassa ajjhupekkhato upekkhaṃ bhāvayato virāgo hoti—"
msgstr ""

msgctxt "mn101:23.10"
msgid "evampissa taṃ dukkhaṃ nijjiṇṇaṃ hoti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya24"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.224"></a>
#. <a class="sc" id="sc34"></a>
msgctxt "mn101:24.1"
msgid ""
"Seyyathāpi, bhikkhave, puriso itthiyā sāratto paṭibaddhacitto tibbacchando "
"tibbāpekkho."
msgstr ""

msgctxt "mn101:24.2"
msgid ""
"So taṃ itthiṃ passeyya aññena purisena saddhiṃ santiṭṭhantiṃ sallapantiṃ "
"sañjagghantiṃ saṃhasantiṃ."
msgstr ""

msgctxt "mn101:24.3"
msgid "Taṃ kiṃ maññatha, bhikkhave, "
msgstr ""

msgctxt "mn101:24.4"
msgid ""
"api nu tassa purisassa amuṃ itthiṃ disvā aññena purisena saddhiṃ "
"santiṭṭhantiṃ sallapantiṃ sañjagghantiṃ saṃhasantiṃ uppajjeyyuṃ "
"sokaparidevadukkhadomanassūpāyāsā”ti?"
msgstr ""

msgctxt "mn101:24.5"
msgid "“Evaṃ, bhante”."
msgstr ""

msgctxt "mn101:24.6"
msgid "“Taṃ kissa hetu”?"
msgstr ""

msgctxt "mn101:24.7"
msgid ""
"“Amu hi, bhante, puriso amussā itthiyā sāratto paṭibaddhacitto tibbacchando "
"tibbāpekkho."
msgstr ""

msgctxt "mn101:24.8"
msgid ""
"Tasmā taṃ itthiṃ disvā aññena purisena saddhiṃ santiṭṭhantiṃ sallapantiṃ "
"sañjagghantiṃ saṃhasantiṃ uppajjeyyuṃ sokaparidevadukkhadomanassūpāyāsā”ti."
msgstr ""

#. <a class="nya" id="nya25"></a>
msgctxt "mn101:25.1"
msgid "“Atha kho, bhikkhave, tassa purisassa evamassa:"
msgstr ""

msgctxt "mn101:25.2"
msgid ""
"‘ahaṃ kho amussā itthiyā sāratto paṭibaddhacitto tibbacchando tibbāpekkho."
msgstr ""

msgctxt "mn101:25.3"
msgid ""
"Tassa me amuṃ itthiṃ disvā aññena purisena saddhiṃ santiṭṭhantiṃ sallapantiṃ "
"sañjagghantiṃ saṃhasantiṃ uppajjanti sokaparidevadukkhadomanassūpāyāsā."
msgstr ""

msgctxt "mn101:25.4"
msgid "Yannūnāhaṃ yo me amussā itthiyā chandarāgo taṃ pajaheyyan’ti."
msgstr ""

msgctxt "mn101:25.5"
msgid "So yo amussā itthiyā chandarāgo taṃ pajaheyya."
msgstr ""

msgctxt "mn101:25.6"
msgid ""
"So taṃ itthiṃ passeyya aparena samayena aññena purisena saddhiṃ "
"santiṭṭhantiṃ sallapantiṃ sañjagghantiṃ saṃhasantiṃ."
msgstr ""

msgctxt "mn101:25.7"
msgid "Taṃ kiṃ maññatha, bhikkhave, "
msgstr ""

msgctxt "mn101:25.8"
msgid ""
"api nu tassa purisassa amuṃ itthiṃ disvā aññena purisena saddhiṃ "
"santiṭṭhantiṃ sallapantiṃ sañjagghantiṃ saṃhasantiṃ uppajjeyyuṃ "
"sokaparidevadukkhadomanassūpāyāsā”ti?"
msgstr ""

msgctxt "mn101:25.9"
msgid "“No hetaṃ, bhante”."
msgstr ""

msgctxt "mn101:25.10"
msgid "“Taṃ kissa hetu”?"
msgstr ""

msgctxt "mn101:25.11"
msgid "“Amu hi, bhante, puriso amussā itthiyā virāgo."
msgstr ""

msgctxt "mn101:25.12"
msgid ""
"Tasmā taṃ itthiṃ disvā aññena purisena saddhiṃ santiṭṭhantiṃ sallapantiṃ "
"sañjagghantiṃ saṃhasantiṃ na uppajjeyyuṃ "
"sokaparidevadukkhadomanassūpāyāsā”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya26"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.225"></a>
#. <a class="sc" id="sc35"></a>
msgctxt "mn101:26.1"
msgid ""
"“Evameva kho, bhikkhave, bhikkhu na heva anaddhabhūtaṃ attānaṃ dukkhena "
"addhabhāveti, dhammikañca sukhaṃ na pariccajati, tasmiñca sukhe "
"anadhimucchito hoti."
msgstr ""

msgctxt "mn101:26.2"
msgid "So evaṃ pajānāti:"
msgstr ""

msgctxt "mn101:26.3"
msgid ""
"‘imassa kho me dukkhanidānassa saṅkhāraṃ padahato saṅkhārappadhānā virāgo "
"hoti, imassa pana me dukkhanidānassa ajjhupekkhato upekkhaṃ bhāvayato virāgo "
"hotī’ti."
msgstr ""

msgctxt "mn101:26.4"
msgid ""
"So yassa hi khvāssa dukkhanidānassa saṅkhāraṃ padahato saṅkhārappadhānā "
"virāgo hoti, saṅkhāraṃ tattha padahati;"
msgstr ""

msgctxt "mn101:26.5"
msgid ""
"yassa panassa dukkhanidānassa ajjhupekkhato upekkhaṃ bhāvayato virāgo hoti, "
"upekkhaṃ tattha bhāveti."
msgstr ""

msgctxt "mn101:26.6"
msgid ""
"Tassa tassa dukkhanidānassa saṅkhāraṃ padahato saṅkhārappadhānā virāgo hoti—"
msgstr ""

msgctxt "mn101:26.7"
msgid "evampissa taṃ dukkhaṃ nijjiṇṇaṃ hoti."
msgstr ""

msgctxt "mn101:26.8"
msgid ""
"Tassa tassa dukkhanidānassa ajjhupekkhato upekkhaṃ bhāvayato virāgo hoti—"
msgstr ""

msgctxt "mn101:26.9"
msgid "evampissa taṃ dukkhaṃ nijjiṇṇaṃ hoti."
msgstr ""

msgctxt "mn101:26.10"
msgid "Evampi, bhikkhave, saphalo upakkamo hoti, saphalaṃ padhānaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya27"></a>
#. <a class="sc" id="sc36"></a>
msgctxt "mn101:27.1"
msgid "Puna caparaṃ, bhikkhave, bhikkhu iti paṭisañcikkhati:"
msgstr ""

msgctxt "mn101:27.2"
msgid ""
"‘yathāsukhaṃ kho me viharato akusalā dhammā abhivaḍḍhanti, kusalā dhammā "
"parihāyanti;"
msgstr ""

msgctxt "mn101:27.3"
msgid ""
"dukkhāya pana me attānaṃ padahato akusalā dhammā parihāyanti, kusalā dhammā "
"abhivaḍḍhanti."
msgstr ""

msgctxt "mn101:27.4"
msgid "Yannūnāhaṃ dukkhāya attānaṃ padaheyyan’ti."
msgstr ""

msgctxt "mn101:27.5"
msgid "So dukkhāya attānaṃ padahati."
msgstr ""

msgctxt "mn101:27.6"
msgid ""
"Tassa dukkhāya attānaṃ padahato akusalā dhammā parihāyanti kusalā dhammā "
"abhivaḍḍhanti."
msgstr ""

msgctxt "mn101:27.7"
msgid "So na aparena samayena dukkhāya attānaṃ padahati."
msgstr ""

msgctxt "mn101:27.8"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "mn101:27.9"
msgid ""
"Yassa hi so, bhikkhave, bhikkhu atthāya dukkhāya attānaṃ padaheyya svāssa "
"attho abhinipphanno hoti."
msgstr ""

msgctxt "mn101:27.10"
msgid "Tasmā na aparena samayena dukkhāya attānaṃ padahati."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya28"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.226"></a>
#. <a class="sc" id="sc37"></a>
msgctxt "mn101:28.1"
msgid ""
"Seyyathāpi, bhikkhave, usukāro tejanaṃ dvīsu alātesu ātāpeti paritāpeti ujuṃ "
"karoti kammaniyaṃ."
msgstr ""

#. <a class="nya" id="nya29"></a>
#. VAR: kataṃ → ujuṃ kataṃ hoti (bj) | ujukataṃ (s1-3)
msgctxt "mn101:29.1"
msgid ""
"Yato kho, bhikkhave, usukārassa tejanaṃ dvīsu alātesu ātāpitaṃ hoti "
"paritāpitaṃ ujuṃ kataṃ kammaniyaṃ, na so taṃ aparena samayena usukāro "
"tejanaṃ dvīsu alātesu ātāpeti paritāpeti ujuṃ karoti kammaniyaṃ."
msgstr ""

msgctxt "mn101:29.2"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "mn101:29.3"
msgid ""
"Yassa hi so, bhikkhave, atthāya usukāro tejanaṃ dvīsu alātesu ātāpeyya "
"paritāpeyya ujuṃ kareyya kammaniyaṃ svāssa attho abhinipphanno hoti."
msgstr ""

msgctxt "mn101:29.4"
msgid ""
"Tasmā na aparena samayena usukāro tejanaṃ dvīsu alātesu ātāpeti paritāpeti "
"ujuṃ karoti kammaniyaṃ."
msgstr ""

msgctxt "mn101:29.5"
msgid "Evameva kho, bhikkhave, bhikkhu iti paṭisañcikkhati:"
msgstr ""

msgctxt "mn101:29.6"
msgid ""
"‘yathāsukhaṃ kho me viharato akusalā dhammā abhivaḍḍhanti, kusalā dhammā "
"parihāyanti;"
msgstr ""

msgctxt "mn101:29.7"
msgid ""
"dukkhāya pana me attānaṃ padahato akusalā dhammā parihāyanti, kusalā dhammā "
"abhivaḍḍhanti."
msgstr ""

msgctxt "mn101:29.8"
msgid "Yannūnāhaṃ dukkhāya attānaṃ padaheyyan’ti."
msgstr ""

msgctxt "mn101:29.9"
msgid "So dukkhāya attānaṃ padahati."
msgstr ""

msgctxt "mn101:29.10"
msgid ""
"Tassa dukkhāya attānaṃ padahato akusalā dhammā parihāyanti, kusalā dhammā "
"abhivaḍḍhanti."
msgstr ""

msgctxt "mn101:29.11"
msgid "So na aparena samayena dukkhāya attānaṃ padahati."
msgstr ""

msgctxt "mn101:29.12"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "mn101:29.13"
msgid ""
"Yassa hi so, bhikkhave, bhikkhu atthāya dukkhāya attānaṃ padaheyya svāssa "
"attho abhinipphanno hoti."
msgstr ""

msgctxt "mn101:29.14"
msgid "Tasmā na aparena samayena dukkhāya attānaṃ padahati."
msgstr ""

msgctxt "mn101:29.15"
msgid "Evampi, bhikkhave, saphalo upakkamo hoti, saphalaṃ padhānaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya30"></a>
#. <a class="sc" id="sc38"></a>
msgctxt "mn101:30.1"
msgid ""
"Puna caparaṃ, bhikkhave, idha tathāgato loke uppajjati arahaṃ sammāsambuddho "
"vijjācaraṇasampanno sugato lokavidū anuttaro purisadammasārathi satthā "
"devamanussānaṃ buddho bhagavā."
msgstr ""

msgctxt "mn101:30.2"
msgid ""
"So imaṃ lokaṃ sadevakaṃ samārakaṃ sabrahmakaṃ sassamaṇabrāhmaṇiṃ pajaṃ "
"sadevamanussaṃ sayaṃ abhiññā sacchikatvā pavedeti."
msgstr ""

msgctxt "mn101:30.3"
msgid ""
"So dhammaṃ deseti ādikalyāṇaṃ majjhekalyāṇaṃ pariyosānakalyāṇaṃ sātthaṃ "
"sabyañjanaṃ, kevalaparipuṇṇaṃ parisuddhaṃ brahmacariyaṃ pakāseti."
msgstr ""

#. <a class="nya" id="nya31"></a>
msgctxt "mn101:31.1"
msgid ""
"Taṃ dhammaṃ suṇāti gahapati vā gahapatiputto vā aññatarasmiṃ vā kule "
"paccājāto."
msgstr ""

msgctxt "mn101:31.2"
msgid "So taṃ dhammaṃ sutvā tathāgate saddhaṃ paṭilabhati."
msgstr ""

msgctxt "mn101:31.3"
msgid "So tena saddhāpaṭilābhena samannāgato iti paṭisañcikkhati:"
msgstr ""

msgctxt "mn101:31.4"
msgid "‘sambādho gharāvāso rajāpatho, abbhokāso pabbajjā."
msgstr ""

msgctxt "mn101:31.5"
msgid ""
"Nayidaṃ sukaraṃ agāraṃ ajjhāvasatā ekantaparipuṇṇaṃ ekantaparisuddhaṃ "
"saṅkhalikhitaṃ brahmacariyaṃ carituṃ."
msgstr ""

msgctxt "mn101:31.6"
msgid ""
"Yannūnāhaṃ kesamassuṃ ohāretvā kāsāyāni vatthāni acchādetvā agārasmā "
"anagāriyaṃ pabbajeyyan’ti."
msgstr ""

msgctxt "mn101:31.7"
msgid ""
"So aparena samayena appaṃ vā bhogakkhandhaṃ pahāya mahantaṃ vā "
"bhogakkhandhaṃ pahāya, appaṃ vā ñātiparivaṭṭaṃ pahāya mahantaṃ vā "
"ñātiparivaṭṭaṃ pahāya kesamassuṃ ohāretvā kāsāyāni vatthāni acchādetvā "
"agārasmā anagāriyaṃ pabbajati."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya32"></a>
#. <a class="sc" id="sc39"></a>
msgctxt "mn101:32.1"
msgid ""
"So evaṃ pabbajito samāno bhikkhūnaṃ sikkhāsājīvasamāpanno pāṇātipātaṃ pahāya "
"pāṇātipātā paṭivirato hoti nihitadaṇḍo nihitasattho, lajjī dayāpanno "
"sabbapāṇabhūtahitānukampī viharati."
msgstr ""

msgctxt "mn101:32.2"
msgid ""
"Adinnādānaṃ pahāya adinnādānā paṭivirato hoti dinnādāyī dinnapāṭikaṅkhī, "
"athenena sucibhūtena attanā viharati."
msgstr ""

msgctxt "mn101:32.3"
msgid ""
"Abrahmacariyaṃ pahāya brahmacārī hoti ārācārī virato methunā gāmadhammā."
msgstr ""

msgctxt "mn101:32.4"
msgid ""
"Musāvādaṃ pahāya musāvādā paṭivirato hoti saccavādī saccasandho theto "
"paccayiko avisaṃvādako lokassa."
msgstr ""

msgctxt "mn101:32.5"
msgid ""
"Pisuṇaṃ vācaṃ pahāya pisuṇāya vācāya paṭivirato hoti; ito sutvā na amutra "
"akkhātā imesaṃ bhedāya, amutra vā sutvā na imesaṃ akkhātā amūsaṃ bhedāya—iti "
"bhinnānaṃ vā sandhātā sahitānaṃ vā anuppadātā samaggārāmo samaggarato "
"samagganandī samaggakaraṇiṃ vācaṃ bhāsitā hoti."
msgstr ""

msgctxt "mn101:32.6"
msgid ""
"Pharusaṃ vācaṃ pahāya pharusāya vācāya paṭivirato hoti; yā sā vācā nelā "
"kaṇṇasukhā pemanīyā hadayaṅgamā porī bahujanakantā bahujanamanāpā tathārūpiṃ "
"vācaṃ bhāsitā hoti."
msgstr ""

msgctxt "mn101:32.7"
msgid ""
"Samphappalāpaṃ pahāya samphappalāpā paṭivirato hoti kālavādī bhūtavādī "
"atthavādī dhammavādī vinayavādī, nidhānavatiṃ vācaṃ bhāsitā kālena sāpadesaṃ "
"pariyantavatiṃ atthasaṃhitaṃ."
msgstr ""

msgctxt "mn101:32.8"
msgid "So bījagāmabhūtagāmasamārambhā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.9"
msgid "Ekabhattiko hoti rattūparato virato vikālabhojanā."
msgstr ""

msgctxt "mn101:32.10"
msgid "Naccagītavāditavisūkadassanā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.11"
msgid "Mālāgandhavilepanadhāraṇamaṇḍanavibhūsanaṭṭhānā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.12"
msgid "Uccāsayanamahāsayanā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.13"
msgid "Jātarūparajatapaṭiggahaṇā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.14"
msgid "Āmakadhaññapaṭiggahaṇā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.15"
msgid "Āmakamaṃsapaṭiggahaṇā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.16"
msgid "Itthikumārikapaṭiggahaṇā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.17"
msgid "Dāsidāsapaṭiggahaṇā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.18"
msgid "Ajeḷakapaṭiggahaṇā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.19"
msgid "Kukkuṭasūkarapaṭiggahaṇā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.20"
msgid "Hatthigavassavaḷavapaṭiggahaṇā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.21"
msgid "Khettavatthupaṭiggahaṇā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.22"
msgid "Dūteyyapahiṇagamanānuyogā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.23"
msgid "Kayavikkayā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.24"
msgid "Tulākūṭakaṃsakūṭamānakūṭā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.25"
msgid "Ukkoṭanavañcananikatisāciyogā paṭivirato hoti."
msgstr ""

msgctxt "mn101:32.26"
msgid "Chedanavadhabandhanaviparāmosaālopasahasākārā paṭivirato hoti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya33"></a>
#. <a class="sc" id="sc40"></a>
msgctxt "mn101:33.1"
msgid ""
"So santuṭṭho hoti kāyaparihārikena cīvarena, kucchiparihārikena piṇḍapātena. "
"So yena yeneva pakkamati samādāyeva pakkamati."
msgstr ""

msgctxt "mn101:33.2"
msgid "Seyyathāpi nāma pakkhī sakuṇo yena yeneva ḍeti sapattabhārova ḍeti;"
msgstr ""

msgctxt "mn101:33.3"
msgid ""
"evameva bhikkhu santuṭṭho hoti kāyaparihārikena cīvarena, kucchiparihārikena "
"piṇḍapātena; so yena yeneva pakkamati samādāyeva pakkamati."
msgstr ""

msgctxt "mn101:33.4"
msgid ""
"So iminā ariyena sīlakkhandhena samannāgato ajjhattaṃ anavajjasukhaṃ "
"paṭisaṃvedeti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya34"></a>
#. <a class="sc" id="sc41"></a>
msgctxt "mn101:34.1"
msgid "So cakkhunā rūpaṃ disvā na nimittaggāhī hoti nānubyañjanaggāhī."
msgstr ""

msgctxt "mn101:34.2"
msgid ""
"Yatvādhikaraṇamenaṃ cakkhundriyaṃ asaṃvutaṃ viharantaṃ abhijjhādomanassā "
"pāpakā akusalā dhammā anvāssaveyyuṃ tassa saṃvarāya paṭipajjati, rakkhati "
"cakkhundriyaṃ, cakkhundriye saṃvaraṃ āpajjati."
msgstr ""

msgctxt "mn101:34.3"
msgid "Sotena saddaṃ sutvā … pe …"
msgstr ""

msgctxt "mn101:34.4"
msgid "ghānena gandhaṃ ghāyitvā … pe …"
msgstr ""

msgctxt "mn101:34.5"
msgid "jivhāya rasaṃ sāyitvā … pe …"
msgstr ""

msgctxt "mn101:34.6"
msgid "kāyena phoṭṭhabbaṃ phusitvā … pe …"
msgstr ""

msgctxt "mn101:34.7"
msgid "manasā dhammaṃ viññāya na nimittaggāhī hoti nānubyañjanaggāhī."
msgstr ""

msgctxt "mn101:34.8"
msgid ""
"Yatvādhikaraṇamenaṃ manindriyaṃ asaṃvutaṃ viharantaṃ abhijjhādomanassā "
"pāpakā akusalā dhammā anvāssaveyyuṃ tassa saṃvarāya paṭipajjati, rakkhati "
"manindriyaṃ, manindriye saṃvaraṃ āpajjati."
msgstr ""

msgctxt "mn101:34.9"
msgid ""
"So iminā ariyena indriyasaṃvarena samannāgato ajjhattaṃ abyāsekasukhaṃ "
"paṭisaṃvedeti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya35"></a>
#. <a class="sc" id="sc42"></a>
#. VAR: samiñjite → sammiñjite (bj, s1-3, km)
msgctxt "mn101:35.1"
msgid ""
"So abhikkante paṭikkante sampajānakārī hoti, ālokite vilokite sampajānakārī "
"hoti, samiñjite pasārite sampajānakārī hoti, saṅghāṭipattacīvaradhāraṇe "
"sampajānakārī hoti, asite pīte khāyite sāyite sampajānakārī hoti, "
"uccārapassāvakamme sampajānakārī hoti, gate ṭhite nisinne sutte jāgarite "
"bhāsite tuṇhībhāve sampajānakārī hoti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya35-37"></a>
#. <a class="sc" id="sc43"></a>
msgctxt "mn101:35-37.1"
msgid ""
"So iminā ca ariyena sīlakkhandhena samannāgato, imāya ca ariyāya santuṭṭhiyā "
"samannāgato, iminā ca ariyena indriyasaṃvarena samannāgato, iminā ca ariyena "
"satisampajaññena samannāgato "
msgstr ""

msgctxt "mn101:35-37.2"
msgid ""
"vivittaṃ senāsanaṃ bhajati araññaṃ rukkhamūlaṃ pabbataṃ kandaraṃ giriguhaṃ "
"susānaṃ vanapatthaṃ abbhokāsaṃ palālapuñjaṃ."
msgstr ""

msgctxt "mn101:35-37.3"
msgid ""
"So pacchābhattaṃ piṇḍapātapaṭikkanto nisīdati pallaṅkaṃ ābhujitvā, ujuṃ "
"kāyaṃ paṇidhāya, parimukhaṃ satiṃ upaṭṭhapetvā."
msgstr ""

msgctxt "mn101:35-37.4"
msgid ""
"So abhijjhaṃ loke pahāya vigatābhijjhena cetasā viharati, abhijjhāya cittaṃ "
"parisodheti."
msgstr ""

msgctxt "mn101:35-37.5"
msgid ""
"Byāpādapadosaṃ pahāya abyāpannacitto viharati sabbapāṇabhūtahitānukampī, "
"byāpādapadosā cittaṃ parisodheti."
msgstr ""

msgctxt "mn101:35-37.6"
msgid ""
"Thinamiddhaṃ pahāya vigatathinamiddho viharati ālokasaññī sato sampajāno, "
"thinamiddhā cittaṃ parisodheti."
msgstr ""

msgctxt "mn101:35-37.7"
msgid ""
"Uddhaccakukkuccaṃ pahāya anuddhato viharati ajjhattaṃ vūpasantacitto, "
"uddhaccakukkuccā cittaṃ parisodheti."
msgstr ""

msgctxt "mn101:35-37.8"
msgid ""
"Vicikicchaṃ pahāya tiṇṇavicikiccho viharati akathaṃkathī kusalesu dhammesu, "
"vicikicchāya cittaṃ parisodheti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya38"></a>
#. <a class="sc" id="sc44"></a>
msgctxt "mn101:38.1"
msgid "So ime pañca nīvaraṇe pahāya cetaso upakkilese paññāya dubbalīkaraṇe "
msgstr ""

msgctxt "mn101:38.2"
msgid ""
"vivicceva kāmehi vivicca akusalehi dhammehi savitakkaṃ savicāraṃ vivekajaṃ "
"pītisukhaṃ paṭhamaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "mn101:38.3"
msgid "Evampi, bhikkhave, saphalo upakkamo hoti, saphalaṃ padhānaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya39"></a>
#. <a class="sc" id="sc45"></a>
msgctxt "mn101:39.1"
msgid ""
"Puna caparaṃ, bhikkhave, bhikkhu vitakkavicārānaṃ vūpasamā ajjhattaṃ "
"sampasādanaṃ cetaso ekodibhāvaṃ avitakkaṃ avicāraṃ samādhijaṃ pītisukhaṃ "
"dutiyaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "mn101:39.2"
msgid "Evampi, bhikkhave, saphalo upakkamo hoti, saphalaṃ padhānaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya40"></a>
#. <a class="sc" id="sc46"></a>
msgctxt "mn101:40.1"
msgid ""
"Puna caparaṃ, bhikkhave, bhikkhu pītiyā ca virāgā upekkhako ca viharati sato "
"ca sampajāno, sukhañca kāyena paṭisaṃvedeti. Yaṃ taṃ ariyā ācikkhanti: ‘"
"upekkhako satimā sukhavihārī’ti tatiyaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "mn101:40.2"
msgid "Evampi, bhikkhave, saphalo upakkamo hoti, saphalaṃ padhānaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya41"></a>
#. <a class="sc" id="sc47"></a>
msgctxt "mn101:41.1"
msgid ""
"Puna caparaṃ, bhikkhave, bhikkhu sukhassa ca pahānā dukkhassa ca pahānā, "
"pubbeva somanassadomanassānaṃ atthaṅgamā, adukkhamasukhaṃ "
"upekkhāsatipārisuddhiṃ catutthaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "mn101:41.2"
msgid "Evampi, bhikkhave, saphalo upakkamo hoti, saphalaṃ padhānaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya42"></a>
#. <a class="sc" id="sc48"></a>
msgctxt "mn101:42.1"
msgid ""
"So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese "
"mudubhūte kammaniye ṭhite āneñjappatte pubbenivāsānussatiñāṇāya cittaṃ "
"abhininnāmeti."
msgstr ""

#. VAR: seyyathidaṃ → seyyathīdaṃ (bj, s1-3, km, pts1)
msgctxt "mn101:42.2"
msgid ""
"So anekavihitaṃ pubbenivāsaṃ anussarati, seyyathidaṃ—ekampi jātiṃ dvepi "
"jātiyo tissopi jātiyo catassopi jātiyo pañcapi jātiyo dasapi jātiyo vīsampi "
"jātiyo tiṃsampi jātiyo cattālīsampi jātiyo paññāsampi jātiyo jātisatampi "
"jātisahassampi jātisatasahassampi anekepi saṃvaṭṭakappe anekepi vivaṭṭakappe "
"anekepi saṃvaṭṭavivaṭṭakappe: ‘amutrāsiṃ evaṃnāmo evaṃgotto evaṃvaṇṇo "
"evamāhāro evaṃsukhadukkhappaṭisaṃvedī evamāyupariyanto, so tato cuto amutra "
"udapādiṃ; tatrāpāsiṃ evaṃnāmo evaṃgotto evaṃvaṇṇo evamāhāro "
"evaṃsukhadukkhappaṭisaṃvedī evamāyupariyanto, so tato cuto idhūpapanno’ti. "
"Iti sākāraṃ sauddesaṃ anekavihitaṃ pubbenivāsaṃ anussarati."
msgstr ""

msgctxt "mn101:42.3"
msgid "Evampi, bhikkhave, saphalo upakkamo hoti, saphalaṃ padhānaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya43"></a>
#. <a class="sc" id="sc49"></a>
msgctxt "mn101:43.1"
msgid ""
"So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese "
"mudubhūte kammaniye ṭhite āneñjappatte sattānaṃ cutūpapātañāṇāya cittaṃ "
"abhininnāmeti."
msgstr ""

msgctxt "mn101:43.2"
msgid ""
"So dibbena cakkhunā visuddhena atikkantamānusakena satte passati cavamāne "
"upapajjamāne hīne paṇīte suvaṇṇe dubbaṇṇe, sugate duggate yathākammūpage "
"satte pajānāti: ‘ime vata bhonto sattā kāyaduccaritena samannāgatā "
"vacīduccaritena samannāgatā manoduccaritena samannāgatā ariyānaṃ upavādakā "
"micchādiṭṭhikā micchādiṭṭhikammasamādānā, te kāyassa bhedā paraṃ maraṇā "
"apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapannā. Ime vā pana bhonto sattā "
"kāyasucaritena samannāgatā vacīsucaritena samannāgatā manosucaritena "
"samannāgatā ariyānaṃ anupavādakā sammādiṭṭhikā sammādiṭṭhikammasamādānā, te "
"kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapannā’ti. Iti dibbena "
"cakkhunā visuddhena atikkantamānusakena satte passati cavamāne upapajjamāne "
"hīne paṇīte suvaṇṇe dubbaṇṇe, sugate duggate yathākammūpage satte pajānāti."
msgstr ""

msgctxt "mn101:43.3"
msgid "Evampi, bhikkhave, saphalo upakkamo hoti, saphalaṃ padhānaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya44"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli2.227"></a>
#. <a class="sc" id="sc50"></a>
msgctxt "mn101:44.1"
msgid ""
"So evaṃ samāhite citte parisuddhe pariyodāte anaṅgaṇe vigatūpakkilese "
"mudubhūte kammaniye ṭhite āneñjappatte āsavānaṃ khayañāṇāya cittaṃ "
"abhininnāmeti."
msgstr ""

msgctxt "mn101:44.2"
msgid ""
"So ‘idaṃ dukkhan’ti yathābhūtaṃ pajānāti, ‘ayaṃ dukkhasamudayo’ti "
"yathābhūtaṃ pajānāti, ‘ayaṃ dukkhanirodho’ti yathābhūtaṃ pajānāti, ‘ayaṃ "
"dukkhanirodhagāminī paṭipadā’ti yathābhūtaṃ pajānāti;"
msgstr ""

msgctxt "mn101:44.3"
msgid ""
"‘ime āsavā’ti yathābhūtaṃ pajānāti, ‘ayaṃ āsavasamudayo’ti yathābhūtaṃ "
"pajānāti, ‘ayaṃ āsavanirodho’ti yathābhūtaṃ pajānāti, ‘ayaṃ "
"āsavanirodhagāminī paṭipadā’ti yathābhūtaṃ pajānāti."
msgstr ""

#. <a class="nya" id="nya45"></a>
msgctxt "mn101:45.1"
msgid ""
"Tassa evaṃ jānato evaṃ passato kāmāsavāpi cittaṃ vimuccati, bhavāsavāpi "
"cittaṃ vimuccati, avijjāsavāpi cittaṃ vimuccati."
msgstr ""

msgctxt "mn101:45.2"
msgid "Vimuttasmiṃ vimuttamiti ñāṇaṃ hoti."
msgstr ""

msgctxt "mn101:45.3"
msgid ""
"‘Khīṇā jāti, vusitaṃ brahmacariyaṃ, kataṃ karaṇīyaṃ, nāparaṃ itthattāyā’ti "
"pajānāti."
msgstr ""

msgctxt "mn101:45.4"
msgid "Evampi kho, bhikkhave, saphalo upakkamo hoti, saphalaṃ padhānaṃ."
msgstr ""

#. <a class="nya" id="nya46"></a>
msgctxt "mn101:46.1"
msgid "Evaṃvādī, bhikkhave, tathāgatā."
msgstr ""

msgctxt "mn101:46.2"
msgid ""
"Evaṃvādīnaṃ, bhikkhave, tathāgatānaṃ dasa sahadhammikā pāsaṃsaṭṭhānā "
"āgacchanti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc51"></a>
msgctxt "mn101:46.3"
msgid "Sace, bhikkhave, sattā pubbekatahetu sukhadukkhaṃ paṭisaṃvedenti;"
msgstr ""

msgctxt "mn101:46.4"
msgid ""
"addhā, bhikkhave, tathāgato pubbe sukatakammakārī yaṃ etarahi evarūpā "
"anāsavā sukhā vedanā vedeti."
msgstr ""

msgctxt "mn101:46.5"
msgid "Sace, bhikkhave, sattā issaranimmānahetu sukhadukkhaṃ paṭisaṃvedenti;"
msgstr ""

msgctxt "mn101:46.6"
msgid ""
"addhā, bhikkhave, tathāgato bhaddakena issarena nimmito yaṃ etarahi evarūpā "
"anāsavā sukhā vedanā vedeti."
msgstr ""

msgctxt "mn101:46.7"
msgid "Sace, bhikkhave, sattā saṅgatibhāvahetu sukhadukkhaṃ paṭisaṃvedenti;"
msgstr ""

msgctxt "mn101:46.8"
msgid ""
"addhā, bhikkhave, tathāgato kalyāṇasaṅgatiko yaṃ etarahi evarūpā anāsavā "
"sukhā vedanā vedeti."
msgstr ""

msgctxt "mn101:46.9"
msgid "Sace, bhikkhave, sattā abhijātihetu sukhadukkhaṃ paṭisaṃvedenti;"
msgstr ""

msgctxt "mn101:46.10"
msgid ""
"addhā, bhikkhave, tathāgato kalyāṇābhijātiko yaṃ etarahi evarūpā anāsavā "
"sukhā vedanā vedeti."
msgstr ""

msgctxt "mn101:46.11"
msgid ""
"Sace, bhikkhave, sattā diṭṭhadhammūpakkamahetu sukhadukkhaṃ paṭisaṃvedenti;"
msgstr ""

msgctxt "mn101:46.12"
msgid ""
"addhā, bhikkhave, tathāgato kalyāṇadiṭṭhadhammūpakkamo yaṃ etarahi evarūpā "
"anāsavā sukhā vedanā vedeti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.228"></a>
#. <a class="sc" id="sc52"></a>
msgctxt "mn101:46.13"
msgid ""
"Sace, bhikkhave, sattā pubbekatahetu sukhadukkhaṃ paṭisaṃvedenti, pāsaṃso "
"tathāgato;"
msgstr ""

msgctxt "mn101:46.14"
msgid ""
"no ce sattā pubbekatahetu sukhadukkhaṃ paṭisaṃvedenti, pāsaṃso tathāgato."
msgstr ""

msgctxt "mn101:46.15"
msgid ""
"Sace, bhikkhave, sattā issaranimmānahetu sukhadukkhaṃ paṭisaṃvedenti, "
"pāsaṃso tathāgato;"
msgstr ""

msgctxt "mn101:46.16"
msgid ""
"no ce sattā issaranimmānahetu sukhadukkhaṃ paṭisaṃvedenti, pāsaṃso tathāgato."
msgstr ""

msgctxt "mn101:46.17"
msgid ""
"Sace, bhikkhave, sattā saṅgatibhāvahetu sukhadukkhaṃ paṭisaṃvedenti, pāsaṃso "
"tathāgato;"
msgstr ""

msgctxt "mn101:46.18"
msgid ""
"no ce sattā saṅgatibhāvahetu sukhadukkhaṃ paṭisaṃvedenti, pāsaṃso tathāgato."
msgstr ""

msgctxt "mn101:46.19"
msgid ""
"Sace, bhikkhave, sattā abhijātihetu sukhadukkhaṃ paṭisaṃvedenti, pāsaṃso "
"tathāgato;"
msgstr ""

msgctxt "mn101:46.20"
msgid ""
"no ce sattā abhijātihetu sukhadukkhaṃ paṭisaṃvedenti, pāsaṃso tathāgato."
msgstr ""

msgctxt "mn101:46.21"
msgid ""
"Sace, bhikkhave, sattā diṭṭhadhammūpakkamahetu sukhadukkhaṃ paṭisaṃvedenti, "
"pāsaṃso tathāgato;"
msgstr ""

msgctxt "mn101:46.22"
msgid ""
"no ce sattā diṭṭhadhammūpakkamahetu sukhadukkhaṃ paṭisaṃvedenti, pāsaṃso "
"tathāgato."
msgstr ""

msgctxt "mn101:46.23"
msgid "Evaṃvādī, bhikkhave, tathāgatā."
msgstr ""

msgctxt "mn101:46.24"
msgid ""
"Evaṃvādīnaṃ, bhikkhave, tathāgatānaṃ ime dasa sahadhammikā pāsaṃsaṭṭhānā "
"āgacchantī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc53"></a>
msgctxt "mn101:46.25"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "mn101:46.26"
msgid "Attamanā te bhikkhū bhagavato bhāsitaṃ abhinandunti."
msgstr ""

#. </p><p class="endsection">
msgctxt "mn101:46.27"
msgid "Devadahasuttaṃ niṭṭhitaṃ paṭhamaṃ."
msgstr ""
