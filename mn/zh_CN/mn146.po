msgid "Taṃ kiṃ maññatha, bhaginiyo, "
msgstr ""

msgctxt "mn146:7.2"
msgid "rūpā niccā vā aniccā vā”ti?"
msgstr ""

msgctxt "mn146:7.3"
msgid "“Aniccā, bhante”."
msgstr ""

