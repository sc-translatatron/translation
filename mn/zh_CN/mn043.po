#. <section class="sutta" id="mn43"><article><div class="hgroup"><p class="division">
msgctxt "mn43:0.1"
msgid "Majjhima Nikāya 43"
msgstr ""

#. </p><h1>
msgctxt "mn43:0.2"
msgid "Mahāvedallasutta"
msgstr ""

#. </h1></div><p>
#. <a class="nya" id="nya1"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.292"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "mn43:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "mn43:1.2"
msgid ""
"ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "mn43:1.3"
msgid ""
"Atha kho āyasmā mahākoṭṭhiko sāyanhasamayaṃ paṭisallānā vuṭṭhito yenāyasmā "
"sāriputto tenupasaṅkami; upasaṅkamitvā āyasmatā sāriputtena saddhiṃ sammodi."
msgstr ""

msgctxt "mn43:1.4"
msgid ""
"Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdi. Ekamantaṃ "
"nisinno kho āyasmā mahākoṭṭhiko āyasmantaṃ sāriputtaṃ etadavoca:"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya2"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "mn43:2.1"
msgid "“‘Duppañño duppañño’ti, āvuso, vuccati."
msgstr ""

msgctxt "mn43:2.2"
msgid "Kittāvatā nu kho, āvuso, duppaññoti vuccatī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "mn43:2.3"
msgid "“‘Nappajānāti nappajānātī’ti kho, āvuso, tasmā duppaññoti vuccati."
msgstr ""

msgctxt "mn43:2.4"
msgid "Kiñca nappajānāti?"
msgstr ""

msgctxt "mn43:2.5"
msgid ""
"‘Idaṃ dukkhan’ti nappajānāti, ‘ayaṃ dukkhasamudayo’ti nappajānāti, ‘ayaṃ "
"dukkhanirodho’ti nappajānāti, ‘ayaṃ dukkhanirodhagāminī paṭipadā’ti "
"nappajānāti."
msgstr ""

msgctxt "mn43:2.6"
msgid "‘Nappajānāti nappajānātī’ti kho, āvuso, tasmā duppaññoti vuccatī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "mn43:2.7"
msgid ""
"“Sādhāvuso”ti kho āyasmā mahākoṭṭhiko āyasmato sāriputtassa bhāsitaṃ "
"abhinanditvā anumoditvā āyasmantaṃ sāriputtaṃ uttariṃ pañhaṃ apucchi:"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya3"></a>
#. <a class="sc" id="sc5"></a>
msgctxt "mn43:3.1"
msgid "“‘Paññavā paññavā’ti, āvuso, vuccati."
msgstr ""

msgctxt "mn43:3.2"
msgid "Kittāvatā nu kho, āvuso, paññavāti vuccatī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "mn43:3.3"
msgid "“‘Pajānāti pajānātī’ti kho, āvuso, tasmā paññavāti vuccati."
msgstr ""

msgctxt "mn43:3.4"
msgid "Kiñca pajānāti?"
msgstr ""

msgctxt "mn43:3.5"
msgid ""
"‘Idaṃ dukkhan’ti pajānāti, ‘ayaṃ dukkhasamudayo’ti pajānāti, ‘ayaṃ "
"dukkhanirodho’ti pajānāti, ‘ayaṃ dukkhanirodhagāminī paṭipadā’ti pajānāti."
msgstr ""

msgctxt "mn43:3.6"
msgid "‘Pajānāti pajānātī’ti kho, āvuso, tasmā paññavāti vuccatī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya4"></a>
#. <a class="sc" id="sc7"></a>
msgctxt "mn43:4.1"
msgid "“‘Viññāṇaṃ viññāṇan’ti, āvuso, vuccati."
msgstr ""

msgctxt "mn43:4.2"
msgid "Kittāvatā nu kho, āvuso, viññāṇanti vuccatī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "mn43:4.3"
msgid "“‘Vijānāti vijānātī’ti kho, āvuso, tasmā viññāṇanti vuccati."
msgstr ""

msgctxt "mn43:4.4"
msgid "Kiñca vijānāti?"
msgstr ""

msgctxt "mn43:4.5"
msgid ""
"Sukhantipi vijānāti, dukkhantipi vijānāti, adukkhamasukhantipi vijānāti."
msgstr ""

msgctxt "mn43:4.6"
msgid "‘Vijānāti vijānātī’ti kho, āvuso, tasmā viññāṇanti vuccatī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya5"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.293"></a>
#. <a class="sc" id="sc9"></a>
msgctxt "mn43:5.1"
msgid "“Yā cāvuso, paññā yañca viññāṇaṃ—"
msgstr ""

msgctxt "mn43:5.2"
msgid "ime dhammā saṃsaṭṭhā udāhu visaṃsaṭṭhā?"
msgstr ""

# At Thig 16.1 vinibbhuj is used for the dissection of a corpse. The repeated verb emphasizes the completion and thoroughness of the task. Of course, it is possible to separate these to some degree—as has already been done—the point is that they cannot be completely disentangled.
#. VAR: vinibbhujitvā vinibbhujitvā → vinibbhujjitvā vinibbhujjitvā (mr)
msgctxt "mn43:5.3"
msgid ""
"Labbhā ca panimesaṃ dhammānaṃ vinibbhujitvā vinibbhujitvā nānākaraṇaṃ "
"paññāpetun”ti?"
msgstr ""

msgctxt "mn43:5.4"
msgid "“Yā cāvuso, paññā yañca viññāṇaṃ—"
msgstr ""

msgctxt "mn43:5.5"
msgid "ime dhammā saṃsaṭṭhā, no visaṃsaṭṭhā."
msgstr ""

msgctxt "mn43:5.6"
msgid ""
"Na ca labbhā imesaṃ dhammānaṃ vinibbhujitvā vinibbhujitvā nānākaraṇaṃ "
"paññāpetuṃ."
msgstr ""

#. VAR: Yaṃ hāvuso → yañcāvuso (bj, mr) | yañca āvuso (s1-3, km)
msgctxt "mn43:5.7"
msgid "Yaṃ hāvuso, pajānāti taṃ vijānāti, yaṃ vijānāti taṃ pajānāti."
msgstr ""

msgctxt "mn43:5.8"
msgid "Tasmā ime dhammā saṃsaṭṭhā, no visaṃsaṭṭhā."
msgstr ""

msgctxt "mn43:5.9"
msgid ""
"Na ca labbhā imesaṃ dhammānaṃ vinibbhujitvā vinibbhujitvā nānākaraṇaṃ "
"paññāpetun”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya6"></a>
#. <a class="sc" id="sc10"></a>
msgctxt "mn43:6.1"
msgid "“Yā cāvuso, paññā yañca viññāṇaṃ—"
msgstr ""

msgctxt "mn43:6.2"
msgid "imesaṃ dhammānaṃ saṃsaṭṭhānaṃ no visaṃsaṭṭhānaṃ kiṃ nānākaraṇan”ti?"
msgstr ""

msgctxt "mn43:6.3"
msgid "“Yā cāvuso, paññā yañca viññāṇaṃ—"
msgstr ""

# I.e. panna pertains to the fourth noble truth, vinnana to the first.
msgctxt "mn43:6.4"
msgid ""
"imesaṃ dhammānaṃ saṃsaṭṭhānaṃ no visaṃsaṭṭhānaṃ paññā bhāvetabbā, viññāṇaṃ "
"pariññeyyaṃ."
msgstr ""

msgctxt "mn43:6.5"
msgid "Idaṃ nesaṃ nānākaraṇan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya7"></a>
#. <a class="sc" id="sc11"></a>
msgctxt "mn43:7.1"
msgid "“‘Vedanā vedanā’ti, āvuso, vuccati."
msgstr ""

msgctxt "mn43:7.2"
msgid "Kittāvatā nu kho, āvuso, vedanāti vuccatī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc12"></a>
msgctxt "mn43:7.3"
msgid "“‘Vedeti vedetī’ti kho, āvuso, tasmā vedanāti vuccati."
msgstr ""

msgctxt "mn43:7.4"
msgid "Kiñca vedeti?"
msgstr ""

msgctxt "mn43:7.5"
msgid "Sukhampi vedeti, dukkhampi vedeti, adukkhamasukhampi vedeti."
msgstr ""

msgctxt "mn43:7.6"
msgid "‘Vedeti vedetī’ti kho, āvuso, tasmā vedanāti vuccatī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya8"></a>
#. <a class="sc" id="sc13"></a>
msgctxt "mn43:8.1"
msgid "“‘Saññā saññā’ti, āvuso, vuccati."
msgstr ""

msgctxt "mn43:8.2"
msgid "Kittāvatā nu kho, āvuso, saññāti vuccatī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc14"></a>
msgctxt "mn43:8.3"
msgid "“‘Sañjānāti sañjānātī’ti kho, āvuso, tasmā saññāti vuccati."
msgstr ""

msgctxt "mn43:8.4"
msgid "Kiñca sañjānāti?"
msgstr ""

msgctxt "mn43:8.5"
msgid ""
"Nīlakampi sañjānāti, pītakampi sañjānāti, lohitakampi sañjānāti, odātampi "
"sañjānāti."
msgstr ""

msgctxt "mn43:8.6"
msgid "‘Sañjānāti sañjānātī’ti kho, āvuso, tasmā saññāti vuccatī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya9"></a>
#. <a class="sc" id="sc15"></a>
msgctxt "mn43:9.1"
msgid "“Yā cāvuso, vedanā yā ca saññā yañca viññāṇaṃ—"
msgstr ""

msgctxt "mn43:9.2"
msgid "ime dhammā saṃsaṭṭhā udāhu visaṃsaṭṭhā?"
msgstr ""

msgctxt "mn43:9.3"
msgid ""
"Labbhā ca panimesaṃ dhammānaṃ vinibbhujitvā vinibbhujitvā nānākaraṇaṃ "
"paññāpetun”ti?"
msgstr ""

msgctxt "mn43:9.4"
msgid "“Yā cāvuso, vedanā yā ca saññā yañca viññāṇaṃ—"
msgstr ""

msgctxt "mn43:9.5"
msgid "ime dhammā saṃsaṭṭhā, no visaṃsaṭṭhā."
msgstr ""

msgctxt "mn43:9.6"
msgid ""
"Na ca labbhā imesaṃ dhammānaṃ vinibbhujitvā vinibbhujitvā nānākaraṇaṃ "
"paññāpetuṃ."
msgstr ""

#. VAR: Yaṃ hāvuso → yaṃ cāvuso (s1-3, km) | yañcāvuso (mr)
msgctxt "mn43:9.7"
msgid "Yaṃ hāvuso, vedeti taṃ sañjānāti, yaṃ sañjānāti taṃ vijānāti."
msgstr ""

msgctxt "mn43:9.8"
msgid "Tasmā ime dhammā saṃsaṭṭhā no visaṃsaṭṭhā."
msgstr ""

msgctxt "mn43:9.9"
msgid ""
"Na ca labbhā imesaṃ dhammānaṃ vinibbhujitvā vinibbhujitvā nānākaraṇaṃ "
"paññāpetun”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya10"></a>
#. <a class="sc" id="sc16"></a>
#. VAR: Nissaṭṭhena hāvuso → nissaṭṭhena panāvuso (?)
msgctxt "mn43:10.1"
msgid ""
"“Nissaṭṭhena hāvuso, pañcahi indriyehi parisuddhena manoviññāṇena kiṃ "
"neyyan”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc17"></a>
msgctxt "mn43:10.2"
msgid ""
"“Nissaṭṭhena, āvuso, pañcahi indriyehi parisuddhena manoviññāṇena ‘ananto "
"ākāso’ti ākāsānañcāyatanaṃ neyyaṃ, ‘anantaṃ viññāṇan’ti viññāṇañcāyatanaṃ "
"neyyaṃ, ‘natthi kiñcī’ti ākiñcaññāyatanaṃ neyyan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya11"></a>
#. <a class="sc" id="sc18"></a>
msgctxt "mn43:11.1"
msgid "“Neyyaṃ panāvuso, dhammaṃ kena pajānātī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc19"></a>
msgctxt "mn43:11.2"
msgid "“Neyyaṃ kho, āvuso, dhammaṃ paññācakkhunā pajānātī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya12"></a>
#. <a class="sc" id="sc20"></a>
msgctxt "mn43:12.1"
msgid "“Paññā panāvuso, kimatthiyā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc21"></a>
msgctxt "mn43:12.2"
msgid "“Paññā kho, āvuso, abhiññatthā pariññatthā pahānatthā”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya13"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.294"></a>
#. <a class="sc" id="sc22"></a>
msgctxt "mn43:13.1"
msgid "“Kati panāvuso, paccayā sammādiṭṭhiyā uppādāyā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc23"></a>
msgctxt "mn43:13.2"
msgid "“Dve kho, āvuso, paccayā sammādiṭṭhiyā uppādāya—"
msgstr ""

msgctxt "mn43:13.3"
msgid "parato ca ghoso, yoniso ca manasikāro."
msgstr ""

msgctxt "mn43:13.4"
msgid "Ime kho, āvuso, dve paccayā sammādiṭṭhiyā uppādāyā”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya14"></a>
#. <a class="sc" id="sc24"></a>
msgctxt "mn43:14.1"
msgid ""
"“Katihi panāvuso, aṅgehi anuggahitā sammādiṭṭhi cetovimuttiphalā ca hoti "
"cetovimuttiphalānisaṃsā ca, paññāvimuttiphalā ca hoti "
"paññāvimuttiphalānisaṃsā cā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc25"></a>
msgctxt "mn43:14.2"
msgid ""
"“Pañcahi kho, āvuso, aṅgehi anuggahitā sammādiṭṭhi cetovimuttiphalā ca hoti "
"cetovimuttiphalānisaṃsā ca, paññāvimuttiphalā ca hoti "
"paññāvimuttiphalānisaṃsā ca."
msgstr ""

msgctxt "mn43:14.3"
msgid ""
"Idhāvuso, sammādiṭṭhi sīlānuggahitā ca hoti, sutānuggahitā ca hoti, "
"sākacchānuggahitā ca hoti, samathānuggahitā ca hoti, vipassanānuggahitā ca "
"hoti."
msgstr ""

msgctxt "mn43:14.4"
msgid ""
"Imehi kho, āvuso, pañcahaṅgehi anuggahitā sammādiṭṭhi cetovimuttiphalā ca "
"hoti cetovimuttiphalānisaṃsā ca, paññāvimuttiphalā ca hoti "
"paññāvimuttiphalānisaṃsā cā”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya15"></a>
#. <a class="sc" id="sc26"></a>
msgctxt "mn43:15.1"
msgid "“Kati panāvuso, bhavā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc27"></a>
msgctxt "mn43:15.2"
msgid "“Tayome, āvuso, bhavā—"
msgstr ""

msgctxt "mn43:15.3"
msgid "kāmabhavo, rūpabhavo, arūpabhavo”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya16"></a>
#. <a class="sc" id="sc28"></a>
msgctxt "mn43:16.1"
msgid "“Kathaṃ panāvuso, āyatiṃ punabbhavābhinibbatti hotī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc29"></a>
msgctxt "mn43:16.2"
msgid ""
"“Avijjānīvaraṇānaṃ kho, āvuso, sattānaṃ taṇhāsaṃyojanānaṃ "
"tatratatrābhinandanā—"
msgstr ""

msgctxt "mn43:16.3"
msgid "evaṃ āyatiṃ punabbhavābhinibbatti hotī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya17"></a>
#. <a class="sc" id="sc30"></a>
msgctxt "mn43:17.1"
msgid "“Kathaṃ panāvuso, āyatiṃ punabbhavābhinibbatti na hotī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc31"></a>
msgctxt "mn43:17.2"
msgid "“Avijjāvirāgā kho, āvuso, vijjuppādā taṇhānirodhā—"
msgstr ""

msgctxt "mn43:17.3"
msgid "evaṃ āyatiṃ punabbhavābhinibbatti na hotī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya18"></a>
#. <a class="sc" id="sc32"></a>
msgctxt "mn43:18.1"
msgid "“Katamaṃ panāvuso, paṭhamaṃ jhānan”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc33"></a>
msgctxt "mn43:18.2"
msgid ""
"“Idhāvuso, bhikkhu vivicceva kāmehi vivicca akusalehi dhammehi savitakkaṃ "
"savicāraṃ vivekajaṃ pītisukhaṃ paṭhamaṃ jhānaṃ upasampajja viharati—"
msgstr ""

msgctxt "mn43:18.3"
msgid "idaṃ vuccati, āvuso, paṭhamaṃ jhānan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya19"></a>
#. <a class="sc" id="sc34"></a>
msgctxt "mn43:19.1"
msgid "“Paṭhamaṃ panāvuso, jhānaṃ katiaṅgikan”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc35"></a>
msgctxt "mn43:19.2"
msgid "“Paṭhamaṃ kho, āvuso, jhānaṃ pañcaṅgikaṃ."
msgstr ""

msgctxt "mn43:19.3"
msgid ""
"Idhāvuso, paṭhamaṃ jhānaṃ samāpannassa bhikkhuno vitakko ca vattati, vicāro "
"ca pīti ca sukhañca cittekaggatā ca."
msgstr ""

msgctxt "mn43:19.4"
msgid "Paṭhamaṃ kho, āvuso, jhānaṃ evaṃ pañcaṅgikan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya20"></a>
#. <a class="sc" id="sc36"></a>
msgctxt "mn43:20.1"
msgid "“Paṭhamaṃ panāvuso, jhānaṃ kataṅgavippahīnaṃ kataṅgasamannāgatan”ti?"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.295"></a>
#. <a class="sc" id="sc37"></a>
msgctxt "mn43:20.2"
msgid "“Paṭhamaṃ kho, āvuso, jhānaṃ pañcaṅgavippahīnaṃ, pañcaṅgasamannāgataṃ."
msgstr ""

msgctxt "mn43:20.3"
msgid ""
"Idhāvuso, paṭhamaṃ jhānaṃ samāpannassa bhikkhuno kāmacchando pahīno hoti, "
"byāpādo pahīno hoti, thinamiddhaṃ pahīnaṃ hoti, uddhaccakukkuccaṃ pahīnaṃ "
"hoti, vicikicchā pahīnā hoti;"
msgstr ""

msgctxt "mn43:20.4"
msgid "vitakko ca vattati, vicāro ca pīti ca sukhañca cittekaggatā ca."
msgstr ""

msgctxt "mn43:20.5"
msgid ""
"Paṭhamaṃ kho, āvuso, jhānaṃ evaṃ pañcaṅgavippahīnaṃ pañcaṅgasamannāgatan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya21"></a>
#. <a class="sc" id="sc38"></a>
msgctxt "mn43:21.1"
msgid ""
"“Pañcimāni, āvuso, indriyāni nānāvisayāni nānāgocarāni, na aññamaññassa "
"gocaravisayaṃ paccanubhonti, seyyathidaṃ—"
msgstr ""

msgctxt "mn43:21.2"
msgid "cakkhundriyaṃ, sotindriyaṃ, ghānindriyaṃ, jivhindriyaṃ, kāyindriyaṃ."
msgstr ""

msgctxt "mn43:21.3"
msgid ""
"Imesaṃ kho, āvuso, pañcannaṃ indriyānaṃ nānāvisayānaṃ nānāgocarānaṃ, na "
"aññamaññassa gocaravisayaṃ paccanubhontānaṃ, kiṃ paṭisaraṇaṃ, ko ca nesaṃ "
"gocaravisayaṃ paccanubhotī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc39"></a>
msgctxt "mn43:21.4"
msgid ""
"“Pañcimāni, āvuso, indriyāni nānāvisayāni nānāgocarāni, na aññamaññassa "
"gocaravisayaṃ paccanubhonti, seyyathidaṃ—"
msgstr ""

msgctxt "mn43:21.5"
msgid "cakkhundriyaṃ, sotindriyaṃ, ghānindriyaṃ, jivhindriyaṃ, kāyindriyaṃ."
msgstr ""

msgctxt "mn43:21.6"
msgid ""
"Imesaṃ kho, āvuso, pañcannaṃ indriyānaṃ nānāvisayānaṃ nānāgocarānaṃ, na "
"aññamaññassa gocaravisayaṃ paccanubhontānaṃ, mano paṭisaraṇaṃ, mano ca nesaṃ "
"gocaravisayaṃ paccanubhotī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya22"></a>
#. <a class="sc" id="sc40"></a>
msgctxt "mn43:22.1"
msgid "“Pañcimāni, āvuso, indriyāni, seyyathidaṃ—"
msgstr ""

msgctxt "mn43:22.2"
msgid "cakkhundriyaṃ, sotindriyaṃ, ghānindriyaṃ, jivhindriyaṃ, kāyindriyaṃ."
msgstr ""

# For this idiom, cp. SN 46.2
msgctxt "mn43:22.3"
msgid "Imāni kho, āvuso, pañcindriyāni kiṃ paṭicca tiṭṭhantī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc41"></a>
msgctxt "mn43:22.4"
msgid "“Pañcimāni, āvuso, indriyāni, seyyathidaṃ—"
msgstr ""

msgctxt "mn43:22.5"
msgid "cakkhundriyaṃ, sotindriyaṃ, ghānindriyaṃ, jivhindriyaṃ, kāyindriyaṃ."
msgstr ""

msgctxt "mn43:22.6"
msgid "Imāni kho, āvuso, pañcindriyāni āyuṃ paṭicca tiṭṭhantī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc42"></a>
msgctxt "mn43:22.7"
msgid "“Āyu panāvuso, kiṃ paṭicca tiṭṭhatī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc43"></a>
msgctxt "mn43:22.8"
msgid "“Āyu usmaṃ paṭicca tiṭṭhatī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc44"></a>
msgctxt "mn43:22.9"
msgid "“Usmā panāvuso, kiṃ paṭicca tiṭṭhatī”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc45"></a>
msgctxt "mn43:22.10"
msgid "“Usmā āyuṃ paṭicca tiṭṭhatī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc46"></a>
msgctxt "mn43:22.11"
msgid "“Idāneva kho mayaṃ, āvuso, āyasmato sāriputtassa bhāsitaṃ evaṃ ājānāma:"
msgstr ""

msgctxt "mn43:22.12"
msgid "‘āyu usmaṃ paṭicca tiṭṭhatī’ti."
msgstr ""

msgctxt "mn43:22.13"
msgid "Idāneva pana mayaṃ, āvuso, āyasmato sāriputtassa bhāsitaṃ evaṃ ājānāma:"
msgstr ""

msgctxt "mn43:22.14"
msgid "‘usmā āyuṃ paṭicca tiṭṭhatī’ti."
msgstr ""

msgctxt "mn43:22.15"
msgid "Yathā kathaṃ panāvuso, imassa bhāsitassa attho daṭṭhabbo”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc47"></a>
msgctxt "mn43:22.16"
msgid "“Tena hāvuso, upamaṃ te karissāmi;"
msgstr ""

msgctxt "mn43:22.17"
msgid "upamāyapidhekacce viññū purisā bhāsitassa atthaṃ ājānanti."
msgstr ""

msgctxt "mn43:22.18"
msgid ""
"Seyyathāpi, āvuso, telappadīpassa jhāyato acciṃ paṭicca ābhā paññāyati, "
"ābhaṃ paṭicca acci paññāyati;"
msgstr ""

msgctxt "mn43:22.19"
msgid ""
"evameva kho, āvuso, āyu usmaṃ paṭicca tiṭṭhati, usmā āyuṃ paṭicca "
"tiṭṭhatī”ti."
msgstr ""

# Note that this idiom is phrased as tam jivam tam sariram, etc.
#. </p><p>
#. <a class="nya" id="nya23"></a>
#. <a class="sc" id="sc48"></a>
msgctxt "mn43:23.1"
msgid ""
"“Teva nu kho, āvuso, āyusaṅkhārā, te vedaniyā dhammā udāhu aññe āyusaṅkhārā "
"aññe vedaniyā dhammā”ti?"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.296"></a>
#. <a class="sc" id="sc49"></a>
msgctxt "mn43:23.2"
msgid "“Na kho, āvuso, teva āyusaṅkhārā te vedaniyā dhammā."
msgstr ""

msgctxt "mn43:23.3"
msgid ""
"Te ca hāvuso, āyusaṅkhārā abhaviṃsu te vedaniyā dhammā, na yidaṃ "
"saññāvedayitanirodhaṃ samāpannassa bhikkhuno vuṭṭhānaṃ paññāyetha."
msgstr ""

msgctxt "mn43:23.4"
msgid ""
"Yasmā ca kho, āvuso, aññe āyusaṅkhārā aññe vedaniyā dhammā, tasmā "
"saññāvedayitanirodhaṃ samāpannassa bhikkhuno vuṭṭhānaṃ paññāyatī”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya24"></a>
#. <a class="sc" id="sc50"></a>
msgctxt "mn43:24.1"
msgid ""
"“Yadā nu kho, āvuso, imaṃ kāyaṃ kati dhammā jahanti; athāyaṃ kāyo ujjhito "
"avakkhitto seti, yathā kaṭṭhaṃ acetanan”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc51"></a>
msgctxt "mn43:24.2"
msgid ""
"“Yadā kho, āvuso, imaṃ kāyaṃ tayo dhammā jahanti—āyu usmā ca viññāṇaṃ; "
"athāyaṃ kāyo ujjhito avakkhitto seti, yathā kaṭṭhaṃ acetanan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya25"></a>
#. <a class="sc" id="sc52"></a>
msgctxt "mn43:25.1"
msgid ""
"“Yvāyaṃ, āvuso, mato kālaṅkato, yo cāyaṃ bhikkhu saññāvedayitanirodhaṃ "
"samāpanno—imesaṃ kiṃ nānākaraṇan”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc53"></a>
msgctxt "mn43:25.2"
msgid ""
"“Yvāyaṃ, āvuso, mato kālaṅkato tassa kāyasaṅkhārā niruddhā paṭippassaddhā, "
"vacīsaṅkhārā niruddhā paṭippassaddhā, cittasaṅkhārā niruddhā paṭippassaddhā, "
"āyu parikkhīṇo, usmā vūpasantā, indriyāni paribhinnāni."
msgstr ""

msgctxt "mn43:25.3"
msgid ""
"Yo cāyaṃ bhikkhu saññāvedayitanirodhaṃ samāpanno tassapi kāyasaṅkhārā "
"niruddhā paṭippassaddhā, vacīsaṅkhārā niruddhā paṭippassaddhā, cittasaṅkhārā "
"niruddhā paṭippassaddhā, āyu na parikkhīṇo, usmā avūpasantā, indriyāni "
"vippasannāni."
msgstr ""

msgctxt "mn43:25.4"
msgid ""
"Yvāyaṃ, āvuso, mato kālaṅkato, yo cāyaṃ bhikkhu saññāvedayitanirodhaṃ "
"samāpanno—idaṃ nesaṃ nānākaraṇan”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya26"></a>
#. <a class="sc" id="sc54"></a>
msgctxt "mn43:26.1"
msgid "“Kati panāvuso, paccayā adukkhamasukhāya cetovimuttiyā samāpattiyā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc55"></a>
msgctxt "mn43:26.2"
msgid ""
"“Cattāro kho, āvuso, paccayā adukkhamasukhāya cetovimuttiyā samāpattiyā."
msgstr ""

msgctxt "mn43:26.3"
msgid ""
"Idhāvuso, bhikkhu sukhassa ca pahānā dukkhassa ca pahānā pubbeva "
"somanassadomanassānaṃ atthaṅgamā adukkhamasukhaṃ upekkhāsatipārisuddhiṃ "
"catutthaṃ jhānaṃ upasampajja viharati."
msgstr ""

msgctxt "mn43:26.4"
msgid ""
"Ime kho, āvuso, cattāro paccayā adukkhamasukhāya cetovimuttiyā "
"samāpattiyā”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya27"></a>
#. <a class="sc" id="sc56"></a>
msgctxt "mn43:27.1"
msgid "“Kati panāvuso, paccayā animittāya cetovimuttiyā samāpattiyā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc57"></a>
msgctxt "mn43:27.2"
msgid "“Dve kho, āvuso, paccayā animittāya cetovimuttiyā samāpattiyā—"
msgstr ""

msgctxt "mn43:27.3"
msgid "sabbanimittānañca amanasikāro, animittāya ca dhātuyā manasikāro."
msgstr ""

msgctxt "mn43:27.4"
msgid "Ime kho, āvuso, dve paccayā animittāya cetovimuttiyā samāpattiyā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc58"></a>
msgctxt "mn43:27.5"
msgid "“Kati panāvuso, paccayā animittāya cetovimuttiyā ṭhitiyā”ti?"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya28"></a>
#. <a class="pts-vp-pli" id="pts-vp-pli1.297"></a>
#. <a class="sc" id="sc59"></a>
msgctxt "mn43:28.1"
msgid "“Tayo kho, āvuso, paccayā animittāya cetovimuttiyā ṭhitiyā—"
msgstr ""

msgctxt "mn43:28.2"
msgid ""
"sabbanimittānañca amanasikāro, animittāya ca dhātuyā manasikāro, pubbe ca "
"abhisaṅkhāro."
msgstr ""

msgctxt "mn43:28.3"
msgid "Ime kho, āvuso, tayo paccayā animittāya cetovimuttiyā ṭhitiyā”ti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya29"></a>
#. <a class="sc" id="sc60"></a>
msgctxt "mn43:29.1"
msgid "“Kati panāvuso, paccayā animittāya cetovimuttiyā vuṭṭhānāyā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc61"></a>
msgctxt "mn43:29.2"
msgid "“Dve kho, āvuso, paccayā animittāya cetovimuttiyā vuṭṭhānāya—"
msgstr ""

msgctxt "mn43:29.3"
msgid "sabbanimittānañca manasikāro, animittāya ca dhātuyā amanasikāro."
msgstr ""

msgctxt "mn43:29.4"
msgid "Ime kho, āvuso, dve paccayā animittāya cetovimuttiyā vuṭṭhānāyā”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc62"></a>
msgctxt "mn43:29.5"
msgid ""
"“Yā cāyaṃ, āvuso, appamāṇā cetovimutti, yā ca ākiñcaññā cetovimutti, yā ca "
"suññatā cetovimutti, yā ca animittā cetovimutti—ime dhammā nānātthā ceva "
"nānābyañjanā ca udāhu ekatthā byañjanameva nānan”ti?"
msgstr ""

#. </p><p>
#. <a class="nya" id="nya30"></a>
#. <a class="sc" id="sc63"></a>
msgctxt "mn43:30.1"
msgid ""
"“Yā cāyaṃ, āvuso, appamāṇā cetovimutti, yā ca ākiñcaññā cetovimutti, yā ca "
"suññatā cetovimutti, yā ca animittā cetovimutti—atthi kho, āvuso, pariyāyo "
"yaṃ pariyāyaṃ āgamma ime dhammā nānātthā ceva nānābyañjanā ca;"
msgstr ""

msgctxt "mn43:30.2"
msgid ""
"atthi ca kho, āvuso, pariyāyo yaṃ pariyāyaṃ āgamma ime dhammā ekatthā, "
"byañjanameva nānaṃ."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya31"></a>
#. <a class="sc" id="sc64"></a>
msgctxt "mn43:31.1"
msgid ""
"Katamo cāvuso, pariyāyo yaṃ pariyāyaṃ āgamma ime dhammā nānātthā ceva "
"nānābyañjanā ca?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc65"></a>
msgctxt "mn43:31.2"
msgid ""
"Idhāvuso, bhikkhu mettāsahagatena cetasā ekaṃ disaṃ pharitvā viharati, tathā "
"dutiyaṃ, tathā tatiyaṃ, tathā catutthaṃ. Iti uddhamadho tiriyaṃ sabbadhi "
"sabbattatāya sabbāvantaṃ lokaṃ mettāsahagatena cetasā vipulena mahaggatena "
"appamāṇena averena abyābajjhena pharitvā viharati."
msgstr ""

msgctxt "mn43:31.3"
msgid "Karuṇāsahagatena cetasā … pe …"
msgstr ""

msgctxt "mn43:31.4"
msgid "muditāsahagatena cetasā …"
msgstr ""

msgctxt "mn43:31.5"
msgid ""
"upekkhāsahagatena cetasā ekaṃ disaṃ pharitvā viharati, tathā dutiyaṃ, tathā "
"tatiyaṃ, tathā catutthaṃ. Iti uddhamadho tiriyaṃ sabbadhi sabbattatāya "
"sabbāvantaṃ lokaṃ upekkhāsahagatena cetasā vipulena mahaggatena appamāṇena "
"averena abyābajjhena pharitvā viharati."
msgstr ""

msgctxt "mn43:31.6"
msgid "Ayaṃ vuccatāvuso, appamāṇā cetovimutti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya32"></a>
#. <a class="sc" id="sc66"></a>
msgctxt "mn43:32.1"
msgid "Katamā cāvuso, ākiñcaññā cetovimutti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc67"></a>
msgctxt "mn43:32.2"
msgid ""
"Idhāvuso, bhikkhu sabbaso viññāṇañcāyatanaṃ samatikkamma natthi kiñcīti "
"ākiñcaññāyatanaṃ upasampajja viharati."
msgstr ""

msgctxt "mn43:32.3"
msgid "Ayaṃ vuccatāvuso, ākiñcaññā cetovimutti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya33"></a>
#. <a class="sc" id="sc68"></a>
msgctxt "mn43:33.1"
msgid "Katamā cāvuso, suññatā cetovimutti?"
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli1.298"></a>
#. <a class="sc" id="sc69"></a>
msgctxt "mn43:33.2"
msgid ""
"Idhāvuso, bhikkhu araññagato vā rukkhamūlagato vā suññāgāragato vā iti "
"paṭisañcikkhati:"
msgstr ""

msgctxt "mn43:33.3"
msgid "‘suññamidaṃ attena vā attaniyena vā’ti."
msgstr ""

msgctxt "mn43:33.4"
msgid "Ayaṃ vuccatāvuso, suññatā cetovimutti."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya34"></a>
#. <a class="sc" id="sc70"></a>
msgctxt "mn43:34.1"
msgid "Katamā cāvuso, animittā cetovimutti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc71"></a>
msgctxt "mn43:34.2"
msgid ""
"Idhāvuso, bhikkhu sabbanimittānaṃ amanasikārā animittaṃ cetosamādhiṃ "
"upasampajja viharati."
msgstr ""

msgctxt "mn43:34.3"
msgid "Ayaṃ vuccatāvuso, animittā cetovimutti."
msgstr ""

msgctxt "mn43:34.4"
msgid ""
"Ayaṃ kho, āvuso, pariyāyo yaṃ pariyāyaṃ āgamma ime dhammā nānātthā ceva "
"nānābyañjanā ca."
msgstr ""

#. </p><p>
#. <a class="nya" id="nya35"></a>
#. <a class="sc" id="sc72"></a>
msgctxt "mn43:35.1"
msgid ""
"Katamo cāvuso, pariyāyo yaṃ pariyāyaṃ āgamma ime dhammā ekatthā byañjanameva "
"nānaṃ?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc73"></a>
msgctxt "mn43:35.2"
msgid "Rāgo kho, āvuso, pamāṇakaraṇo, doso pamāṇakaraṇo, moho pamāṇakaraṇo."
msgstr ""

msgctxt "mn43:35.3"
msgid ""
"Te khīṇāsavassa bhikkhuno pahīnā ucchinnamūlā tālāvatthukatā anabhāvaṅkatā "
"āyatiṃ anuppādadhammā."
msgstr ""

msgctxt "mn43:35.4"
msgid ""
"Yāvatā kho, āvuso, appamāṇā cetovimuttiyo, akuppā tāsaṃ cetovimutti "
"aggamakkhāyati."
msgstr ""

msgctxt "mn43:35.5"
msgid "Sā kho panākuppā cetovimutti suññā rāgena, suññā dosena, suññā mohena."
msgstr ""

#. <a class="nya" id="nya36"></a>
#. <a class="nya" id="nya37"></a>
msgctxt "mn43:36.1"
msgid "Rāgo kho, āvuso, kiñcano, doso kiñcano, moho kiñcano."
msgstr ""

msgctxt "mn43:36.2"
msgid ""
"Te khīṇāsavassa bhikkhuno pahīnā ucchinnamūlā tālāvatthukatā anabhāvaṅkatā "
"āyatiṃ anuppādadhammā."
msgstr ""

msgctxt "mn43:36.3"
msgid ""
"Yāvatā kho, āvuso, ākiñcaññā cetovimuttiyo, akuppā tāsaṃ cetovimutti "
"aggamakkhāyati."
msgstr ""

msgctxt "mn43:36.4"
msgid "Sā kho panākuppā cetovimutti suññā rāgena, suññā dosena, suññā mohena."
msgstr ""

msgctxt "mn43:36.5"
msgid "Rāgo kho, āvuso, nimittakaraṇo, doso nimittakaraṇo, moho nimittakaraṇo."
msgstr ""

msgctxt "mn43:36.6"
msgid ""
"Te khīṇāsavassa bhikkhuno pahīnā ucchinnamūlā tālāvatthukatā anabhāvaṅkatā "
"āyatiṃ anuppādadhammā."
msgstr ""

msgctxt "mn43:36.7"
msgid ""
"Yāvatā kho, āvuso, animittā cetovimuttiyo, akuppā tāsaṃ cetovimutti "
"aggamakkhāyati."
msgstr ""

msgctxt "mn43:36.8"
msgid "Sā kho panākuppā cetovimutti suññā rāgena, suññā dosena, suññā mohena."
msgstr ""

msgctxt "mn43:36.9"
msgid ""
"Ayaṃ kho, āvuso, pariyāyo yaṃ pariyāyaṃ āgamma ime dhammā ekatthā "
"byañjanameva nānan”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc74"></a>
msgctxt "mn43:36.10"
msgid "Idamavocāyasmā sāriputto."
msgstr ""

msgctxt "mn43:36.11"
msgid ""
"Attamano āyasmā mahākoṭṭhiko āyasmato sāriputtassa bhāsitaṃ abhinandīti."
msgstr ""

#. </p><p class="endsection">
msgctxt "mn43:36.12"
msgid "Mahāvedallasuttaṃ niṭṭhitaṃ tatiyaṃ."
msgstr ""
