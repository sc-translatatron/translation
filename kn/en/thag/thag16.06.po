#. lang="pi"><section class="sutta" id="thag16.6"><article><div
#. class="hgroup"><p class="division">
msgctxt "thag16.6:1.1"
msgid "Theragāthā"
msgstr ""

#. </p><p>
msgctxt "thag16.6:2.1"
msgid "Vīsatinipāta"
msgstr ""

#. </p><p>
msgctxt "thag16.6:3.1"
msgid "Paṭhamavagga"
