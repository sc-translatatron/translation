msgctxt "thag2.4:5.1"
msgid "“Tiṇṇaṃ me tālapattānaṃ,"
msgstr "My hut on the bank of the Ganges"

#. <br>
msgctxt "thag2.4:5.2"
msgid "gaṅgātīre kuṭī katā;"
msgstr "Is made from three palm leaves."

#. <br>
msgctxt "thag2.4:5.3"
msgid "Chavasittova me patto,"
msgstr "My alms-bowl is a funeral pot,"

#. <br>
msgctxt "thag2.4:5.4"
msgid "paṃsukūlañca cīvaraṃ."
msgstr "My robe is castoff rags."

#. </p><p><a class="sc" id="2"></a><a class="verse-num-sc"
#. id="verse-num-sc128"></a><a class="verse-num-pts" id="verse-num-pts128"></a>
msgctxt "thag2.4:6.1"
msgid "Dvinnaṃ antaravassānaṃ,"
msgstr "In my first two rainy seasons"

#. <br>
msgctxt "thag2.4:6.2"
msgid "ekā vācā me bhāsitā;"
msgstr "I spoke only one word."

#. <br>
msgctxt "thag2.4:6.3"
msgid "Tatiye antaravassamhi,"
msgstr "In my third rainy season,"

#. <br>
msgctxt "thag2.4:6.4"
msgid "<span class=\"var\" title=\"tamokkhandho (bj, s2, s3)\" id=\"note83\">tamokhandho</span> padālito”ti."
msgstr "The mass of darkness was torn apart."

