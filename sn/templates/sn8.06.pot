#. <section class="sutta" id="sn8.6"><article><div class="hgroup"><p class="division">
msgctxt "sn8.6:0.1"
msgid "Saṃyutta Nikāya 8"
msgstr ""

#. </p><p>
msgctxt "sn8.6:0.2"
msgid "1. Vaṅgīsavagga"
msgstr ""

#. </p><h1>
#. VAR: 6. Sāriputtasutta → sārīputtasuttaṃ (s3)
msgctxt "sn8.6:0.3"
msgid "6. Sāriputtasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts1ed" id="pts1ed1.190"></a>
#. <a class="pts2ed" id="pts2ed1.409"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "sn8.6:1.1"
msgid ""
"Ekaṃ samayaṃ āyasmā sāriputto sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa "
"ārāme."
msgstr ""

#. VAR: anelagalāya → aneḷagalāya (bj, pts2, mr) | anelagaḷāya (s1-3, km, pts1)
msgctxt "sn8.6:1.2"
msgid ""
"Tena kho pana samayena āyasmā sāriputto bhikkhū dhammiyā kathāya sandasseti "
"samādapeti samuttejeti sampahaṃseti poriyā vācāya vissaṭṭhāya anelagalāya "
"atthassa viññāpaniyā."
msgstr ""

msgctxt "sn8.6:1.3"
msgid ""
"Te ca bhikkhū aṭṭhiṃ katvā manasi katvā sabbacetasā samannāharitvā ohitasotā "
"dhammaṃ suṇanti."
msgstr ""

msgctxt "sn8.6:1.4"
msgid "Atha kho āyasmato vaṅgīsassa etadahosi:"
msgstr ""

msgctxt "sn8.6:1.5"
msgid ""
"“ayaṃ kho āyasmā sāriputto bhikkhū dhammiyā kathāya sandasseti samādapeti "
"samuttejeti sampahaṃseti poriyā vācāya vissaṭṭhāya anelagalāya atthassa "
"viññāpaniyā."
msgstr ""

msgctxt "sn8.6:1.6"
msgid ""
"Te ca bhikkhū aṭṭhiṃ katvā manasi katvā sabbacetasā samannāharitvā ohitasotā "
"dhammaṃ suṇanti."
msgstr ""

msgctxt "sn8.6:1.7"
msgid ""
"Yannūnāhaṃ āyasmantaṃ sāriputtaṃ sammukhā sāruppāhi gāthāhi "
"abhitthaveyyan”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn8.6:2.1"
msgid ""
"Atha kho āyasmā vaṅgīso uṭṭhāyāsanā ekaṃsaṃ uttarāsaṅgaṃ karitvā yenāyasmā "
"sāriputto tenañjaliṃ paṇāmetvā āyasmantaṃ sāriputtaṃ etadavoca:"
msgstr ""

msgctxt "sn8.6:2.2"
msgid "“paṭibhāti maṃ, āvuso sāriputta, paṭibhāti maṃ, āvuso sāriputtā”ti."
msgstr ""

msgctxt "sn8.6:2.3"
msgid "“Paṭibhātu taṃ, āvuso vaṅgīsā”ti."
msgstr ""

msgctxt "sn8.6:2.4"
msgid ""
"Atha kho āyasmā vaṅgīso āyasmantaṃ sāriputtaṃ sammukhā sāruppāhi gāthāhi "
"abhitthavi:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc3"></a>
msgctxt "sn8.6:3.1"
msgid "“Gambhīrapañño medhāvī,"
msgstr ""

#. <br>
msgctxt "sn8.6:3.2"
msgid "maggāmaggassa kovido;"
msgstr ""

#. <br>
msgctxt "sn8.6:3.3"
msgid "Sāriputto mahāpañño,"
msgstr ""

#. <br>
msgctxt "sn8.6:3.4"
msgid "dhammaṃ deseti bhikkhunaṃ."
msgstr ""

#. </p><p>
#. <a class="pts2ed" id="pts2ed1.410"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "sn8.6:4.1"
msgid "Saṃkhittenapi deseti,"
msgstr ""

#. <br>
msgctxt "sn8.6:4.2"
msgid "vitthārenapi bhāsati;"
msgstr ""

#. <br>
msgctxt "sn8.6:4.3"
msgid "Sāḷikāyiva nigghoso,"
msgstr ""

#. <br>
msgctxt "sn8.6:4.4"
msgid "paṭibhānaṃ udīrayi."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "sn8.6:5.1"
msgid "Tassa taṃ desayantassa,"
msgstr ""

#. <br>
msgctxt "sn8.6:5.2"
msgid "suṇanti madhuraṃ giraṃ;"
msgstr ""

#. <br>
msgctxt "sn8.6:5.3"
msgid "Sarena rajanīyena,"
msgstr ""

#. <br>
msgctxt "sn8.6:5.4"
msgid "savanīyena vaggunā;"
msgstr ""

#. <br>
msgctxt "sn8.6:5.5"
msgid "Udaggacittā muditā,"
msgstr ""

#. <br>
msgctxt "sn8.6:5.6"
msgid "sotaṃ odhenti bhikkhavo”ti."
msgstr ""
