#. <section class="sutta" id="sn6.5"><article><div class="hgroup"><p class="division">
msgctxt "sn6.5:0.1"
msgid "Saṃyutta Nikāya 6"
msgstr ""

#. </p><p>
msgctxt "sn6.5:0.2"
msgid "1. Paṭhamavagga"
msgstr ""

#. </p><h1>
#. VAR: 5. Aññatarabrahmasutta → aparādiṭṭhisuttaṃ (bj, s1-3) | aparādiṭṭhi (pts1)
msgctxt "sn6.5:0.3"
msgid "5. Aññatarabrahmasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "sn6.5:1.1"
msgid "Sāvatthinidānaṃ."
msgstr ""

msgctxt "sn6.5:1.2"
msgid ""
"Tena kho pana samayena aññatarassa brahmuno evarūpaṃ pāpakaṃ diṭṭhigataṃ "
"uppannaṃ hoti:"
msgstr ""

msgctxt "sn6.5:1.3"
msgid "“natthi so samaṇo vā brāhmaṇo vā yo idha āgaccheyyā”ti."
msgstr ""

msgctxt "sn6.5:1.4"
msgid ""
"Atha kho bhagavā tassa brahmuno cetasā cetoparivitakkamaññāya—seyyathāpi "
"nāma balavā puriso … pe … tasmiṃ brahmaloke pāturahosi."
msgstr ""

msgctxt "sn6.5:1.5"
msgid ""
"Atha kho bhagavā tassa brahmuno upari vehāsaṃ pallaṅkena nisīdi tejodhātuṃ "
"samāpajjitvā."
msgstr ""

#. </p><p>
#. <a class="pts2ed" id="pts2ed1.315"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "sn6.5:2.1"
msgid "Atha kho āyasmato mahāmoggallānassa etadahosi:"
msgstr ""

msgctxt "sn6.5:2.2"
msgid "“kahaṃ nu kho bhagavā etarahi viharatī”ti?"
msgstr ""

#. VAR: mahāmoggallāno → mahāmoggalāno (mr)
msgctxt "sn6.5:2.3"
msgid ""
"Addasā kho āyasmā mahāmoggallāno bhagavantaṃ dibbena cakkhunā visuddhena "
"atikkantamānusakena tassa brahmuno upari vehāsaṃ pallaṅkena nisinnaṃ "
"tejodhātuṃ samāpannaṃ."
msgstr ""

msgctxt "sn6.5:2.4"
msgid ""
"Disvāna—seyyathāpi nāma balavā puriso samiñjitaṃ vā bāhaṃ pasāreyya, "
"pasāritaṃ vā bāhaṃ samiñjeyya; evameva—jetavane antarahito tasmiṃ brahmaloke "
"pāturahosi."
msgstr ""

#. VAR: nissāya → upanissāya (si)
msgctxt "sn6.5:2.5"
msgid ""
"Atha kho āyasmā mahāmoggallāno puratthimaṃ disaṃ nissāya tassa brahmuno "
"upari vehāsaṃ pallaṅkena nisīdi tejodhātuṃ samāpajjitvā nīcataraṃ bhagavato."
msgstr ""

#. </p><p>
#. <a class="pts1ed" id="pts1ed1.145"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "sn6.5:3.1"
msgid "Atha kho āyasmato mahākassapassa etadahosi:"
msgstr ""

msgctxt "sn6.5:3.2"
msgid "“kahaṃ nu kho bhagavā etarahi viharatī”ti?"
msgstr ""

msgctxt "sn6.5:3.3"
msgid "Addasā kho āyasmā mahākassapo bhagavantaṃ dibbena cakkhunā … pe …"
msgstr ""

msgctxt "sn6.5:3.4"
msgid ""
"disvāna—seyyathāpi nāma balavā puriso … pe … evameva—jetavane antarahito "
"tasmiṃ brahmaloke pāturahosi."
msgstr ""

msgctxt "sn6.5:3.5"
msgid ""
"Atha kho āyasmā mahākassapo dakkhiṇaṃ disaṃ nissāya tassa brahmuno upari "
"vehāsaṃ pallaṅkena nisīdi tejodhātuṃ samāpajjitvā nīcataraṃ bhagavato."
msgstr ""

#. </p><p>
#. <a class="pts2ed" id="pts2ed1.316"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "sn6.5:4.1"
msgid "Atha kho āyasmato mahākappinassa etadahosi:"
msgstr ""

msgctxt "sn6.5:4.2"
msgid "“kahaṃ nu kho bhagavā etarahi viharatī”ti?"
msgstr ""

msgctxt "sn6.5:4.3"
msgid ""
"Addasā kho āyasmā mahākappino bhagavantaṃ dibbena cakkhunā … pe … tejodhātuṃ "
"samāpannaṃ."
msgstr ""

msgctxt "sn6.5:4.4"
msgid "Disvāna—seyyathāpi nāma balavā puriso … pe …"
msgstr ""

msgctxt "sn6.5:4.5"
msgid "evameva—jetavane antarahito tasmiṃ brahmaloke pāturahosi."
msgstr ""

msgctxt "sn6.5:4.6"
msgid ""
"Atha kho āyasmā mahākappino pacchimaṃ disaṃ nissāya tassa brahmuno upari "
"vehāsaṃ pallaṅkena nisīdi tejodhātuṃ samāpajjitvā nīcataraṃ bhagavato."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "sn6.5:5.1"
msgid "Atha kho āyasmato anuruddhassa etadahosi:"
msgstr ""

msgctxt "sn6.5:5.2"
msgid "“kahaṃ nu kho bhagavā etarahi viharatī”ti?"
msgstr ""

msgctxt "sn6.5:5.3"
msgid "Addasā kho āyasmā anuruddho … pe … tejodhātuṃ samāpannaṃ."
msgstr ""

msgctxt "sn6.5:5.4"
msgid ""
"Disvāna—seyyathāpi nāma balavā puriso … pe … tasmiṃ brahmaloke pāturahosi."
msgstr ""

msgctxt "sn6.5:5.5"
msgid ""
"Atha kho āyasmā anuruddho uttaraṃ disaṃ nissāya tassa brahmuno upari vehāsaṃ "
"pallaṅkena nisīdi tejodhātuṃ samāpajjitvā nīcataraṃ bhagavato."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "sn6.5:6.1"
msgid "Atha kho āyasmā mahāmoggallāno taṃ brahmānaṃ gāthāya ajjhabhāsi:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc7"></a>
msgctxt "sn6.5:7.1"
msgid "“Ajjāpi te āvuso sā diṭṭhi,"
msgstr ""

#. <br>
msgctxt "sn6.5:7.2"
msgid "Yā te diṭṭhi pure ahu;"
msgstr ""

#. <br>
msgctxt "sn6.5:7.3"
msgid "Passasi vītivattantaṃ,"
msgstr ""

#. <br>
msgctxt "sn6.5:7.4"
msgid "Brahmaloke pabhassaran”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "sn6.5:8.1"
msgid "“Na me mārisa sā diṭṭhi,"
msgstr ""

#. <br>
msgctxt "sn6.5:8.2"
msgid "yā me diṭṭhi pure ahu;"
msgstr ""

#. <br>
msgctxt "sn6.5:8.3"
msgid "Passāmi vītivattantaṃ,"
msgstr ""

#. <br>
msgctxt "sn6.5:8.4"
msgid "brahmaloke pabhassaraṃ;"
msgstr ""

#. <br>
msgctxt "sn6.5:8.5"
msgid "Svāhaṃ ajja kathaṃ vajjaṃ,"
msgstr ""

#. <br>
msgctxt "sn6.5:8.6"
msgid "ahaṃ niccomhi sassato”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="pts1ed" id="pts1ed1.146"></a>
#. <a class="pts2ed" id="pts2ed1.317"></a>
#. <a class="sc" id="sc9"></a>
msgctxt "sn6.5:9.1"
msgid ""
"Atha kho bhagavā taṃ brahmānaṃ saṃvejetvā—seyyathāpi nāma balavā puriso "
"samiñjitaṃ vā bāhaṃ pasāreyya, pasāritaṃ vā bāhaṃ samiñjeyya; evameva—tasmiṃ "
"brahmaloke antarahito jetavane pāturahosi."
msgstr ""

msgctxt "sn6.5:9.2"
msgid "Atha kho so brahmā aññataraṃ brahmapārisajjaṃ āmantesi:"
msgstr ""

msgctxt "sn6.5:9.3"
msgid ""
"“ehi tvaṃ, mārisa, yenāyasmā mahāmoggallāno tenupasaṅkama; upasaṅkamitvā "
"āyasmantaṃ mahāmoggallānaṃ evaṃ vadehi:"
msgstr ""

msgctxt "sn6.5:9.4"
msgid ""
"‘atthi nu kho, mārisa moggallāna, aññepi tassa bhagavato sāvakā "
"evaṃmahiddhikā evaṃmahānubhāvā;"
msgstr ""

msgctxt "sn6.5:9.5"
msgid "seyyathāpi bhavaṃ moggallāno kassapo kappino anuruddho’”ti?"
msgstr ""

msgctxt "sn6.5:9.6"
msgid ""
"“Evaṃ, mārisā”ti kho so brahmapārisajjo tassa brahmuno paṭissutvā yenāyasmā "
"mahāmoggallāno tenupasaṅkami; upasaṅkamitvā āyasmantaṃ mahāmoggallānaṃ "
"etadavoca:"
msgstr ""

msgctxt "sn6.5:9.7"
msgid ""
"“atthi nu kho, mārisa moggallāna, aññepi tassa bhagavato sāvakā "
"evaṃmahiddhikā evaṃmahānubhāvā;"
msgstr ""

msgctxt "sn6.5:9.8"
msgid "seyyathāpi bhavaṃ moggallāno kassapo kappino anuruddho”ti?"
msgstr ""

msgctxt "sn6.5:9.9"
msgid "Atha kho āyasmā mahāmoggallāno taṃ brahmapārisajjaṃ gāthāya ajjhabhāsi:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc10"></a>
msgctxt "sn6.5:10.1"
msgid "“Tevijjā iddhipattā ca,"
msgstr ""

#. <br>
msgctxt "sn6.5:10.2"
msgid "cetopariyāyakovidā;"
msgstr ""

#. <br>
msgctxt "sn6.5:10.3"
msgid "Khīṇāsavā arahanto,"
msgstr ""

#. <br>
msgctxt "sn6.5:10.4"
msgid "bahū buddhassa sāvakā”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc11"></a>
msgctxt "sn6.5:11.1"
msgid ""
"Atha kho so brahmapārisajjo āyasmato mahāmoggallānassa bhāsitaṃ abhinanditvā "
"anumoditvā yena so brahmā tenupasaṅkami; upasaṅkamitvā taṃ brahmānaṃ "
"etadavoca:"
msgstr ""

msgctxt "sn6.5:11.2"
msgid "“āyasmā, mārisa, mahāmoggallāno evamāha:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc12"></a>
msgctxt "sn6.5:12.1"
msgid "‘Tevijjā iddhipattā ca,"
msgstr ""

#. <br>
msgctxt "sn6.5:12.2"
msgid "cetopariyāyakovidā;"
msgstr ""

#. <br>
msgctxt "sn6.5:12.3"
msgid "Khīṇāsavā arahanto,"
msgstr ""

#. <br>
msgctxt "sn6.5:12.4"
msgid "bahū buddhassa sāvakā’”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc13"></a>
msgctxt "sn6.5:13.1"
msgid "Idamavoca so brahmapārisajjo."
msgstr ""

msgctxt "sn6.5:13.2"
msgid "Attamano ca so brahmā tassa brahmapārisajjassa bhāsitaṃ abhinandīti."
msgstr ""
