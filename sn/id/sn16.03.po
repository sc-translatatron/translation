#. <section class="sutta" id="sn16.3"><article><div class="hgroup"><p class="division">
msgctxt "sn16.3:0.1"
msgid "Saṃyutta Nikāya 16"
msgstr ""

#. </p><p>
msgctxt "sn16.3:0.2"
msgid "1. Kassapavagga"
msgstr ""

#. </p><h1>
#. VAR: 3. Candūpamāsutta → candūpamasuttaṃ (bj) | candūpamaṃ (pts1-2)
msgctxt "sn16.3:0.3"
msgid "3. Candūpamāsutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.198"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "sn16.3:1.1"
msgid "Sāvatthiyaṃ viharati."
msgstr ""

msgctxt "sn16.3:1.2"
msgid "“Candūpamā, bhikkhave, kulāni upasaṅkamatha—"
msgstr ""

#. VAR: appagabbhā → appagabbā (mr)
msgctxt "sn16.3:1.3"
msgid "apakasseva kāyaṃ, apakassa cittaṃ, niccanavakā kulesu appagabbhā."
msgstr ""

msgctxt "sn16.3:1.4"
msgid ""
"Seyyathāpi, bhikkhave, puriso jarudapānaṃ vā olokeyya pabbatavisamaṃ vā "
"nadīviduggaṃ vā—"
msgstr ""

msgctxt "sn16.3:1.5"
msgid "apakasseva kāyaṃ, apakassa cittaṃ;"
msgstr ""

msgctxt "sn16.3:1.6"
msgid "evameva kho, bhikkhave, candūpamā kulāni upasaṅkamatha—"
msgstr ""

msgctxt "sn16.3:1.7"
msgid "apakasseva kāyaṃ, apakassa cittaṃ, niccanavakā kulesu appagabbhā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn16.3:2.1"
msgid "Kassapo, bhikkhave, candūpamo kulāni upasaṅkamati—"
msgstr ""

msgctxt "sn16.3:2.2"
msgid "apakasseva kāyaṃ, apakassa cittaṃ, niccanavako kulesu appagabbho."
msgstr ""

msgctxt "sn16.3:2.3"
msgid "Taṃ kiṃ maññatha, bhikkhave, "
msgstr ""

msgctxt "sn16.3:2.4"
msgid "kathaṃrūpo bhikkhu arahati kulāni upasaṅkamitun”ti?"
msgstr ""

msgctxt "sn16.3:2.5"
msgid ""
"“Bhagavaṃmūlakā no, bhante, dhammā bhagavaṃnettikā bhagavaṃpaṭisaraṇā. Sādhu "
"vata, bhante, bhagavantaṃyeva paṭibhātu etassa bhāsitassa attho. Bhagavato "
"sutvā bhikkhū dhāressantī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "sn16.3:3.1"
msgid "Atha kho bhagavā ākāse pāṇiṃ cālesi."
msgstr ""

msgctxt "sn16.3:3.2"
msgid ""
"“Seyyathāpi, bhikkhave, ayaṃ ākāse pāṇi na sajjati na gayhati na bajjhati;"
msgstr ""

msgctxt "sn16.3:3.3"
msgid ""
"evameva kho, bhikkhave, yassa kassaci bhikkhuno kulāni upasaṅkamato kulesu "
"cittaṃ na sajjati na gayhati na bajjhati:"
msgstr ""

msgctxt "sn16.3:3.4"
msgid "‘labhantu lābhakāmā, puññakāmā karontu puññānī’ti;"
msgstr ""

msgctxt "sn16.3:3.5"
msgid ""
"yathāsakena lābhena attamano hoti sumano, evaṃ paresaṃ lābhena attamano hoti "
"sumano;"
msgstr ""

msgctxt "sn16.3:3.6"
msgid "evarūpo kho, bhikkhave, bhikkhu arahati kulāni upasaṅkamituṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "sn16.3:4.1"
msgid ""
"Kassapassa, bhikkhave, kulāni upasaṅkamato kulesu cittaṃ na sajjati na "
"gayhati na bajjhati:"
msgstr ""

msgctxt "sn16.3:4.2"
msgid "‘labhantu lābhakāmā, puññakāmā karontu puññānī’ti;"
msgstr ""

msgctxt "sn16.3:4.3"
msgid "yathāsakena lābhena attamano hoti sumano;"
msgstr ""

msgctxt "sn16.3:4.4"
msgid "evaṃ paresaṃ lābhena attamano hoti sumano."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.199"></a>
#. <a class="sc" id="sc5"></a>
msgctxt "sn16.3:5.1"
msgid "Taṃ kiṃ maññatha, bhikkhave, "
msgstr ""

msgctxt "sn16.3:5.2"
msgid ""
"kathaṃrūpassa bhikkhuno aparisuddhā dhammadesanā hoti, kathaṃrūpassa "
"bhikkhuno parisuddhā dhammadesanā hotī”ti?"
msgstr ""

msgctxt "sn16.3:5.3"
msgid ""
"“Bhagavaṃmūlakā no, bhante, dhammā bhagavaṃnettikā bhagavaṃpaṭisaraṇā. Sādhu "
"vata, bhante, bhagavantaṃyeva paṭibhātu etassa bhāsitassa attho. Bhagavato "
"sutvā bhikkhū dhāressantī”ti."
msgstr ""

msgctxt "sn16.3:5.4"
msgid "“Tena hi, bhikkhave, suṇātha, sādhukaṃ manasi karotha, bhāsissāmī”ti."
msgstr ""

msgctxt "sn16.3:5.5"
msgid "“Evaṃ, bhante”ti kho te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "sn16.3:5.6"
msgid "Bhagavā etadavoca:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "sn16.3:6.1"
msgid "“Yo hi koci, bhikkhave, bhikkhu evaṃcitto paresaṃ dhammaṃ deseti:"
msgstr ""

msgctxt "sn16.3:6.2"
msgid ""
"‘aho vata me dhammaṃ suṇeyyuṃ, sutvā ca pana dhammaṃ pasīdeyyuṃ, pasannā ca "
"me pasannākāraṃ kareyyun’ti;"
msgstr ""

msgctxt "sn16.3:6.3"
msgid "evarūpassa kho, bhikkhave, bhikkhuno aparisuddhā dhammadesanā hoti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "sn16.3:7.1"
msgid "Yo ca kho, bhikkhave, bhikkhu evaṃcitto paresaṃ dhammaṃ deseti:"
msgstr ""

#. VAR: viññūhīti → viññūhi (?)
msgctxt "sn16.3:7.2"
msgid ""
"‘svākkhāto bhagavatā dhammo sandiṭṭhiko akāliko ehipassiko opaneyyiko "
"paccattaṃ veditabbo viññūhīti."
msgstr ""

msgctxt "sn16.3:7.3"
msgid ""
"Aho vata me dhammaṃ suṇeyyuṃ, sutvā ca pana dhammaṃ ājāneyyuṃ, ājānitvā ca "
"pana tathattāya paṭipajjeyyun’ti."
msgstr ""

#. VAR: anuddayaṃ → anudayaṃ (s1-3, pts1-2)
msgctxt "sn16.3:7.4"
msgid ""
"Iti dhammasudhammataṃ paṭicca paresaṃ dhammaṃ deseti, kāruññaṃ paṭicca "
"anuddayaṃ paṭicca anukampaṃ upādāya paresaṃ dhammaṃ deseti."
msgstr ""

msgctxt "sn16.3:7.5"
msgid "Evarūpassa kho, bhikkhave, bhikkhuno parisuddhā dhammadesanā hoti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.200"></a>
#. <a class="sc" id="sc8"></a>
msgctxt "sn16.3:8.1"
msgid "Kassapo, bhikkhave, evaṃcitto paresaṃ dhammaṃ deseti:"
msgstr ""

msgctxt "sn16.3:8.2"
msgid ""
"‘svākkhāto bhagavatā dhammo sandiṭṭhiko akāliko ehipassiko opaneyyiko "
"paccattaṃ veditabbo viññūhīti."
msgstr ""

msgctxt "sn16.3:8.3"
msgid ""
"Aho vata me dhammaṃ suṇeyyuṃ, sutvā ca pana dhammaṃ ājāneyyuṃ, ājānitvā ca "
"pana tathattāya paṭipajjeyyun’ti."
msgstr ""

msgctxt "sn16.3:8.4"
msgid ""
"Iti dhammasudhammataṃ paṭicca paresaṃ dhammaṃ deseti, kāruññaṃ paṭicca "
"anuddayaṃ paṭicca anukampaṃ upādāya paresaṃ dhammaṃ deseti."
msgstr ""

msgctxt "sn16.3:8.5"
msgid ""
"Kassapena vā hi vo, bhikkhave, ovadissāmi yo vā panassa kassapasadiso, "
"ovaditehi ca pana vo tathattāya paṭipajjitabban”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn16.3:8.6"
msgid "Tatiyaṃ."
msgstr ""
