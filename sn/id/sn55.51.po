#. <section class="sutta" id="sn55.51"><article><div class="hgroup"><p class="division">
msgctxt "sn55.51:0.1"
msgid "Saṃyutta Nikāya 55"
msgstr ""

#. </p><p>
msgctxt "sn55.51:0.2"
msgid "6. Sappaññavagga"
msgstr ""

#. </p><h1>
msgctxt "sn55.51:0.3"
msgid "51. Sagāthakasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "sn55.51:1.1"
msgid ""
"“Catūhi, bhikkhave, dhammehi samannāgato ariyasāvako sotāpanno hoti "
"avinipātadhammo niyato sambodhiparāyaṇo."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli5.405"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "sn55.51:2.1"
msgid "Katamehi catūhi?"
msgstr ""

msgctxt "sn55.51:2.2"
msgid "Idha, bhikkhave, ariyasāvako buddhe aveccappasādena samannāgato hoti—"
msgstr ""

msgctxt "sn55.51:2.3"
msgid "itipi so bhagavā … pe … satthā devamanussānaṃ buddho bhagavāti."
msgstr ""

msgctxt "sn55.51:2.4"
msgid "Dhamme … pe …"
msgstr ""

msgctxt "sn55.51:2.5"
msgid "saṅghe … pe …"
msgstr ""

msgctxt "sn55.51:2.6"
msgid ""
"ariyakantehi sīlehi samannāgato hoti akhaṇḍehi … pe … samādhisaṃvattanikehi."
msgstr ""

msgctxt "sn55.51:2.7"
msgid ""
"Imehi kho, bhikkhave, catūhi dhammehi samannāgato ariyasāvako sotāpanno hoti "
"avinipātadhammo niyato sambodhiparāyaṇo”ti."
msgstr ""

msgctxt "sn55.51:2.8"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "sn55.51:2.9"
msgid "Idaṃ vatvāna sugato athāparaṃ etadavoca satthā:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc3"></a>
msgctxt "sn55.51:3.1"
msgid "“Yassa saddhā tathāgate,"
msgstr ""

#. <br>
msgctxt "sn55.51:3.2"
msgid "acalā suppatiṭṭhitā;"
msgstr ""

#. <br>
msgctxt "sn55.51:3.3"
msgid "Sīlañca yassa kalyāṇaṃ,"
msgstr ""

#. <br>
msgctxt "sn55.51:3.4"
msgid "ariyakantaṃ pasaṃsitaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "sn55.51:4.1"
msgid "Saṅghe pasādo yassatthi,"
msgstr ""

#. <br>
msgctxt "sn55.51:4.2"
msgid "ujubhūtañca dassanaṃ;"
msgstr ""

#. <br>
msgctxt "sn55.51:4.3"
msgid "Adaliddoti taṃ āhu,"
msgstr ""

#. <br>
msgctxt "sn55.51:4.4"
msgid "amoghaṃ tassa jīvitaṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "sn55.51:5.1"
msgid "Tasmā saddhañca sīlañca,"
msgstr ""

#. <br>
msgctxt "sn55.51:5.2"
msgid "pasādaṃ dhammadassanaṃ;"
msgstr ""

#. <br>
msgctxt "sn55.51:5.3"
msgid "Anuyuñjetha medhāvī,"
msgstr ""

#. <br>
msgctxt "sn55.51:5.4"
msgid "saraṃ buddhānasāsanan”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "sn55.51:5.5"
msgid "Paṭhamaṃ."
msgstr ""
