#. <section class="sutta" id="sn41.6"><article><div class="hgroup"><p class="division">
msgctxt "sn41.6:0.1"
msgid "Saṃyutta Nikāya 41"
msgstr ""

#. </p><p>
msgctxt "sn41.6:0.2"
msgid "1. Cittavagga"
msgstr ""

#. </p><h1>
msgctxt "sn41.6:0.3"
msgid "6. Dutiyakāmabhūsutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli4.293"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "sn41.6:1.1"
msgid "Ekaṃ samayaṃ āyasmā kāmabhū macchikāsaṇḍe viharati ambāṭakavane."
msgstr ""

msgctxt "sn41.6:1.2"
msgid ""
"Atha kho citto gahapati yenāyasmā kāmabhū tenupasaṅkami; upasaṅkamitvā "
"ekamantaṃ nisīdi. Ekamantaṃ nisinno kho citto gahapati āyasmantaṃ kāmabhuṃ "
"etadavoca:"
msgstr ""

msgctxt "sn41.6:1.3"
msgid "“kati nu kho, bhante, saṅkhārā”ti?"
msgstr ""

msgctxt "sn41.6:1.4"
msgid "“Tayo kho, gahapati, saṅkhārā—"
msgstr ""

msgctxt "sn41.6:1.5"
msgid "kāyasaṅkhāro, vacīsaṅkhāro, cittasaṅkhāro”ti."
msgstr ""

msgctxt "sn41.6:1.6"
msgid ""
"“Sādhu, bhante”ti kho citto gahapati āyasmato kāmabhussa bhāsitaṃ "
"abhinanditvā anumoditvā āyasmantaṃ kāmabhuṃ uttariṃ pañhaṃ apucchi:"
msgstr ""

msgctxt "sn41.6:1.7"
msgid ""
"“katamo pana, bhante, kāyasaṅkhāro, katamo vacīsaṅkhāro, katamo "
"cittasaṅkhāro”ti?"
msgstr ""

msgctxt "sn41.6:1.8"
msgid ""
"“Assāsapassāsā kho, gahapati, kāyasaṅkhāro, vitakkavicārā vacīsaṅkhāro, "
"saññā ca vedanā ca cittasaṅkhāro”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn41.6:2.1"
msgid "“Sādhu, bhante”ti kho citto gahapati … pe … uttariṃ pañhaṃ apucchi:"
msgstr ""

msgctxt "sn41.6:2.2"
msgid ""
"“kasmā pana, bhante, assāsapassāsā kāyasaṅkhāro, kasmā vitakkavicārā "
"vacīsaṅkhāro, kasmā saññā ca vedanā ca cittasaṅkhāro”ti?"
msgstr ""

msgctxt "sn41.6:2.3"
msgid ""
"“Assāsapassāsā kho, gahapati, kāyikā. Ete dhammā kāyappaṭibaddhā, tasmā "
"assāsapassāsā kāyasaṅkhāro."
msgstr ""

msgctxt "sn41.6:2.4"
msgid ""
"Pubbe kho, gahapati, vitakketvā vicāretvā pacchā vācaṃ bhindati, tasmā "
"vitakkavicārā vacīsaṅkhāro."
msgstr ""

msgctxt "sn41.6:2.5"
msgid ""
"Saññā ca vedanā ca cetasikā. Ete dhammā cittappaṭibaddhā, tasmā saññā ca "
"vedanā ca cittasaṅkhāro”ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli4.294"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "sn41.6:3.1"
msgid "“Sādhu … pe … uttariṃ pañhaṃ apucchi:"
msgstr ""

msgctxt "sn41.6:3.2"
msgid "“kathaṃ pana, bhante, saññāvedayitanirodhasamāpatti hotī”ti?"
msgstr ""

msgctxt "sn41.6:3.3"
msgid ""
"“Na kho, gahapati, saññāvedayitanirodhaṃ samāpajjantassa bhikkhuno evaṃ hoti:"
msgstr ""

msgctxt "sn41.6:3.4"
msgid ""
"‘ahaṃ saññāvedayitanirodhaṃ samāpajjissan’ti vā ‘ahaṃ saññāvedayitanirodhaṃ "
"samāpajjāmī’ti vā ‘ahaṃ saññāvedayitanirodhaṃ samāpanno’ti vā."
msgstr ""

msgctxt "sn41.6:3.5"
msgid ""
"Atha khvassa pubbeva tathā cittaṃ bhāvitaṃ hoti yaṃ taṃ tathattāya "
"upanetī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "sn41.6:4.1"
msgid "“Sādhu … pe … uttariṃ pañhaṃ apucchi:"
msgstr ""

msgctxt "sn41.6:4.2"
msgid ""
"“saññāvedayitanirodhaṃ samāpajjantassa pana, bhante, bhikkhuno katame dhammā "
"paṭhamaṃ nirujjhanti, yadi vā kāyasaṅkhāro, yadi vā vacīsaṅkhāro, yadi vā "
"cittasaṅkhāro”ti?"
msgstr ""

msgctxt "sn41.6:4.3"
msgid ""
"“Saññāvedayitanirodhaṃ samāpajjantassa kho, gahapati, bhikkhuno vacīsaṅkhāro "
"paṭhamaṃ nirujjhati, tato kāyasaṅkhāro, tato cittasaṅkhāro”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "sn41.6:5.1"
msgid "“Sādhu … pe … uttariṃ pañhaṃ apucchi:"
msgstr ""

msgctxt "sn41.6:5.2"
msgid ""
"“yvāyaṃ, bhante, mato kālaṅkato, yo cāyaṃ bhikkhu saññāvedayitanirodhaṃ "
"samāpanno, imesaṃ kiṃ nānākaraṇan”ti?"
msgstr ""

msgctxt "sn41.6:5.3"
msgid ""
"“Yvāyaṃ, gahapati, mato kālaṅkato tassa kāyasaṅkhāro niruddho "
"paṭippassaddho, vacīsaṅkhāro niruddho paṭippassaddho, cittasaṅkhāro niruddho "
"paṭippassaddho, āyu parikkhīṇo, usmā vūpasantā, indriyāni viparibhinnāni."
msgstr ""

msgctxt "sn41.6:5.4"
msgid ""
"Yo ca khvāyaṃ, gahapati, bhikkhu saññāvedayitanirodhaṃ samāpanno, tassapi "
"kāyasaṅkhāro niruddho paṭippassaddho, vacīsaṅkhāro niruddho paṭippassaddho, "
"cittasaṅkhāro niruddho paṭippassaddho, āyu aparikkhīṇo, usmā avūpasantā, "
"indriyāni vippasannāni."
msgstr ""

msgctxt "sn41.6:5.5"
msgid ""
"Yvāyaṃ, gahapati, mato kālaṅkato, yo cāyaṃ bhikkhu saññāvedayitanirodhaṃ "
"samāpanno, idaṃ nesaṃ nānākaraṇan”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "sn41.6:6.1"
msgid "“Sādhu … pe … uttariṃ pañhaṃ apucchi:"
msgstr ""

msgctxt "sn41.6:6.2"
msgid ""
"“kathaṃ pana, bhante, saññāvedayitanirodhasamāpattiyā vuṭṭhānaṃ hotī”ti?"
msgstr ""

msgctxt "sn41.6:6.3"
msgid ""
"“Na kho, gahapati, saññāvedayitanirodhasamāpattiyā vuṭṭhahantassa bhikkhuno "
"evaṃ hoti:"
msgstr ""

msgctxt "sn41.6:6.4"
msgid ""
"‘ahaṃ saññāvedayitanirodhasamāpattiyā vuṭṭhahissan’ti vā ‘ahaṃ "
"saññāvedayitanirodhasamāpattiyā vuṭṭhahāmī’ti vā ‘ahaṃ "
"saññāvedayitanirodhasamāpattiyā vuṭṭhito’ti vā."
msgstr ""

msgctxt "sn41.6:6.5"
msgid ""
"Atha khvassa pubbeva tathā cittaṃ bhāvitaṃ hoti, yaṃ taṃ tathattāya "
"upanetī”ti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli4.295"></a>
#. <a class="sc" id="sc7"></a>
msgctxt "sn41.6:7.1"
msgid "“Sādhu, bhante … pe … uttariṃ pañhaṃ apucchi:"
msgstr ""

msgctxt "sn41.6:7.2"
msgid ""
"“saññāvedayitanirodhasamāpattiyā vuṭṭhahantassa pana, bhante, bhikkhuno "
"katame dhammā paṭhamaṃ uppajjanti, yadi vā kāyasaṅkhāro, yadi vā "
"vacīsaṅkhāro, yadi vā cittasaṅkhāro”ti?"
msgstr ""

msgctxt "sn41.6:7.3"
msgid ""
"“Saññāvedayitanirodhasamāpattiyā vuṭṭhahantassa, gahapati, bhikkhuno "
"cittasaṅkhāro paṭhamaṃ uppajjati, tato kāyasaṅkhāro, tato vacīsaṅkhāro”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc8"></a>
msgctxt "sn41.6:8.1"
msgid "“Sādhu … pe … uttariṃ pañhaṃ apucchi:"
msgstr ""

msgctxt "sn41.6:8.2"
msgid ""
"“saññāvedayitanirodhasamāpattiyā vuṭṭhitaṃ pana, bhante, bhikkhuṃ kati "
"phassā phusanti”?"
msgstr ""

msgctxt "sn41.6:8.3"
msgid ""
"“Saññāvedayitanirodhasamāpattiyā vuṭṭhitaṃ kho, gahapati, bhikkhuṃ tayo "
"phassā phusanti—"
msgstr ""

msgctxt "sn41.6:8.4"
msgid "suññato phasso, animitto phasso, appaṇihito phasso”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "sn41.6:9.1"
msgid "“Sādhu … pe … uttariṃ pañhaṃ apucchi:"
msgstr ""

msgctxt "sn41.6:9.2"
msgid ""
"“saññāvedayitanirodhasamāpattiyā vuṭṭhitassa pana, bhante, bhikkhuno "
"kiṃninnaṃ cittaṃ hoti, kiṃpoṇaṃ, kiṃpabbhāran”ti?"
msgstr ""

msgctxt "sn41.6:9.3"
msgid ""
"“Saññāvedayitanirodhasamāpattiyā vuṭṭhitassa kho, gahapati, bhikkhuno "
"vivekaninnaṃ cittaṃ hoti vivekapoṇaṃ vivekapabbhāran”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "sn41.6:10.1"
msgid ""
"“Sādhu, bhante”ti kho citto gahapati āyasmato kāmabhussa bhāsitaṃ "
"abhinanditvā anumoditvā āyasmantaṃ kāmabhuṃ uttariṃ pañhaṃ apucchi:"
msgstr ""

msgctxt "sn41.6:10.2"
msgid ""
"“saññāvedayitanirodhasamāpattiyā pana, bhante, kati dhammā bahūpakārā”ti?"
msgstr ""

msgctxt "sn41.6:10.3"
msgid "“Addhā kho tvaṃ, gahapati, yaṃ paṭhamaṃ pucchitabbaṃ taṃ pucchasi."
msgstr ""

msgctxt "sn41.6:10.4"
msgid "Api ca tyāhaṃ byākarissāmi."
msgstr ""

msgctxt "sn41.6:10.5"
msgid "Saññāvedayitanirodhasamāpattiyā kho, gahapati, dve dhammā bahūpakārā—"
msgstr ""

msgctxt "sn41.6:10.6"
msgid "samatho ca vipassanā cā”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn41.6:10.7"
msgid "Chaṭṭhaṃ."
msgstr ""
