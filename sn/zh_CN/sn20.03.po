#. <section class="sutta" id="sn20.3"><article><div class="hgroup"><p class="division">
msgctxt "sn20.3:0.1"
msgid "Saṃyutta Nikāya 20"
msgstr ""

#. </p><p>
msgctxt "sn20.3:0.2"
msgid "1. Opammavagga"
msgstr ""

#. </p><h1>
msgctxt "sn20.3:0.3"
msgid "3. Kulasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.264"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "sn20.3:1.1"
msgid "Sāvatthiyaṃ viharati."
msgstr ""

msgctxt "sn20.3:1.2"
msgid ""
"“Seyyathāpi, bhikkhave, yāni kānici kulāni bahutthikāni appapurisāni tāni "
"suppadhaṃsiyāni honti corehi kumbhatthenakehi;"
msgstr ""

msgctxt "sn20.3:1.3"
msgid ""
"evameva kho, bhikkhave, yassa kassaci bhikkhuno mettācetovimutti abhāvitā "
"abahulīkatā so suppadhaṃsiyo hoti amanussehi."
msgstr ""

msgctxt "sn20.3:1.4"
msgid ""
"Seyyathāpi, bhikkhave, yāni kānici kulāni appitthikāni bahupurisāni tāni "
"duppadhaṃsiyāni honti corehi kumbhatthenakehi;"
msgstr ""

msgctxt "sn20.3:1.5"
msgid ""
"evameva kho, bhikkhave, yassa kassaci bhikkhuno mettācetovimutti bhāvitā "
"bahulīkatā so duppadhaṃsiyo hoti amanussehi."
msgstr ""

msgctxt "sn20.3:1.6"
msgid "Tasmātiha, bhikkhave, evaṃ sikkhitabbaṃ:"
msgstr ""

msgctxt "sn20.3:1.7"
msgid ""
"‘mettā no cetovimutti bhāvitā bhavissati bahulīkatā yānīkatā vatthukatā "
"anuṭṭhitā paricitā susamāraddhā’ti."
msgstr ""

msgctxt "sn20.3:1.8"
msgid "Evañhi vo, bhikkhave, sikkhitabban”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn20.3:1.9"
msgid "Tatiyaṃ."
msgstr ""
