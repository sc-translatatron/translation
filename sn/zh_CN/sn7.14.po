#. <section class="sutta" id="sn7.14"><article><div class="hgroup"><p class="division">
msgctxt "sn7.14:0.1"
msgid "Saṃyutta Nikāya 7"
msgstr ""

#. </p><p>
msgctxt "sn7.14:0.2"
msgid "2. Upāsakavagga"
msgstr ""

#. </p><h1>
msgctxt "sn7.14:0.3"
msgid "14. Mahāsālasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts1ed" id="pts1ed1.176"></a>
#. <a class="pts2ed" id="pts2ed1.378"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "sn7.14:1.1"
msgid "Sāvatthinidānaṃ."
msgstr ""

#. VAR: lūkhapāvuraṇo → lūkhapāpuraṇo (bj, s1-3, km, pts1-2)
msgctxt "sn7.14:1.2"
msgid ""
"Atha kho aññataro brāhmaṇamahāsālo lūkho lūkhapāvuraṇo yena bhagavā "
"tenupasaṅkami; upasaṅkamitvā bhagavatā saddhiṃ sammodi."
msgstr ""

msgctxt "sn7.14:1.3"
msgid ""
"Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdi. Ekamantaṃ "
"nisinnaṃ kho taṃ brāhmaṇamahāsālaṃ bhagavā etadavoca:"
msgstr ""

msgctxt "sn7.14:1.4"
msgid "“kiṃ nu tvaṃ, brāhmaṇa, lūkho lūkhapāvuraṇo”ti?"
msgstr ""

msgctxt "sn7.14:1.5"
msgid "“Idha me, bho gotama, cattāro puttā."
msgstr ""

msgctxt "sn7.14:1.6"
msgid "Te maṃ dārehi sampuccha gharā nikkhāmentī”ti."
msgstr ""

msgctxt "sn7.14:1.7"
msgid ""
"“Tena hi tvaṃ, brāhmaṇa, imā gāthāyo pariyāpuṇitvā sabhāyaṃ mahājanakāye "
"sannipatite puttesu ca sannisinnesu bhāsassu:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn7.14:2.1"
msgid "‘Yehi jātehi nandissaṃ,"
msgstr ""

# This sense of bhava is unusual and not recorded in PTS Dict.
#. <br>
msgctxt "sn7.14:2.2"
msgid "yesañca bhavamicchisaṃ;"
msgstr ""

#. <br>
msgctxt "sn7.14:2.3"
msgid "Te maṃ dārehi sampuccha,"
msgstr ""

#. <br>
msgctxt "sn7.14:2.4"
msgid "sāva vārenti sūkaraṃ."
msgstr ""

#. </p><p>
#. <a class="pts2ed" id="pts2ed1.379"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "sn7.14:3.1"
msgid "Asantā kira maṃ jammā,"
msgstr ""

#. <br>
msgctxt "sn7.14:3.2"
msgid "tāta tātāti bhāsare;"
msgstr ""

#. <br>
msgctxt "sn7.14:3.3"
msgid "Rakkhasā puttarūpena,"
msgstr ""

#. <br>
msgctxt "sn7.14:3.4"
msgid "te jahanti vayogataṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "sn7.14:4.1"
msgid "Assova jiṇṇo nibbhogo,"
msgstr ""

#. <br>
msgctxt "sn7.14:4.2"
msgid "khādanā apanīyati;"
msgstr ""

#. <br>
msgctxt "sn7.14:4.3"
msgid "Bālakānaṃ pitā thero,"
msgstr ""

#. <br>
msgctxt "sn7.14:4.4"
msgid "parāgāresu bhikkhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "sn7.14:5.1"
msgid "Daṇḍova kira me seyyo,"
msgstr ""

#. <br>
msgctxt "sn7.14:5.2"
msgid "yañce puttā anassavā;"
msgstr ""

#. <br>
msgctxt "sn7.14:5.3"
msgid "Caṇḍampi goṇaṃ vāreti,"
msgstr ""

#. <br>
msgctxt "sn7.14:5.4"
msgid "atho caṇḍampi kukkuraṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "sn7.14:6.1"
msgid "Andhakāre pure hoti,"
msgstr ""

#. <br>
msgctxt "sn7.14:6.2"
msgid "gambhīre gādhamedhati;"
msgstr ""

#. <br>
msgctxt "sn7.14:6.3"
msgid "Daṇḍassa ānubhāvena,"
msgstr ""

#. <br>
msgctxt "sn7.14:6.4"
msgid "khalitvā patitiṭṭhatī’”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc7"></a>
msgctxt "sn7.14:7.1"
msgid ""
"Atha kho so brāhmaṇamahāsālo bhagavato santike imā gāthāyo pariyāpuṇitvā "
"sabhāyaṃ mahājanakāye sannipatite puttesu ca sannisinnesu abhāsi:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts2ed" id="pts2ed1.380"></a>
#. <a class="sc" id="sc8"></a>
msgctxt "sn7.14:8.1"
msgid "“Yehi jātehi nandissaṃ,"
msgstr ""

#. <br>
msgctxt "sn7.14:8.2"
msgid "yesañca bhavamicchisaṃ;"
msgstr ""

#. <br>
msgctxt "sn7.14:8.3"
msgid "Te maṃ dārehi sampuccha,"
msgstr ""

#. <br>
msgctxt "sn7.14:8.4"
msgid "sāva vārenti sūkaraṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "sn7.14:9.1"
msgid "Asantā kira maṃ jammā,"
msgstr ""

#. <br>
msgctxt "sn7.14:9.2"
msgid "tāta tātāti bhāsare;"
msgstr ""

#. <br>
msgctxt "sn7.14:9.3"
msgid "Rakkhasā puttarūpena,"
msgstr ""

#. <br>
msgctxt "sn7.14:9.4"
msgid "te jahanti vayogataṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc10"></a>
msgctxt "sn7.14:10.1"
msgid "Assova jiṇṇo nibbhogo,"
msgstr ""

#. <br>
msgctxt "sn7.14:10.2"
msgid "khādanā apanīyati;"
msgstr ""

#. <br>
msgctxt "sn7.14:10.3"
msgid "Bālakānaṃ pitā thero,"
msgstr ""

#. <br>
msgctxt "sn7.14:10.4"
msgid "parāgāresu bhikkhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc11"></a>
msgctxt "sn7.14:11.1"
msgid "Daṇḍova kira me seyyo,"
msgstr ""

#. <br>
msgctxt "sn7.14:11.2"
msgid "yañce puttā anassavā;"
msgstr ""

#. <br>
msgctxt "sn7.14:11.3"
msgid "Caṇḍampi goṇaṃ vāreti,"
msgstr ""

#. <br>
msgctxt "sn7.14:11.4"
msgid "atho caṇḍampi kukkuraṃ."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc12"></a>
msgctxt "sn7.14:12.1"
msgid "Andhakāre pure hoti,"
msgstr ""

#. <br>
msgctxt "sn7.14:12.2"
msgid "gambhīre gādhamedhati;"
msgstr ""

#. <br>
msgctxt "sn7.14:12.3"
msgid "Daṇḍassa ānubhāvena,"
msgstr ""

#. <br>
msgctxt "sn7.14:12.4"
msgid "khalitvā patitiṭṭhatī”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="pts1ed" id="pts1ed1.177"></a>
#. <a class="pts2ed" id="pts2ed1.381"></a>
#. <a class="sc" id="sc13"></a>
msgctxt "sn7.14:13.1"
msgid ""
"Atha kho naṃ brāhmaṇamahāsālaṃ puttā gharaṃ netvā nhāpetvā paccekaṃ "
"dussayugena acchādesuṃ."
msgstr ""

msgctxt "sn7.14:13.2"
msgid ""
"Atha kho so brāhmaṇamahāsālo ekaṃ dussayugaṃ ādāya yena bhagavā "
"tenupasaṅkami; upasaṅkamitvā bhagavatā saddhiṃ sammodi."
msgstr ""

msgctxt "sn7.14:13.3"
msgid ""
"Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdi. Ekamantaṃ "
"nisinno kho brāhmaṇamahāsālo bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "sn7.14:13.4"
msgid "“mayaṃ, bho gotama, brāhmaṇā nāma ācariyassa ācariyadhanaṃ pariyesāma."
msgstr ""

msgctxt "sn7.14:13.5"
msgid "Paṭiggaṇhatu me bhavaṃ gotamo ācariyadhanan”ti."
msgstr ""

msgctxt "sn7.14:13.6"
msgid "Paṭiggahesi bhagavā anukampaṃ upādāya."
msgstr ""

msgctxt "sn7.14:13.7"
msgid "Atha kho so brāhmaṇamahāsālo bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "sn7.14:13.8"
msgid "“abhikkantaṃ, bho gotama … pe …"
msgstr ""

msgctxt "sn7.14:13.9"
msgid ""
"upāsakaṃ maṃ bhavaṃ gotamo dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gatan”ti."
msgstr ""
