#. <section class="sutta" id="sn48.71-82"><article><div class="hgroup"><p class="division">
msgctxt "sn48.71-82:0.1"
msgid "Saṃyutta Nikāya 48"
msgstr ""

#. </p><p>
msgctxt "sn48.71-82:0.2"
msgid "8. Gaṅgāpeyyālavagga"
msgstr ""

#. </p><h1>
#. VAR: 71–​82. Pācīnādisutta → pācīnaninnādisuttāni (bj) | viveka (pts1)
msgctxt "sn48.71-82:0.3"
msgid "71–​82. Pācīnādisutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "sn48.71-82:1.1"
msgid ""
"“Seyyathāpi, bhikkhave, gaṅgā nadī pācīnaninnā pācīnapoṇā pācīnapabbhārā;"
msgstr ""

msgctxt "sn48.71-82:1.2"
msgid ""
"evameva kho, bhikkhave, bhikkhu pañcindriyāni bhāvento pañcindriyāni "
"bahulīkaronto nibbānaninno hoti nibbānapoṇo nibbānapabbhāro."
msgstr ""

msgctxt "sn48.71-82:1.3"
msgid ""
"Kathañca, bhikkhave, bhikkhu pañcindriyāni bhāvento pañcindriyāni "
"bahulīkaronto nibbānaninno hoti nibbānapoṇo nibbānapabbhāro?"
msgstr ""

msgctxt "sn48.71-82:1.4"
msgid ""
"Idha, bhikkhave, bhikkhu saddhindriyaṃ bhāveti vivekanissitaṃ virāganissitaṃ "
"nirodhanissitaṃ vossaggapariṇāmiṃ, "
msgstr ""

msgctxt "sn48.71-82:1.5"
msgid "vīriyindriyaṃ … pe …"
msgstr ""

msgctxt "sn48.71-82:1.6"
msgid "satindriyaṃ …"
msgstr ""

msgctxt "sn48.71-82:1.7"
msgid "samādhindriyaṃ …"
msgstr ""

msgctxt "sn48.71-82:1.8"
msgid ""
"paññindriyaṃ bhāveti vivekanissitaṃ virāganissitaṃ nirodhanissitaṃ "
"vossaggapariṇāmiṃ."
msgstr ""

msgctxt "sn48.71-82:1.9"
msgid ""
"Evaṃ kho, bhikkhave, bhikkhu pañcindriyāni bhāvento pañcindriyāni "
"bahulīkaronto nibbānaninno hoti nibbānapoṇo nibbānapabbhāro”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn48.71-82:1.10"
msgid "Dvādasamaṃ."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn48.71-82:1.11"
msgid "Gaṅgāpeyyālavaggo aṭṭhamo."
msgstr ""

#. </p><blockquote class="uddanagatha"><p>
#. <a class="pts-vp-pli" id="pts-vp-pli5.240"></a>
#. <a class="sc" id="sc2"></a>
msgctxt "sn48.71-82:2.1"
msgid "Cha pācīnato ninnā,"
msgstr ""

#. <br>
msgctxt "sn48.71-82:2.2"
msgid "cha ninnā ca samuddato;"
msgstr ""

#. <br>
msgctxt "sn48.71-82:2.3"
msgid "Dvete cha dvādasa honti,"
msgstr ""

#. <br>
msgctxt "sn48.71-82:2.4"
msgid "vaggo tena pavuccatīti."
msgstr ""
