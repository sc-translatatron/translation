#. <section class="sutta" id="sn48.53"><article><div class="hgroup"><p class="division">
msgctxt "sn48.53:0.1"
msgid "Saṃyutta Nikāya 48"
msgstr ""

#. </p><p>
msgctxt "sn48.53:0.2"
msgid "6. Sūkarakhatavagga"
msgstr ""

#. </p><h1>
msgctxt "sn48.53:0.3"
msgid "53. Sekhasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "sn48.53:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "sn48.53:1.2"
msgid "ekaṃ samayaṃ bhagavā kosambiyaṃ viharati ghositārāme."
msgstr ""

msgctxt "sn48.53:1.3"
msgid "Tatra kho bhagavā bhikkhū āmantesi:"
msgstr ""

#. VAR: sekho → sekkho (bj, s1-3)
msgctxt "sn48.53:1.4"
msgid ""
"“atthi nu kho, bhikkhave, pariyāyo yaṃ pariyāyaṃ āgamma sekho bhikkhu "
"sekhabhūmiyaṃ ṭhito ‘sekhosmī’ti pajāneyya, asekho bhikkhu asekhabhūmiyaṃ "
"ṭhito ‘asekhosmī’ti pajāneyyā”ti?"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn48.53:2.1"
msgid "“Bhagavaṃmūlakā no, bhante, dhammā … pe …"
msgstr ""

msgctxt "sn48.53:2.2"
msgid ""
"“atthi, bhikkhave, pariyāyo yaṃ pariyāyaṃ āgamma sekho bhikkhu sekhabhūmiyaṃ "
"ṭhito ‘sekhosmī’ti pajāneyya, asekho bhikkhu asekhabhūmiyaṃ ṭhito ‘asekhosmī’"
"ti pajāneyya."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "sn48.53:3.1"
msgid ""
"Katamo ca, bhikkhave, pariyāyo yaṃ pariyāyaṃ āgamma sekho bhikkhu "
"sekhabhūmiyaṃ ṭhito ‘sekhosmī’ti pajānāti?"
msgstr ""

msgctxt "sn48.53:3.2"
msgid ""
"Idha, bhikkhave, sekho bhikkhu ‘idaṃ dukkhan’ti yathābhūtaṃ pajānāti, ‘ayaṃ "
"dukkhasamudayo’ti yathābhūtaṃ pajānāti, ‘ayaṃ dukkhanirodho’ti yathābhūtaṃ "
"pajānāti, ‘ayaṃ dukkhanirodhagāminī paṭipadā’ti yathābhūtaṃ pajānāti—"
msgstr ""

msgctxt "sn48.53:3.3"
msgid ""
"ayampi kho, bhikkhave, pariyāyo yaṃ pariyāyaṃ āgamma sekho bhikkhu "
"sekhabhūmiyaṃ ṭhito ‘sekhosmī’ti pajānāti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli5.230"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "sn48.53:4.1"
msgid "Puna caparaṃ, bhikkhave, sekho bhikkhu iti paṭisañcikkhati:"
msgstr ""

msgctxt "sn48.53:4.2"
msgid ""
"‘atthi nu kho ito bahiddhā añño samaṇo vā brāhmaṇo vā yo evaṃ bhūtaṃ tacchaṃ "
"tathaṃ dhammaṃ deseti yathā bhagavā’ti?"
msgstr ""

msgctxt "sn48.53:4.3"
msgid "So evaṃ pajānāti:"
msgstr ""

msgctxt "sn48.53:4.4"
msgid ""
"‘natthi kho ito bahiddhā añño samaṇo vā brāhmaṇo vā yo evaṃ bhūtaṃ tacchaṃ "
"tathaṃ dhammaṃ deseti yathā bhagavā’ti."
msgstr ""

msgctxt "sn48.53:4.5"
msgid ""
"Ayampi kho, bhikkhave, pariyāyo yaṃ pariyāyaṃ āgamma sekho bhikkhu "
"sekhabhūmiyaṃ ṭhito ‘sekhosmī’ti pajānāti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "sn48.53:5.1"
msgid "Puna caparaṃ, bhikkhave, sekho bhikkhu pañcindriyāni pajānāti—"
msgstr ""

msgctxt "sn48.53:5.2"
msgid ""
"saddhindriyaṃ, vīriyindriyaṃ, satindriyaṃ, samādhindriyaṃ, paññindriyaṃ."
msgstr ""

# BB’s translation seems to me incoherent here.
msgctxt "sn48.53:5.3"
msgid ""
"Yaṅgatikāni yaṃparamāni yaṃphalāni yaṃpariyosānāni. Na heva kho kāyena "
"phusitvā viharati;"
msgstr ""

msgctxt "sn48.53:5.4"
msgid "paññāya ca ativijjha passati."
msgstr ""

msgctxt "sn48.53:5.5"
msgid ""
"Ayampi kho, bhikkhave, pariyāyo yaṃ pariyāyaṃ āgamma sekho bhikkhu "
"sekhabhūmiyaṃ ṭhito ‘sekhosmī’ti pajānāti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "sn48.53:6.1"
msgid ""
"Katamo ca, bhikkhave, pariyāyo yaṃ pariyāyaṃ āgamma asekho bhikkhu "
"asekhabhūmiyaṃ ṭhito ‘asekhosmī’ti pajānāti?"
msgstr ""

msgctxt "sn48.53:6.2"
msgid "Idha, bhikkhave, asekho bhikkhu pañcindriyāni pajānāti—"
msgstr ""

msgctxt "sn48.53:6.3"
msgid ""
"saddhindriyaṃ, vīriyindriyaṃ, satindriyaṃ, samādhindriyaṃ, paññindriyaṃ."
msgstr ""

msgctxt "sn48.53:6.4"
msgid ""
"Yaṅgatikāni yaṃparamāni yaṃphalāni yaṃpariyosānāni. Kāyena ca phusitvā "
"viharati;"
msgstr ""

msgctxt "sn48.53:6.5"
msgid "paññāya ca ativijjha passati."
msgstr ""

msgctxt "sn48.53:6.6"
msgid ""
"Ayampi kho, bhikkhave, pariyāyo yaṃ pariyāyaṃ āgamma asekho bhikkhu "
"asekhabhūmiyaṃ ṭhito ‘asekhosmī’ti pajānāti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "sn48.53:7.1"
msgid "Puna caparaṃ, bhikkhave, asekho bhikkhu cha indriyāni pajānāti."
msgstr ""

msgctxt "sn48.53:7.2"
msgid ""
"‘Cakkhundriyaṃ, sotindriyaṃ, ghānindriyaṃ, jivhindriyaṃ, kāyindriyaṃ, "
"manindriyaṃ—"
msgstr ""

msgctxt "sn48.53:7.3"
msgid ""
"imāni kho cha indriyāni sabbena sabbaṃ sabbathā sabbaṃ aparisesaṃ "
"nirujjhissanti, aññāni ca cha indriyāni na kuhiñci kismiñci uppajjissantī’ti "
"pajānāti."
msgstr ""

msgctxt "sn48.53:7.4"
msgid ""
"Ayampi kho, bhikkhave, pariyāyo yaṃ pariyāyaṃ āgamma asekho bhikkhu "
"asekhabhūmiyaṃ ṭhito ‘asekhosmī’ti pajānātī”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn48.53:7.5"
msgid "Tatiyaṃ."
msgstr ""
