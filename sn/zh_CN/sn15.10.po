#. <section class="sutta" id="sn15.10"><article><div class="hgroup"><p class="division">
msgctxt "sn15.10:0.1"
msgid "Saṃyutta Nikāya 15"
msgstr ""

#. </p><p>
msgctxt "sn15.10:0.2"
msgid "1. Paṭhamavagga"
msgstr ""

#. </p><h1>
#. VAR: 10. Puggalasutta → ekapuggalasuttaṃ (bj)
msgctxt "sn15.10:0.3"
msgid "10. Puggalasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "sn15.10:1.1"
msgid "Ekaṃ samayaṃ bhagavā rājagahe viharati gijjhakūṭe pabbate."
msgstr ""

msgctxt "sn15.10:1.2"
msgid "Tatra kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "sn15.10:1.3"
msgid "“bhikkhavo”ti."
msgstr ""

msgctxt "sn15.10:1.4"
msgid "“Bhadante”ti te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "sn15.10:1.5"
msgid "Bhagavā etadavoca:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn15.10:2.1"
msgid "“Anamataggoyaṃ, bhikkhave, saṃsāro … pe …"
msgstr ""

# BB adds “hindered by ignorance and fettered by craving” here, apparently by mistake.
msgctxt "sn15.10:2.2"
msgid ""
"ekapuggalassa, bhikkhave, kappaṃ sandhāvato saṃsarato siyā evaṃ mahā "
"aṭṭhikaṅkalo aṭṭhipuñjo aṭṭhirāsi yathāyaṃ vepullo pabbato, sace saṃhārako "
"assa, sambhatañca na vinasseyya."
msgstr ""

msgctxt "sn15.10:2.3"
msgid "Taṃ kissa hetu?"
msgstr ""

msgctxt "sn15.10:2.4"
msgid "Anamataggoyaṃ, bhikkhave, saṃsāro … pe …"
msgstr ""

msgctxt "sn15.10:2.5"
msgid "alaṃ vimuccitun”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "sn15.10:3.1"
msgid "Idamavoca bhagavā."
msgstr ""

msgctxt "sn15.10:3.2"
msgid "Idaṃ vatvāna sugato athāparaṃ etadavoca satthā:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc4"></a>
msgctxt "sn15.10:4.1"
msgid "“Ekassekena kappena,"
msgstr ""

#. <br>
msgctxt "sn15.10:4.2"
msgid "puggalassaṭṭhisañcayo;"
msgstr ""

#. <br>
msgctxt "sn15.10:4.3"
msgid "Siyā pabbatasamo rāsi,"
msgstr ""

#. <br>
msgctxt "sn15.10:4.4"
msgid "iti vuttaṃ mahesinā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "sn15.10:5.1"
msgid "So kho panāyaṃ akkhāto,"
msgstr ""

#. <br>
msgctxt "sn15.10:5.2"
msgid "vepullo pabbato mahā;"
msgstr ""

# Contra BB, Mount vepulla is, it seems, south of Gijjhakuta, so uttara must mean “higher” here, which makes sense in context.
#. <br>
msgctxt "sn15.10:5.3"
msgid "Uttaro gijjhakūṭassa,"
msgstr ""

#. <br>
msgctxt "sn15.10:5.4"
msgid "magadhānaṃ giribbaje."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc6"></a>
msgctxt "sn15.10:6.1"
msgid "Yato ca ariyasaccāni,"
msgstr ""

#. <br>
msgctxt "sn15.10:6.2"
msgid "sammappaññāya passati;"
msgstr ""

#. <br>
msgctxt "sn15.10:6.3"
msgid "Dukkhaṃ dukkhasamuppādaṃ,"
msgstr ""

#. <br>
msgctxt "sn15.10:6.4"
msgid "dukkhassa ca atikkamaṃ;"
msgstr ""

#. <br>
msgctxt "sn15.10:6.5"
msgid "Ariyaṃ caṭṭhaṅgikaṃ maggaṃ,"
msgstr ""

#. <br>
msgctxt "sn15.10:6.6"
msgid "dukkhūpasamagāminaṃ."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli2.186"></a>
#. <a class="sc" id="sc7"></a>
msgctxt "sn15.10:7.1"
msgid "Sa sattakkhattuṃparamaṃ,"
msgstr ""

#. <br>
msgctxt "sn15.10:7.2"
msgid "sandhāvitvāna puggalo;"
msgstr ""

#. <br>
msgctxt "sn15.10:7.3"
msgid "Dukkhassantakaro hoti,"
msgstr ""

#. <br>
msgctxt "sn15.10:7.4"
msgid "sabbasaṃyojanakkhayā”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "sn15.10:7.5"
msgid "Dasamaṃ."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn15.10:7.6"
msgid "Paṭhamo vaggo."
msgstr ""

#. </p><blockquote class="uddanagatha"><p>
#. <a class="sc" id="sc8"></a>
msgctxt "sn15.10:8.1"
msgid "Tiṇakaṭṭhañca pathavī,"
msgstr ""

#. <br>
msgctxt "sn15.10:8.2"
msgid "assu khīrañca pabbataṃ;"
msgstr ""

#. <br>
msgctxt "sn15.10:8.3"
msgid "Sāsapā sāvakā gaṅgā,"
msgstr ""

#. <br>
msgctxt "sn15.10:8.4"
msgid "daṇḍo ca puggalena cāti."
msgstr ""
