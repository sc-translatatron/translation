msgctxt "sn22.72:2.1"
msgid "Upādiyamaññamānā,"
msgstr ""

#. <br>
msgctxt "sn22.72:2.2"
msgid "Athābhinandamāno ca;"
msgstr ""

#. <br>
msgctxt "sn22.72:2.3"
msgid "Aniccaṃ dukkhaṃ anattā ca,"
msgstr ""

#. <br>
msgctxt "sn22.72:2.4"
msgid "Anattaniyaṃ rajanīyasaṇṭhitaṃ;"
msgstr ""

#. <br>
msgctxt "sn22.72:2.5"
msgid "Rādhasurādhena te dasāti."
msgstr ""
