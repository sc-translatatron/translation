#. <section class="sutta" id="sn45.1"><article><div class="hgroup"><p class="division">
msgctxt "sn45.1:0.1"
msgid "Saṃyutta Nikāya 45"
msgstr ""

#. </p><p>
msgctxt "sn45.1:0.2"
msgid "1. Avijjāvagga"
msgstr ""

#. </p><h1>
msgctxt "sn45.1:0.3"
msgid "1. Avijjāsutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli5.1"></a>
#. <a class="sc" id="sc1"></a>
#. <span class="evam">
msgctxt "sn45.1:1.1"
msgid "Evaṃ me sutaṃ—​"
msgstr ""

#. </span>
msgctxt "sn45.1:1.2"
msgid ""
"ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "sn45.1:1.3"
msgid "Tatra kho bhagavā bhikkhū āmantesi:"
msgstr ""

msgctxt "sn45.1:1.4"
msgid "“bhikkhavo”ti."
msgstr ""

msgctxt "sn45.1:1.5"
msgid "“Bhadante”ti te bhikkhū bhagavato paccassosuṃ."
msgstr ""

msgctxt "sn45.1:1.6"
msgid "Bhagavā etadavoca:"
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
#. VAR: anvadeva → anudeva (si, pts1, mr)
msgctxt "sn45.1:2.1"
msgid ""
"“Avijjā, bhikkhave, pubbaṅgamā akusalānaṃ dhammānaṃ samāpattiyā, anvadeva "
"ahirikaṃ anottappaṃ."
msgstr ""

msgctxt "sn45.1:2.2"
msgid "Avijjāgatassa, bhikkhave, aviddasuno micchādiṭṭhi pahoti;"
msgstr ""

msgctxt "sn45.1:2.3"
msgid "micchādiṭṭhissa micchāsaṅkappo pahoti;"
msgstr ""

msgctxt "sn45.1:2.4"
msgid "micchāsaṅkappassa micchāvācā pahoti;"
msgstr ""

msgctxt "sn45.1:2.5"
msgid "micchāvācassa micchākammanto pahoti;"
msgstr ""

msgctxt "sn45.1:2.6"
msgid "micchākammantassa micchāājīvo pahoti;"
msgstr ""

msgctxt "sn45.1:2.7"
msgid "micchāājīvassa micchāvāyāmo pahoti;"
msgstr ""

msgctxt "sn45.1:2.8"
msgid "micchāvāyāmassa micchāsati pahoti;"
msgstr ""

msgctxt "sn45.1:2.9"
msgid "micchāsatissa micchāsamādhi pahoti."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli5.2"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "sn45.1:3.1"
msgid ""
"Vijjā ca kho, bhikkhave, pubbaṅgamā kusalānaṃ dhammānaṃ samāpattiyā, "
"anvadeva hirottappaṃ."
msgstr ""

msgctxt "sn45.1:3.2"
msgid "Vijjāgatassa, bhikkhave, viddasuno sammādiṭṭhi pahoti;"
msgstr ""

msgctxt "sn45.1:3.3"
msgid "sammādiṭṭhissa sammāsaṅkappo pahoti;"
msgstr ""

msgctxt "sn45.1:3.4"
msgid "sammāsaṅkappassa sammāvācā pahoti;"
msgstr ""

msgctxt "sn45.1:3.5"
msgid "sammāvācassa sammākammanto pahoti;"
msgstr ""

msgctxt "sn45.1:3.6"
msgid "sammākammantassa sammāājīvo pahoti;"
msgstr ""

msgctxt "sn45.1:3.7"
msgid "sammāājīvassa sammāvāyāmo pahoti;"
msgstr ""

msgctxt "sn45.1:3.8"
msgid "sammāvāyāmassa sammāsati pahoti;"
msgstr ""

msgctxt "sn45.1:3.9"
msgid "sammāsatissa sammāsamādhi pahotī”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn45.1:3.10"
msgid "Paṭhamaṃ."
msgstr ""
