#. <section class="sutta" id="sn36.5"><article><div class="hgroup"><p class="division">
msgctxt "sn36.5:0.1"
msgid "Saṃyutta Nikāya 36"
msgstr ""

#. </p><p>
msgctxt "sn36.5:0.2"
msgid "1. Sagāthāvagga"
msgstr ""

#. </p><h1>
msgctxt "sn36.5:0.3"
msgid "5. Daṭṭhabbasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "sn36.5:1.1"
msgid "“Tisso imā, bhikkhave, vedanā."
msgstr ""

msgctxt "sn36.5:1.2"
msgid "Katamā tisso?"
msgstr ""

msgctxt "sn36.5:1.3"
msgid "Sukhā vedanā, dukkhā vedanā, adukkhamasukhā vedanā."
msgstr ""

msgctxt "sn36.5:1.4"
msgid ""
"Sukhā, bhikkhave, vedanā dukkhato daṭṭhabbā, dukkhā vedanā sallato "
"daṭṭhabbā, adukkhamasukhā vedanā aniccato daṭṭhabbā."
msgstr ""

msgctxt "sn36.5:1.5"
msgid ""
"Yato kho, bhikkhave, bhikkhuno sukhā vedanā dukkhato diṭṭhā hoti, dukkhā "
"vedanā sallato diṭṭhā hoti, adukkhamasukhā vedanā aniccato diṭṭhā hoti—"
msgstr ""

msgctxt "sn36.5:1.6"
msgid ""
"ayaṃ vuccati, bhikkhave, ‘bhikkhu sammaddaso acchecchi taṇhaṃ, vivattayi "
"saṃyojanaṃ, sammā mānābhisamayā antamakāsi dukkhassā’ti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn36.5:2.1"
msgid "Yo sukhaṃ dukkhato adda,"
msgstr ""

#. <br>
msgctxt "sn36.5:2.2"
msgid "dukkhamaddakkhi sallato;"
msgstr ""

#. <br>
msgctxt "sn36.5:2.3"
msgid "Adukkhamasukhaṃ santaṃ,"
msgstr ""

#. <br>
msgctxt "sn36.5:2.4"
msgid "addakkhi naṃ aniccato."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "sn36.5:3.1"
msgid "Sa ve sammaddaso bhikkhu,"
msgstr ""

#. <br>
msgctxt "sn36.5:3.2"
msgid "parijānāti vedanā;"
msgstr ""

#. <br>
msgctxt "sn36.5:3.3"
msgid "So vedanā pariññāya,"
msgstr ""

#. <br>
msgctxt "sn36.5:3.4"
msgid "diṭṭhe dhamme anāsavo;"
msgstr ""

#. <br>
msgctxt "sn36.5:3.5"
msgid "Kāyassa bhedā dhammaṭṭho,"
msgstr ""

#. <br>
msgctxt "sn36.5:3.6"
msgid "saṅkhyaṃ nopeti vedagū”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "sn36.5:3.7"
msgid "Pañcamaṃ."
msgstr ""
