#. <section class="sutta" id="sn2.20"><article><div class="hgroup"><p class="division">
msgctxt "sn2.20:0.1"
msgid "Saṃyutta Nikāya 2"
msgstr ""

#. </p><p>
msgctxt "sn2.20:0.2"
msgid "2. Anāthapiṇḍikavagga"
msgstr ""

#. </p><h1>
msgctxt "sn2.20:0.3"
msgid "20. Anāthapiṇḍikasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "sn2.20:1.1"
msgid ""
"Ekamantaṃ ṭhito kho anāthapiṇḍiko devaputto bhagavato santike imā gāthāyo "
"abhāsi:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn2.20:2.1"
msgid "“Idañhi taṃ jetavanaṃ,"
msgstr ""

#. <br>
msgctxt "sn2.20:2.2"
msgid "isisaṅghanisevitaṃ;"
msgstr ""

#. <br>
msgctxt "sn2.20:2.3"
msgid "Āvutthaṃ dhammarājena,"
msgstr ""

#. <br>
msgctxt "sn2.20:2.4"
msgid "pītisañjananaṃ mama."
msgstr ""

#. </p><p>
#. <a class="pts2ed" id="pts2ed1.127"></a>
#. <a class="sc" id="sc3"></a>
msgctxt "sn2.20:3.1"
msgid "Kammaṃ vijjā ca dhammo ca,"
msgstr ""

#. <br>
msgctxt "sn2.20:3.2"
msgid "sīlaṃ jīvitamuttamaṃ;"
msgstr ""

#. <br>
msgctxt "sn2.20:3.3"
msgid "Etena maccā sujjhanti,"
msgstr ""

#. <br>
msgctxt "sn2.20:3.4"
msgid "na gottena dhanena vā."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "sn2.20:4.1"
msgid "Tasmā hi paṇḍito poso,"
msgstr ""

#. <br>
msgctxt "sn2.20:4.2"
msgid "sampassaṃ atthamattano;"
msgstr ""

#. <br>
msgctxt "sn2.20:4.3"
msgid "Yoniso vicine dhammaṃ,"
msgstr ""

#. <br>
msgctxt "sn2.20:4.4"
msgid "evaṃ tattha visujjhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc5"></a>
msgctxt "sn2.20:5.1"
msgid "Sāriputtova paññāya,"
msgstr ""

#. <br>
msgctxt "sn2.20:5.2"
msgid "sīlena upasamena ca;"
msgstr ""

#. <br>
msgctxt "sn2.20:5.3"
msgid "Yopi pāraṅgato bhikkhu,"
msgstr ""

#. <br>
msgctxt "sn2.20:5.4"
msgid "etāvaparamo siyā”ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc6"></a>
msgctxt "sn2.20:6.1"
msgid "Idamavoca anāthapiṇḍiko devaputto."
msgstr ""

msgctxt "sn2.20:6.2"
msgid ""
"Idaṃ vatvā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā tatthevantaradhāyi."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc7"></a>
msgctxt "sn2.20:7.1"
msgid "Atha kho bhagavā tassā rattiyā accayena bhikkhū āmantesi:"
msgstr ""

msgctxt "sn2.20:7.2"
msgid ""
"“imaṃ, bhikkhave, rattiṃ aññataro devaputto abhikkantāya rattiyā "
"abhikkantavaṇṇo kevalakappaṃ jetavanaṃ obhāsetvā yenāhaṃ tenupasaṅkami; "
"upasaṅkamitvā maṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "sn2.20:7.3"
msgid ""
"Ekamantaṃ ṭhito kho, bhikkhave, so devaputto mama santike imā gāthāyo abhāsi:"
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="pts2ed" id="pts2ed1.128"></a>
#. <a class="sc" id="sc8"></a>
msgctxt "sn2.20:8.1"
msgid "‘Idañhi taṃ jetavanaṃ,"
msgstr ""

#. <br>
msgctxt "sn2.20:8.2"
msgid "isisaṅghanisevitaṃ;"
msgstr ""

#. <br>
msgctxt "sn2.20:8.3"
msgid "Āvutthaṃ dhammarājena,"
msgstr ""

#. <br>
msgctxt "sn2.20:8.4"
msgid "pītisañjananaṃ mama."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc9"></a>
msgctxt "sn2.20:9.1"
msgid "Kammaṃ vijjā ca dhammo ca,"
msgstr ""

#. <br>
msgctxt "sn2.20:9.2"
msgid "sīlaṃ jīvitamuttamaṃ;"
msgstr ""

#. <br>
msgctxt "sn2.20:9.3"
msgid "Etena maccā sujjhanti,"
msgstr ""

#. <br>
msgctxt "sn2.20:9.4"
msgid "na gottena dhanena vā."
msgstr ""

#. </p><p>
#. <a class="pts1ed" id="pts1ed1.56"></a>
#. <a class="sc" id="sc10"></a>
msgctxt "sn2.20:10.1"
msgid "Tasmā hi paṇḍito poso,"
msgstr ""

#. <br>
msgctxt "sn2.20:10.2"
msgid "sampassaṃ atthamattano;"
msgstr ""

#. <br>
msgctxt "sn2.20:10.3"
msgid "Yoniso vicine dhammaṃ,"
msgstr ""

#. <br>
msgctxt "sn2.20:10.4"
msgid "evaṃ tattha visujjhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc11"></a>
msgctxt "sn2.20:11.1"
msgid "Sāriputtova paññāya,"
msgstr ""

#. <br>
msgctxt "sn2.20:11.2"
msgid "sīlena upasamena ca;"
msgstr ""

#. <br>
msgctxt "sn2.20:11.3"
msgid "Yopi pāraṅgato bhikkhu,"
msgstr ""

#. <br>
msgctxt "sn2.20:11.4"
msgid "etāvaparamo siyā’ti."
msgstr ""

#. </p></blockquote><p>
#. <a class="sc" id="sc12"></a>
msgctxt "sn2.20:12.1"
msgid "Idamavoca, bhikkhave, so devaputto."
msgstr ""

msgctxt "sn2.20:12.2"
msgid "Idaṃ vatvā maṃ abhivādetvā padakkhiṇaṃ katvā tatthevantaradhāyī”ti."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc13"></a>
msgctxt "sn2.20:13.1"
msgid "Evaṃ vutte, āyasmā ānando bhagavantaṃ etadavoca:"
msgstr ""

msgctxt "sn2.20:13.2"
msgid "“so hi nūna, bhante, anāthapiṇḍiko devaputto bhavissati."
msgstr ""

msgctxt "sn2.20:13.3"
msgid "Anāthapiṇḍiko gahapati āyasmante sāriputte abhippasanno ahosī”ti."
msgstr ""

msgctxt "sn2.20:13.4"
msgid ""
"“Sādhu sādhu, ānanda, yāvatakaṃ kho, ānanda, takkāya pattabbaṃ anuppattaṃ "
"taṃ tayā."
msgstr ""

msgctxt "sn2.20:13.5"
msgid "Anāthapiṇḍiko hi so, ānanda, devaputto”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn2.20:13.6"
msgid "Anāthapiṇḍikavaggo dutiyo."
msgstr ""

#. </p><blockquote class="uddanagatha"><p>
#. <a class="pts2ed" id="pts2ed1.129"></a>
#. <a class="sc" id="sc14"></a>
#. VAR: Candimaso → candimāso (pts1, mr)
#. VAR: veṇḍu → veṇhu (bj, mr) | veṇhū (pts2)
msgctxt "sn2.20:14.1"
msgid "Candimaso ca veṇḍu ca,"
msgstr ""

#. <br>
msgctxt "sn2.20:14.2"
msgid "Dīghalaṭṭhi ca nandano;"
msgstr ""

#. <br>
msgctxt "sn2.20:14.3"
msgid "Candano vāsudatto ca,"
msgstr ""

#. <br>
msgctxt "sn2.20:14.4"
msgid "Subrahmā kakudhena ca;"
msgstr ""

#. <br>
msgctxt "sn2.20:14.5"
msgid "Uttaro navamo vutto,"
msgstr ""

#. <br>
msgctxt "sn2.20:14.6"
msgid "Dasamo anāthapiṇḍikoti."
msgstr ""
