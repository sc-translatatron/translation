#. <section class="sutta" id="sn55.31"><article><div class="hgroup"><p class="division">
msgctxt "sn55.31:0.1"
msgid "Saṃyutta Nikāya 55"
msgstr ""

#. </p><p>
msgctxt "sn55.31:0.2"
msgid "4. Puññābhisandavagga"
msgstr ""

#. </p><h1>
#. VAR: 31. Paṭhamapuññābhisandasutta → abhisandasuttaṃ (bj) | abhisanda 1 (pts1)
msgctxt "sn55.31:0.3"
msgid "31. Paṭhamapuññābhisandasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli5.391"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "sn55.31:1.1"
msgid "Sāvatthinidānaṃ."
msgstr ""

msgctxt "sn55.31:1.2"
msgid "“Cattārome, bhikkhave, puññābhisandā kusalābhisandā sukhassāhārā."
msgstr ""

msgctxt "sn55.31:1.3"
msgid "Katame cattāro?"
msgstr ""

msgctxt "sn55.31:1.4"
msgid "Idha, bhikkhave, ariyasāvako buddhe aveccappasādena samannāgato hoti—"
msgstr ""

msgctxt "sn55.31:1.5"
msgid "itipi so bhagavā … pe … satthā devamanussānaṃ buddho bhagavāti."
msgstr ""

msgctxt "sn55.31:1.6"
msgid "Ayaṃ paṭhamo puññābhisando kusalābhisando sukhassāhāro."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn55.31:2.1"
msgid ""
"Puna caparaṃ, bhikkhave, ariyasāvako dhamme aveccappasādena samannāgato hoti—"
msgstr ""

msgctxt "sn55.31:2.2"
msgid "svākkhāto bhagavatā dhammo … pe … paccattaṃ veditabbo viññūhīti."
msgstr ""

msgctxt "sn55.31:2.3"
msgid "Ayaṃ dutiyo puññābhisando kusalābhisando sukhassāhāro."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "sn55.31:3.1"
msgid ""
"Puna caparaṃ, bhikkhave, ariyasāvako saṅghe aveccappasādena samannāgato hoti—"
msgstr ""

msgctxt "sn55.31:3.2"
msgid ""
"suppaṭipanno bhagavato sāvakasaṅgho … pe … anuttaraṃ puññakkhettaṃ lokassāti."
msgstr ""

msgctxt "sn55.31:3.3"
msgid "Ayaṃ tatiyo puññābhisando kusalābhisando sukhassāhāro."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc4"></a>
msgctxt "sn55.31:4.1"
msgid ""
"Puna caparaṃ, bhikkhave, ariyasāvako ariyakantehi sīlehi samannāgato hoti "
"akhaṇḍehi … pe … samādhisaṃvattanikehi."
msgstr ""

msgctxt "sn55.31:4.2"
msgid "Ayaṃ catuttho puññābhisando kusalābhisando sukhassāhāro."
msgstr ""

msgctxt "sn55.31:4.3"
msgid ""
"Ime kho, bhikkhave, cattāro puññābhisandā kusalābhisandā sukhassāhārā”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn55.31:4.4"
msgid "Paṭhamaṃ."
msgstr ""
