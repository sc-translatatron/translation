#. <section class="sutta" id="sn47.28"><article><div class="hgroup"><p class="division">
msgctxt "sn47.28:0.1"
msgid "Saṃyutta Nikāya 47"
msgstr ""

#. </p><p>
msgctxt "sn47.28:0.2"
msgid "3. Sīlaṭṭhitivagga"
msgstr ""

#. </p><h1>
msgctxt "sn47.28:0.3"
msgid "28. Lokasutta"
msgstr ""

#. </h1></div><p>
#. <a class="pts-vp-pli" id="pts-vp-pli5.176"></a>
#. <a class="sc" id="sc1"></a>
msgctxt "sn47.28:1.1"
msgid "Taṃyeva nidānaṃ."
msgstr ""

msgctxt "sn47.28:1.2"
msgid "Ekamantaṃ nisinno kho āyasmā sāriputto āyasmantaṃ anuruddhaṃ etadavoca:"
msgstr ""

#. VAR: katamesaṃ, āvuso anuruddha → āyasmā anuruddho (bj, s1-3)
msgctxt "sn47.28:1.3"
msgid ""
"“katamesaṃ, āvuso anuruddha, dhammānaṃ bhāvitattā bahulīkatattā "
"mahābhiññataṃ patto”ti?"
msgstr ""

msgctxt "sn47.28:1.4"
msgid ""
"“Catunnaṃ, āvuso, satipaṭṭhānānaṃ bhāvitattā bahulīkatattā mahābhiññataṃ "
"patto."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn47.28:2.1"
msgid "Katamesaṃ catunnaṃ?"
msgstr ""

msgctxt "sn47.28:2.2"
msgid ""
"Idhāhaṃ, āvuso, kāye kāyānupassī viharāmi ātāpī sampajāno satimā, vineyya "
"loke abhijjhādomanassaṃ;"
msgstr ""

msgctxt "sn47.28:2.3"
msgid "vedanāsu … pe …"
msgstr ""

msgctxt "sn47.28:2.4"
msgid "citte … pe …"
msgstr ""

msgctxt "sn47.28:2.5"
msgid ""
"dhammesu dhammānupassī viharāmi ātāpī sampajāno satimā, vineyya loke "
"abhijjhādomanassaṃ."
msgstr ""

msgctxt "sn47.28:2.6"
msgid ""
"Imesaṃ khvāhaṃ, āvuso, catunnaṃ satipaṭṭhānānaṃ bhāvitattā bahulīkatattā "
"mahābhiññataṃ patto."
msgstr ""

msgctxt "sn47.28:2.7"
msgid ""
"Imesañca panāhaṃ, āvuso, catunnaṃ satipaṭṭhānānaṃ bhāvitattā bahulīkatattā "
"sahassaṃ lokaṃ abhijānāmī”ti."
msgstr ""

#. </p><p class="endsection">
msgctxt "sn47.28:2.8"
msgid "Aṭṭhamaṃ."
msgstr ""
