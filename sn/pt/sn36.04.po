#. <section class="sutta" id="sn36.4"><article><div class="hgroup"><p class="division">
msgctxt "sn36.4:0.1"
msgid "Saṃyutta Nikāya 36"
msgstr ""

#. </p><p>
msgctxt "sn36.4:0.2"
msgid "1. Sagāthāvagga"
msgstr ""

#. </p><h1>
msgctxt "sn36.4:0.3"
msgid "4. Pātālasutta"
msgstr ""

#. </h1></div><p>
#. <a class="sc" id="sc1"></a>
msgctxt "sn36.4:1.1"
msgid "“Assutavā, bhikkhave, puthujjano yaṃ vācaṃ bhāsati:"
msgstr ""

# BB translates as “bottomless abyss”, which overlooks the connotation with an underworld, found both in the commentary and the sanskrit. http://sanskritdictionary.com/?iencoding=iast&q=p%C4%81t%C4%81la&lang=sans&action=Search
msgctxt "sn36.4:1.2"
msgid "‘atthi mahāsamudde pātālo’ti."
msgstr ""

msgctxt "sn36.4:1.3"
msgid ""
"Taṃ kho panetaṃ, bhikkhave, assutavā puthujjano asantaṃ avijjamānaṃ evaṃ "
"vācaṃ bhāsati:"
msgstr ""

msgctxt "sn36.4:1.4"
msgid "‘atthi mahāsamudde pātālo’ti."
msgstr ""

msgctxt "sn36.4:1.5"
msgid ""
"Sārīrikānaṃ kho etaṃ, bhikkhave, dukkhānaṃ vedanānaṃ adhivacanaṃ yadidaṃ "
"‘pātālo’ti."
msgstr ""

msgctxt "sn36.4:1.6"
msgid ""
"Assutavā, bhikkhave, puthujjano sārīrikāya dukkhāya vedanāya phuṭṭho samāno "
"socati kilamati paridevati urattāḷiṃ kandati sammohaṃ āpajjati."
msgstr ""

msgctxt "sn36.4:1.7"
msgid ""
"Ayaṃ vuccati, bhikkhave, ‘assutavā puthujjano pātāle na paccuṭṭhāsi, "
"gādhañca nājjhagā’."
msgstr ""

msgctxt "sn36.4:1.8"
msgid ""
"Sutavā ca kho, bhikkhave, ariyasāvako sārīrikāya dukkhāya vedanāya phuṭṭho "
"samāno neva socati, na kilamati, na paridevati, na urattāḷiṃ kandati, na "
"sammohaṃ āpajjati."
msgstr ""

msgctxt "sn36.4:1.9"
msgid ""
"Ayaṃ vuccati, bhikkhave, ‘sutavā ariyasāvako pātāle paccuṭṭhāsi, gādhañca "
"ajjhagā’ti."
msgstr ""

#. </p><blockquote class="gatha"><p>
#. <a class="sc" id="sc2"></a>
msgctxt "sn36.4:2.1"
msgid "Yo etā nādhivāseti,"
msgstr ""

#. <br>
msgctxt "sn36.4:2.2"
msgid "uppannā vedanā dukhā;"
msgstr ""

#. <br>
msgctxt "sn36.4:2.3"
msgid "Sārīrikā pāṇaharā,"
msgstr ""

#. <br>
msgctxt "sn36.4:2.4"
msgid "yāhi phuṭṭho pavedhati."
msgstr ""

#. </p><p>
#. <a class="sc" id="sc3"></a>
msgctxt "sn36.4:3.1"
msgid "Akkandati parodati,"
msgstr ""

#. <br>
msgctxt "sn36.4:3.2"
msgid "dubbalo appathāmako;"
msgstr ""

#. <br>
msgctxt "sn36.4:3.3"
msgid "Na so pātāle paccuṭṭhāsi,"
msgstr ""

#. <br>
msgctxt "sn36.4:3.4"
msgid "atho gādhampi nājjhagā."
msgstr ""

#. </p><p>
#. <a class="pts-vp-pli" id="pts-vp-pli4.207"></a>
#. <a class="sc" id="sc4"></a>
msgctxt "sn36.4:4.1"
msgid "Yo cetā adhivāseti,"
msgstr ""

#. <br>
msgctxt "sn36.4:4.2"
msgid "uppannā vedanā dukhā;"
msgstr ""

#. <br>
msgctxt "sn36.4:4.3"
msgid "Sārīrikā pāṇaharā,"
msgstr ""

#. <br>
msgctxt "sn36.4:4.4"
msgid "yāhi phuṭṭho na vedhati;"
msgstr ""

#. <br>
msgctxt "sn36.4:4.5"
msgid "Sa ve pātāle paccuṭṭhāsi,"
msgstr ""

#. <br>
msgctxt "sn36.4:4.6"
msgid "atho gādhampi ajjhagā”ti."
msgstr ""

#. </p></blockquote><p class="endsection">
msgctxt "sn36.4:4.7"
msgid "Catutthaṃ."
msgstr ""
